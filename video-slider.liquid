<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
    height: 600px;
    overflow: hidden;
    position: relative;
  }

  .homepage-slider.slick-initialized {
    opacity: 1;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>

<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item {% if settings[slide_is_video] and settings[slide_video_url] != blank %}video-slide{% else %}image-slide{% endif %}" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <div class="video-container">
              <video 
                class="slide-video" 
                muted 
                playsinline
                preload="metadata"
                src="{{ settings[slide_video_url] }}"
              >
                <source src="{{ settings[slide_video_url] }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
          {% else %}
            <div class="image-container">
              {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
            </div>
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>
/* Base slider styling */
.homepage-slider {
  height: 600px !important;
  min-height: 600px;
  max-height: 600px;
  overflow: hidden;
  position: relative;
  background: #000;
}

@media screen and (max-width: 768px) {
  .homepage-slider {
    height: 400px !important;
    min-height: 400px;
    max-height: 400px;
  }
}

/* Slide container styling */
.slide-item {
  position: relative;
  width: 100%;
  height: 600px !important;
  overflow: hidden;
  display: flex !important;
  align-items: center;
  justify-content: center;
  background: #000;
}

@media screen and (max-width: 768px) {
  .slide-item {
    height: 400px !important;
  }
}

/* Video container and styling */
.video-container {
  position: relative;
  width: 100%;
  height: 100%;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 12px;
}

.slide-video {
  width: 100% !important;
  height: 100% !important;
  object-fit: cover;
  object-position: center;
  display: block;
  background: #000;
  border-radius: 12px;
}

/* Image container and styling */
.image-container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.image-container img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  display: block;
  background: #f5f5f5;
  border-radius: 12px;
}

/* Slide link styling */
.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* Slick slider overrides */
.homepage-slider .slick-track {
  display: flex !important;
  align-items: stretch;
  height: 600px !important;
}

@media screen and (max-width: 768px) {
  .homepage-slider .slick-track {
    height: 400px !important;
  }
}

.homepage-slider .slick-slide {
  height: 600px !important;
  display: flex !important;
  align-items: center;
  overflow: hidden;
}

@media screen and (max-width: 768px) {
  .homepage-slider .slick-slide {
    height: 400px !important;
  }
}

.homepage-slider .slick-slide > div {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* Slider controls styling */
.homepage-slider .slick-dots {
  bottom: 20px;
  z-index: 10;
  position: absolute;
}

.homepage-slider .slick-prev,
.homepage-slider .slick-next {
  z-index: 10;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.homepage-slider .slick-prev {
  left: 20px;
}

.homepage-slider .slick-next {
  right: 20px;
}

/* Style the dots */
.homepage-slider .slick-dots li button {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  border: 2px solid rgba(255, 255, 255, 0.8);
}

.homepage-slider .slick-dots li.slick-active button {
  background: rgba(255, 255, 255, 1);
}

/* Style the arrows */
.homepage-slider .slick-prev:before,
.homepage-slider .slick-next:before {
  color: rgba(255, 255, 255, 0.9);
  font-size: 30px;
}

.homepage-slider .slick-prev:hover:before,
.homepage-slider .slick-next:hover:before {
  color: rgba(255, 255, 255, 1);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let sliderInitialized = false;

  function stopAllVideos() {
    document.querySelectorAll('.slide-video').forEach(video => {
      try {
        video.pause();
        video.currentTime = 0;
      } catch (e) {
        console.log('Error stopping video:', e);
      }
    });
  }

  function playCurrentVideo(currentSlide) {
    const currentSlideElement = document.querySelector(`.slick-slide[data-slick-index="${currentSlide}"]`);
    if (!currentSlideElement) return;

    const video = currentSlideElement.querySelector('video');
    if (video) {
      console.log('Playing video on slide', currentSlide);
      video.muted = true;
      video.currentTime = 0;
      video.play().catch(e => console.log('Video play failed:', e));
    }
  }

  function initializeSlider() {
    if (sliderInitialized || typeof $ === 'undefined' || !$.fn.slick) return;

    if ($('.homepage-slider').hasClass('slick-initialized')) {
      $('.homepage-slider').slick('unslick');
    }

    $(".homepage-slider").slick({
      dots: true,
      infinite: true,
      speed: 500,
      fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
      cssEase: 'linear',
      autoplay: true,
      autoplaySpeed: 8000,
      arrows: true,
      pauseOnHover: false,
      pauseOnFocus: false,
      adaptiveHeight: false,
      responsive: [
        {
            breakpoint: 480,
            settings: {
              arrows: false
            }
        }
      ]
    });

    sliderInitialized = true;

    // Handle slide changes
    $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
      stopAllVideos();
    });

    $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
      // Check if current slide is a video slide and adjust autoplay timing
      const currentSlideElement = document.querySelector(`.slick-slide[data-slick-index="${currentSlide}"]`);
      const isVideoSlide = currentSlideElement && currentSlideElement.querySelector('.video-slide');

      if (isVideoSlide) {
        // Video slide: set autoplay to 70 seconds (1 min 10 sec)
        console.log('Setting autoplay to 70 seconds for video slide');
        $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 70000, true);
      } else {
        // Image slide: set autoplay to 8 seconds
        console.log('Setting autoplay to 8 seconds for image slide');
        $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 8000, true);
      }

      // Play video with longer delay to ensure slide transition is complete
      setTimeout(() => playCurrentVideo(currentSlide), 500);
    });

    // Set initial autoplay timing and play video on first slide
    setTimeout(() => {
      const firstSlideElement = document.querySelector(`.slick-slide[data-slick-index="0"]`);
      const isFirstSlideVideo = firstSlideElement && firstSlideElement.querySelector('.video-slide');

      if (isFirstSlideVideo) {
        // First slide is video: set autoplay to 70 seconds
        console.log('Initial slide is video, setting autoplay to 70 seconds');
        $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 70000, true);
      }
      playCurrentVideo(0);
    }, 1000);
  }

  // Initialize slider
  initializeSlider();
  setTimeout(initializeSlider, 1000);
  setTimeout(initializeSlider, 3000);
});
</script>

