<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .homepage-slider.slick-initialized {
    opacity: 1;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>



<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <video 
              class="slide-video" 
              autoplay 
              muted 
              playsinline
              style="width: 100%; height: 100%; object-fit: cover;"
            >
              <source src="{{ settings[slide_video_url] }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% else %}
            {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>
.slide-item {
  position: relative;
  width: 100%;
  min-height: 300px;
  max-height: 600px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

@media screen and (max-width: 768px) {
  .slide-item {
    min-height: 200px;
    max-height: 400px;
  }
}

.slide-link {
  display: block;
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-video {
  width: 100%;
  height: auto;
  object-fit: contain;
  max-width: 100%;
  max-height: 600px;
  display: block;
}

.homepage-slider img {
  width: 100%;
  height: auto;
  object-fit: contain;
  max-width: 100%;
  max-height: 600px;
  display: block;
}

/* Ensure videos don't interfere with slider controls */
.slick-slide video {
  pointer-events: none;
}

.slick-slide.slick-active video {
  pointer-events: auto;
}

/* Slick slider height adjustments */
.homepage-slider {
  overflow: hidden;
}

.homepage-slider .slick-track {
  display: flex;
  align-items: center;
}

.homepage-slider .slick-slide {
  height: auto;
  display: flex;
  align-items: center;
}

/* Fallback for browsers that don't support :has() */
@supports not selector(:has(video)) {
  .slide-item {
    height: auto;
    min-height: 350px;
  }

  @media screen and (max-width: 768px) {
    .slide-item {
      min-height: 250px;
    }
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let sliderInitialized = false;
  let videoEndTimeout = null;

  // Override the existing expo.initSlickSlider function to handle videos
  if (typeof expo !== 'undefined') {
    expo.initSlickSlider = function(){
      if (sliderInitialized) return;

      // Check if slider already exists and destroy it
      if ($('.homepage-slider').hasClass('slick-initialized')) {
        $('.homepage-slider').slick('unslick');
      }

      // Initialize slider with video support
      $(".homepage-slider").slick({
        dots: true,
        infinite: true,
        speed: 500,
        fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
        cssEase: 'linear',
        autoplay: false, // Disable autoplay - videos will control timing
        autoplaySpeed: 5000, // Fallback for images
        arrows: true,
        pauseOnHover: false,
        pauseOnFocus: false,
        adaptiveHeight: true, // Allow height to adjust
        responsive: [
          {
              breakpoint: 480,
              settings: {
                arrows: false
              }
          }
        ]
      });

      sliderInitialized = true;

      // Handle video playback in slider
      $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
        // Clear any pending video end timeout
        if (videoEndTimeout) {
          clearTimeout(videoEndTimeout);
          videoEndTimeout = null;
        }

        // Pause current video and reset to beginning
        var currentVideo = $(slick.$slides[currentSlide]).find('video')[0];
        if (currentVideo) {
          currentVideo.pause();
          currentVideo.currentTime = 0;
        }

        // Adjust height for next slide
        adjustSliderHeight(slick, nextSlide);
      });

      // Handle video end event to auto-advance slide
      $('.homepage-slider').on('init', function(event, slick) {
        // Add event listeners to all videos
        $(slick.$slides).each(function(index) {
          var video = $(this).find('video')[0];
          if (video) {
            video.addEventListener('ended', function() {
              // Add small delay to ensure smooth transition
              videoEndTimeout = setTimeout(function() {
                if ($('.homepage-slider .slick-active').find('video')[0] === video) {
                  $('.homepage-slider').slick('slickNext');
                }
              }, 300);
            });

            // Handle video load to adjust height
            video.addEventListener('loadedmetadata', function() {
              if ($(video).closest('.slick-slide').hasClass('slick-active')) {
                adjustSliderHeight(slick, $('.homepage-slider').slick('slickCurrentSlide'));
              }
            });
          }
        });

        // Start first slide content
        setTimeout(function() {
          startCurrentSlide(slick);
        }, 500);
      });

      // Handle slide changes - play videos immediately or start image timer
      $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
        startCurrentSlide(slick);
      });

      // Function to start current slide (video or image timer)
      function startCurrentSlide(slick) {
        var currentSlideElement = $('.homepage-slider .slick-active');
        var video = currentSlideElement.find('video')[0];

        if (video) {
          video.currentTime = 0;
          video.play();
        } else {
          // If it's an image, auto-advance after 5 seconds
          videoEndTimeout = setTimeout(function() {
            $('.homepage-slider').slick('slickNext');
          }, 5000);
        }
      }

      // Function to adjust slider height based on content
      function adjustSliderHeight(slick, slideIndex) {
        var slide = $(slick.$slides[slideIndex]);
        var video = slide.find('video')[0];
        var image = slide.find('img')[0];

        if (video) {
          // Set height to maintain video aspect ratio
          video.style.height = 'auto';
          video.style.width = '100%';
          video.style.maxHeight = '600px';
        } else if (image) {
          // Reset image height to auto
          image.style.height = 'auto';
          image.style.width = '100%';
        }
      }
    };

    // Reinitialize the slider if expo is already loaded
    if (typeof $ !== 'undefined' && $.fn.slick) {
      expo.initSlickSlider();
    }
  }
});
</script>