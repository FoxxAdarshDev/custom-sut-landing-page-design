
<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.5s ease;
    background-color: #f8f9fa;
  }

  .homepage-slider.slick-initialized {
    opacity: 1;
  }

  /* Video loading states */
  .slide-video {
    background-color: #f8f9fa;
  }

  .slide-video:not([data-loaded="true"]) {
    background-color: #f8f9fa;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>



<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <video 
              class="slide-video" 
              muted 
              playsinline
              preload="metadata"
              poster=""
              style="width: 100%; height: 100%; object-fit: cover; background-color: #f8f9fa;"
            >
              <source src="{{ settings[slide_video_url] }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% else %}
            {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>


.slide-item {
  position: relative;
  width: 100%;
  height: 450px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-video {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

.homepage-slider img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

/* Ensure videos don't interfere with slider controls */
.slick-slide video {
  pointer-events: none;
}

.slick-slide.slick-active video {
  pointer-events: auto;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Override the existing expo.initSlickSlider function to handle videos
  if (typeof expo !== 'undefined') {
    expo.initSlickSlider = function(){
      // Check if slider already exists and destroy it
      if ($('.homepage-slider').hasClass('slick-initialized')) {
        $('.homepage-slider').slick('unslick');
      }

      // Initialize slider with video support
      $(".homepage-slider").slick({
        dots: true,
        infinite: true,
        speed: 500,
        fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
        cssEase: 'linear',
        autoplay: false, // Disable autoplay - videos will control timing
        arrows: true,
        pauseOnHover: false,
        pauseOnFocus: false,
        responsive: [
          {
              breakpoint: 480,
              settings: {
                arrows: false
              }
          }
        ]
      });

      // Handle video playback in slider
      $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
        // Pause current video and reset to beginning
        var currentVideo = $(slick.$slides[currentSlide]).find('video')[0];
        if (currentVideo) {
          currentVideo.pause();
          currentVideo.currentTime = 0;
        }
      });

      // Handle video loading and playback
      $('.homepage-slider').on('init', function(event, slick) {
        console.log('Slider initialized');
        
        // Function to add video event listeners
        function addVideoListeners() {
          $(slick.$slides).each(function() {
            var video = $(this).find('video')[0];
            if (video) {
              // Remove existing listeners to prevent duplicates
              video.removeEventListener('ended', videoEndHandler);
              video.removeEventListener('loadeddata', videoLoadedHandler);
              video.removeEventListener('canplay', videoCanPlayHandler);
              
              // Add event listeners
              video.addEventListener('ended', videoEndHandler);
              video.addEventListener('loadeddata', videoLoadedHandler);
              video.addEventListener('canplay', videoCanPlayHandler);
              
              // Add error handler
              video.addEventListener('error', function() {
                console.log('Video error, advancing to next slide');
                setTimeout(function() {
                  $('.homepage-slider').slick('slickNext');
                }, 2000);
              });

              // Set background color to prevent black screen
              video.style.backgroundColor = '#f8f9fa';
              
              // Force load the video
              video.load();
            }
          });
        }

        // Video event handlers
        function videoEndHandler() {
          console.log('Video ended, advancing to next slide');
          setTimeout(function() {
            $('.homepage-slider').slick('slickNext');
          }, 500);
        }

        function videoLoadedHandler() {
          console.log('Video loaded');
          this.setAttribute('data-loaded', 'true');
        }

        function videoCanPlayHandler() {
          console.log('Video can play');
          this.style.backgroundColor = 'transparent';
        }

        // Add listeners initially
        addVideoListeners();

        // Start first video with better timing
        setTimeout(function() {
          var firstVideo = $('.homepage-slider .slick-active video')[0];
          if (firstVideo) {
            firstVideo.currentTime = 0;
            // Wait for video to be ready before playing
            if (firstVideo.readyState >= 3) {
              firstVideo.play().catch(function(error) {
                console.log('Video autoplay failed:', error);
              });
            } else {
              firstVideo.addEventListener('canplay', function() {
                this.play().catch(function(error) {
                  console.log('Video autoplay failed:', error);
                });
              });
            }
          }
        }, 1000);
      });

      // Handle slide changes - play videos with better loading checks
      $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
        console.log('Slide changed to:', currentSlide);
        var currentSlideElement = $(slick.$slides[currentSlide]);
        var video = currentSlideElement.find('video')[0];

        if (video) {
          video.currentTime = 0;
          
          // Wait for video to be ready before playing
          function tryPlayVideo() {
            if (video.readyState >= 3) {
              video.play().catch(function(error) {
                console.log('Video play failed:', error);
                // If video fails to play, advance after 3 seconds
                setTimeout(function() {
                  $('.homepage-slider').slick('slickNext');
                }, 3000);
              });
            } else {
              // Video not ready, try again in a moment
              setTimeout(tryPlayVideo, 100);
            }
          }

          // Start trying to play
          tryPlayVideo();
        }
      });
    };

    // Reinitialize the slider if expo is already loaded
    if (typeof $ !== 'undefined' && $.fn.slick) {
      expo.initSlickSlider();
    }
  }
});
</script>
