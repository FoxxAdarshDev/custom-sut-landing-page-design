
<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .homepage-slider.slick-initialized {
    opacity: 1;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>



<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <video 
              class="slide-video" 
              muted 
              playsinline
              preload="metadata"
              style="width: 100%; height: 100%; object-fit: cover; background: transparent;"
            >
              <source src="{{ settings[slide_video_url] }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% else %}
            {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>


.slide-item {
  position: relative;
  width: 100%;
  height: 450px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-video {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
  background: transparent !important;
}

.slide-video:loading {
  background: transparent !important;
}

.homepage-slider img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

/* Ensure videos don't interfere with slider controls */
.slick-slide video {
  pointer-events: none;
}

.slick-slide.slick-active video {
  pointer-events: auto;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Override the existing expo.initSlickSlider function to handle videos
  if (typeof expo !== 'undefined') {
    expo.initSlickSlider = function(){
      // Check if slider already exists and destroy it
      if ($('.homepage-slider').hasClass('slick-initialized')) {
        $('.homepage-slider').slick('unslick');
      }

      // Initialize slider with video support
      $(".homepage-slider").slick({
        dots: true,
        infinite: true,
        speed: 500,
        fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
        cssEase: 'linear',
        autoplay: false, // Disable autoplay - videos will control timing
        arrows: true,
        pauseOnHover: false,
        pauseOnFocus: false,
        responsive: [
          {
              breakpoint: 480,
              settings: {
                arrows: false
              }
          }
        ]
      });

      // Handle video playback in slider
      $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
        // Pause all videos and reset them
        $('.homepage-slider video').each(function() {
          this.pause();
          this.currentTime = 0;
        });
      });

      // Handle slide changes and video events
      $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
        var currentSlideElement = $('.homepage-slider .slick-active');
        var video = currentSlideElement.find('video')[0];
        var image = currentSlideElement.find('img')[0];

        if (video) {
          // For video slides
          video.currentTime = 0;
          video.load(); // Reload video to prevent white screen
          video.play().catch(function(error) {
            console.log('Video play failed:', error);
          });
        } else if (image) {
          // For image slides, auto-advance after 12 seconds
          setTimeout(function() {
            $('.homepage-slider').slick('slickNext');
          }, 12000);
        }
      });

      // Add video event listeners after slider is initialized
      $('.homepage-slider').on('init', function(event, slick) {
        // Wait a bit for slides to be ready
        setTimeout(function() {
          // Add ended event listeners to all videos
          $('.homepage-slider video').each(function() {
            var video = this;
            video.addEventListener('ended', function() {
              $('.homepage-slider').slick('slickNext');
            });
            
            // Prevent white screen by handling load events
            video.addEventListener('loadstart', function() {
              video.style.background = 'transparent';
            });
            
            video.addEventListener('loadeddata', function() {
              video.style.background = 'transparent';
            });
          });

          // Start first slide
          var firstSlide = $('.homepage-slider .slick-active');
          var firstVideo = firstSlide.find('video')[0];
          var firstImage = firstSlide.find('img')[0];

          if (firstVideo) {
            firstVideo.currentTime = 0;
            firstVideo.load();
            firstVideo.play().catch(function(error) {
              console.log('First video play failed:', error);
            });
          } else if (firstImage) {
            // Start timer for first image slide
            setTimeout(function() {
              $('.homepage-slider').slick('slickNext');
            }, 12000);
          }
        }, 800);
      });
    };

    // Reinitialize the slider if expo is already loaded
    if (typeof $ !== 'undefined' && $.fn.slick) {
      expo.initSlickSlider();
    }
  }
});
</script>

<script>
    window.addEventListener('load', function() {
        // Wait for slider to initialize
        setTimeout(function() {
            // Replace slide 1 image (now in position 1) if it's not a video
            const slide1 = document.querySelector('.slide-item[data-slide-index="1"]');
            if(slide1) {
                const slide1Img = slide1.querySelector('img');
                const slide1Video = slide1.querySelector('video');

                // Only replace image if there's no video
                if(slide1Img && !slide1Video) {
                    slide1Img.src = 'https://cdn.shopify.com/s/files/1/1064/0118/files/Rhino_carboy_and_bottles_promo-foxx-life-sciences-home-slideshow-v2.jpg?v=1750361081';
                }
            }

            // Replace slide 2 image (now in position 2) if it's not a video
            const slide2 = document.querySelector('.slide-item[data-slide-index="2"]');
            if(slide2) {
                const slide2Img = slide2.querySelector('img');
                const slide2Video = slide2.querySelector('video');

                // Only replace image if there's no video
                if(slide2Img && !slide2Video) {
                    slide2Img.src = 'https://cdn.shopify.com/s/files/1/1064/0118/files/Website_ISO_13485_Banner-foxx-life-sciences-HomeSlideshow.jpg?v=1750425783';
                }
            }
        }, 500);
    });

</script>