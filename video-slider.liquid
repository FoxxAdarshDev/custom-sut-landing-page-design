

<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 1;
    background-color: #f8f9fa;
  }

  /* Video loading states */
  .slide-video {
    background-color: transparent !important;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>

<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <video 
              class="slide-video" 
              muted 
              playsinline
              preload="auto"
              style="width: 100%; height: 100%; object-fit: cover; background-color: transparent;"
            >
              <source src="{{ settings[slide_video_url] }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% else %}
            {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>
.slide-item {
  position: relative;
  width: 100%;
  height: 450px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-video {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

.homepage-slider img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

/* Ensure videos don't interfere with slider controls */
.slick-slide video {
  pointer-events: none;
}

.slick-slide.slick-active video {
  pointer-events: auto;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Global variables for slider management
  let sliderAutoplayInterval;
  let isVideoPlaying = false;
  let isPageVisible = true;

  // Track page visibility
  document.addEventListener('visibilitychange', function() {
    isPageVisible = !document.hidden;
    
    if (isPageVisible) {
      // Page became visible - resume current slide
      setTimeout(function() {
        var activeSlide = $('.homepage-slider .slick-active');
        var activeVideo = activeSlide.find('video')[0];
        
        if (activeVideo && !activeVideo.ended) {
          // Resume video from where it left off
          activeVideo.play().catch(function(error) {
            console.log('Video resume failed:', error);
          });
        } else if (!activeVideo) {
          // Resume autoplay for image slides
          startSliderAutoplay();
        }
      }, 200);
    } else {
      // Page hidden - pause video but don't reset
      var activeVideo = $('.homepage-slider .slick-active video')[0];
      if (activeVideo) {
        activeVideo.pause();
      }
      stopSliderAutoplay();
    }
  });

  // Slider autoplay management
  function startSliderAutoplay() {
    stopSliderAutoplay();
    sliderAutoplayInterval = setInterval(function() {
      if (isPageVisible && !isVideoPlaying) {
        $('.homepage-slider').slick('slickNext');
      }
    }, 10000); // 10 seconds for image slides
  }

  function stopSliderAutoplay() {
    if (sliderAutoplayInterval) {
      clearInterval(sliderAutoplayInterval);
      sliderAutoplayInterval = null;
    }
  }

  // Override the existing expo.initSlickSlider function
  if (typeof expo !== 'undefined') {
    expo.initSlickSlider = function(){
      // Check if slider already exists and destroy it
      if ($('.homepage-slider').hasClass('slick-initialized')) {
        $('.homepage-slider').slick('unslick');
      }

      // Initialize slider
      $(".homepage-slider").slick({
        dots: true,
        infinite: true,
        speed: 500,
        fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
        cssEase: 'linear',
        autoplay: false, // Manual control
        arrows: true,
        pauseOnHover: false,
        pauseOnFocus: false,
        responsive: [
          {
              breakpoint: 480,
              settings: {
                arrows: false
              }
          }
        ]
      });

      // Handle slide changes
      $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
        // Stop current video
        var currentVideo = $(slick.$slides[currentSlide]).find('video')[0];
        if (currentVideo) {
          currentVideo.pause();
          currentVideo.currentTime = 0;
          isVideoPlaying = false;
        }
        
        // Stop autoplay when manually changing slides
        stopSliderAutoplay();
      });

      $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
        var currentSlideElement = $(slick.$slides[currentSlide]);
        var video = currentSlideElement.find('video')[0];

        if (video) {
          // Video slide
          isVideoPlaying = true;
          stopSliderAutoplay();
          
          video.currentTime = 0;
          
          // Play video immediately if page is visible
          if (isPageVisible) {
            video.play().catch(function(error) {
              console.log('Video play failed:', error);
              // If video fails, treat as image slide
              isVideoPlaying = false;
              startSliderAutoplay();
            });
          }
        } else {
          // Image slide
          isVideoPlaying = false;
          if (isPageVisible) {
            startSliderAutoplay();
          }
        }
      });

      // Handle video events
      $('.homepage-slider').on('init', function(event, slick) {
        // Add video event listeners
        $(slick.$slides).each(function() {
          var video = $(this).find('video')[0];
          if (video) {
            // Video ended - go to next slide
            video.addEventListener('ended', function() {
              isVideoPlaying = false;
              setTimeout(function() {
                $('.homepage-slider').slick('slickNext');
              }, 500);
            });

            // Video loaded
            video.addEventListener('canplay', function() {
              this.style.backgroundColor = 'transparent';
            });

            // Video error
            video.addEventListener('error', function() {
              console.log('Video error, treating as image slide');
              isVideoPlaying = false;
              if ($(this).closest('.slick-slide').hasClass('slick-active')) {
                startSliderAutoplay();
              }
            });

            // Preload video
            video.load();
          }
        });

        // Start with first slide
        setTimeout(function() {
          var firstSlide = $('.homepage-slider .slick-active');
          var firstVideo = firstSlide.find('video')[0];
          
          if (firstVideo) {
            isVideoPlaying = true;
            firstVideo.currentTime = 0;
            if (isPageVisible) {
              firstVideo.play().catch(function(error) {
                console.log('First video autoplay failed:', error);
                isVideoPlaying = false;
                startSliderAutoplay();
              });
            }
          } else {
            isVideoPlaying = false;
            if (isPageVisible) {
              startSliderAutoplay();
            }
          }
        }, 500);
      });
    };

    // Initialize slider if jQuery is available
    if (typeof $ !== 'undefined' && $.fn.slick) {
      expo.initSlickSlider();
    }
  }
});
</script>

