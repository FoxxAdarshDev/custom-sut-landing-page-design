<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .homepage-slider.slick-initialized {
    opacity: 1;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>



<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <video 
              class="slide-video" 
              muted 
              playsinline
              preload="metadata"
              style="width: 100%; height: 100%; object-fit: cover;"
            >
              <source src="{{ settings[slide_video_url] }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% else %}
            {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>
.slide-item {
  position: relative;
  width: 100%;
  height: 500px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

@media screen and (max-width: 768px) {
  .slide-item {
    height: 300px;
  }
}

/* Ensure images scale properly without cropping */
.slide-item img {
  max-width: 100%;
  max-height: 100%;
  width: auto !important;
  height: auto !important;
  object-fit: contain !important;
}

.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.slide-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  background: #000;
}

/* Ensure video fills the container properly */
.video-slide .slide-video {
  object-fit: contain;
  background: #000;
}

.image-slide .slide-video {
  object-fit: cover;
}

.homepage-slider img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  background: #f5f5f5;
}

/* Ensure videos don't interfere with slider controls */
.slick-slide video {
  pointer-events: none;
}

.slick-slide.slick-active video {
  pointer-events: auto;
}

/* Slick slider height adjustments */
.homepage-slider {
  height: 500px;
  max-height: 500px;
  overflow: hidden;
  position: relative;
  background: #f5f5f5;
  transition: height 0.3s ease;
}

/* Dynamic height for video slides */
.homepage-slider.video-slide {
  height: 60vh;
  max-height: 60vh;
  min-height: 400px;
}

/* Default height for image slides */
.homepage-slider.image-slide {
  height: 500px;
  max-height: 500px;
}

@media screen and (max-width: 768px) {
  .homepage-slider {
    height: 300px;
    max-height: 300px;
  }
  
  .homepage-slider.video-slide {
    height: 50vh;
    max-height: 50vh;
    min-height: 250px;
  }
  
  .homepage-slider.image-slide {
    height: 300px;
    max-height: 300px;
  }
}

.homepage-slider .slick-track {
  display: flex;
  align-items: stretch;
  height: 100%;
}

.homepage-slider .slick-slide {
  height: 500px !important;
  display: flex;
  align-items: center;
  overflow: hidden;
  transition: height 0.3s ease;
}

.homepage-slider.video-slide .slick-slide {
  height: 60vh !important;
  min-height: 400px !important;
}

.homepage-slider.image-slide .slick-slide {
  height: 500px !important;
}

@media screen and (max-width: 768px) {
  .homepage-slider .slick-slide {
    height: 300px !important;
  }
  
  .homepage-slider.video-slide .slick-slide {
    height: 50vh !important;
    min-height: 250px !important;
  }
  
  .homepage-slider.image-slide .slick-slide {
    height: 300px !important;
  }
}

.homepage-slider .slick-slide > div {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* Fallback for browsers that don't support :has() */
@supports not selector(:has(video)) {
  .slide-item {
    height: auto;
    min-height: 350px;
  }

  @media screen and (max-width: 768px) {
    .slide-item {
      min-height: 250px;
    }
  }
}

/* Ensure slider controls are visible */
.homepage-slider .slick-dots {
  bottom: 20px;
  z-index: 10;
  position: absolute;
}

.homepage-slider .slick-prev,
.homepage-slider .slick-next {
  z-index: 10;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.homepage-slider .slick-prev {
  left: 20px;
}

.homepage-slider .slick-next {
  right: 20px;
}

/* Style the dots */
.homepage-slider .slick-dots li button {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  border: 2px solid rgba(255, 255, 255, 0.8);
}

.homepage-slider .slick-dots li.slick-active button {
  background: rgba(255, 255, 255, 1);
}

/* Style the arrows */
.homepage-slider .slick-prev:before,
.homepage-slider .slick-next:before {
  color: rgba(255, 255, 255, 0.9);
  font-size: 30px;
}

.homepage-slider .slick-prev:hover:before,
.homepage-slider .slick-next:hover:before {
  color: rgba(255, 255, 255, 1);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let sliderInitialized = false;
  let slideTimeout = null;

  // Initialize slider when jQuery and Slick are loaded
  function initializeSlider() {
    if (sliderInitialized || typeof $ === 'undefined' || !$.fn.slick) return;

    // Check if slider already exists and destroy it
    if ($('.homepage-slider').hasClass('slick-initialized')) {
      $('.homepage-slider').slick('unslick');
    }

    // Initialize slider with proper settings
    $(".homepage-slider").slick({
      dots: true,
      infinite: true,
      speed: 500,
      fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
      cssEase: 'linear',
      autoplay: false, // Disable default autoplay, we'll handle manually
      arrows: true,
      pauseOnHover: false,
      pauseOnFocus: false,
      adaptiveHeight: false,
      responsive: [
        {
            breakpoint: 480,
            settings: {
              arrows: false
            }
        }
      ]
    });

    sliderInitialized = true;

    // Handle slide changes
    $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
      console.log('Slide changing from', currentSlide, 'to', nextSlide);

      // Clear any pending timeouts
      if (slideTimeout) {
        clearTimeout(slideTimeout);
        slideTimeout = null;
      }

      // Pause current videos but don't remove sources
      $(slick.$slides).each(function() {
        var video = $(this).find('video')[0];
        if (video) {
          try {
            video.pause();
            video.currentTime = 0;
            video.removeAttribute('data-ended');
            video.onended = null;
            video.onloadedmetadata = null;
            video.onerror = null;
          } catch (e) {
            console.log('Error pausing video:', e);
          }
        }
      });
    });

    $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
      console.log('Slide changed to:', currentSlide);

      var currentSlideElement = $(slick.$slides[currentSlide]);
      var video = currentSlideElement.find('video')[0];
      var hasVideo = !!video;

      // Adjust slider height based on content type
      if (hasVideo) {
        $('.homepage-slider').addClass('video-slide').removeClass('image-slide');
      } else {
        $('.homepage-slider').addClass('image-slide').removeClass('video-slide');
      }

      if (video) {
        console.log('Starting video on slide', currentSlide);
        
        try {
          // Reset video state
          video.currentTime = 0;
          video.removeAttribute('data-ended');
          
          // Set up error handling first
          video.onerror = function(e) {
            console.log('Video error:', e);
            slideTimeout = setTimeout(function() {
              console.log('Video error timeout, advancing slide');
              if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
                $('.homepage-slider').slick('slickNext');
              }
            }, 8000);
          };

          // Set up video end listener
          video.onended = function() {
            console.log('Video ended on slide', currentSlide);
            video.setAttribute('data-ended', 'true');

            if (slideTimeout) {
              clearTimeout(slideTimeout);
              slideTimeout = null;
            }

            slideTimeout = setTimeout(function() {
              console.log('Auto-advancing after video end');
              if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
                $('.homepage-slider').slick('slickNext');
              }
            }, 1000);
          };

          // Set up metadata loaded handler
          video.onloadedmetadata = function() {
            var videoDuration = video.duration;
            console.log('Video duration:', videoDuration);
            
            if (slideTimeout) {
              clearTimeout(slideTimeout);
              slideTimeout = null;
            }
            
            // Set fallback timeout (max 60 seconds)
            var timeoutDuration = 60000;
            if (videoDuration && videoDuration > 0 && videoDuration < 120) {
              timeoutDuration = (videoDuration * 1000) + 2000;
            }
            
            slideTimeout = setTimeout(function() {
              if (!video.getAttribute('data-ended')) {
                console.log('Video timeout reached, advancing slide');
                if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
                  $('.homepage-slider').slick('slickNext');
                }
              }
            }, timeoutDuration);
          };

          // Ensure video can be played
          if (video.readyState >= 1) { // HAVE_METADATA
            var playPromise = video.play();
            if (playPromise !== undefined) {
              playPromise.then(function() {
                console.log('Video started playing successfully');
              }).catch(function(error) {
                console.log('Video autoplay failed:', error);
                slideTimeout = setTimeout(function() {
                  if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
                    $('.homepage-slider').slick('slickNext');
                  }
                }, 8000);
              });
            }
          } else {
            // Wait for video to load
            video.addEventListener('loadedmetadata', function() {
              var playPromise = video.play();
              if (playPromise !== undefined) {
                playPromise.catch(function(error) {
                  console.log('Video autoplay failed after load:', error);
                  slideTimeout = setTimeout(function() {
                    if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
                      $('.homepage-slider').slick('slickNext');
                    }
                  }, 8000);
                });
              }
            });
          }

        } catch (e) {
          console.log('Error handling video:', e);
          slideTimeout = setTimeout(function() {
            if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
              $('.homepage-slider').slick('slickNext');
            }
          }, 8000);
        }

      } else {
        console.log('Starting image timer on slide', currentSlide);
        slideTimeout = setTimeout(function() {
          console.log('Image timeout reached, advancing slide');
          if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
            $('.homepage-slider').slick('slickNext');
          }
        }, 8000);
      }
    });

    // Start the first slide
    setTimeout(function() {
      $('.homepage-slider').trigger('afterChange', [null, 0]);
    }, 1000);
  }

  // Override expo function if it exists
  if (typeof expo !== 'undefined') {
    expo.initSlickSlider = initializeSlider;
  }

  // Try to initialize immediately
  initializeSlider();

  // Also try after a short delay in case libraries are still loading
  setTimeout(initializeSlider, 1000);
  setTimeout(initializeSlider, 3000);

  // Cleanup on page unload
  window.addEventListener('beforeunload', function() {
    if (slideTimeout) {
      clearTimeout(slideTimeout);
      slideTimeout = null;
    }
    
    // Simply pause all videos
    $('.slide-video').each(function() {
      try {
        this.pause();
      } catch (e) {
        console.log('Error pausing video on unload:', e);
      }
    });
  });
});
</script>

