        console.log('ðŸ”„ Slide changed to:', currentSlide, 'Has video element:', !!video, 'Has image element:', !!image);
        console.log('ðŸ“ Current slide classes:', currentSlideElement.attr('class'));

        // Safety check - if slide is empty/blank, force move to next slide
        if (!video && !image) {
          console.log('âŒ BLANK SLIDE DETECTED - Moving to next slide immediately');
          setTimeout(() => {
            $('.homepage-slider').slick('slickNext');
          }, 100);
          return;
        }

        // Always stop any existing timers first
        stopSliderAutoplay();

        // Reset slide changing flag immediately
        isSlideChanging = false;
        console.log('ðŸ”„ Slide changing flag reset to false in afterChange');

        // Determine slide type and start appropriate timer
        if (video) {
          // Check if video has MP4 source
          const videoSrc = video.src || video.getAttribute('src');
          const isMP4 = videoSrc && (videoSrc.includes('.mp4') || videoSrc.includes('video/mp4'));

          console.log('ðŸŽ¬ Video src:', videoSrc);
          console.log('ðŸŽ¬ Is MP4:', isMP4);

          if (isMP4) {
            console.log('ðŸŽ¥ MP4 VIDEO SLIDE DETECTED - Starting 70 second timer');
            handleVideoSlideChange(video, currentSlide);
          } else {
            console.log('ðŸ“¸ Video element found but no MP4 source - treating as image slide');
            isVideoPlaying = false;
            console.log('ðŸ“¸ Image slide - starting 10 second autoplay');
            if (isPageVisible) {
              startSliderAutoplay(10000);
            }
          }
        } else if (image) {
          // Image slide detected
          isVideoPlaying = false;
          console.log('ðŸ“¸ Image slide - starting 10 second autoplay');
          console.log('ðŸ“¸ Image src:', image.src);
          console.log('ðŸ“¸ Page visible:', isPageVisible);
          if (isPageVisible) {
            startSliderAutoplay(10000);
          }
        } else {
          // No video or image found - treat as image slide
          console.log('â“ No media elements found - treating as image slide');
          isVideoPlaying = false;
          if (isPageVisible) {
            startSliderAutoplay(10000);
          }
        }

        // Enhanced safety fallback with multiple checks - immediate execution
        // Force flag reset again as double-check
        setTimeout(() => {
          isSlideChanging = false;
          console.log('ðŸ”„ DOUBLE-CHECK: Slide changing flag force-reset to false');
        }, 50);

        // Safety fallback with reduced delay
        setTimeout(() => {
          if (isPageVisible) {
            const activeSlide = $('.homepage-slider .slick-active');
            const hasActiveVideo = activeSlide.find('video')[0];
            const hasActiveImage = activeSlide.find('img')[0];

            console.log('ðŸ”„ SAFETY CHECK: Video playing:', isVideoPlaying, 'Autoplay running:', !!sliderAutoplayInterval);
