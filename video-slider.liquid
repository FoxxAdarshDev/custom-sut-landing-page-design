<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
    height: 600px;
    overflow: hidden;
    position: relative;
  }

  .homepage-slider.slick-initialized {
    opacity: 1;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>

<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item {% if settings[slide_is_video] and settings[slide_video_url] != blank %}video-slide{% else %}image-slide{% endif %}" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <div class="video-container">
              <video 
                class="slide-video" 
                muted 
                playsinline
                loop
                preload="auto"
                src="{{ settings[slide_video_url] }}"
                data-video-duration="70"
              >
                <source src="{{ settings[slide_video_url] }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
          {% else %}
            <div class="image-container">
              {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
            </div>
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>
/* Base slider styling */
.homepage-slider {
  height: 600px !important;
  min-height: 600px;
  max-height: 600px;
  overflow: hidden;
  position: relative;
  background: #000;
  width: 100%;
}

@media screen and (max-width: 768px) {
  .homepage-slider {
    height: 400px !important;
    min-height: 400px;
    max-height: 400px;
  }
}

/* Slide container styling */
.slide-item {
  position: relative;
  width: 100%;
  height: 600px !important;
  overflow: hidden;
  display: flex !important;
  align-items: center;
  justify-content: center;
  background: #000;
}

@media screen and (max-width: 768px) {
  .slide-item {
    height: 400px !important;
  }
}

/* Video container and styling */
.video-container {
  position: relative;
  width: 100%;
  height: 100%;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 12px;
}

.slide-video {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  min-width: 100%;
  min-height: 100%;
  object-fit: cover;
  object-position: center;
  transform: translate(-50%, -50%);
  background: #000;
  border-radius: 12px;
  z-index: 1;
}

/* Image container and styling */
.image-container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.image-container img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  display: block;
  background: #f5f5f5;
  border-radius: 12px;
}

/* Slide link styling */
.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* Slick slider overrides */
.homepage-slider .slick-track {
  display: flex !important;
  align-items: stretch;
  height: 600px !important;
}

@media screen and (max-width: 768px) {
  .homepage-slider .slick-track {
    height: 400px !important;
  }
}

.homepage-slider .slick-slide {
  height: 600px !important;
  display: flex !important;
  align-items: center;
  overflow: hidden;
}

@media screen and (max-width: 768px) {
  .homepage-slider .slick-slide {
    height: 400px !important;
  }
}

.homepage-slider .slick-slide > div {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* Slider controls styling */
.homepage-slider .slick-dots {
  bottom: 20px;
  z-index: 10;
  position: absolute;
}

.homepage-slider .slick-prev,
.homepage-slider .slick-next {
  z-index: 10;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.homepage-slider .slick-prev {
  left: 20px;
}

.homepage-slider .slick-next {
  right: 20px;
}

/* Style the dots */
.homepage-slider .slick-dots li button {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  border: 2px solid rgba(255, 255, 255, 0.8);
}

.homepage-slider .slick-dots li.slick-active button {
  background: rgba(255, 255, 255, 1);
}

/* Style the arrows */
.homepage-slider .slick-prev:before,
.homepage-slider .slick-next:before {
  color: rgba(255, 255, 255, 0.9);
  font-size: 30px;
}

.homepage-slider .slick-prev:hover:before,
.homepage-slider .slick-next:hover:before {
  color: rgba(255, 255, 255, 1);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let sliderInitialized = false;
  let currentSlide = 0;

  // Enhanced function to play video
  function playVideo(slideIndex) {
    const slideElement = document.querySelector(`.slick-slide[data-slick-index="${slideIndex}"]`);
    if (!slideElement) return;

    const video = slideElement.querySelector('video');
    if (!video) return;

    // Ensure video properties are set
    video.muted = true;
    video.loop = true;
    video.preload = 'auto';

    // Check if video is ready to play
    if (video.readyState >= 2) {
      // Video has loaded enough to play
      const playPromise = video.play();
      if (playPromise !== undefined) {
        playPromise.catch(error => {
          console.log('Video play failed:', error);
          // Try loading the video again
          video.load();
          setTimeout(() => {
            video.play().catch(e => console.log('Retry failed:', e));
          }, 500);
        });
      }
    } else {
      // Wait for video to load
      video.addEventListener('canplay', function() {
        video.play().catch(error => {
          console.log('Video play failed on canplay:', error);
        });
      }, { once: true });
      
      // Force load if not already loading
      if (video.readyState === 0) {
        video.load();
      }
    }
  }

  // Simple function to pause all videos
  function pauseAllVideos() {
    document.querySelectorAll('.slide-video').forEach(video => {
      video.pause();
    });
  }

  // Check if slide has video
  function isVideoSlide(slideIndex) {
    const slideElement = document.querySelector(`.slick-slide[data-slick-index="${slideIndex}"]`);
    return slideElement && slideElement.querySelector('video');
  }

  function initializeSlider() {
    if (sliderInitialized || typeof $ === 'undefined' || !$.fn.slick) return;

    if ($('.homepage-slider').hasClass('slick-initialized')) {
      $('.homepage-slider').slick('unslick');
    }

    // Initialize with video timing since first slide is video
    $(".homepage-slider").slick({
      dots: true,
      infinite: true,
      speed: 500,
      fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
      cssEase: 'linear',
      autoplay: true,
      autoplaySpeed: 70000, // 70 seconds for video
      arrows: true,
      pauseOnHover: false,
      pauseOnFocus: false,
      adaptiveHeight: false,
      responsive: [
        {
            breakpoint: 480,
            settings: {
              arrows: false
            }
        }
      ]
    });

    sliderInitialized = true;

    // Handle slide changes
    $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
      // Only pause the current video, don't pause all
      const currentSlideElement = document.querySelector(`.slick-slide[data-slick-index="${currentSlide}"]`);
      if (currentSlideElement) {
        const currentVideo = currentSlideElement.querySelector('video');
        if (currentVideo) {
          currentVideo.pause();
        }
      }

      // Set autoplay speed based on slide type
      if (isVideoSlide(nextSlide)) {
        $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 70000, false);
      } else {
        $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 8000, false);
      }
    });

    $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
      if (isVideoSlide(currentSlide)) {
        // Ensure video plays when we reach the slide
        setTimeout(() => {
          playVideo(currentSlide);
        }, 200);
      }
    });

    // Play initial video
    setTimeout(() => {
      playVideo(0);
    }, 500);
  }

  // Initialize slider
  initializeSlider();

  // Fallback initialization
  setTimeout(initializeSlider, 1000);
});

// Enhanced visibility change handler
document.addEventListener('visibilitychange', function() {
  if (!document.hidden) {
    // When page becomes visible, only resume if video was paused
    setTimeout(() => {
      const currentSlide = $('.homepage-slider').slick('slickCurrentSlide');
      if (isVideoSlide(currentSlide)) {
        const slideElement = document.querySelector(`.slick-slide[data-slick-index="${currentSlide}"]`);
        if (slideElement) {
          const video = slideElement.querySelector('video');
          if (video && video.paused) {
            // Only play if paused, don't restart
            video.play().catch(error => {
              console.log('Video resume failed:', error);
            });
          }
        }
      }
    }, 200);
  }
});

// Helper function for visibility check
function isVideoSlide(slideIndex) {
  const slideElement = document.querySelector(`.slick-slide[data-slick-index="${slideIndex}"]`);
  return slideElement && slideElement.querySelector('video');
}

function playVideo(slideIndex) {
  const slideElement = document.querySelector(`.slick-slide[data-slick-index="${slideIndex}"]`);
  if (!slideElement) return;

  const video = slideElement.querySelector('video');
  if (!video) return;

  // Ensure video properties are set
  video.muted = true;
  video.loop = true;
  video.preload = 'auto';

  // Check if video is ready to play
  if (video.readyState >= 2) {
    const playPromise = video.play();
    if (playPromise !== undefined) {
      playPromise.catch(error => {
        console.log('Video play failed:', error);
        video.load();
        setTimeout(() => {
          video.play().catch(e => console.log('Retry failed:', e));
        }, 500);
      });
    }
  } else {
    video.addEventListener('canplay', function() {
      video.play().catch(error => {
        console.log('Video play failed on canplay:', error);
      });
    }, { once: true });
    
    if (video.readyState === 0) {
      video.load();
    }
  }
}
</script>

