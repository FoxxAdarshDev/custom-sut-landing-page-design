
<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
    height: 600px;
    overflow: hidden;
    position: relative;
  }

  .homepage-slider.slick-initialized {
    opacity: 1;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>

<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item {% if settings[slide_is_video] and settings[slide_video_url] != blank %}video-slide{% else %}image-slide{% endif %}" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <div class="video-container">
              <video 
                class="slide-video" 
                muted 
                playsinline
                preload="metadata"
                src="{{ settings[slide_video_url] }}"
                data-video-src="{{ settings[slide_video_url] }}"
              >
                <source src="{{ settings[slide_video_url] }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
              <div class="video-loading-overlay">
                <div class="loading-spinner"></div>
              </div>
            </div>
          {% else %}
            <div class="image-container">
              {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
            </div>
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>
/* Base slider styling */
.homepage-slider {
  height: 600px !important;
  min-height: 600px;
  max-height: 600px;
  overflow: hidden;
  position: relative;
  background: #000;
  transition: all 0.3s ease;
}

@media screen and (max-width: 768px) {
  .homepage-slider {
    height: 400px !important;
    min-height: 400px;
    max-height: 400px;
  }
}

/* Slide container styling */
.slide-item {
  position: relative;
  width: 100%;
  height: 600px !important;
  overflow: hidden;
  display: flex !important;
  align-items: center;
  justify-content: center;
  background: #000;
}

@media screen and (max-width: 768px) {
  .slide-item {
    height: 400px !important;
  }
}

/* Video slide specific styling */
.slide-item.video-slide {
  height: 600px !important;
  background: #000;
}

.slide-item.image-slide {
  height: 600px !important;
  background: #f5f5f5;
}

@media screen and (max-width: 768px) {
  .slide-item.video-slide,
  .slide-item.image-slide {
    height: 400px !important;
  }
}

/* Video container and styling */
.video-container {
  position: relative;
  width: 100%;
  height: 100%;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.slide-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
  background: #000;
  border-radius: 12px;
  transition: opacity 0.3s ease;
}

.video-loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  transition: opacity 0.3s ease;
}

.video-loading-overlay.hidden {
  opacity: 0;
  pointer-events: none;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Image container and styling */
.image-container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.image-container img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  display: block;
  background: #f5f5f5;
  border-radius: 12px;
}

/* Slide link styling */
.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* Slick slider overrides */
.homepage-slider .slick-track {
  display: flex !important;
  align-items: stretch;
  height: 600px !important;
}

@media screen and (max-width: 768px) {
  .homepage-slider .slick-track {
    height: 400px !important;
  }
}

.homepage-slider .slick-slide {
  height: 600px !important;
  display: flex !important;
  align-items: center;
  overflow: hidden;
}

@media screen and (max-width: 768px) {
  .homepage-slider .slick-slide {
    height: 400px !important;
  }
}

.homepage-slider .slick-slide > div {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* Ensure videos don't interfere with slider controls */
.slick-slide video {
  pointer-events: none;
}

.slick-slide.slick-active video {
  pointer-events: auto;
}

/* Slider controls styling */
.homepage-slider .slick-dots {
  bottom: 20px;
  z-index: 10;
  position: absolute;
}

.homepage-slider .slick-prev,
.homepage-slider .slick-next {
  z-index: 10;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.homepage-slider .slick-prev {
  left: 20px;
}

.homepage-slider .slick-next {
  right: 20px;
}

/* Style the dots */
.homepage-slider .slick-dots li button {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  border: 2px solid rgba(255, 255, 255, 0.8);
}

.homepage-slider .slick-dots li.slick-active button {
  background: rgba(255, 255, 255, 1);
}

/* Style the arrows */
.homepage-slider .slick-prev:before,
.homepage-slider .slick-next:before {
  color: rgba(255, 255, 255, 0.9);
  font-size: 30px;
}

.homepage-slider .slick-prev:hover:before,
.homepage-slider .slick-next:hover:before {
  color: rgba(255, 255, 255, 1);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let sliderInitialized = false;
  let slideTimeout = null;
  let currentVideoElement = null;

  // Video loading and management
  function preloadVideo(videoElement) {
    return new Promise((resolve, reject) => {
      if (!videoElement) {
        reject('No video element');
        return;
      }

      const loadingOverlay = videoElement.parentElement.querySelector('.video-loading-overlay');
      
      // If video is already loaded
      if (videoElement.readyState >= 3) {
        console.log('Video already loaded');
        if (loadingOverlay) {
          loadingOverlay.classList.add('hidden');
        }
        resolve(videoElement);
        return;
      }

      const onLoadedData = function() {
        console.log('Video loaded successfully');
        if (loadingOverlay) {
          loadingOverlay.classList.add('hidden');
        }
        videoElement.removeEventListener('loadeddata', onLoadedData);
        videoElement.removeEventListener('canplay', onLoadedData);
        videoElement.removeEventListener('error', onError);
        resolve(videoElement);
      };

      const onError = function(e) {
        console.error('Video loading error:', e);
        if (loadingOverlay) {
          loadingOverlay.innerHTML = '<p style="color: white;">Video unavailable</p>';
        }
        videoElement.removeEventListener('loadeddata', onLoadedData);
        videoElement.removeEventListener('canplay', onLoadedData);
        videoElement.removeEventListener('error', onError);
        reject(e);
      };

      videoElement.addEventListener('loadeddata', onLoadedData);
      videoElement.addEventListener('canplay', onLoadedData);
      videoElement.addEventListener('error', onError);

      // Ensure src is set
      const videoSrc = videoElement.getAttribute('data-video-src') || videoElement.src;
      if (videoSrc && videoElement.src !== videoSrc) {
        videoElement.src = videoSrc;
      }

      // Start loading
      videoElement.load();
      
      // Fallback timeout
      setTimeout(() => {
        if (videoElement.readyState < 3) {
          console.log('Video loading timeout, hiding overlay anyway');
          if (loadingOverlay) {
            loadingOverlay.classList.add('hidden');
          }
          resolve(videoElement);
        }
      }, 5000);
    });
  }

  function playVideo(videoElement) {
    return new Promise((resolve, reject) => {
      if (!videoElement) {
        reject('No video element');
        return;
      }

      // Reset video
      videoElement.currentTime = 0;
      
      // Ensure video is muted for autoplay
      videoElement.muted = true;
      
      const playPromise = videoElement.play();
      
      if (playPromise !== undefined) {
        playPromise.then(() => {
          console.log('Video started playing');
          resolve(videoElement);
        }).catch((error) => {
          console.error('Video play failed:', error);
          // Try playing without resetting currentTime
          videoElement.play().then(() => {
            console.log('Video started playing on retry');
            resolve(videoElement);
          }).catch((retryError) => {
            console.error('Video play retry failed:', retryError);
            reject(retryError);
          });
        });
      } else {
        resolve(videoElement);
      }
    });
  }

  function stopAllVideos() {
    document.querySelectorAll('.slide-video').forEach(video => {
      try {
        video.pause();
        video.currentTime = 0;
      } catch (e) {
        console.log('Error stopping video:', e);
      }
    });
  }

  // Initialize slider when jQuery and Slick are loaded
  function initializeSlider() {
    if (sliderInitialized || typeof $ === 'undefined' || !$.fn.slick) return;

    // Check if slider already exists and destroy it
    if ($('.homepage-slider').hasClass('slick-initialized')) {
      $('.homepage-slider').slick('unslick');
    }

    // Initialize slider with proper settings
    $(".homepage-slider").slick({
      dots: true,
      infinite: true,
      speed: 500,
      fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
      cssEase: 'linear',
      autoplay: false,
      arrows: true,
      pauseOnHover: false,
      pauseOnFocus: false,
      adaptiveHeight: false,
      responsive: [
        {
            breakpoint: 480,
            settings: {
              arrows: false
            }
        }
      ]
    });

    sliderInitialized = true;

    // Handle slide changes
    $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
      console.log('Slide changing from', currentSlide, 'to', nextSlide);

      // Clear any pending timeouts
      if (slideTimeout) {
        clearTimeout(slideTimeout);
        slideTimeout = null;
      }

      // Stop all videos
      stopAllVideos();
      currentVideoElement = null;
    });

    $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
      console.log('Slide changed to:', currentSlide);

      var currentSlideElement = $(slick.$slides[currentSlide]);
      var video = currentSlideElement.find('video')[0];
      var isVideoSlide = currentSlideElement.hasClass('video-slide');

      if (isVideoSlide && video) {
        console.log('Starting video on slide', currentSlide);
        currentVideoElement = video;
        
        // Hide loading overlay immediately if video is ready
        const loadingOverlay = video.parentElement.querySelector('.video-loading-overlay');
        if (video.readyState >= 3 && loadingOverlay) {
          loadingOverlay.classList.add('hidden');
        }
        
        // Preload and play video
        preloadVideo(video)
          .then(() => {
            console.log('Video preloaded, starting playback');
            return playVideo(video);
          })
          .then(() => {
            console.log('Video playing successfully');
            
            // Set up video end listener
            video.onended = function() {
              console.log('Video ended on slide', currentSlide);
              
              if (slideTimeout) {
                clearTimeout(slideTimeout);
                slideTimeout = null;
              }

              slideTimeout = setTimeout(function() {
                console.log('Auto-advancing after video end');
                if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
                  $('.homepage-slider').slick('slickNext');
                }
              }, 1000);
            };

            // Set fallback timeout for video (max 60 seconds)
            var videoDuration = video.duration;
            var timeoutDuration = 60000;
            
            if (videoDuration && videoDuration > 0 && videoDuration < 120) {
              timeoutDuration = (videoDuration * 1000) + 2000;
            }
            
            if (slideTimeout) {
              clearTimeout(slideTimeout);
              slideTimeout = null;
            }
            
            slideTimeout = setTimeout(function() {
              console.log('Video timeout reached, advancing slide');
              if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
                $('.homepage-slider').slick('slickNext');
              }
            }, timeoutDuration);
          })
          .catch((error) => {
            console.error('Video error:', error);
            
            // Hide loading overlay even on error
            if (loadingOverlay) {
              loadingOverlay.classList.add('hidden');
            }
            
            slideTimeout = setTimeout(function() {
              console.log('Video error timeout, advancing slide');
              if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
                $('.homepage-slider').slick('slickNext');
              }
            }, 3000);
          });

      } else {
        console.log('Starting image timer on slide', currentSlide);
        slideTimeout = setTimeout(function() {
          console.log('Image timeout reached, advancing slide');
          if (slick && $('.homepage-slider').hasClass('slick-initialized')) {
            $('.homepage-slider').slick('slickNext');
          }
        }, 8000);
      }
    });

    // Preload first video
    setTimeout(function() {
      var firstSlide = $('.homepage-slider .slide-item').first();
      var firstVideo = firstSlide.find('video')[0];
      
      if (firstVideo) {
        console.log('Pre-loading first video');
        preloadVideo(firstVideo).catch(e => console.log('First video preload failed:', e));
      }
    }, 500);
    
    // Start the first slide
    setTimeout(function() {
      $('.homepage-slider').trigger('afterChange', [null, 0]);
    }, 1000);
  }

  // Override expo function if it exists
  if (typeof expo !== 'undefined') {
    expo.initSlickSlider = initializeSlider;
  }

  // Try to initialize immediately
  initializeSlider();

  // Also try after a short delay in case libraries are still loading
  setTimeout(initializeSlider, 1000);
  setTimeout(initializeSlider, 3000);

  // Cleanup on page unload
  window.addEventListener('beforeunload', function() {
    if (slideTimeout) {
      clearTimeout(slideTimeout);
      slideTimeout = null;
    }
    
    stopAllVideos();
  });

  // Handle visibility change (when tab becomes inactive/active)
  document.addEventListener('visibilitychange', function() {
    if (document.hidden) {
      if (currentVideoElement) {
        currentVideoElement.pause();
      }
    } else {
      if (currentVideoElement && currentVideoElement.paused) {
        playVideo(currentVideoElement).catch(e => console.log('Resume play failed:', e));
      }
    }
  });
});
</script>

<script>
window.addEventListener('load', function() {
    // Wait for slider to initialize
    setTimeout(function() {
        // Replace slide 1 image (now in position 1) if it's not a video
        const slide1 = document.querySelector('.slide-item[data-slide-index="1"]');
        if(slide1) {
            const slide1Img = slide1.querySelector('img');
            const slide1Video = slide1.querySelector('video');

            // Only replace image if there's no video
            if(slide1Img && !slide1Video) {
                slide1Img.src = 'https://cdn.shopify.com/s/files/1/1064/0118/files/Rhino_carboy_and_bottles_promo-foxx-life-sciences-home-slideshow-v2.jpg?v=1750361081';
            }
        }

        // Replace slide 2 image (now in position 2) if it's not a video
        const slide2 = document.querySelector('.slide-item[data-slide-index="2"]');
        if(slide2) {
            const slide2Img = slide2.querySelector('img');
            const slide2Video = slide2.querySelector('video');

            // Only replace image if there's no video
            if(slide2Img && !slide2Video) {
                slide2Img.src = 'https://cdn.shopify.com/s/files/1/1064/0118/files/Website_ISO_13485_Banner-foxx-life-sciences-HomeSlideshow.jpg?v=1750425783';
            }
        }
    }, 500);
});
</script>
