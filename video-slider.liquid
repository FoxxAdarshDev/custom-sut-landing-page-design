


<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
    height: 600px;
    overflow: hidden;
    position: relative;
  }

  .homepage-slider.slick-initialized {
    opacity: 1;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>

<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item {% if settings[slide_is_video] and settings[slide_video_url] != blank %}video-slide{% else %}image-slide{% endif %}" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <div class="video-container">
              <video 
                class="slide-video" 
                muted 
                playsinline
                preload="metadata"
                src="{{ settings[slide_video_url] }}"
              >
                <source src="{{ settings[slide_video_url] }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
          {% else %}
            <div class="image-container">
              {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
            </div>
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>
/* Base slider styling */
.homepage-slider {
  height: 600px !important;
  min-height: 600px;
  max-height: 600px;
  overflow: hidden;
  position: relative;
  background: #000;
  width: 100%;
}

@media screen and (max-width: 768px) {
  .homepage-slider {
    height: 400px !important;
    min-height: 400px;
    max-height: 400px;
  }
}

/* Slide container styling */
.slide-item {
  position: relative;
  width: 100%;
  height: 600px !important;
  overflow: hidden;
  display: flex !important;
  align-items: center;
  justify-content: center;
  background: #000;
}

@media screen and (max-width: 768px) {
  .slide-item {
    height: 400px !important;
  }
}

/* Video container and styling - FIXED FOR PROPER SIZING */
.video-container {
  position: relative;
  width: 100%;
  height: 100%;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 12px;
}

.slide-video {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  min-width: 100%;
  min-height: 100%;
  object-fit: cover;
  object-position: center;
  transform: translate(-50%, -50%);
  background: #000;
  border-radius: 12px;
  z-index: 1;
}

/* Ensure video fills the entire container */
@media screen and (max-width: 768px) {
  .slide-video {
    width: 100% !important;
    height: 100% !important;
  }
}

/* Image container and styling */
.image-container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.image-container img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  display: block;
  background: #f5f5f5;
  border-radius: 12px;
}

/* Slide link styling */
.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* Slick slider overrides */
.homepage-slider .slick-track {
  display: flex !important;
  align-items: stretch;
  height: 600px !important;
}

@media screen and (max-width: 768px) {
  .homepage-slider .slick-track {
    height: 400px !important;
  }
}

.homepage-slider .slick-slide {
  height: 600px !important;
  display: flex !important;
  align-items: center;
  overflow: hidden;
}

@media screen and (max-width: 768px) {
  .homepage-slider .slick-slide {
    height: 400px !important;
  }
}

.homepage-slider .slick-slide > div {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* Slider controls styling */
.homepage-slider .slick-dots {
  bottom: 20px;
  z-index: 10;
  position: absolute;
}

.homepage-slider .slick-prev,
.homepage-slider .slick-next {
  z-index: 10;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.homepage-slider .slick-prev {
  left: 20px;
}

.homepage-slider .slick-next {
  right: 20px;
}

/* Style the dots */
.homepage-slider .slick-dots li button {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  border: 2px solid rgba(255, 255, 255, 0.8);
}

.homepage-slider .slick-dots li.slick-active button {
  background: rgba(255, 255, 255, 1);
}

/* Style the arrows */
.homepage-slider .slick-prev:before,
.homepage-slider .slick-next:before {
  color: rgba(255, 255, 255, 0.9);
  font-size: 30px;
}

.homepage-slider .slick-prev:hover:before,
.homepage-slider .slick-next:hover:before {
  color: rgba(255, 255, 255, 1);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let sliderInitialized = false;
  let currentVideoSlide = null;

  function stopAllVideos() {
    document.querySelectorAll('.slide-video').forEach(video => {
      try {
        video.pause();
        video.currentTime = 0;
      } catch (e) {
        console.log('Error stopping video:', e);
      }
    });
  }

  function playCurrentVideo(currentSlide) {
    // IMPROVED: Multiple attempts to find the slide element
    let currentSlideElement = document.querySelector(`.slick-slide[data-slick-index="${currentSlide}"]`);
    
    // Fallback: try finding by active class
    if (!currentSlideElement) {
      currentSlideElement = document.querySelector('.slick-slide.slick-active');
      console.log('Using active slide as fallback for index', currentSlide);
    }
    
    if (!currentSlideElement) {
      console.log('No slide element found for index', currentSlide);
      return;
    }

    // IMPROVED: Multiple ways to find video element
    let video = currentSlideElement.querySelector('video');
    
    // Fallback searches
    if (!video) {
      video = currentSlideElement.querySelector('.slide-video');
    }
    if (!video) {
      video = currentSlideElement.querySelector('.video-container video');
    }
    if (!video) {
      // Last resort: search all videos and find the one in active slide
      const allVideos = document.querySelectorAll('.slide-video');
      for (let v of allVideos) {
        const parentSlide = v.closest('.slick-slide');
        if (parentSlide && parentSlide.getAttribute('data-slick-index') == currentSlide) {
          video = v;
          break;
        }
      }
    }
    
    if (!video) {
      console.log('No video found on slide', currentSlide, '- checked multiple selectors');
      return;
    }

    console.log('Playing video on slide', currentSlide, 'video element:', video);
    currentVideoSlide = currentSlide;

    // Force stop any other videos first
    document.querySelectorAll('video').forEach(v => {
      if (v !== video) {
        v.pause();
        v.currentTime = 0;
      }
    });

    // Remove any existing event listeners to prevent duplicates
    video.removeEventListener('pause', handleVideoPause);
    video.removeEventListener('ended', handleVideoEnded);

    // Set video properties
    video.muted = true;
    video.loop = true;
    video.controls = false;
    video.preload = "auto";
    video.autoplay = true;

    // Add event listeners
    video.addEventListener('pause', handleVideoPause);
    video.addEventListener('ended', handleVideoEnded);

    // Enhanced play attempt with aggressive retry logic
    const attemptPlay = async (attempt = 1) => {
      console.log(`Video play attempt ${attempt} for slide ${currentSlide}`);
      
      try {
        // Always reset video position first
        video.pause();
        video.currentTime = 0;
        
        // Force reload the video source
        const src = video.src;
        video.src = '';
        video.src = src;
        video.load();
        
        // Wait for video to be ready
        await new Promise((resolve, reject) => {
          const timeout = setTimeout(() => reject(new Error('Video load timeout')), 5000);
          
          video.addEventListener('loadeddata', () => {
            clearTimeout(timeout);
            resolve();
          }, { once: true });
          
          video.addEventListener('canplay', () => {
            clearTimeout(timeout);
            resolve();
          }, { once: true });
        });

        // Attempt to play
        video.currentTime = 0;
        const playPromise = video.play();
        await playPromise;
        
        console.log(`Video playing successfully on slide ${currentSlide} (attempt ${attempt})`);
        
        // Verify video is actually playing after a short delay
        setTimeout(() => {
          if (video.paused && currentVideoSlide === currentSlide) {
            console.log('Video was paused unexpectedly, retrying...');
            video.play().catch(e => console.log('Verification retry failed:', e));
          }
        }, 1000);
        
      } catch (error) {
        console.log(`Video play attempt ${attempt} failed:`, error);
        
        if (attempt < 5 && currentVideoSlide === currentSlide) {
          // Exponential backoff retry
          const delay = Math.min(1000 * Math.pow(2, attempt - 1), 5000);
          setTimeout(() => {
            if (currentVideoSlide === currentSlide) {
              attemptPlay(attempt + 1);
            }
          }, delay);
        } else {
          console.log('All video play attempts failed for slide', currentSlide);
        }
      }
    };

    // Function to handle video pause events
    function handleVideoPause(e) {
      console.log('Video pause event on slide', currentSlide);
      // Only auto-resume if the video is on the current slide and not manually paused
      if (currentVideoSlide === currentSlide && !video.ended && !video.seeking) {
        setTimeout(() => {
          if (currentVideoSlide === currentSlide && video.paused) {
            console.log('Auto-resuming paused video on slide', currentSlide);
            video.play().catch(err => console.log('Resume after pause failed:', err));
          }
        }, 200);
      }
    }

    // Function to handle video end events
    function handleVideoEnded(e) {
      console.log('Video ended on slide', currentSlide);
      if (currentVideoSlide === currentSlide) {
        setTimeout(() => {
          video.currentTime = 0;
          video.play().catch(err => console.log('Restart after end failed:', err));
        }, 100);
      }
    }

    // Start playing with delay
    setTimeout(() => {
      if (currentVideoSlide === currentSlide) {
        attemptPlay();
      }
    }, 200);
  }

  function initializeSlider() {
    if (sliderInitialized || typeof $ === 'undefined' || !$.fn.slick) return;

    if ($('.homepage-slider').hasClass('slick-initialized')) {
      $('.homepage-slider').slick('unslick');
    }

    // Always start with 70 seconds for video slides (since first slide is video slide 3)
    const initialAutoplaySpeed = 70000;

    console.log('Initializing slider with autoplay speed for video:', initialAutoplaySpeed);

    $(".homepage-slider").slick({
      dots: true,
      infinite: true,
      speed: 500,
      fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
      cssEase: 'linear',
      autoplay: true,
      autoplaySpeed: initialAutoplaySpeed,
      arrows: true,
      pauseOnHover: false,
      pauseOnFocus: false,
      adaptiveHeight: false,
      responsive: [
        {
            breakpoint: 480,
            settings: {
              arrows: false
            }
        }
      ]
    });

    sliderInitialized = true;

    // Handle slide changes
    $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
      console.log(`Slide changing from ${currentSlide} to ${nextSlide}`);
      
      // Stop current videos and reset currentVideoSlide
      stopAllVideos();
      currentVideoSlide = null;

      // IMPROVED: Better video slide detection - check both the slide container AND for actual video element
      const nextSlideElement = document.querySelector(`.slick-slide[data-slick-index="${nextSlide}"]`);
      let isNextSlideVideo = false;
      
      if (nextSlideElement) {
        // Check multiple ways to detect video slide
        const hasVideoSlideClass = nextSlideElement.querySelector('.video-slide');
        const hasVideoElement = nextSlideElement.querySelector('video');
        const slideItemHasVideoClass = nextSlideElement.querySelector('.slide-item.video-slide');
        
        isNextSlideVideo = hasVideoSlideClass || hasVideoElement || slideItemHasVideoClass;
        
        console.log('Video detection for slide', nextSlide, ':', {
          hasVideoSlideClass: !!hasVideoSlideClass,
          hasVideoElement: !!hasVideoElement,
          slideItemHasVideoClass: !!slideItemHasVideoClass,
          isVideo: isNextSlideVideo
        });
      }

      // FIXED: Don't restart autoplay immediately - just set the option
      if (isNextSlideVideo) {
        console.log('Next slide is video - setting 70 second autoplay');
        $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 70000, false);
      } else {
        console.log('Next slide is image - setting 8 second autoplay');
        $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 8000, false);
      }

      // Pre-load and prepare next video if it exists
      const nextVideo = nextSlideElement ? nextSlideElement.querySelector('video') : null;
      if (nextVideo) {
        // Reset video completely
        nextVideo.pause();
        nextVideo.currentTime = 0;
        nextVideo.muted = true;
        nextVideo.loop = true;
        nextVideo.preload = "auto";
        nextVideo.load();
      }
    });

    $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
      console.log(`Slide changed to ${currentSlide}`);
      
      // Always stop all videos first to ensure clean state
      stopAllVideos();
      
      // IMPROVED: Better video slide detection (same as beforeChange)
      const currentSlideElement = document.querySelector(`.slick-slide[data-slick-index="${currentSlide}"]`);
      let isVideoSlide = false;
      
      if (currentSlideElement) {
        const hasVideoSlideClass = currentSlideElement.querySelector('.video-slide');
        const hasVideoElement = currentSlideElement.querySelector('video');
        const slideItemHasVideoClass = currentSlideElement.querySelector('.slide-item.video-slide');
        
        isVideoSlide = hasVideoSlideClass || hasVideoElement || slideItemHasVideoClass;
        
        console.log('Video detection for current slide', currentSlide, ':', {
          hasVideoSlideClass: !!hasVideoSlideClass,
          hasVideoElement: !!hasVideoElement,
          slideItemHasVideoClass: !!slideItemHasVideoClass,
          isVideo: isVideoSlide
        });
      }

      if (isVideoSlide) {
        console.log('Current slide is video - ensuring 70 second timing and starting video');
        // FIXED: Restart autoplay with correct timing after slide change
        $('.homepage-slider').slick('slickPause');
        $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 70000, false);
        $('.homepage-slider').slick('slickPlay');
        
        // Force video restart with longer delay for manual navigation
        setTimeout(() => {
          console.log('Force starting video for slide', currentSlide);
          playCurrentVideo(currentSlide);
        }, 1000);
      } else {
        console.log('Current slide is image - ensuring 8 second timing');
        // FIXED: Restart autoplay with correct timing after slide change
        $('.homepage-slider').slick('slickPause');
        $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 8000, false);
        $('.homepage-slider').slick('slickPlay');
        currentVideoSlide = null; // Clear current video slide reference
      }
    });

    // Enhanced handlers for manual navigation (arrows and dots)
    $('.homepage-slider').on('click', '.slick-arrow, .slick-dots button', function() {
      console.log('Manual navigation detected - will handle video restart');
      
      // Pause autoplay temporarily to prevent conflicts
      $('.homepage-slider').slick('slickPause');
      
      // Small delay to let the slide change complete, then force video check
      setTimeout(() => {
        const currentSlide = $('.homepage-slider').slick('slickCurrentSlide');
        const currentSlideElement = document.querySelector(`.slick-slide[data-slick-index="${currentSlide}"]`);
        
        // Better video detection for manual navigation
        let isVideoSlide = false;
        if (currentSlideElement) {
          const hasVideoSlideClass = currentSlideElement.querySelector('.video-slide');
          const hasVideoElement = currentSlideElement.querySelector('video');
          const slideItemHasVideoClass = currentSlideElement.querySelector('.slide-item.video-slide');
          isVideoSlide = hasVideoSlideClass || hasVideoElement || slideItemHasVideoClass;
        }
        
        if (isVideoSlide) {
          console.log('Manual navigation to video slide - force restart with 70s timing');
          $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 70000, false);
          $('.homepage-slider').slick('slickPlay');
          setTimeout(() => playCurrentVideo(currentSlide), 500);
        } else {
          console.log('Manual navigation to image slide - restart with 8s timing');
          $('.homepage-slider').slick('slickSetOption', 'autoplaySpeed', 8000, false);
          $('.homepage-slider').slick('slickPlay');
        }
      }, 200);
    });

    // Play video on first slide after initialization (since first slide is video slide 3)
    setTimeout(() => {
      console.log('Playing initial video slide');
      playCurrentVideo(0);
    }, 1200);
  }

  // Initialize slider with multiple attempts
  initializeSlider();
  setTimeout(initializeSlider, 1000);
  setTimeout(initializeSlider, 3000);
});

// Enhanced global visibility change handler
document.addEventListener('visibilitychange', function() {
  if (!document.hidden) {
    // When page becomes visible again, ensure current video continues playing
    setTimeout(() => {
      document.querySelectorAll('.slide-video').forEach(video => {
        if (video.closest('.slick-slide').classList.contains('slick-active')) {
          if (video.paused && !video.ended) {
            video.play().catch(e => console.log('Resume on visibility change failed:', e));
          }
        }
      });
    }, 200);
  }
});

// Prevent video pausing on window blur/focus
window.addEventListener('blur', function() {
  setTimeout(() => {
    const activeSlide = document.querySelector('.slick-slide.slick-active');
    if (activeSlide) {
      const video = activeSlide.querySelector('video');
      if (video && video.paused && !video.ended) {
        video.play().catch(e => console.log('Resume on blur failed:', e));
      }
    }
  }, 100);
});

window.addEventListener('focus', function() {
  setTimeout(() => {
    const activeSlide = document.querySelector('.slick-slide.slick-active');
    if (activeSlide) {
      const video = activeSlide.querySelector('video');
      if (video && video.paused && !video.ended) {
        video.play().catch(e => console.log('Resume on focus failed:', e));
      }
    }
  }, 100);
});
</script>

