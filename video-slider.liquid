<style>
  .homepage-slider { 
    display: block !important; 
    border: none;
    background: none;
    border-radius: 0;
    box-shadow: none;
    opacity: 0;
    transition: opacity 0.3s ease;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
  }

  .homepage-slider.slick-initialized {
    opacity: 1;
  }

  .homepage-slider img { 
    border-radius: 0;
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>



<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <div class="video-container" style="position: relative; width: 100%; height: 100%; background: transparent;">
              <div class="video-loading-placeholder" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: #f0f0f0; display: flex; align-items: center; justify-content: center; z-index: 1;">
                <div class="loading-spinner" style="width: 40px; height: 40px; border: 4px solid #ddd; border-top: 4px solid #007bff; border-radius: 50%; animation: spin 1s linear infinite;"></div>
              </div>
              <video 
                class="slide-video" 
                muted 
                playsinline
                preload="metadata"
                style="width: 100%; height: 100%; object-fit: fill; opacity: 0; transition: opacity 0.3s ease;"
              >
                <source src="{{ settings[slide_video_url] }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
          {% else %}
            {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>


.slide-item {
  position: relative;
  width: 100%;
  height: 450px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  box-shadow: none;
}

.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-video {
  width: 100%;
  height: 100%;
  object-fit: fill;
  background: transparent;
  border: none;
  box-shadow: none;
}

.video-container {
  border: none !important;
  box-shadow: none !important;
  background: transparent !important;
}

.homepage-slider img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

/* Ensure videos don't interfere with slider controls */
.slick-slide video {
  pointer-events: none;
}

.slick-slide.slick-active video {
  pointer-events: auto;
}

/* Loading spinner animation */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.video-loading-placeholder {
  background: #f8f9fa !important;
  border: 1px solid #e9ecef;
}

.loading-spinner {
  border: 4px solid #f3f3f3;
  border-top: 4px solid #007bff;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  animation: spin 1s linear infinite;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Wait for all dependencies to load
  function initVideoSlider() {
    if (typeof $ === 'undefined' || !$.fn.slick || typeof expo === 'undefined') {
      setTimeout(initVideoSlider, 100);
      return;
    }

    // Store reference to original function if it exists
    var originalInitSlickSlider = expo.initSlickSlider;

    // Override expo.initSlickSlider with video support
    expo.initSlickSlider = function() {
      console.log('Initializing video slider...');
      
      // Destroy existing slider if present
      if ($('.homepage-slider').hasClass('slick-initialized')) {
        $('.homepage-slider').slick('unslick');
      }

      // Initialize slider
      $(".homepage-slider").slick({
        dots: true,
        infinite: true,
        speed: 500,
        fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
        cssEase: 'linear',
        autoplay: false,
        arrows: true,
        pauseOnHover: false,
        pauseOnFocus: false,
        slidesToShow: 1,
        slidesToScroll: 1,
        adaptiveHeight: false,
        swipe: true,
        touchMove: true,
        accessibility: true,
        responsive: [
          {
              breakpoint: 480,
              settings: {
                arrows: false
              }
          }
        ]
      });

      // Setup video event handlers after slider is initialized
      setupVideoHandlers();
    };

    function setupVideoHandlers() {
      console.log('Setting up video handlers...');
      
      // Add video loading event handlers to all videos
      $('.homepage-slider video').each(function() {
        var video = this;
        var $video = $(video);
        var $container = $video.closest('.video-container');
        var $placeholder = $container.find('.video-loading-placeholder');
        
        // Video loading events
        video.addEventListener('loadstart', function() {
          console.log('Video loading started');
          $placeholder.show();
          $video.css('opacity', '0');
        });
        
        video.addEventListener('loadedmetadata', function() {
          console.log('Video metadata loaded');
        });
        
        video.addEventListener('canplaythrough', function() {
          console.log('Video can play through');
          $placeholder.hide();
          $video.css('opacity', '1');
        });
        
        video.addEventListener('error', function(e) {
          console.log('Video error:', e);
          $placeholder.html('<div style="color: #666; text-align: center; padding: 20px;">Video unavailable</div>');
        });
        
        // Force reload to ensure proper loading state
        video.load();
      });
      
      // Handle slide changes
      $('.homepage-slider').off('beforeChange.videoSlider afterChange.videoSlider');
      
      $('.homepage-slider').on('beforeChange.videoSlider', function(event, slick, currentSlide, nextSlide) {
        console.log('Slide changing from', currentSlide, 'to', nextSlide);
        
        // Clear any existing timers
        if (window.slideTimer) {
          clearTimeout(window.slideTimer);
          window.slideTimer = null;
          console.log('Cleared slide timer');
        }
        
        // Pause and reset current video
        var currentVideo = $(slick.$slides[currentSlide]).find('video')[0];
        if (currentVideo) {
          currentVideo.pause();
          currentVideo.currentTime = 0;
          console.log('Paused video on slide', currentSlide);
        }
      });

      $('.homepage-slider').on('afterChange.videoSlider', function(event, slick, currentSlide) {
        console.log('Slide changed to', currentSlide);
        
        var currentSlideElement = $(slick.$slides[currentSlide]);
        var video = currentSlideElement.find('video')[0];
        var image = currentSlideElement.find('img')[0];
        
        // Clear any existing timers
        if (window.slideTimer) {
          clearTimeout(window.slideTimer);
          window.slideTimer = null;
          console.log('Cleared existing timer');
        }
        
        if (video) {
          console.log('Video slide detected on slide', currentSlide);
          
          var $video = $(video);
          var $container = $video.closest('.video-container');
          var $placeholder = $container.find('.video-loading-placeholder');
          
          // Remove any existing event listeners from ALL videos to prevent duplicates
          $('.homepage-slider video').each(function() {
            this.removeEventListener('ended', handleVideoEnd);
          });
          
          // Add new event listener only to current video
          video.addEventListener('ended', handleVideoEnd);
          
          // Show loading placeholder
          $placeholder.show();
          $video.css('opacity', '0');
          
          // Force reload video source to ensure it plays when returning to slide
          video.load();
          
          // Reset video
          video.currentTime = 0;
          
          // Wait for video to be ready before playing
          var playVideo = function() {
            if (video.readyState >= 2) { // HAVE_CURRENT_DATA
              $placeholder.hide();
              $video.css('opacity', '1');
              
              var playPromise = video.play();
              
              if (playPromise !== undefined) {
                playPromise.then(function() {
                  console.log('Video started playing on slide', currentSlide);
                }).catch(function(error) {
                  console.log('Video autoplay failed:', error);
                  // Try to play again after a short delay
                  setTimeout(function() {
                    video.play().catch(function(retryError) {
                      console.log('Video retry failed, setting 12-second fallback timer');
                      $placeholder.html('<div style="color: #666; text-align: center; padding: 20px;">Video unavailable</div>');
                      window.slideTimer = setTimeout(function() {
                        console.log('Video fallback timer completed, advancing to next slide');
                        if ($('.homepage-slider').hasClass('slick-initialized')) {
                          $('.homepage-slider').slick('slickNext');
                        }
                      }, 12000);
                    });
                  }, 500);
                });
              }
            } else {
              // Video not ready, wait a bit more
              setTimeout(playVideo, 200);
            }
          };
          
          // Start the play process
          playVideo();
        } else if (image) {
          // For image slides, set 12-second timer
          console.log('Image slide detected, setting 12-second timer');
          window.slideTimer = setTimeout(function() {
            console.log('12-second timer completed, advancing to next slide');
            if ($('.homepage-slider').hasClass('slick-initialized')) {
              $('.homepage-slider').slick('slickNext');
            }
          }, 12000); // 12 seconds for images
        }
      });

      // Handle manual dot clicks - restart timers after user interaction
      $('.homepage-slider').on('click', '.slick-dots li', function() {
        console.log('Dot clicked, will restart timers after slide change');
        // Timer will be restarted in afterChange event
      });

      // Video end handler
      function handleVideoEnd(event) {
        console.log('Video ended, advancing to next slide...');
        
        // Clear any existing timers
        if (window.slideTimer) {
          clearTimeout(window.slideTimer);
          window.slideTimer = null;
        }
        
        // Remove event listener from this video to prevent duplicate triggers
        event.target.removeEventListener('ended', handleVideoEnd);
        
        // Small delay to ensure smooth transition
        setTimeout(function() {
          if ($('.homepage-slider').hasClass('slick-initialized')) {
            $('.homepage-slider').slick('slickNext');
          }
        }, 100);
      }

      // Start first video or image timer after initialization
      setTimeout(function() {
        var firstSlide = $('.homepage-slider .slick-active');
        var firstVideo = firstSlide.find('video')[0];
        var firstImage = firstSlide.find('img')[0];
        
        // Clear any existing timers
        if (window.slideTimer) {
          clearTimeout(window.slideTimer);
          window.slideTimer = null;
        }
        
        if (firstVideo) {
          console.log('First slide is video, initializing...');
          
          var $firstVideo = $(firstVideo);
          var $firstContainer = $firstVideo.closest('.video-container');
          var $firstPlaceholder = $firstContainer.find('.video-loading-placeholder');
          
          // Remove any existing event listeners from ALL videos
          $('.homepage-slider video').each(function() {
            this.removeEventListener('ended', handleVideoEnd);
          });
          
          firstVideo.addEventListener('ended', handleVideoEnd);
          
          // Show loading placeholder
          $firstPlaceholder.show();
          $firstVideo.css('opacity', '0');
          
          // Force reload video source
          firstVideo.load();
          
          // Reset video
          firstVideo.currentTime = 0;
          
          // Wait for video to be ready before playing
          var playFirstVideo = function() {
            if (firstVideo.readyState >= 2) { // HAVE_CURRENT_DATA
              $firstPlaceholder.hide();
              $firstVideo.css('opacity', '1');
              
              var playPromise = firstVideo.play();
              
              if (playPromise !== undefined) {
                playPromise.then(function() {
                  console.log('First video started playing');
                }).catch(function(error) {
                  console.log('First video autoplay failed:', error);
                  // Try to play again after a short delay
                  setTimeout(function() {
                    firstVideo.play().catch(function(retryError) {
                      console.log('First video retry failed, setting 12-second fallback timer');
                      $firstPlaceholder.html('<div style="color: #666; text-align: center; padding: 20px;">Video unavailable</div>');
                      window.slideTimer = setTimeout(function() {
                        console.log('First slide fallback timer completed, advancing to next slide');
                        if ($('.homepage-slider').hasClass('slick-initialized')) {
                          $('.homepage-slider').slick('slickNext');
                        }
                      }, 12000);
                    });
                  }, 500);
                });
              }
            } else {
              // Video not ready, wait a bit more
              setTimeout(playFirstVideo, 200);
            }
          };
          
          // Start the play process
          playFirstVideo();
        } else if (firstImage) {
          console.log('First slide is image, setting 12-second timer');
          window.slideTimer = setTimeout(function() {
            console.log('First slide 12-second timer completed, advancing to next slide');
            if ($('.homepage-slider').hasClass('slick-initialized')) {
              $('.homepage-slider').slick('slickNext');
            }
          }, 12000); // 12 seconds for images
        }
      }, 1000);
    }

    // Initialize the slider
    expo.initSlickSlider();
  }

  // Start initialization
  initVideoSlider();
});
</script>

