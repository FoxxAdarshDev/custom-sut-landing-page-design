<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 1;
    background-color: #f8f9fa;
  }

  /* Video loading states */
  .slide-video {
    background-color: #f8f9fa !important;
  }

  /* Loading spinner for videos */
  .video-loading {
    position: relative;
  }

  .video-loading::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin: -20px 0 0 -20px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #0071ce;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    z-index: 10;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .video-loaded .video-loading::before {
    display: none;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>

<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item" data-slide-index="{{ forloop.index0 }}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <video 
              class="slide-video video-loading" 
              muted 
              playsinline
              preload="metadata"
              autoplay
              loop="false"
              controls
              disablepictureinpicture
              controlslist="nodownload nofullscreen noremoteplayback"
              style="width: 100%; height: 100%; object-fit: cover; pointer-events: none;"
              src="{{ settings[slide_video_url] }}"
            >
              <source src="{{ settings[slide_video_url] }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% else %}
            {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>
.slide-item {
  position: relative;
  width: 100%;
  height: 450px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-video {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

.homepage-slider img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

/* Ensure videos don't interfere with slider controls */
.slick-slide video {
  pointer-events: none;
}

.slick-slide.slick-active video {
  pointer-events: auto;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Global variables for slider management
  let sliderAutoplayInterval;
  let isVideoPlaying = false;
  let isPageVisible = true;
  let lastVideoSlideIndex = -1;
  let videoSlideCount = 0;
  let hasInitialOrderExecuted = false; // Track if initial order switch has happened

  // Function to check and initialize the initial slide with data-slide-index="0"
  function initializeInitialSlide() {
    console.log('üéØ CHECKING INITIAL SLIDE WITH data-slide-index="0"');
    
    // Find slide with data-slide-index="0" that has slick-current slick-active classes
    const initialSlide = $('.homepage-slider .slide-item[data-slide-index="0"].slick-current.slick-active');
    
    if (initialSlide.length === 0) {
      console.log('‚ùå No slide with data-slide-index="0" and slick-current slick-active classes found');
      return;
    }
    
    console.log('‚úÖ Found initial slide with data-slide-index="0" and slick-current slick-active classes');
    console.log('üìç Initial slide element:', initialSlide[0]);
    console.log('üìç Initial slide classes:', initialSlide.attr('class'));
    
    // Check if this slide contains a video or image element
    const videoElement = initialSlide.find('video')[0];
    const imageElement = initialSlide.find('img')[0];
    
    if (videoElement) {
      // Check if video has MP4 source
      const videoSrc = videoElement.src || videoElement.getAttribute('src');
      const isMP4 = videoSrc && (videoSrc.includes('.mp4') || videoSrc.includes('video/mp4'));
      
      console.log('üé¨ Video element found in initial slide');
      console.log('üé¨ Video src:', videoSrc);
      console.log('üé¨ Is MP4:', isMP4);
      
      if (isMP4) {
        console.log('üé• MP4 VIDEO SLIDE DETECTED - Initializing 70 second timer for data-slide-index="0"');
        handleVideoSlideChange(videoElement, 0);
      } else {
        console.log('üì∏ Video element has no MP4 source - treating as image slide with 10 second duration');
        isVideoPlaying = false;
        startSliderAutoplay(10000);
      }
    } else if (imageElement) {
      console.log('üì∏ Image element found in initial slide - initializing 10 second duration');
      isVideoPlaying = false;
      startSliderAutoplay(10000);
    } else {
      console.log('‚ùå No video or image element found in initial slide');
      // Default to image behavior
      isVideoPlaying = false;
      startSliderAutoplay(10000);
    }
  }


  // Progressive video loading function
  function loadVideo(videoElement) {
    if (!videoElement || videoElement.src) return;

    var dataSrc = videoElement.getAttribute('data-src');
    if (dataSrc) {
      // Load video source immediately
      videoElement.src = dataSrc;
      videoElement.load();

      // Add loading event listeners
      videoElement.addEventListener('canplaythrough', function() {
        // Video is ready
      }, { once: true });

      videoElement.addEventListener('loadeddata', function() {
        // Video data loaded
      }, { once: true });
    }
  }

  // Track page visibility - keep videos playing in background
  document.addEventListener('visibilitychange', function() {
    isPageVisible = !document.hidden;
    console.log('üîÑ Page visibility changed - isPageVisible:', isPageVisible);

    // Don't pause videos when tab becomes hidden - let them continue playing
    if (isPageVisible) {
      console.log('üì± Tab is now visible again');
      // When tab becomes visible again, ensure video continues if it should be playing
      if (isVideoPlaying) {
        const activeSlide = $('.homepage-slider .slick-active');
        const activeVideo = activeSlide.find('video')[0];
        if (activeVideo && activeVideo.paused) {
          console.log('‚ñ∂Ô∏è Resuming video playback after tab switch');
          activeVideo.play().catch(function(error) {
            console.log('Video resume failed:', error);
          });
        }
      }
    } else {
      console.log('üì± Tab is now hidden - keeping videos running in background');
      // Don't pause videos - let them continue playing in background
    }
  });

  // Slider autoplay management
  function startSliderAutoplay(duration = 10000) {
    stopSliderAutoplay();
    console.log('Starting autoplay with duration:', duration + 'ms');
    sliderAutoplayInterval = setInterval(function() {
      if (!isVideoPlaying) {
        console.log('üì∏ Image autoplay timer reached - Moving to next slide');
        $('.homepage-slider').slick('slickNext');
      } else {
        console.log('üé• Video is playing - skipping autoplay slide change');
      }
    }, duration);
  }

  function stopSliderAutoplay() {
    if (sliderAutoplayInterval) {
      clearInterval(sliderAutoplayInterval);
      sliderAutoplayInterval = null;
    }
  }

  


  // Override the existing expo.initSlickSlider function
  if (typeof expo !== 'undefined') {
    expo.initSlickSlider = function(){
      // Check if slider already exists and destroy it
      if ($('.homepage-slider').hasClass('slick-initialized')) {
        $('.homepage-slider').slick('unslick');
      }

      // Initialize slider
      $(".homepage-slider").slick({
        dots: true,
        infinite: true,
        speed: 500,
        fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
        cssEase: 'linear',
        autoplay: false, // Manual control
        arrows: true,
        pauseOnHover: false,
        pauseOnFocus: false,
        responsive: [
          {
              breakpoint: 480,
              settings: {
                arrows: false
              }
          }
        ]
      });

      // Handle slide changes
      $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
        // Stop current video
        var currentVideo = $(slick.$slides[currentSlide]).find('video')[0];
        if (currentVideo) {
          currentVideo.pause();
          currentVideo.currentTime = 0;
          isVideoPlaying = false;
        }

        // Always stop autoplay when changing slides
        stopSliderAutoplay();

        // Clear advanced timer system for current video
        if (currentVideo) {
          // Clear old-style timer
          if (currentVideo.videoTimer) {
            clearTimeout(currentVideo.videoTimer);
            currentVideo.videoTimer = null;
          }

          // Clear new progress tracking
          const videoElement = currentVideo;
          if (videoElement.progressInterval) {
            clearInterval(videoElement.progressInterval);
            videoElement.progressInterval = null;
          }

          // Reset timer state
          videoElement.videoStartTime = null;
          videoElement.videoPausedTime = 0;
          videoElement.totalPlayedTime = 0;
          videoElement.pauseStartTime = null;

          console.log('üîÑ Video timer system cleared for slide change');
        }
      });

      // Create dedicated video slide handler
      function handleVideoSlideChange(video, currentSlide) {
        console.log('üé• HANDLING VIDEO SLIDE CHANGE');
        console.log('üìπ Video element:', video);
        console.log('üìç Current slide:', currentSlide);

        // Always stop existing autoplay first
        stopSliderAutoplay();

        // Check if video has MP4 source before treating as video slide
        const videoSrc = video.src || video.getAttribute('src');
        const isMP4 = videoSrc && (videoSrc.includes('.mp4') || videoSrc.includes('video/mp4'));

        if (!isMP4) {
          console.log('‚ùå Video element found but no MP4 source - treating as image slide');
          isVideoPlaying = false;
          startSliderAutoplay(10000); // 10 seconds for image slides
          return;
        }

        // Video element exists with MP4 source - treat as video slide
        isVideoPlaying = true;
        console.log('üé• MP4 VIDEO SLIDE DETECTED - Assigning 70 second timer');
        console.log('üìπ Video src:', videoSrc);
        console.log('üé¨ Video loading state:', video.readyState);

        video.currentTime = 0;

        // Initialize 70-second timer immediately
        console.log('‚è≥ INITIALIZING 70-SECOND TIMER (Video may be loading)');
        console.log('üéØ Target: 70 seconds | Current: 0.0s');

        const videoElement = video;
        videoElement.videoStartTime = Date.now();
        videoElement.videoPausedTime = 0;
        videoElement.totalPlayedTime = 0;
        videoElement.pauseStartTime = null;

        // Clear any existing timer
        if (videoElement.progressInterval) {
          clearInterval(videoElement.progressInterval);
        }

        // Start 70-second timer immediately
        videoElement.progressInterval = setInterval(() => {
          // Only count time when video is actually playing
          if (videoElement.paused) {
            console.log(`‚è∏Ô∏è Video Timer: PAUSED - not counting time`);
            return; // Don't count time while paused
          }

          const currentTime = Date.now();
          const elapsedTime = (currentTime - videoElement.videoStartTime - videoElement.videoPausedTime) / 1000;

          videoElement.totalPlayedTime = elapsedTime;

          const progress = (elapsedTime / 70) * 100;
          const loadingStatus = videoElement.readyState < 2 ? ' (Loading...)' : '';
          const playingStatus = videoElement.paused ? ' (Paused)' : ' (Playing)';

          console.log(`‚è±Ô∏è Video Timer: ${elapsedTime.toFixed(1)}s / 70s (${progress.toFixed(1)}%)${loadingStatus}${playingStatus}`);

          if (elapsedTime >= 70 && $(videoElement).closest('.slick-slide').hasClass('slick-active')) {
            console.log('üéØ 70 SECONDS REACHED! Timer complete');
            console.log('üîÑ CHANGING SLIDE NOW...');

            clearInterval(videoElement.progressInterval);
            videoElement.progressInterval = null;

            console.log('‚úÖ Timer system cleared - Slide transition initiated');

            isVideoPlaying = false;
            stopSliderAutoplay();
            $('.homepage-slider').slick('slickNext');
          }
        }, 500);

        // Try to play video when ready
        var tryPlayVideo = function() {
          if (videoElement.readyState >= 2) { // HAVE_CURRENT_DATA
            var playPromise = videoElement.play();
            if (playPromise !== undefined) {
              playPromise.then(function() {
                console.log('‚úÖ Video started playing successfully');
              }).catch(function(error) {
                console.log('‚ö†Ô∏è Video autoplay failed (but 70s timer continues):', error);
              });
            }
          } else {
            console.log('‚è≥ Video still loading, will retry...');
            setTimeout(tryPlayVideo, 200);
          }
        };

        // Start trying to play
        tryPlayVideo();
      }

      $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
        var currentSlideElement = $(slick.$slides[currentSlide]);
        var video = currentSlideElement.find('video')[0];

        console.log('üîÑ Slide changed to:', currentSlide, 'Has video element:', !!video);
        console.log('üìç Current slide classes:', currentSlideElement.attr('class'));

        if (video) {
          // Check if video has MP4 source
          const videoSrc = video.src || video.getAttribute('src');
          const isMP4 = videoSrc && (videoSrc.includes('.mp4') || videoSrc.includes('video/mp4'));
          
          console.log('üé¨ Video src:', videoSrc);
          console.log('üé¨ Is MP4:', isMP4);
          
          if (isMP4) {
            console.log('üé• MP4 VIDEO SLIDE DETECTED - Assigning 70 second timer');
            handleVideoSlideChange(video, currentSlide);
          } else {
            console.log('üì∏ Video element found but no MP4 source - treating as image slide');
            stopSliderAutoplay();
            isVideoPlaying = false;
            console.log('üì∏ Image slide - starting 10 second autoplay');
            startSliderAutoplay(10000);
          }
        } else {
          // No video element - this is an image slide
          stopSliderAutoplay();
          isVideoPlaying = false;
          console.log('üì∏ Image slide - starting 10 second autoplay');
          startSliderAutoplay(10000); // 10 seconds for image slides
        }
      });

      // Handle video events  
      $('.homepage-slider').on('init', function(event, slick) {
        console.log('üé¨ SLICK INITIALIZED - Checking for initial video slide');
        
        // Immediate check for video on current slide
        setTimeout(() => {
          var currentSlide = $('.homepage-slider .slick-current, .homepage-slider .slick-active').first();
          if (currentSlide.length > 0) {
            var currentVideo = currentSlide.find('video')[0];
            if (currentVideo) {
              const videoSrc = currentVideo.src || currentVideo.getAttribute('src');
              const isMP4 = videoSrc && (videoSrc.includes('.mp4') || videoSrc.includes('video/mp4'));
              
              console.log('üéØ FOUND ACTIVE SLIDE WITH VIDEO ON INIT');
              console.log('üé¨ Video src:', videoSrc);
              console.log('üé¨ Is MP4:', isMP4);
              
              if (isMP4) {
                console.log('üé• MP4 VIDEO SLIDE DETECTED - Assigning 70 second timer');
                var slideIndex = currentSlide.attr('data-slide-index') || currentSlide.index() || 0;
                handleVideoSlideChange(currentVideo, slideIndex);
              }
            }
          }
        }, 50);
        // Count video slides
        videoSlideCount = 0;
        $(slick.$slides).each(function(index) {
          if ($(this).find('video')[0]) {
            videoSlideCount++;
          }
        });
        console.log('Total video slides:', videoSlideCount, 'Total slides:', slick.$slides.length);

        // Add video event listeners
        $(slick.$slides).each(function(index) {
          var video = $(this).find('video')[0];
          if (video) {
            // Set up dynamic timer for videos based on actual duration
            let videoTimer = null;

            video.addEventListener('loadedmetadata', function() {
              console.log('Video metadata loaded - duration:', this.duration);
            });

            video.addEventListener('play', function() {
              if ($(this).closest('.slick-slide').hasClass('slick-active')) {
                const videoElement = this;

                // Clear any existing timer
                if (videoTimer) {
                  clearTimeout(videoTimer);
                }

                // Initialize advanced progress tracking
                videoElement.videoStartTime = Date.now();
                videoElement.videoPausedTime = 0;
                videoElement.totalPlayedTime = 0;
                videoElement.pauseStartTime = null;

                console.log('üé¨ VIDEO PLAYBACK STARTED - Tracking 70 second duration');
                console.log('üéØ Target: 70 seconds | Current: 0.0s');

                // Clear any existing progress interval
                if (videoElement.progressInterval) {
                  clearInterval(videoElement.progressInterval);
                }

                // Start real-time progress tracking (every 500ms for clear console reading)
                videoElement.progressInterval = setInterval(() => {
                  // Only count time when video is actually playing
                  if (videoElement.paused) {
                    console.log(`‚è∏Ô∏è Video Playback: PAUSED - timer suspended`);
                    return; // Don't update if video is paused
                  }

                  const currentTime = Date.now();
                  const elapsedTime = (currentTime - videoElement.videoStartTime - videoElement.videoPausedTime) / 1000;

                  // Update total played time
                  videoElement.totalPlayedTime = elapsedTime;

                  // Real-time console logging every second
                  const progress = (elapsedTime / 70) * 100;
                  console.log(`‚è±Ô∏è Video Playback: ${elapsedTime.toFixed(1)}s / 70s (${progress.toFixed(1)}%)`);

                  // Check if we've reached 70 seconds of actual playback
                  if (elapsedTime >= 70 && $(videoElement).closest('.slick-slide').hasClass('slick-active')) {
                    console.log('üéØ 70 SECONDS REACHED! Video playback complete');
                    console.log('üîÑ CHANGING SLIDE NOW...');

                    // Clear progress tracking
                    clearInterval(videoElement.progressInterval);
                    videoElement.progressInterval = null;

                    console.log('‚úÖ Timer system cleared - Slide transition initiated');

                    // Change slide
                    isVideoPlaying = false;
                    stopSliderAutoplay();
                    $('.homepage-slider').slick('slickNext');
                  }
                }, 500); // Update every 500ms for readable console output
              }
            });

            // Handle natural video end (if video is shorter than 70 seconds)
            video.addEventListener('ended', function() {
              console.log('Video ended naturally at:', this.currentTime, 'of', this.duration);

              // Clear the timer since video ended naturally
              if (videoTimer) {
                clearTimeout(videoTimer);
                videoTimer = null;
              }

              // Only proceed if this video is currently active
              if ($(this).closest('.slick-slide').hasClass('slick-active')) {
                console.log('Active video ended, moving to next slide');

                // Reset video state
                isVideoPlaying = false;
                stopSliderAutoplay();

                // Move to next slide immediately
                $('.homepage-slider').slick('slickNext');
              }
            });

            // Video timeupdate for basic monitoring (optional)
            video.addEventListener('timeupdate', function() {
              // Basic video position monitoring - real-time progress is handled in 'play' event
              if (this.currentTime > 0 && this.duration > 0) {
                // Optional: You can add additional monitoring here if needed
              }
            });

            // Video loaded - remove loading state
            video.addEventListener('canplay', function() {
              this.classList.remove('video-loading');
              this.closest('.slide-item').classList.add('video-loaded');
            });

            // Video started playing
            video.addEventListener('playing', function() {
              this.classList.remove('video-loading');
              this.closest('.slide-item').classList.add('video-loaded');
              console.log('Video started playing');
            });

            // Handle video pause events
            video.addEventListener('pause', function() {
              const videoElement = this;

              if (isVideoPlaying && $(this).closest('.slick-slide').hasClass('slick-active')) {
                console.log('‚è∏Ô∏è Video paused - timer will be suspended');

                // Record pause start time for accurate time tracking
                videoElement.pauseStartTime = Date.now();

                // Only try to auto-resume if page is visible
                if (isPageVisible) {
                  var self = this;
                  setTimeout(function() {
                    if (isVideoPlaying && self.paused && isPageVisible) {
                      console.log('üîÑ Auto-resuming video after pause (page visible)');
                      self.play().catch(function(error) {
                        console.log('Video resume failed:', error);
                      });
                    }
                  }, 100);
                } else {
                  console.log('üîÑ Page not visible - will resume when tab becomes active');
                }
              }
            });

            // Handle video resume events
            video.addEventListener('playing', function() {
              const videoElement = this;

              if (isVideoPlaying && $(this).closest('.slick-slide').hasClass('slick-active')) {
                console.log('‚ñ∂Ô∏è Video resumed - timer will continue');

                // Add paused time to total paused time for accurate tracking
                if (videoElement.pauseStartTime) {
                  const pauseDuration = Date.now() - videoElement.pauseStartTime;
                  videoElement.videoPausedTime += pauseDuration;
                  videoElement.pauseStartTime = null;
                  console.log(`‚è±Ô∏è Added ${(pauseDuration/1000).toFixed(1)}s pause time to tracking`);
                }
              }
            });



            // Video data loaded - start removing loading state
            video.addEventListener('loadeddata', function() {
              this.classList.remove('video-loading');
            });

            // Video error - treat as image slide with 10 second autoplay
            video.addEventListener('error', function() {
              console.log('Video error, treating as image slide');
              isVideoPlaying = false;
              if ($(this).closest('.slick-slide').hasClass('slick-active')) {
                startSliderAutoplay(10000); // 10 seconds for image slides
              }
            });

            // Load all videos immediately for faster playback
            loadVideo(video);
          }
        });

        // Check for slide with data-slide-index="0" and slick-current slick-active classes
        setTimeout(() => {
          console.log('üé¨ INITIAL SETUP: Starting initialization checks');
          
          // First, try the new specific function for data-slide-index="0"
          initializeInitialSlide();
          
          // If that didn't work, fall back to general active slide detection
          setTimeout(() => {
            if (!isVideoPlaying && !sliderAutoplayInterval) {
              console.log('üîÑ Fallback: Checking for any active slide with video content');
              
              // Find the slide with slick-current slick-active classes
              var activeSlide = $('.homepage-slider .slick-current.slick-active');
              if (activeSlide.length === 0) {
                // Fallback to any slide with slick-active class
                activeSlide = $('.homepage-slider .slick-active');
              }
              if (activeSlide.length === 0) {
                // Final fallback to first slide
                activeSlide = $(slick.$slides[0]);
              }
              
              var activeVideo = activeSlide.find('video')[0];
              var activeSlideIndex = activeSlide.attr('data-slide-index') || activeSlide.index() || 0;
              
              console.log('Fallback - Active slide element:', activeSlide[0]);
              console.log('Fallback - Active slide classes:', activeSlide.attr('class'));
              console.log('Fallback - Active slide index:', activeSlideIndex);
              console.log('Fallback - Active slide has video:', !!activeVideo);

              if (activeVideo) {
                // Check if active slide video has MP4 source
                const activeVideoSrc = activeVideo.src || activeVideo.getAttribute('src');
                const isActiveMP4 = activeVideoSrc && (activeVideoSrc.includes('.mp4') || activeVideoSrc.includes('video/mp4'));

                console.log('üé¨ Fallback - Video src:', activeVideoSrc);
                console.log('üé¨ Fallback - Is MP4:', isActiveMP4);

                if (isActiveMP4) {
                  console.log('üéØ FALLBACK - ACTIVE SLIDE HAS MP4 VIDEO - Starting with video slide');
                  console.log('üé• MP4 VIDEO SLIDE DETECTED - Assigning 70 second timer');
                  
                  // Immediately trigger video initialization for active slide
                  console.log('üöÄ FALLBACK - INITIALIZING ACTIVE SLIDE VIDEO');
                  handleVideoSlideChange(activeVideo, activeSlideIndex);
                } else {
                  console.log('üì∏ Fallback - Active slide video has no MP4 source - treating as image');
                  isVideoPlaying = false;
                  startSliderAutoplay(10000);
                }
              } else {
                console.log('üì∏ Fallback - Active slide is image - starting with image autoplay');
                isVideoPlaying = false;
                startSliderAutoplay(10000);
              }
