<style>
  .homepage-slider { 
    display: block !important; 
    border: 2px solid transparent; 
    background-image: linear-gradient(white, white), linear-gradient(to bottom, #0071ce, #5da8e5, #9dc8ec); 
    background-origin: border-box; 
    background-clip: content-box, border-box; 
    border-radius: 12px;
    opacity: 1;
    background-color: #f8f9fa;
  }

  /* Video loading states */
  .slide-video {
    background-color: #f8f9fa !important;
  }

  /* Loading spinner for videos */
  .video-loading {
    position: relative;
  }

  .video-loading::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin: -20px 0 0 -20px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #0071ce;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    z-index: 10;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .video-loaded .video-loading::before {
    display: none;
  }

  .homepage-slider img { 
    border-radius: 12px; 
  }

  /* Hide slides initially until slider is initialized */
  .homepage-slider:not(.slick-initialized) .slide-item {
    display: none;
  }

  .homepage-slider:not(.slick-initialized) .slide-item:first-child {
    display: block;
  }
</style>

<section class="homepage-slider">
  {% comment %} Show slide 3 first {% endcomment %}
  {% assign slide_order = '3,1,2,4,5,6,7,8' | split: ',' %}
  {% for slide_num in slide_order %}
    {% assign i = slide_num | plus: 0 %}
    {% capture slide %}slide_{{ i }}{% endcapture %}
    {% capture slide_link %}slide_{{ i }}_link{% endcapture %}
    {% capture slide_img %}slide_{{ i }}.jpg{% endcapture %}
    {% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
    {% capture slide_is_video %}slide_{{ i }}_is_video{% endcapture %}
    {% capture slide_video_url %}slide_{{ i }}_video_url{% endcapture %}

    {% if settings[slide] %}
      <div class="slide-item" data-slide-index="{{ forloop.index0 }}" data-is-video="{% if settings[slide_is_video] and settings[slide_video_url] != blank %}true{% else %}false{% endif %}">
        <a href="{{ settings[slide_link] }}" class="slide-link">
          {% if settings[slide_is_video] and settings[slide_video_url] != blank %}
            <video 
              class="slide-video video-loading" 
              muted 
              playsinline
              preload="metadata"
              style="width: 100%; height: 100%; object-fit: cover;"
              src="{{ settings[slide_video_url] }}"
            >
              <source src="{{ settings[slide_video_url] }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% else %}
            {{ slide_img | asset_url | img_tag: settings[slide_alt] }}
          {% endif %}
        </a>
      </div>
    {% endif %}
  {% endfor %}
</section>

<style>
.slide-item {
  position: relative;
  width: 100%;
  height: 450px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-link {
  display: block;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-video {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

.homepage-slider img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  max-width: 100%;
  max-height: 100%;
}

/* Ensure videos don't interfere with slider controls */
.slick-slide video {
  pointer-events: none;
}

.slick-slide.slick-active video {
  pointer-events: auto;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Global variables for slider management
  let sliderAutoplayInterval;
  let isVideoPlaying = false;
  let currentSlideIndex = 0;
  let totalSlides = 0;
  let videoEndTimer = null;

  // Track page visibility - keep videos playing in background
  document.addEventListener('visibilitychange', function() {
    const isPageVisible = !document.hidden;

    // Don't pause videos when tab changes - Netflix behavior
    if (!isPageVisible && isVideoPlaying) {
      const activeSlide = $('.homepage-slider .slick-active');
      const activeVideo = activeSlide.find('video')[0];
      if (activeVideo && !activeVideo.paused) {
        // Keep video playing even when tab is not visible
        console.log('Tab changed - keeping video playing in background');
      }
    }
  });

  // Slider autoplay management
  function startSliderAutoplay(duration = 10000) {
    stopSliderAutoplay();
    console.log('Starting autoplay with duration:', duration + 'ms');
    sliderAutoplayInterval = setInterval(function() {
      if (!isVideoPlaying) {
        console.log('Autoplay triggered - moving to next slide');
        $('.homepage-slider').slick('slickNext');
      }
    }, duration);
  }

  function stopSliderAutoplay() {
    if (sliderAutoplayInterval) {
      clearInterval(sliderAutoplayInterval);
      sliderAutoplayInterval = null;
      console.log('Autoplay stopped');
    }
  }

  function clearVideoTimer() {
    if (videoEndTimer) {
      clearTimeout(videoEndTimer);
      videoEndTimer = null;
    }
  }

  // Override the existing expo.initSlickSlider function
  if (typeof expo !== 'undefined') {
    expo.initSlickSlider = function(){
      // Check if slider already exists and destroy it
      if ($('.homepage-slider').hasClass('slick-initialized')) {
        $('.homepage-slider').slick('unslick');
      }

      // Initialize slider
      $(".homepage-slider").slick({
        dots: true,
        infinite: true,
        speed: 500,
        fade: {% if settings.slider_home_transition == 'fade' %}true{% else %}false{% endif %},
        cssEase: 'linear',
        autoplay: false, // Manual control
        arrows: true,
        pauseOnHover: false,
        pauseOnFocus: false,
        responsive: [
          {
              breakpoint: 480,
              settings: {
                arrows: false
              }
          }
        ]
      });

      // Handle slide changes
      $('.homepage-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
        console.log('Slide changing from', currentSlide, 'to', nextSlide);

        // Stop current video and cleanup
        var currentVideo = $(slick.$slides[currentSlide]).find('video')[0];
        if (currentVideo) {
          currentVideo.pause();
          currentVideo.currentTime = 0;
          console.log('Stopped video on slide', currentSlide);
        }

        // Reset state
        isVideoPlaying = false;
        stopSliderAutoplay();
        clearVideoTimer();

        currentSlideIndex = nextSlide;
      });

      $('.homepage-slider').on('afterChange', function(event, slick, currentSlide) {
        var currentSlideElement = $(slick.$slides[currentSlide]);
        var video = currentSlideElement.find('video')[0];
        var isVideoSlide = currentSlideElement.data('is-video') === 'true' || currentSlideElement.data('is-video') === true;

        console.log('Slide changed to:', currentSlide, 'Is video slide:', isVideoSlide, 'Has video element:', !!video);

        // Stop any existing timers
        stopSliderAutoplay();
        clearVideoTimer();

        if (isVideoSlide && video && video.src && video.src.trim() !== '') {
          // Video slide - play video for full duration then move to next slide
          isVideoPlaying = true;
          console.log('Video slide detected - starting video playback');

          video.currentTime = 0;

          // Play video immediately
          video.play().then(function() {
            console.log('Video started playing successfully');

            // Set timer for video duration (70 seconds = 1 min 10 seconds)
            videoEndTimer = setTimeout(function() {
              console.log('Video duration timer completed - moving to next slide');
              isVideoPlaying = false;
              $('.homepage-slider').slick('slickNext');
            }, 70000); // 70 seconds = 1 min 10 seconds

          }).catch(function(error) {
            console.log('Video play failed:', error);
            // If video fails, treat as image slide
            isVideoPlaying = false;
            startSliderAutoplay(10000); // 10 seconds for failed video
          });

          // Additional safety - listen for video ended event
          video.addEventListener('ended', function videoEndedHandler() {
            console.log('Video ended naturally');
            clearVideoTimer();
            isVideoPlaying = false;

            // Remove this listener to prevent duplicates
            video.removeEventListener('ended', videoEndedHandler);

            // Move to next slide
            setTimeout(function() {
              $('.homepage-slider').slick('slickNext');
            }, 500);
          }, { once: true });

        } else {
          // Image slide - start 10 second autoplay
          isVideoPlaying = false;
          console.log('Image slide detected - starting 10 second autoplay');
          startSliderAutoplay(10000); // 10 seconds for image slides
        }
      });

      // Handle initialization
      $('.homepage-slider').on('init', function(event, slick) {
        totalSlides = slick.$slides.length;
        console.log('Slider initialized with', totalSlides, 'slides');

        // Add video event listeners
        $(slick.$slides).each(function(index) {
          var video = $(this).find('video')[0];
          if (video) {
            // Video loaded - remove loading state
            video.addEventListener('canplay', function() {
              this.classList.remove('video-loading');
              this.closest('.slide-item').classList.add('video-loaded');
            });

            // Video started playing
            video.addEventListener('playing', function() {
              this.classList.remove('video-loading');
              this.closest('.slide-item').classList.add('video-loaded');
              console.log('Video started playing on slide', index);
            });

            // Prevent video from auto-pausing when tab changes (Netflix behavior)
            video.addEventListener('pause', function() {
              if (isVideoPlaying && $(this).closest('.slick-slide').hasClass('slick-active') && !document.hidden) {
                console.log('Video paused unexpectedly - attempting to resume');
                setTimeout(() => {
                  this.play().catch(function(error) {
                    console.log('Video resume failed:', error);
                  });
                }, 100);
              }
            });

            // Video error - treat as image slide
            video.addEventListener('error', function() {
              console.log('Video error on slide', index, '- treating as image slide');
              if ($(this).closest('.slick-slide').hasClass('slick-active')) {
                isVideoPlaying = false;
                clearVideoTimer();
                startSliderAutoplay(10000); // 10 seconds for image slides
              }
            });
          }
        });

        // Start with first slide after initialization
        setTimeout(function() {
          var firstSlide = $('.homepage-slider .slick-active');
          var firstVideo = firstSlide.find('video')[0];
          var isFirstVideoSlide = firstSlide.data('is-video') === 'true' || firstSlide.data('is-video') === true;

          console.log('Initial slide setup - Is video slide:', isFirstVideoSlide, 'Has video element:', !!firstVideo);

          if (isFirstVideoSlide && firstVideo && firstVideo.src && firstVideo.src.trim() !== '') {
            // First slide is video - play it for full duration
            isVideoPlaying = true;
            firstVideo.currentTime = 0;
            console.log('First slide is video - starting playback');

            firstVideo.play().then(function() {
              console.log('First video started playing');

              // Set timer for 70 seconds
              videoEndTimer = setTimeout(function() {
                console.log('First video duration timer completed');
                isVideoPlaying = false;
                $('.homepage-slider').slick('slickNext');
              }, 70000); // 70 seconds

            }).catch(function(error) {
              console.log('First video autoplay failed:', error);
              isVideoPlaying = false;
              startSliderAutoplay(10000); // 10 seconds if video fails
            });
          } else {
            // First slide is image - start 10 second autoplay
            isVideoPlaying = false;
            console.log('First slide is image - starting 10 second autoplay');
            startSliderAutoplay(10000); // 10 seconds for image slides
          }
        }, 1000);
      });
    };

    // Initialize slider if jQuery is available
    if (typeof $ !== 'undefined' && $.fn.slick) {
      expo.initSlickSlider();
    }
  }
});
</script>

