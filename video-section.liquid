  async function switchTab(playlistId) {
    // Update tab buttons
    document.querySelectorAll('.video-tab').forEach(tab => {
      tab.classList.remove('active');
    });
    document.querySelector(`[data-playlist-id="${playlistId}"].video-tab`).classList.add('active');

    // Update tab contents
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.remove('active');
    });
    document.querySelector(`[data-playlist-id="${playlistId}"].tab-content`).classList.add('active');

    const playlist = videosByPlaylist[playlistId];
    
    // Check if playlist videos need to be loaded
    if (!playlist.loaded) {
      console.log(`Loading videos for ${playlist.name}...`);
      
      // Show loading message instead of skeleton
      const videosContainer = document.querySelector(`#videos-${playlistId}`);
      const videoCountElement = document.querySelector(`#video-count-${playlistId}`);
      if (videosContainer) {
        videosContainer.innerHTML = '<div class="loading-spinner"><div class="spinner"></div></div>';
      }
      if (videoCountElement) {
        videoCountElement.textContent = 'Loading videos...';
      }

      try {
        // Find the original playlist config
        const originalPlaylist = playlists.find(p => p.id === playlistId);
        if (originalPlaylist) {
          const playlistVideos = await fetchPlaylistVideos(originalPlaylist.id, originalPlaylist.name);
          
          // Filter out shorts (they're already loaded)
          const regularVideos = playlistVideos.filter(video => !video.isShort);
          
          // Sort videos by date (latest first)
          regularVideos.sort((a, b) => {
            const dateA = a.publishedDate || new Date(0);
            const dateB = b.publishedDate || new Date(0);
            return dateB - dateA;
          });

          playlist.videos = regularVideos;
          playlist.loaded = true;

          // Add to allVideos array
          allVideos.push(...regularVideos);

          // Update video count
          const videoCountElement = document.querySelector(`#video-count-${playlistId}`);
          if (videoCountElement) {
            videoCountElement.textContent = `${regularVideos.length} videos`;
          }

          console.log(`Loaded ${regularVideos.length} videos for ${playlist.name}`);
        }
      } catch (error) {
        console.error(`Error loading videos for ${playlist.name}:`, error);
        const videosContainer = document.querySelector(`#videos-${playlistId}`);
        const videoCountElement = document.querySelector(`#video-count-${playlistId}`);
        if (videosContainer) {
          videosContainer.innerHTML = displayEmptyState(`Failed to load videos from ${playlist.name}`);
        }
        if (videoCountElement) {
          videoCountElement.textContent = '0 videos';
        }
        return;
      }
    }

    // Update video count if already loaded
    const videoCountElement = document.querySelector(`#video-count-${playlistId}`);
    if (videoCountElement && playlist.loaded) {
      videoCountElement.textContent = `${playlist.videos.length} videos`;
    }

    // Load initial videos if not displayed yet
    if (loadedVideos[playlistId] === 0 && playlist.videos.length > 0) {
      const videosContainer = document.querySelector(`#videos-${playlistId}`);
      if (videosContainer) {
        videosContainer.innerHTML = '';
      }
      loadInitialVideos(playlistId);
    }
  }

  function loadInitialVideos(playlistId) {
    const playlist = videosByPlaylist[playlistId];
    const videosContainer = document.querySelector(`#videos-${playlistId}`);
    const loadMoreButton = document.querySelector(`#load-more-${playlistId}`);

    // Load only initial 3 videos
    const endIndex = Math.min(initialVideosPerTab, playlist.videos.length);

    for (let i = 0; i < endIndex; i++) {
      const video = playlist.videos[i];
      const videoElement = createVideoElementForDisplay(video, allVideos.indexOf(video));
      
      // Add fade-in animation with slight delay for staggered effect
      videoElement.style.opacity = '0';
      videoElement.classList.add('fade-in');
      videosContainer.appendChild(videoElement);
      
      // Trigger fade-in animation
      setTimeout(() => {
        videoElement.style.opacity = '1';
      }, i * 100); // Staggered animation
    }

    loadedVideos[playlistId] = endIndex;

    // Show load more button if there are more videos
    if (loadMoreButton) {
      if (endIndex >= playlist.videos.length) {
        loadMoreButton.style.display = 'none';
      } else {
        loadMoreButton.style.display = 'block';
        loadMoreButton.style.margin = '30px auto';
        loadMoreButton.style.textAlign = 'center';
      }
    }
  }

  function loadMoreVideos(playlistId) {
    const playlist = videosByPlaylist[playlistId];
    const videosContainer = document.querySelector(`#videos-${playlistId}`);
    const loadMoreButton = document.querySelector(`#load-more-${playlistId}`);

    const startIndex = loadedVideos[playlistId];
    const endIndex = Math.min(startIndex + videosPerLoad, playlist.videos.length);

    for (let i = startIndex; i < endIndex; i++) {
      const video = playlist.videos[i];
      const videoElement = createVideoElementForDisplay(video, allVideos.indexOf(video));
      
      // Add fade-in animation with slight delay for staggered effect
      videoElement.style.opacity = '0';
      videoElement.classList.add('fade-in');
      videosContainer.appendChild(videoElement);
      
      // Trigger fade-in animation
      setTimeout(() => {
        videoElement.style.opacity = '1';
      }, (i - startIndex) * 100); // Staggered animation
    }

    loadedVideos[playlistId] = endIndex;

    // Show/hide load more button based on remaining videos
    if (loadMoreButton) {
      if (endIndex >= playlist.videos.length) {
        loadMoreButton.style.display = 'none';
      } else {
        loadMoreButton.style.display = 'block';
      }
    }
  }

