        views: Math.floor(Math.random() * 1000) + 100
      });

      mockVideos.push({
        element: videoElement,
        title: title,
        playlist: playlist.name,
        isShort: isShortPlaylist,
        id: videoId,
        duration: isShortPlaylist ? "0:30" : `${Math.floor(Math.random() * 10) + 5}:${Math.floor(Math.random() * 60).toString().padStart(2, '0')}`,
        views: Math.floor(Math.random() * 1000) + 100,
        description: `This is a ${isShortPlaylist ? 'short' : 'video'} from ${playlist.name}. Lorem ipsum dolor sit amet, consectetur adipiscing elit.`
      });
    }
    
    return mockVideos;
  }

  function createVideoElement(video) {
    const videoDiv = document.createElement('div');
    videoDiv.className = 'youtube-video-item';
    videoDiv.setAttribute('data-video-id', video.id);
    
    const publishedDate = new Date(video.publishedAt).toLocaleDateString();
    
    videoDiv.innerHTML = `
      <div class="video-thumbnail-container">
        <img src="https://img.youtube.com/vi/${video.id}/mqdefault.jpg" 
             alt="${video.title}"
             style="width: 100%; height: 100%; object-fit: cover;">
        <div class="video-play-button"></div>
        <div class="video-type-badge">Video</div>
      </div>
      <div class="youtube-video-details">
        <h3 class="youtube-video-title">${video.title}</h3>
        <div class="video-meta">
          <span class="video-duration">${video.duration || '5:30'}</span>
          <span class="video-views">${video.views || '208'}</span>
          <span class="video-date">${publishedDate}</span>
        </div>
        <p class="video-description" data-description="${video.description}">
          ${video.description.substring(0, 80)}...
        </p>
        <a href="#" class="youtube-read-more">Read More</a>
      </div>
    `;
    
    return videoDiv;
  }

  function createTabs(playlistIds) {
    videosTabsContainer.innerHTML = '';
    tabContentsContainer.innerHTML = '';

    playlistIds.forEach((playlistId, index) => {
      const playlist = videosByPlaylist[playlistId];
      
      // Create tab button
      const tabButton = document.createElement('button');
      tabButton.className = `video-tab ${index === 0 ? 'active' : ''}`;
      tabButton.setAttribute('data-playlist-id', playlistId);
      tabButton.textContent = playlist.name;
      tabButton.addEventListener('click', () => switchTab(playlistId));
      videosTabsContainer.appendChild(tabButton);

      // Create tab content
      const tabContent = document.createElement('div');
      tabContent.className = `tab-content ${index === 0 ? 'active' : ''}`;
      tabContent.setAttribute('data-playlist-id', playlistId);
      
      const videosHeader = document.createElement('div');
      videosHeader.className = 'videos-header';
      videosHeader.innerHTML = `
        <span class="video-count">${playlist.videos.length} videos</span>
      `;
      
      const videosContainer = document.createElement('div');
      videosContainer.className = 'youtube-video-container';
      videosContainer.id = `videos-${playlistId}`;
      
      const loadMoreButton = document.createElement('button');
      loadMoreButton.className = 'load-more-button';
      loadMoreButton.textContent = 'Load More Videos';
      loadMoreButton.addEventListener('click', () => loadMoreVideos(playlistId));
      
      tabContent.appendChild(videosHeader);
      tabContent.appendChild(videosContainer);
      tabContent.appendChild(loadMoreButton);
      tabContentsContainer.appendChild(tabContent);

      // Load initial videos for the first tab
      if (index === 0) {
        loadMoreVideos(playlistId);
      }
    });
  }

  function switchTab(playlistId) {
    // Update tab buttons
    document.querySelectorAll('.video-tab').forEach(tab => {
      tab.classList.remove('active');
    });
    document.querySelector(`[data-playlist-id="${playlistId}"].video-tab`).classList.add('active');

    // Update tab contents
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.remove('active');
    });
    document.querySelector(`[data-playlist-id="${playlistId}"].tab-content`).classList.add('active');

    // Load videos if not loaded yet
    if (loadedVideos[playlistId] === 0) {
      loadMoreVideos(playlistId);
    }
  }

  function loadMoreVideos(playlistId) {
    const playlist = videosByPlaylist[playlistId];
    const videosContainer = document.querySelector(`#videos-${playlistId}`);
    const loadMoreButton = document.querySelector(`[data-playlist-id="${playlistId}"] .load-more-button`);
    
    const startIndex = loadedVideos[playlistId];
    const endIndex = Math.min(startIndex + videosPerLoad, playlist.videos.length);
    
    for (let i = startIndex; i < endIndex; i++) {
      const video = playlist.videos[i];
      const videoElement = createVideoElementForDisplay(video, allVideos.indexOf(video));
      videosContainer.appendChild(videoElement);
    }
    
    loadedVideos[playlistId] = endIndex;
    
    // Hide load more button if all videos are loaded
    if (endIndex >= playlist.videos.length) {
      loadMoreButton.style.display = 'none';
    }
  }

  function displayShorts(shorts) {
    if (shorts.length === 0) {
      shortsContainer.innerHTML = '<div style="padding: 20px; text-align: center; color: {{ section.settings.description_color | default: "#666666" }};">No shorts available</div>';
      return;
    }

    shortsContainer.innerHTML = '';
    shorts.forEach((short, index) => {
      const shortElement = createShortElement(short, index, sectionId);
      shortsContainer.appendChild(shortElement);
    });
  }

  function createShortElement(short, index, sectionId) {
    const shortDiv = document.createElement('div');
    shortDiv.className = 'short-item';
    shortDiv.setAttribute('data-video-index', index);
    
    shortDiv.innerHTML = `
      <div class="short-thumbnail">
        <img src="https://img.youtube.com/vi/${short.id}/mqdefault.jpg" 
             alt="${short.title}"
             style="width: 100%; height: 100%; object-fit: cover;">
      </div>
      <div class="short-overlay">
        <div class="short-badge">Short</div>
        ${index === 0 ? '<div class="short-play-status">Playing</div>' : ''}
      </div>
      <div class="short-views">${short.views || Math.floor(Math.random() * 2000) + 100}</div>
    `;

    shortDiv.addEventListener('click', () => {
      currentVideoIndex = index;
      showModal(short);
    });

    return shortDiv;
  }

  function createVideoElementForDisplay(video, index) {
    const videoDiv = video.element.cloneNode(true);
    videoDiv.setAttribute('data-video-index', index);
    
    // Add click event to read more button
    const readMoreBtn = videoDiv.querySelector('.youtube-read-more');
    if (readMoreBtn) {
      readMoreBtn.addEventListener('click', (e) => {
        e.preventDefault();
        currentVideoIndex = index;
        showModal(video);
      });
    }

    // Add click event to entire video card
    videoDiv.addEventListener('click', () => {
      currentVideoIndex = index;
      showModal(video);
    });

    return videoDiv;
  }

  function showModal(videoData) {
    const title = videoData.title;
    const description = videoData.description || 'Video description not available';
    const videoId = videoData.id;
    
    modalTitle.textContent = title;
    modalIframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&mute=0`;
    modalDescription.innerHTML = description;
    modalYouTubeLink.href = `https://www.youtube.com/watch?v=${videoId}`;

    // Add mock stats
    modalStats.innerHTML = `
      <div class="modal-stat">
        <div class="modal-stat-number">${Math.floor(Math.random() * 100) + 10}</div>
        <div class="modal-stat-label">Likes</div>
      </div>
      <div class="modal-stat">
        <div class="modal-stat-number">${videoData.views || Math.floor(Math.random() * 1000) + 100}</div>
        <div class="modal-stat-label">Views</div>
      </div>
      <div class="modal-stat">
        <div class="modal-stat-number">${Math.floor(Math.random() * 20) + 1}</div>
        <div class="modal-stat-label">Comments</div>
      </div>
    `;

    // Populate sidebar with recommendations
    populateSidebar();

    modal.style.display = 'block';
    document.body.style.overflow = 'hidden';
  }

  function populateSidebar() {
    const recommendations = allVideos.slice(0, 6); // Show first 6 videos as recommendations
    
    modalSidebar.innerHTML = '<h4 class="sidebar-title">More Videos</h4>';
    recommendations.forEach((video, index) => {
      const sidebarItem = document.createElement('div');
      sidebarItem.className = 'sidebar-video-item';
      
      const videoId = video.id;
      const title = video.title;
      const date = new Date().toLocaleDateString();
      
      // Extract thumbnail from iframe
      const thumbnailUrl = `https://img.youtube.com/vi/${videoId}/mqdefault.jpg`;
      
      sidebarItem.innerHTML = `
        <div class="sidebar-video-thumbnail">
          <img src="${thumbnailUrl}" alt="${title}">
        </div>
        <div class="sidebar-video-info">
          <div class="sidebar-video-title">${title}</div>
          <div class="sidebar-video-date">${date}</div>
        </div>
      `;

      sidebarItem.addEventListener('click', () => {
        showModal(video);
      });

      modalSidebar.appendChild(sidebarItem);
    });
  }

  function closeModal() {
    modal.style.display = 'none';
    modalIframe.src = '';
    document.body.style.overflow = 'auto';
  }

  // Modal close handlers
  if (closeBtn) {
    closeBtn.onclick = closeModal;
  }

  window.addEventListener('click', function(event) {
    if (event.target === modal) {
      closeModal();
    }
  });

  // Escape key handler
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape' && modal.style.display === 'block') {
      closeModal();
    }
  });

  // Initialize content loading
  loadAllContent();
}
</script>

