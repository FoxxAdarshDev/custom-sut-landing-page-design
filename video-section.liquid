  // Function to convert text with links, emails, and URLs to clickable HTML
  function formatDescriptionWithLinks(text) {
    if (!text) return 'Video description not available';
    
    // Convert URLs to clickable links
    const urlRegex = /https?:\/\/(www\.)?[-a-zA-Z0-9@:%._\+~#=]{1,256}\.[a-zA-Z0-9()]{1,6}\b([-a-zA-Z0-9()@:%_\+.~#?&//=]*)/g;
    text = text.replace(urlRegex, '<a href="$&" target="_blank" rel="noopener noreferrer" style="color: #007bff; text-decoration: underline;">$&</a>');
    
    // Convert email addresses to clickable mailto links
    const emailRegex = /\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Z|a-z]{2,}\b/g;
    text = text.replace(emailRegex, '<a href="mailto:$&" style="color: #007bff; text-decoration: underline;">$&</a>');
    
    // Convert www.example.com (without http) to clickable links
    const wwwRegex = /\bwww\.[-a-zA-Z0-9@:%._\+~#=]{1,256}\.[a-zA-Z0-9()]{1,6}\b([-a-zA-Z0-9()@:%_\+.~#?&//=]*)/g;
    text = text.replace(wwwRegex, '<a href="https://$&" target="_blank" rel="noopener noreferrer" style="color: #007bff; text-decoration: underline;">$&</a>');
    
    // Convert phone numbers to clickable tel links
    const phoneRegex = /(\+\d{1,3}[-.\s]?)?\(?\d{3}\)?[-.\s]?\d{3}[-.\s]?\d{4}/g;
    text = text.replace(phoneRegex, '<a href="tel:$&" style="color: #007bff; text-decoration: underline;">$&</a>');
    
    // Convert line breaks to HTML breaks for better formatting
    text = text.replace(/\n/g, '<br>');
    
    return text;
  }

