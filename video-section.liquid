function closeShortsView(sectionId) {
  const shortsFullscreen = document.querySelector(`#shorts-fullscreen-${sectionId}`);
  const mainContainer = document.querySelector(`#main-container-${sectionId}`);

  shortsFullscreen.style.display = 'none';
  mainContainer.style.display = 'flex';
  document.body.style.overflow = 'auto';
}

function populateFullscreenShorts(sectionId) {
  const shortsGrid = document.querySelector(`#shorts-fullscreen-grid-${sectionId}`);
  if (shortsGrid.children.length > 0) return; // Already populated

  // Get shorts from the stored data
  const shorts = window[`shortsData_${sectionId}`] || [];

  shorts.forEach((short, index) => {
    const shortElement = createShortElement(short, index, sectionId);
    shortsGrid.appendChild(shortElement);
  });
}

function initializeYouTubeGallery(sectionId) {
    // Comprehensive YouTube API error suppression
    const originalConsoleError = console.error;
    const originalConsoleWarn = console.warn;
    const originalConsoleLog = console.log;

    // Enhanced console error filtering
    console.error = function(...args) {
      const message = args.join(' ');
      const errorPatterns = [
        'youtube', 'ERR_BLOCKED_BY_CLIENT', 'Failed to load resource',
        'api/stats', 'youtubei/v1', 'www.youtube-nocookie.com',
        'net::ERR_BLOCKED_BY_CLIENT', '/api/stats/qoe', '/youtubei/',
        'VM14:', 'POST https://www.youtube', 'googleapis.com'
      ];

      if (errorPatterns.some(pattern => message.toLowerCase().includes(pattern.toLowerCase()))) {
        return; // Suppress these errors
      }
      originalConsoleError.apply(console, args);
    };

    console.warn = function(...args) {
      const message = args.join(' ');
      const warnPatterns = [
        'youtube', 'ERR_BLOCKED_BY_CLIENT', 'api/stats',
        'googleapis.com', 'www.youtube-nocookie.com'
      ];

      if (warnPatterns.some(pattern => message.toLowerCase().includes(pattern.toLowerCase()))) {
        return; // Suppress these warnings
      }
      originalConsoleWarn.apply(console, args);
    };

    console.log = function(...args) {
      const message = args.join(' ');
      const logPatterns = [
        'youtube', 'ERR_BLOCKED_BY_CLIENT', 'googleapis.com'
      ];

      if (logPatterns.some(pattern => message.toLowerCase().includes(pattern.toLowerCase()))) {
        return; // Suppress these logs
      }
      originalConsoleLog.apply(console, args);
    };

    // Block YouTube API network requests that cause these errors
    if (window.fetch) {
      const originalFetch = window.fetch;
      window.fetch = function(...args) {
        const url = args[0];
        if (typeof url === 'string' && (
          url.includes('youtube.com/api/stats') ||
          url.includes('youtubei/v1') ||
          url.includes('www.youtube-nocookie.com/api')
        )) {
          // Return a resolved promise to prevent errors
          return Promise.resolve(new Response('{}', { status: 200 }));
        }
        return originalFetch.apply(this, args);
      };
    }

    // Suppress unhandled promise rejections from YouTube
    window.addEventListener('unhandledrejection', function(event) {
      if (event.reason && typeof event.reason === 'string') {
        const reason = event.reason.toLowerCase();
        if (reason.includes('youtube') ||
            reason.includes('blocked') ||
            reason.includes('api/stats')) {
          event.preventDefault();
          return false;
        }
      }
    });

    const shortsContainer = document.querySelector(`#shorts-container-${sectionId}`);
    const videosTabsContainer = document.querySelector(`#videos-tabs-${sectionId}`);
    const tabContentsContainer = document.querySelector(`#tab-contents-${sectionId}`);
    const modal = document.querySelector(`#videoModal-${sectionId}`);
    const modalTitle = document.querySelector(`#modalTitle-${sectionId}`);
