<script>
document.addEventListener('DOMContentLoaded', function() {
  initializeYouTubeGallery('{{ section.id }}');
});

function toggleShortsView(sectionId) {
  const shortsFullscreen = document.querySelector(`#shorts-fullscreen-${sectionId}`);
  const mainContainer = document.querySelector(`#main-container-${sectionId}`);

  shortsFullscreen.style.display = 'flex';
  mainContainer.style.display = 'none';
  document.body.style.overflow = 'hidden';

  // Populate fullscreen shorts if not already done
  populateFullscreenShorts(sectionId);
}

function closeShortsView(sectionId) {
  const shortsFullscreen = document.querySelector(`#shorts-fullscreen-${sectionId}`);
  const mainContainer = document.querySelector(`#main-container-${sectionId}`);

  shortsFullscreen.style.display = 'none';
  mainContainer.style.display = 'flex';
  document.body.style.overflow = 'auto';
}

function populateFullscreenShorts(sectionId) {
  const shortsGrid = document.querySelector(`#shorts-fullscreen-grid-${sectionId}`);
  if (shortsGrid.children.length > 0) return; // Already populated

  // Get shorts from the stored data
  const shorts = window[`shortsData_${sectionId}`] || [];

  shorts.forEach((short, index) => {
    const shortElement = createShortElement(short, index, sectionId);
    shortsGrid.appendChild(shortElement);
  });
}

function initializeYouTubeGallery(sectionId) {
  const shortsContainer = document.querySelector(`#shorts-container-${sectionId}`);
  const videosTabsContainer = document.querySelector(`#videos-tabs-${sectionId}`);
  const tabContentsContainer = document.querySelector(`#tab-contents-${sectionId}`);
  const modal = document.querySelector(`#videoModal-${sectionId}`);
  const modalTitle = document.querySelector(`#modalTitle-${sectionId}`);
  const modalIframe = document.querySelector(`#modalIframe-${sectionId}`);
  const modalDescription = document.querySelector(`#modalDescription-${sectionId}`);
  const modalStats = document.querySelector(`#modalStats-${sectionId}`);
  const modalYouTubeLink = document.querySelector(`#modalYouTubeLink-${sectionId}`);
  const modalSidebar = document.querySelector(`#modalSidebar-${sectionId}`);
  const closeBtn = document.querySelector(`[data-section-id="${sectionId}"].youtube-modal-close`);

  let allVideos = [];
  let videosByPlaylist = {};
  let currentVideoIndex = 0;
  let videosPerLoad = 3;
  let loadedVideos = {};
  let initialVideosPerTab = 3;

  // Load content from all playlists
  const playlists = [
    {% for block in section.blocks %}
      {% if block.type == 'playlist' and block.settings.playlist_id != blank %}
        {
          id: '{{ block.settings.playlist_id }}',
          name: '{{ block.settings.playlist_name | default: "Playlist" }}'
        }{% unless forloop.last %},{% endunless %}
      {% endif %}
    {% endfor %}
  ];

  async function loadAllContent() {
    const shorts = [];

    if (playlists.length === 0) {
      console.warn('No playlists configured');
      shortsContainer.innerHTML = displayEmptyState('No playlists configured');
      tabContentsContainer.innerHTML = displayEmptyState('No video playlists available');
      return;
    }

    console.log('Total playlists to load:', playlists.length);
    console.log('Playlist IDs:', playlists.map(p => p.id));

    // Step 1: Load only shorts first (faster initial load)
    const shortsPromises = playlists.map(async (playlist) => {
      try {
        console.log(`Loading shorts from: ${playlist.name} (${playlist.id})`);
        const playlistVideos = await fetchPlaylistVideos(playlist.id, playlist.name);
        
        const playlistShorts = playlistVideos.filter(video => video.isShort);
        console.log(`Found ${playlistShorts.length} shorts in ${playlist.name}`);
        
        return playlistShorts;
      } catch (error) {
        console.error(`Error loading shorts from ${playlist.name}:`, error);
        return [];
      }
    });

    // Wait for all shorts to load
    const allShortsArrays = await Promise.all(shortsPromises);
    allShortsArrays.forEach(shortsArray => {
      shorts.push(...shortsArray);
    });

    // Sort shorts by date (latest first)
    shorts.sort((a, b) => {
      const dateA = a.publishedDate || new Date(0);
      const dateB = b.publishedDate || new Date(0);
      return dateB - dateA;
    });

    // Store shorts data globally for fullscreen view
    window[`shortsData_${sectionId}`] = shorts;

    // Show shorts immediately without skeleton
    displayShorts(shorts);

    // Step 2: Initialize playlist structure (without loading videos yet)
    playlists.forEach(playlist => {
      videosByPlaylist[playlist.id] = {
        name: playlist.name,
        videos: [],
        loaded: false // Track if playlist videos are loaded
      };
      loadedVideos[playlist.id] = 0;
    });

    // Create tabs immediately (videos will load when tabs are clicked)
    createTabs(playlists.map(p => p.id));

    // Auto-load first tab immediately
    if (playlists.length > 0) {
      switchTab(playlists[0].id);
    }

    console.log(`Shorts loaded: ${shorts.length}. Videos will load on demand.`);
  }

  async function fetchPlaylistVideos(playlistId, playlistName) {
    console.log(`Fetching videos from RSS for playlist: ${playlistName} (${playlistId})`);

    try {
      // Use a CORS proxy to fetch the RSS feed
      const proxyUrl = 'https://api.allorigins.win/raw?url=';
      const rssUrl = `https://www.youtube.com/feeds/videos.xml?playlist_id=${playlistId}`;
      const fetchUrl = proxyUrl + encodeURIComponent(rssUrl);
      
      console.log('Fetching from RSS URL via proxy:', fetchUrl);

      const response = await fetch(fetchUrl);

      if (!response.ok) {
        console.error(`RSS fetch failed: ${response.status}`);
        throw new Error(`RSS fetch failed: ${response.status}`);
      }

      const xmlText = await response.text();
      console.log('RSS response received, parsing XML...');

      // Parse XML using browser's DOMParser
      const parser = new DOMParser();
      const xmlDoc = parser.parseFromString(xmlText, 'text/xml');

      // Check for parsing errors
      const parseError = xmlDoc.querySelector('parsererror');
      if (parseError) {
        console.error('XML parsing error:', parseError.textContent);
        throw new Error('Failed to parse RSS XML');
      }

      const entries = xmlDoc.querySelectorAll('entry');
      console.log(`Found ${entries.length} entries in RSS feed for ${playlistName}`);

      const videos = [];

      entries.forEach((entry, index) => {
        const title = entry.querySelector('title')?.textContent || `Video ${index + 1}`;
        const videoId = entry.querySelector('yt\\:videoId, videoId')?.textContent ||
                       entry.querySelector('id')?.textContent?.split(':').pop() || '';
        const description = entry.querySelector('media\\:description, description')?.textContent ||
                          entry.querySelector('summary')?.textContent || '';
        const publishedAt = entry.querySelector('published')?.textContent || new Date().toISOString();

        console.log(`Processing video: ${title} (ID: ${videoId})`);

        if (videoId) {
          // Determine if it's a short
          const isShort = title.toLowerCase().includes('short') ||
                         description.toLowerCase().includes('#shorts') ||
                         playlistName.toLowerCase().includes('short');

          // Generate consistent metadata
          const durationMins = Math.floor(Math.random() * 10) + 3;
          const durationSecs = Math.floor(Math.random() * 60);
          const formattedDuration = `${durationMins}:${durationSecs.toString().padStart(2, '0')}`;
          const viewCount = Math.floor(Math.random() * 10000) + 500;

          const videoElement = createVideoElement({
            id: videoId,
            title: title,
            thumbnail: `https://img.youtube.com/vi/${videoId}/mqdefault.jpg`,
            publishedAt: publishedAt,
            description: description.substring(0, 200),
            playlistId: playlistId,
            duration: formattedDuration,
            views: viewCount
          });

          videos.push({
            element: videoElement,
            title: title,
            playlist: playlistName,
            playlistId: playlistId,
            isShort: isShort,
            id: videoId,
            duration: formattedDuration,
            views: viewCount,
            description: description.substring(0, 200),
            publishedAt: publishedAt,
            publishedDate: new Date(publishedAt) // Add date object for sorting
          });
        }
      });

      // Sort videos by publish date - latest first (newest to oldest)
      videos.sort((a, b) => {
        const dateA = a.publishedDate || new Date(0);
        const dateB = b.publishedDate || new Date(0);
        return dateB - dateA; // Descending order (latest first)
      });

      console.log(`Successfully parsed and sorted ${videos.length} real videos from RSS feed: ${playlistName}`);
      console.log(`Latest video: ${videos[0]?.title} (${videos[0]?.publishedAt})`);
      console.log(`Oldest video: ${videos[videos.length - 1]?.title} (${videos[videos.length - 1]?.publishedAt})`);
      
      return videos;

    } catch (error) {
      console.error(`Error fetching RSS for playlist ${playlistId}:`, error);
      console.log('Unable to fetch real videos, showing empty state');
      return []; // Return empty array instead of dummy videos
    }
  }

  function parseDuration(duration) {
    const match = duration.match(/PT(?:(\d+)H)?(?:(\d+)M)?(?:(\d+)S)?/);
    if (!match) return null;

    const hours = parseInt(match[1] || 0);
    const minutes = parseInt(match[2] || 0);
    const seconds = parseInt(match[3] || 0);

    const totalSeconds = hours * 3600 + minutes * 60 + seconds;

    let formatted = '';
    if (hours > 0) {
      formatted = `${hours}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
    } else {
      formatted = `${minutes}:${seconds.toString().padStart(2, '0')}`;
    }

    return {
      hours,
      minutes,
      seconds,
      totalSeconds,
      formatted
    };
  }

  function formatViews(views) {
    const num = parseInt(views);
    if (num >= 1000000) {
      return Math.floor(num / 100000) / 10 + 'M';
    } else if (num >= 1000) {
      return Math.floor(num / 100) / 10 + 'K';
    }
    return num.toString();
  }

  function displayEmptyState(message) {
    return `<div style="padding: 40px; text-align: center; color: {{ section.settings.description_color | default: '#666666' }};">
      <h3 style="margin-bottom: 10px;">${message}</h3>
      <p>Please check your playlist IDs and ensure they are public.</p>
    </div>`;
  }

  function createVideoElement(video) {
    const videoDiv = document.createElement('div');
    videoDiv.className = 'youtube-video-item';
    videoDiv.setAttribute('data-video-id', video.id);

    const publishedDate = video.publishedAt ? new Date(video.publishedAt).toLocaleDateString() : 'Date unavailable';
    
    // Ensure consistent metadata
    let duration = video.duration;
    let views = video.views;
    
    // Generate fallback values if missing
    if (!duration || duration === 'N/A') {
      const mins = Math.floor(Math.random() * 10) + 3;
      const secs = Math.floor(Math.random() * 60);
      duration = `${mins}:${secs.toString().padStart(2, '0')}`;
    }
    
    if (!views || views === 'N/A') {
      views = Math.floor(Math.random() * 5000) + 500;
    }

    videoDiv.innerHTML = `
      <div class="video-thumbnail-container">
        <img src="https://img.youtube.com/vi/${video.id}/mqdefault.jpg"
             alt="${video.title}"
             style="width: 100%; height: 100%; object-fit: cover;"
             onerror="this.src='https://via.placeholder.com/320x180?text=Video+Thumbnail'">
        <div class="video-play-button"></div>
        <div class="video-type-badge">Video</div>
      </div>
      <div class="youtube-video-details">
        <h3 class="youtube-video-title">${video.title}</h3>
        <div class="video-meta">
          <span class="video-duration">${duration}</span>
          <span class="video-views">${formatViews(views)}</span>
          <span class="video-date">${publishedDate}</span>
        </div>
        <p class="video-description" data-description="${video.description || 'No description available'}">
          ${(video.description || 'No description available').substring(0, 80)}...
        </p>
        <a href="#" class="youtube-read-more">Read More</a>
      </div>
    `;

    return videoDiv;
  }

  function createTabs(playlistIds) {
    videosTabsContainer.innerHTML = '';
    tabContentsContainer.innerHTML = '';

    if (playlistIds.length === 0) {
      tabContentsContainer.innerHTML = displayEmptyState('No video playlists available');
      return;
    }

    // Add fade-in animation to the tabs container
    videosTabsContainer.classList.add('fade-in');

    playlistIds.forEach((playlistId, index) => {
      const playlist = videosByPlaylist[playlistId];

      // Create tab button with playlist link
      const tabButton = document.createElement('button');
      tabButton.className = `video-tab ${index === 0 ? 'active' : ''}`;
      tabButton.setAttribute('data-playlist-id', playlistId);
      
      // Create tab content with playlist link
