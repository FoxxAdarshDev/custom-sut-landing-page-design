    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "World Class Cleanroom"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Hero Description",
      "default": "State-of-the-art cleanroom facilities for pharmaceutical manufacturing"
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Hero Button Text",
      "default": "Learn More"
