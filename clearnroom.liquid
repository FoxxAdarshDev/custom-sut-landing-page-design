<!-- Main Container Wrapper -->
<div class="cleanroom-main-container">

<!-- Hero Banner Section -->
{% if settings.show_hero_banner %}
<section class="cleanroom-hero-banner" style="margin-top: {{ settings.cleanroom_section_margin_top | default: 0 }}px; margin-bottom: {{ settings.cleanroom_section_margin_bottom | default: 0 }}px;">
  {% if settings.hero_banner_image %}
    <div class="cleanroom-hero-banner-background" style="background-image: url('{{ settings.hero_banner_image | img_url: '1920x' }}');">
  {% endif %}
      <div class="cleanroom-hero-banner-overlay" style="background-color: {{ settings.hero_banner_overlay_color | default: '#000000' }}{{ settings.hero_banner_overlay_opacity | default: 60 | divided_by: 100.0 | prepend: '; opacity: ' }}; padding-top: {{ settings.cleanroom_section_padding_top | default: 80 }}px; padding-bottom: {{ settings.cleanroom_section_padding_bottom | default: 80 }}px;">
        <div class="cleanroom-container">
          <div class="cleanroom-hero-banner-content" style="color: {{ settings.hero_banner_text_color | default: '#FFFFFF' }};">
            <h2 class="cleanroom-hero-banner-title" style="color: {{ settings.hero_banner_text_color | default: '#FFFFFF' }};">{{ settings.hero_banner_title }}</h2>
            <p class="cleanroom-hero-banner-description" style="color: {{ settings.hero_banner_text_color | default: '#FFFFFF' }};">{{ settings.hero_banner_description }}</p>
            {% if settings.hero_banner_button_text and settings.hero_banner_button_url %}
              <a href="{{ settings.hero_banner_button_url }}" class="cleanroom-btn cleanroom-btn-primary cleanroom-hero-banner-btn" style="background-color: {{ settings.hero_banner_button_bg_color | default: '#0071b9' }}; color: {{ settings.hero_banner_button_text_color | default: '#FFFFFF' }}; border-color: {{ settings.hero_banner_button_bg_color | default: '#0071b9' }};">
                {{ settings.hero_banner_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
  {% if settings.hero_banner_image %}
    </div>
  {% endif %}
</section>
{% endif %}

<!-- Dynamic Blocks Content -->
{% for block in section.blocks %}
  {% case block.type %}

    {% when 'hero_section' %}
      {% if block.settings.enable_hero_section %}
      <section class="cleanroom-hero-section" {{ block.shopify_attributes }} style="margin-top: {{ block.settings.hero_margin_top | default: 0 }}px; margin-bottom: {{ block.settings.hero_margin_bottom | default: 0 }}px;">
        {% if block.settings.hero_content_display == 'image_only' %}
          {% if block.settings.hero_image %}
            <div class="cleanroom-hero-image-container" style="padding-top: {{ block.settings.hero_padding_top | default: 80 }}px; padding-bottom: {{ block.settings.hero_padding_bottom | default: 80 }}px;">
              <div class="cleanroom-container">
                <img src="{{ block.settings.hero_image | img_url: '1200x' }}" alt="{{ block.settings.hero_title }}" class="cleanroom-hero-image">
              </div>
            </div>
          {% endif %}
        {% else %}
          {% if block.settings.hero_image %}
            <div class="cleanroom-hero-background" style="background-image: url('{{ block.settings.hero_image | img_url: '1920x' }}');">
          {% else %}
            <div class="cleanroom-hero-background" style="background: linear-gradient(135deg, #0071b9 0%, #005a91 100%);">
          {% endif %}
              <div class="cleanroom-hero-overlay" style="padding-top: {{ block.settings.hero_padding_top | default: 80 }}px; padding-bottom: {{ block.settings.hero_padding_bottom | default: 80 }}px;">
                <div class="cleanroom-hero-content cleanroom-container">
                  <h1 class="cleanroom-hero-title">{{ block.settings.hero_title }}</h1>
                  <p class="cleanroom-hero-description">{{ block.settings.hero_description }}</p>
                  {% if block.settings.hero_button_text and block.settings.hero_button_url %}
                    <a href="{{ block.settings.hero_button_url }}" class="cleanroom-btn cleanroom-btn-primary cleanroom-hero-btn">
                      {{ block.settings.hero_button_text }}
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endif %}
      </section>
      {% endif %}

    {% when 'banner_section' %}
      <section class="cleanroom-banner-section{% if block.settings.banner_fixed_scroll %} cleanroom-fixed-scroll{% endif %}" {{ block.shopify_attributes }} style="margin-top: {{ block.settings.banner_margin_top | default: 0 }}px; margin-bottom: {{ block.settings.banner_margin_bottom | default: 0 }}px;">
        {% if block.settings.banner_image %}
          <div class="cleanroom-banner-background" style="background-image: url('{{ block.settings.banner_image | img_url: '1920x' }}');">
        {% endif %}
            {% if block.settings.banner_content_display == 'full_content' %}
              <div class="cleanroom-banner-overlay" style="background-color: {{ block.settings.banner_overlay_color | default: settings.banner_default_overlay_color | default: '#000000' }}{{ block.settings.banner_overlay_opacity | default: settings.banner_default_overlay_opacity | default: 60 | divided_by: 100.0 | prepend: '; opacity: ' }}; padding-top: {{ block.settings.banner_padding_top | default: 80 }}px; padding-bottom: {{ block.settings.banner_padding_bottom | default: 80 }}px;">
