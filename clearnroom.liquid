    <div class="cleanroom-video-popup-wrapper">
      <iframe id="cleanroomVideoPopupFrame" src="" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
</div>


<script>
function openCleanroomVideoPopup(videoUrl) {
  var modal = document.getElementById('cleanroomVideoPopupModal');
  var iframe = document.getElementById('cleanroomVideoPopupFrame');

  // Convert regular YouTube URL to embed URL if needed
  if (videoUrl.includes('youtube.com/watch?v=')) {
    var videoId = videoUrl.split('v=')[1];
    var ampersandPosition = videoId.indexOf('&');
    if (ampersandPosition !== -1) {
      videoId = videoId.substring(0, ampersandPosition);
    }
    videoUrl = 'https://www.youtube.com/embed/' + videoId + '?autoplay=1';
  } else if (videoUrl.includes('youtu.be/')) {
    var videoId = videoUrl.split('youtu.be/')[1];
    videoUrl = 'https://www.youtube.com/embed/' + videoId + '?autoplay=1';
  }

  iframe.src = videoUrl;
  modal.style.display = 'flex';
  document.body.style.overflow = 'hidden';
}

function closeCleanroomVideoPopup() {
  var modal = document.getElementById('cleanroomVideoPopupModal');
  var iframe = document.getElementById('cleanroomVideoPopupFrame');

  iframe.src = '';
  modal.style.display = 'none';
  document.body.style.overflow = 'auto';
}

// Dynamic height adjustment for ISO 7 section
function adjustISO7SectionHeight() {
  var iso7Sections = document.querySelectorAll('.cleanroom-iso7-section');

  iso7Sections.forEach(function(section) {
    var videoEmbed = section.querySelector('.cleanroom-iso7-video-embed');
    var video = section.querySelector('video');
    var iframe = section.querySelector('iframe');

    if (videoEmbed && (video || iframe)) {
      section.classList.add('has-video');

      // Function to adjust height based on content
      function adjustHeight() {
        var content = section.querySelector('.cleanroom-iso7-content');
        if (content) {
          var contentHeight = content.offsetHeight;
          var minHeight = contentHeight + 160; // Add padding
          section.style.minHeight = minHeight + 'px';
          section.classList.add('video-loaded');
        }
      }

      // Handle video element
      if (video) {
        video.addEventListener('loadedmetadata', adjustHeight);
        video.addEventListener('canplay', adjustHeight);

        // Fallback timeout
        setTimeout(adjustHeight, 1000);
      }

      // Handle iframe element
      if (iframe) {
        iframe.addEventListener('load', function() {
          setTimeout(adjustHeight, 500);
        });

        // Fallback timeout for iframe
        setTimeout(adjustHeight, 2000);
      }

      // Initial adjustment
      setTimeout(adjustHeight, 100);

      // Window resize adjustment
      window.addEventListener('resize', function() {
        setTimeout(adjustHeight, 100);
      });
    }
  });
}

// Initialize on DOM ready
document.addEventListener('DOMContentLoaded', adjustISO7SectionHeight);

// Re-run when images/videos load
window.addEventListener('load', adjustISO7SectionHeight);

// Close popup with Escape key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    closeCleanroomVideoPopup();
  }
});
</script>