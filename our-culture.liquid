{% schema %}
{
  "name": "About - Our Culture",
  "class": "our-culture-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "culture_section_title",
      "label": "Section Title",
      "default": "Our Culture"
    },
    {
      "type": "textarea",
      "id": "culture_section_description",
      "label": "Section Description",
      "default": "As one of New Hampshire's fastest growing family-owned business we are known in the industry to put our employees first. Our diverse and global team covers a wide range of backgrounds, languages, and expertise, including engineers, scientists, product managers, and a top notch customer service team."
    },
    {
      "type": "image_picker",
      "id": "culture_image",
      "label": "Culture Image"
    },
    {
      "type": "color",
      "id": "culture_background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "culture_accent_color",
      "label": "Accent Color",
      "default": "#0071b9"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta_button",
      "label": "Show CTA Button",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "cta_button_url",
      "label": "CTA Button URL"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Our Culture",
      "category": "About"
    }
  ]
}
{% endschema %}

<section class="culture-section" 
         style="
           background-color: {{ section.settings.culture_background_color | default: '#ffffff' }};
           padding-top: {{ section.settings.padding_top | default: 80 }}px;
           padding-bottom: {{ section.settings.padding_bottom | default: 80 }}px;
         ">

  <div class="culture-container">
    <!-- Content Section -->
    <div class="culture-content">
      {% if section.settings.culture_section_title != blank %}
        <h2 class="culture-title" style="color: {{ section.settings.culture_accent_color | default: '#0071b9' }};">
          {{ section.settings.culture_section_title }}
        </h2>
      {% endif %}

      {% if section.settings.culture_section_description != blank %}
        <div class="culture-description">
          <p>{{ section.settings.culture_section_description }}</p>
        </div>
      {% endif %}

      {% if section.settings.show_cta_button and section.settings.cta_button_text != blank %}
        <div class="culture-cta">
          <a href="{{ section.settings.cta_button_url | default: '#' }}" 
             class="culture-cta-button" 
             style="
               background-color: {{ section.settings.culture_accent_color | default: '#0071b9' }};
               border-color: {{ section.settings.culture_accent_color | default: '#0071b9' }};
             ">
            {{ section.settings.cta_button_text }}
          </a>
        </div>
      {% endif %}
    </div>

    <!-- Image Section -->
    {% if section.settings.culture_image != blank %}
      <div class="culture-image-wrapper">
        <img src="{{ section.settings.culture_image | img_url: '1200x800' }}" 
             alt="{{ section.settings.culture_section_title | default: 'Our Culture' }}" 
             class="culture-image"
             loading="lazy">
      </div>
    {% endif %}
  </div>
</section>

<style>
/* Apple-inspired Our Culture Section */
.culture-section {
  width: 100%;
  position: relative;
}

.culture-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 80px;
  align-items: center;
  min-height: 60vh;
}

/* Content Styling */
.culture-content {
  max-width: 500px;
}

.culture-title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 700;
  line-height: 1.1;
  margin-bottom: 24px;
  letter-spacing: -0.02em;
}

.culture-description {
  margin-bottom: 32px;
}

.culture-description p {
  font-size: 1.25rem;
  line-height: 1.6;
  color: #1d1d1f;
  margin: 0;
  font-weight: 400;
}

/* CTA Button */
.culture-cta {
  margin-top: 32px;
}

.culture-cta-button {
  display: inline-block;
  padding: 16px 32px;
  border: 2px solid;
  border-radius: 50px;
  color: white;
  text-decoration: none;
  font-weight: 600;
  font-size: 1.1rem;
  transition: all 0.3s ease;
  text-align: center;
  min-width: 160px;
}

.culture-cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 113, 185, 0.3);
  opacity: 0.9;
}

/* Image Styling */
.culture-image-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 400px;
}

.culture-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 20px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.culture-image:hover {
  transform: scale(1.02);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .culture-container {
    gap: 60px;
    padding: 0 40px;
  }

  .culture-title {
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .culture-description p {
    font-size: 1.1rem;
  }
}

@media (max-width: 768px) {
  .culture-container {
    grid-template-columns: 1fr;
    gap: 40px;
    padding: 0 20px;
    text-align: center;
  }

  .culture-content {
    max-width: 100%;
    order: 2;
  }

  .culture-image-wrapper {
    order: 1;
    min-height: 300px;
  }

  .culture-title {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    margin-bottom: 20px;
  }

  .culture-description p {
    font-size: 1rem;
    line-height: 1.5;
  }

  .culture-cta-button {
    padding: 14px 28px;
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .culture-container {
    gap: 30px;
    padding: 0 16px;
  }

  .culture-image-wrapper {
    min-height: 250px;
  }

  .culture-image {
    border-radius: 16px;
  }

  .culture-cta-button {
    padding: 12px 24px;
    font-size: 0.95rem;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .culture-description p {
    color: #f5f5f7;
  }
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {
  .culture-image,
  .culture-cta-button {
    transition: none;
  }

  .culture-image:hover {
    transform: none;
  }

  .culture-cta-button:hover {
    transform: none;
  }
}

/* High contrast mode */
@media (prefers-contrast: high) {
  .culture-cta-button {
    border-width: 3px;
  }

  .culture-image {
    border: 2px solid #000;
  }
}
</style>