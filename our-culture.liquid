{% schema %}
{
  "name": "Our Culture",
  "class": "our-culture-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "culture_section_title",
      "label": "Section Title",
      "default": "Our Culture"
    },
    {
      "type": "textarea",
      "id": "culture_section_description",
      "label": "Section Description",
      "default": "As one of New Hampshire's fastest growing family-owned business we are known in the industry to put our employees first. Our diverse and global team covers a wide range of backgrounds, languages, and expertise, including engineers, scientists, product managers, and a top notch customer service team."
    },
    {
      "type": "header",
      "content": "Background & Overlay Settings"
    },
    {
      "type": "image_picker",
      "id": "culture_background_image",
      "label": "Background Banner Image"
    },
    {
      "type": "color",
      "id": "culture_overlay_color",
      "label": "Overlay Color",
      "default": "#0071b9"
    },
    {
      "type": "range",
      "id": "culture_overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 85
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "culture_text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "culture_accent_color",
      "label": "Accent Color",
      "default": "#0071b9"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta_button",
      "label": "Show CTA Button",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "cta_button_url",
      "label": "CTA Button URL"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 120
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 120
    }
  ],
  "presets": [
    {
      "name": "Our Culture",
      "category": "About"
    }
  ]
}
{% endschema %}

<!-- Our Culture Banner Section -->
<section class="culture-banner-section" 
         data-section-id="{{ section.id }}" 
         style="
           --culture-overlay-color: {{ section.settings.culture_overlay_color | default: '#0071b9' }};
           --culture-overlay-opacity: {{ section.settings.culture_overlay_opacity | default: 85 | divided_by: 100.0 }};
           --culture-text-color: {{ section.settings.culture_text_color | default: '#ffffff' }};
           --culture-accent-color: {{ section.settings.culture_accent_color | default: '#0071b9' }};
           --padding-top: {{ section.settings.padding_top | default: 120 }}px;
           --padding-bottom: {{ section.settings.padding_bottom | default: 120 }}px;
         ">

  <!-- Background Image with Overlay -->
  <div class="culture-hero-background">
    {% if section.settings.culture_background_image != blank %}
      <div class="culture-bg-image" 
           style="background-image: url('{{ section.settings.culture_background_image | img_url: '1920x1080' }}');"></div>
    {% else %}
      <div class="culture-bg-gradient"></div>
    {% endif %}

    <!-- Overlay -->
    <div class="culture-overlay" 
         style="background-color: var(--culture-overlay-color); opacity: var(--culture-overlay-opacity);"></div>
  </div>

  <!-- Content Container -->
  <div class="culture-content-wrapper">
    <div class="culture-content-inner">

      <!-- Section Header -->
      <div class="culture-text-content">
        {% if section.settings.culture_section_title != blank %}
          <h1 class="culture-main-title">
            {{ section.settings.culture_section_title }}
          </h1>
        {% endif %}

        {% if section.settings.culture_section_description != blank %}
          <div class="culture-description">
            <p>{{ section.settings.culture_section_description }}</p>
          </div>
        {% endif %}

        <!-- CTA Button -->
        {% if section.settings.show_cta_button and section.settings.cta_button_text != blank %}
          <div class="culture-cta-wrapper">
            <a href="{{ section.settings.cta_button_url | default: '#' }}" 
               class="culture-cta-button">
              <span class="cta-text">{{ section.settings.cta_button_text }}</span>
              <span class="cta-arrow">â†’</span>
            </a>
          </div>
        {% endif %}
      </div>

    </div>
  </div>

</section>

<style>
/* Our Culture Banner Section - Apple-style Overlay Design */
.culture-banner-section {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  padding: var(--padding-top) 0 var(--padding-bottom) 0;
}

/* Background Container */
.culture-hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* Background Image */
.culture-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

/* Fallback Gradient Background */
.culture-bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--culture-overlay-color, #0071b9) 0%, #005a91 50%, #003d63 100%);
}

/* Overlay Layer */
.culture-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  pointer-events: none;
}

/* Content Wrapper */
.culture-content-wrapper {
  position: relative;
  z-index: 3;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 40px;
}

.culture-content-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 70vh;
}

/* Text Content */
.culture-text-content {
  text-align: center;
  max-width: 800px;
  color: var(--culture-text-color, #ffffff);
}

/* Main Title */
.culture-main-title {
  font-size: clamp(3rem, 8vw, 5rem);
  font-weight: 700;
  margin: 0 0 30px 0;
  line-height: 1.1;
  letter-spacing: -0.02em;
  color: var(--culture-text-color, #ffffff);
  text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s ease 0.3s forwards;
}

/* Description */
.culture-description {
  margin: 40px 0 50px 0;
  opacity: 0;
  animation: fadeInUp 1s ease 0.6s forwards;
}

.culture-description p {
  font-size: clamp(1.1rem, 2.5vw, 1.3rem);
  line-height: 1.6;
  font-weight: 300;
  margin: 0;
  color: var(--culture-text-color, #ffffff);
  text-shadow: 0 1px 10px rgba(0, 0, 0, 0.4);
  opacity: 0.95;
}

/* CTA Button */
.culture-cta-wrapper {
  margin-top: 50px;
  opacity: 0;
  animation: fadeInUp 1s ease 0.9s forwards;
}

.culture-cta-button {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  padding: 16px 32px;
  background: rgba(255, 255, 255, 0.15);
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 50px;
  color: var(--culture-text-color, #ffffff);
  text-decoration: none;
  font-weight: 500;
  font-size: 1rem;
  letter-spacing: 0.5px;
  position: relative;
  overflow: hidden;
  transition: all 0.4s ease;
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.culture-cta-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.culture-cta-button:hover::before {
  left: 100%;
}

.culture-cta-button:hover {
  transform: translateY(-2px);
  background: rgba(255, 255, 255, 0.25);
  border-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
}

.cta-text {
  position: relative;
  z-index: 1;
}

.cta-arrow {
  display: flex;
  align-items: center;
  font-size: 1.1em;
  transition: transform 0.3s ease;
}

.culture-cta-button:hover .cta-arrow {
  transform: translateX(4px);
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive Design */
@media (max-width: 1024px) {
  .culture-content-wrapper {
    padding: 0 30px;
  }

  .culture-bg-image {
    background-attachment: scroll;
  }
}

@media (max-width: 768px) {
  .culture-banner-section {
    min-height: 80vh;
    padding: 80px 0;
  }

  .culture-content-wrapper {
    padding: 0 20px;
  }

  .culture-content-inner {
    min-height: 60vh;
  }

  .culture-main-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    margin-bottom: 25px;
  }

  .culture-description {
    margin: 30px 0 40px 0;
  }

  .culture-description p {
    font-size: clamp(1rem, 3vw, 1.2rem);
    line-height: 1.5;
  }

  .culture-cta-wrapper {
    margin-top: 40px;
  }

  .culture-cta-button {
    padding: 14px 28px;
    font-size: 0.95rem;
  }
}

@media (max-width: 480px) {
  .culture-banner-section {
    min-height: 70vh;
  }

  .culture-main-title {
    font-size: clamp(2rem, 7vw, 3rem);
    letter-spacing: -0.01em;
  }

  .culture-description p {
    font-size: 1rem;
    line-height: 1.4;
  }

  .culture-cta-button {
    padding: 12px 24px;
    font-size: 0.9rem;
  }
}

/* Accessibility & Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .culture-main-title,
  .culture-description,
  .culture-cta-wrapper {
    animation: none;
    opacity: 1;
    transform: none;
  }

  .culture-cta-button::before {
    display: none;
  }

  .culture-bg-image {
    background-attachment: scroll;
  }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
  .culture-overlay {
    opacity: 0.9 !important;
  }

  .culture-main-title,
  .culture-description p {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
  }

  .culture-cta-button {
    border-width: 3px;
    background: rgba(255, 255, 255, 0.3);
  }
}

/* Dark Mode Support */
@media (prefers-color-scheme: dark) {
  .culture-cta-button {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .culture-cta-button:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
  }
}
</style>