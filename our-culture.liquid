
{% schema %}
{
  "name": "Our Culture",
  "class": "our-culture-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "culture_section_title",
      "label": "Section Title",
      "default": "Our Culture"
    },
    {
      "type": "textarea",
      "id": "culture_section_description",
      "label": "Section Description",
      "default": "As one of New Hampshire's fastest growing family-owned business we are known in the industry to put our employees first. Our diverse and global team covers a wide range of backgrounds, languages, and expertise, including engineers, scientists, product managers, and a top notch customer service team."
    },
    {
      "type": "header",
      "content": "Background & Overlay Settings"
    },
    {
      "type": "image_picker",
      "id": "culture_background_image",
      "label": "Background Banner Image"
    },
    {
      "type": "color",
      "id": "culture_overlay_color",
      "label": "Overlay Color", 
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "culture_overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 60
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "color",
      "id": "culture_text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "culture_accent_color",
      "label": "Accent Color",
      "default": "#007aff"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta_button",
      "label": "Show CTA Button",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "cta_button_url",
      "label": "CTA Button URL"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Our Culture",
      "category": "About"
    }
  ]
}
{% endschema %}

<!-- Our Culture Section - Apple-inspired Design -->
<section class="culture-hero-section" 
         data-section-id="{{ section.id }}" 
         style="
           --culture-overlay-color: {{ section.settings.culture_overlay_color | default: '#000000' }};
           --culture-overlay-opacity: {{ section.settings.culture_overlay_opacity | default: 60 | divided_by: 100.0 }};
           --culture-text-color: {{ section.settings.culture_text_color | default: '#ffffff' }};
           --culture-accent-color: {{ section.settings.culture_accent_color | default: '#007aff' }};
           --section-padding-top: {{ section.settings.padding_top | default: 100 }}px;
           --section-padding-bottom: {{ section.settings.padding_bottom | default: 100 }}px;
         ">

  <!-- Background Layer -->
  <div class="culture-background-layer">
    {% if section.settings.culture_background_image != blank %}
      <div class="culture-background-image">
        <img src="{{ section.settings.culture_background_image | img_url: '2400x1350' }}" 
             alt="Our Culture Background" 
             loading="lazy">
      </div>
      <div class="culture-background-overlay"></div>
    {% else %}
      <div class="culture-background-gradient"></div>
    {% endif %}
  </div>

  <!-- Content Container -->
  <div class="culture-content-wrapper">
    <div class="culture-content-container">
      
      <!-- Main Content -->
      <div class="culture-content">
        {% if section.settings.culture_section_title != blank %}
          <h1 class="culture-headline">
            {{ section.settings.culture_section_title }}
          </h1>
        {% endif %}

        {% if section.settings.culture_section_description != blank %}
          <div class="culture-subheading">
            <p>{{ section.settings.culture_section_description }}</p>
          </div>
        {% endif %}

        {% if section.settings.show_cta_button and section.settings.cta_button_text != blank %}
          <div class="culture-cta-section">
            <a href="{{ section.settings.cta_button_url | default: '#' }}" 
               class="culture-cta-button">
              {{ section.settings.cta_button_text }}
              <svg class="cta-arrow" viewBox="0 0 24 24" fill="currentColor">
                <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
              </svg>
            </a>
          </div>
        {% endif %}
      </div>

    </div>
  </div>

</section>

<style>
/* Apple-inspired Culture Hero Section */
.culture-hero-section {
  position: relative;
  min-height: 70vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  padding: var(--section-padding-top) 0 var(--section-padding-bottom) 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* Background Layer */
.culture-background-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.culture-background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.culture-background-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.3s ease;
}

.culture-background-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: var(--culture-overlay-color);
  opacity: var(--culture-overlay-opacity);
  backdrop-filter: blur(1px);
}

.culture-background-gradient {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, 
    var(--culture-overlay-color) 0%, 
    rgba(0, 0, 0, 0.8) 50%, 
    rgba(0, 0, 0, 0.9) 100%);
}

/* Content Wrapper */
.culture-content-wrapper {
  position: relative;
  z-index: 10;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.culture-content-container {
  max-width: 980px;
  margin: 0 auto;
  padding: 0 20px;
  text-align: center;
}

/* Content Styles */
.culture-content {
  color: var(--culture-text-color);
}

.culture-headline {
  font-size: clamp(3rem, 7vw, 5.5rem);
  font-weight: 700;
  line-height: 1.05;
  letter-spacing: -0.02em;
  margin: 0 0 1.5rem 0;
  color: var(--culture-text-color);
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 0.8s ease 0.2s forwards;
}

.culture-subheading {
  margin: 0 0 3rem 0;
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 0.8s ease 0.4s forwards;
}

.culture-subheading p {
  font-size: clamp(1.25rem, 2.5vw, 1.75rem);
  font-weight: 400;
  line-height: 1.4;
  color: var(--culture-text-color);
  opacity: 0.9;
  margin: 0;
  max-width: 800px;
  margin: 0 auto;
}

/* CTA Section */
.culture-cta-section {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 0.8s ease 0.6s forwards;
}

.culture-cta-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 16px 32px;
  background-color: var(--culture-accent-color);
  color: white;
  text-decoration: none;
  font-size: 1.1rem;
  font-weight: 500;
  border-radius: 12px;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.culture-cta-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s ease;
}

.culture-cta-button:hover::before {
  left: 100%;
}

.culture-cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 122, 255, 0.3);
}

.cta-arrow {
  width: 20px;
  height: 20px;
  transition: transform 0.3s ease;
}

.culture-cta-button:hover .cta-arrow {
  transform: translateX(4px);
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive Design */
@media (max-width: 1024px) {
  .culture-hero-section {
    min-height: 60vh;
  }
  
  .culture-content-container {
    padding: 0 40px;
  }
}

@media (max-width: 768px) {
  .culture-hero-section {
    min-height: 55vh;
    padding: 60px 0;
  }
  
  .culture-content-container {
    padding: 0 20px;
  }
  
  .culture-headline {
    margin-bottom: 1rem;
  }
  
  .culture-subheading {
    margin-bottom: 2rem;
  }
  
  .culture-cta-button {
    padding: 14px 28px;
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .culture-hero-section {
    min-height: 50vh;
  }
  
  .culture-headline {
    font-size: clamp(2.5rem, 8vw, 4rem);
  }
  
  .culture-subheading p {
    font-size: clamp(1.1rem, 4vw, 1.4rem);
  }
  
  .culture-cta-button {
    padding: 12px 24px;
    font-size: 0.95rem;
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  .culture-headline,
  .culture-subheading,
  .culture-cta-section,
  .culture-background-image img,
  .culture-cta-button {
    animation: none;
    transition: none;
  }
  
  .culture-headline,
  .culture-subheading,
  .culture-cta-section {
    opacity: 1;
    transform: none;
  }
}

/* High Contrast Support */
@media (prefers-contrast: high) {
  .culture-background-overlay {
    opacity: 0.8;
  }
  
  .culture-cta-button {
    border: 2px solid currentColor;
  }
}

/* Dark Mode Support */
@media (prefers-color-scheme: dark) {
  .culture-hero-section {
    --culture-text-color: #ffffff;
    --culture-accent-color: #0a84ff;
  }
}
</style>

