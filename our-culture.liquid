
{% schema %}
{
  "name": "Our Culture",
  "class": "our-culture-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "culture_section_title",
      "label": "Section Title",
      "default": "Our Culture"
    },
    {
      "type": "textarea",
      "id": "culture_section_description",
      "label": "Section Description",
      "default": "As one of New Hampshire's fastest growing family-owned business we are known in the industry to put our employees first. Our diverse and global team covers a wide range of backgrounds, languages, and expertise, including engineers, scientists, product managers, and a top notch customer service team."
    },
    {
      "type": "color",
      "id": "culture_background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "culture_accent_color",
      "label": "Accent Color",
      "default": "#0071b9"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "culture_item",
      "name": "Culture Item",
      "settings": [
        {
          "type": "text",
          "id": "item_title",
          "label": "Item Title",
          "default": "Our Culture"
        },
        {
          "type": "textarea",
          "id": "item_description",
          "label": "Item Description",
          "default": "As one of New Hampshire's fastest growing family-owned business we are known in the industry to put our employees first."
        },
        {
          "type": "image_picker",
          "id": "culture_image",
          "label": "Culture Image"
        },
        {
          "type": "checkbox",
          "id": "show_cta_button",
          "label": "Show CTA Button",
          "default": true
        },
        {
          "type": "text",
          "id": "cta_button_text",
          "label": "CTA Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "cta_button_url",
          "label": "CTA Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Culture",
      "category": "About",
      "blocks": [
        {
          "type": "culture_item"
        }
      ]
    }
  ]
}
{% endschema %}

<!-- Our Culture Section -->
<section class="oc-culture-modern-section" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.culture_background_color | default: '#ffffff' }}; padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px 0;">
  <div class="oc-culture-container">
    {% if section.settings.culture_section_title != blank %}
      <div class="oc-section-header">
        <h2 class="oc-section-title" style="color: {{ section.settings.culture_accent_color | default: '#0071b9' }};">
          {{ section.settings.culture_section_title }}
        </h2>
        {% if section.settings.culture_section_description != blank %}
          <p class="oc-section-description">
            {{ section.settings.culture_section_description }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'culture_item' %}
          <div class="oc-culture-layout" {{ block.shopify_attributes }}>
            <!-- Image Section with Polygon -->
            <div class="oc-culture-image-section">
              <div class="oc-culture-image-wrapper">
                {% if block.settings.culture_image != blank %}
                  <img src="{{ block.settings.culture_image | img_url: '800x600' }}" alt="{{ block.settings.item_title }}" class="oc-culture-image" loading="lazy">
                {% else %}
                  <!-- Default placeholder image -->
                  <div class="oc-culture-placeholder">
                    <svg viewBox="0 0 400 300" class="oc-placeholder-svg">
                      <rect width="400" height="300" fill="#f0f0f0"/>
                      <text x="200" y="150" text-anchor="middle" fill="#999" font-size="16">Culture Image</text>
                    </svg>
                  </div>
                {% endif %}
              </div>

              <!-- Polygon SVG Shape -->
              <div class="oc-culture-polygon">
                <svg viewBox="0 0 200 300" class="oc-polygon-svg">
                  <defs>
                    {% if block.settings.culture_image != blank %}
                      <pattern id="polygon-pattern-{{ block.id }}" patternUnits="objectBoundingBox" width="100%" height="100%">
                        <image href="{{ block.settings.culture_image | img_url: '400x600' }}" x="0" y="0" width="100%" height="100%" preserveAspectRatio="xMidYMid slice"/>
                      </pattern>
                    {% endif %}
                  </defs>
                  <polygon points="0,0 120,0 200,150 120,300 0,300" 
                           fill="{% if block.settings.culture_image != blank %}url(#polygon-pattern-{{ block.id }}){% else %}{{ section.settings.culture_accent_color | default: '#0071b9' }}{% endif %}" 
                           opacity="0.9"/>
                </svg>
              </div>
            </div>

            <!-- Content Section -->
            <div class="oc-culture-content-section">
              <div class="oc-culture-content">
                {% if block.settings.item_title != blank %}
                  <h3 class="oc-culture-title" style="color: {{ section.settings.culture_accent_color | default: '#0071b9' }};">
                    {{ block.settings.item_title }}
                  </h3>
                {% endif %}

                {% if block.settings.item_description != blank %}
                  <p class="oc-culture-description">
                    {{ block.settings.item_description }}
                  </p>
                {% endif %}

                {% if block.settings.show_cta_button and block.settings.cta_button_text != blank %}
                  <div class="oc-culture-cta">
                    <a href="{{ block.settings.cta_button_url | default: '#' }}" class="oc-culture-button" style="border-color: {{ section.settings.culture_accent_color | default: '#0071b9' }}; color: {{ section.settings.culture_accent_color | default: '#0071b9' }};">
                      <span class="oc-button-icon">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                          <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
                        </svg>
                      </span>
                      {{ block.settings.cta_button_text }}
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

<style>
/* Our Culture Modern Section - Unique CSS Classes */
.oc-culture-modern-section {
  position: relative;
  overflow: hidden;
  width: 100%;
}

.oc-culture-container {
  width: 100%;
  margin: 0 auto;
  padding: 0 40px;
}

/* Section Header */
.oc-section-header {
  text-align: center;
  margin-bottom: 60px;
}

.oc-section-title {
  font-size: 48px;
  font-weight: 700;
  margin-bottom: 20px;
  line-height: 1.2;
}

.oc-section-description {
  font-size: 18px;
  line-height: 1.6;
  color: #666;
  max-width: 800px;
  margin: 0 auto;
}

/* Culture Layout */
.oc-culture-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  gap: 0;
  min-height: 500px;
  margin-bottom: 80px;
}

.oc-culture-layout:last-child {
  margin-bottom: 0;
}

/* Image Section */
.oc-culture-image-section {
  position: relative;
  height: 100%;
  min-height: 500px;
  display: flex;
  align-items: center;
}

.oc-culture-image-wrapper {
  position: relative;
  width: 100%;
  height: 400px;
  border-radius: 20px 0 0 20px;
  overflow: hidden;
  z-index: 2;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.oc-culture-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  transition: transform 0.3s ease;
}

.oc-culture-image:hover {
  transform: scale(1.05);
}

.oc-culture-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.oc-placeholder-svg {
  width: 100%;
  height: 100%;
}

/* Polygon SVG Shape */
.oc-culture-polygon {
  position: absolute;
  right: -50px;
  top: 50%;
  transform: translateY(-50%);
  width: 100px;
  height: 300px;
  z-index: 3;
  transition: all 0.3s ease;
}

.oc-polygon-svg {
  width: 100%;
  height: 100%;
}

.oc-culture-image-section:hover .oc-culture-polygon {
  transform: translateY(-50%) translateX(10px);
}

/* Content Section */
.oc-culture-content-section {
  padding: 60px 40px 60px 80px;
  position: relative;
}

.oc-culture-content {
  max-width: 500px;
}

.oc-culture-title {
  font-size: 42px;
  font-weight: 700;
  margin-bottom: 30px;
  line-height: 1.2;
  position: relative;
}

.oc-culture-title::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 0;
  width: 60px;
  height: 4px;
  background: #0071b9;
  border-radius: 2px;
}

.oc-culture-description {
  font-size: 16px;
  line-height: 1.8;
  color: #666;
  margin-bottom: 40px;
  font-weight: 400;
}

/* CTA Button */
.oc-culture-cta {
  margin-top: 30px;
}

.oc-culture-button {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 15px 30px;
  border: 2px solid;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 600;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  background: transparent;
}

.oc-button-icon {
  display: flex;
  align-items: center;
  transition: transform 0.3s ease;
}

.oc-button-icon svg {
  width: 16px;
  height: 16px;
}

.oc-culture-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: #0071b9;
  transition: left 0.3s ease;
  z-index: -1;
}

.oc-culture-button:hover::before {
  left: 0;
}

.oc-culture-button:hover {
  color: white !important;
  border-color: #0071b9;
  transform: translateX(5px);
}

.oc-culture-button:hover .oc-button-icon {
  transform: translateX(5px);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .oc-culture-layout {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .oc-culture-image-section {
    min-height: 400px;
    order: 1;
  }

  .oc-culture-content-section {
    padding: 40px 20px;
    order: 2;
  }

  .oc-culture-image-wrapper {
    border-radius: 20px;
  }

  .oc-culture-polygon {
    display: none;
  }

  .oc-section-title {
    font-size: 36px;
  }

  .oc-culture-title {
    font-size: 36px;
  }
}

@media (max-width: 768px) {
  .oc-culture-container {
    padding: 0 20px;
  }

  .oc-culture-image-section {
    min-height: 300px;
  }

  .oc-culture-image-wrapper {
    height: 300px;
  }

  .oc-culture-content-section {
    padding: 30px 15px;
  }

  .oc-section-title {
    font-size: 28px;
  }

  .oc-culture-title {
    font-size: 28px;
  }

  .oc-culture-description {
    font-size: 15px;
    line-height: 1.6;
  }

  .oc-culture-button {
    padding: 12px 25px;
    font-size: 13px;
  }
}

@media (max-width: 480px) {
  .oc-section-title {
    font-size: 24px;
  }

  .oc-culture-title {
    font-size: 24px;
  }

  .oc-culture-description {
    font-size: 14px;
  }

  .oc-culture-button {
    padding: 10px 20px;
    font-size: 12px;
  }
}

/* Animation on Scroll */
@media (prefers-reduced-motion: no-preference) {
  .oc-culture-image-wrapper {
    opacity: 0;
    transform: translateX(-50px);
    animation: ocSlideInLeft 0.8s ease forwards;
  }

  .oc-culture-content {
    opacity: 0;
    transform: translateX(50px);
    animation: ocSlideInRight 0.8s ease forwards;
    animation-delay: 0.2s;
  }

  @keyframes ocSlideInLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes ocSlideInRight {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  .oc-culture-image,
  .oc-culture-polygon,
  .oc-culture-button,
  .oc-culture-image-wrapper,
  .oc-culture-content {
    animation: none;
    transition: none;
  }
}

.oc-culture-button:focus {
  outline: 3px solid #0071b9;
  outline-offset: 4px;
}

/* Enhanced Visual Effects */
.oc-culture-content-section::before {
  content: '';
  position: absolute;
  top: 20px;
  left: 40px;
  width: 30px;
  height: 30px;
  background: linear-gradient(45deg, #0071b9, #005a91);
  border-radius: 50%;
  opacity: 0.1;
}

.oc-culture-content-section::after {
  content: '';
  position: absolute;
  bottom: 20px;
  right: 40px;
  width: 50px;
  height: 50px;
  background: linear-gradient(45deg, #0071b9, #005a91);
  border-radius: 50%;
  opacity: 0.05;
}
</style>
