{% comment %}
  Our Culture Banner Section with hardcoded styles
{% endcomment %}

<!-- Our Culture Banner Section -->
<section class="culture-banner-section" data-section-id="{{ section.id }}">
  <!-- Background Image with Overlay -->
  <div class="culture-background">
    {% if section.settings.culture_background_image != blank %}
      <img src="{{ section.settings.culture_background_image | img_url: '1920x1080' }}" 
           alt="Our Culture Background" 
           class="culture-bg-image">
    {% else %}
      <!-- Default background image if none selected -->
      <img src="https://cdn.shopify.com/s/files/1/1064/0118/files/MicrosoftTeams-image_3_7d8659cc-d3c1-46d4-9a5b-658a2ba0cc1c.jpg?v=1710427248" 
           alt="Our Culture Background" 
           class="culture-bg-image">
    {% endif %}

    <!-- Always show overlay -->
    <div class="culture-overlay"></div>
  </div>

  <!-- Content Container -->
  <div class="culture-content-container">
    <div class="culture-inner-content">
      <!-- Section Header -->
      <div class="culture-header">
        <h2 class="culture-main-title">
          <span class="culture-title-line">
            {% if section.settings.culture_section_title != blank %}
              {{ section.settings.culture_section_title }}
            {% else %}
              Our Culture
            {% endif %}
          </span>
        </h2>

        {% if section.settings.culture_section_description != blank %}
          <div class="culture-description">
            <p>{{ section.settings.culture_section_description }}</p>
          </div>
        {% else %}
          <div class="culture-description">
            <p>As one of New Hampshire's fastest growing family-owned business we are known in the industry to put our employees first. Our diverse and global team covers a wide range of backgrounds, languages, and expertise, including engineers, scientists, product managers, and a top notch customer service team.</p>
          </div>
        {% endif %}

        <!-- CTA Button -->
        {% if section.settings.show_cta_button and section.settings.cta_button_text != blank %}
          <div class="culture-cta-wrapper">
            <a href="{{ section.settings.cta_button_url | default: '#' }}" 
               class="culture-cta-button">
              <span class="cta-text">{{ section.settings.cta_button_text }}</span>
              <span class="cta-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M13.025 1l-2.847 2.828 6.176 6.176h-16.354v3.992h16.354l-6.176 6.176 2.847 2.828 10.975-11z"/>
                </svg>
              </span>
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="culture-decorative-elements">
    <div class="floating-element element-1"></div>
    <div class="floating-element element-2"></div>
    <div class="floating-element element-3"></div>
  </div>
</section>

<style>
/* Our Culture Banner Section - Hardcoded Styles */
.culture-banner-section {
  position: relative;
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  padding: 120px 0;
}

/* Background Image */
.culture-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.culture-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.8s ease;
}

/* Overlay - Always applied with 55% opacity */
.culture-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #0071b9;
  opacity: 0.55;
  z-index: 2;
  pointer-events: none;
}

/* Content Container */
.culture-content-container {
  position: relative;
  z-index: 3;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 40px;
}

.culture-inner-content {
  text-align: center;
  color: #ffffff;
}

/* Header Styles */
.culture-header {
  max-width: 900px;
  margin: 0 auto;
}

.culture-main-title {
  font-size: clamp(2.5rem, 6vw, 4rem);
  font-weight: 800;
  margin-bottom: 30px;
  line-height: 1.2;
  text-transform: uppercase;
  letter-spacing: 2px;
  position: relative;
  color: #ffffff;
}

.culture-title-line {
  position: relative;
  display: inline-block;
  color: #ffffff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.culture-title-line::after {
  content: '';
  position: absolute;
  bottom: -15px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 4px;
  background: #ffffff;
  border-radius: 2px;
  animation: titleUnderline 2s ease-out forwards;
}

@keyframes titleUnderline {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 80px;
    opacity: 1;
  }
}

/* Description */
.culture-description {
  margin: 40px 0 50px 0;
  opacity: 0;
  animation: fadeInUp 1s ease 0.5s forwards;
}

.culture-description p {
  font-size: clamp(1.1rem, 2.5vw, 1.4rem);
  line-height: 1.8;
  font-weight: 400;
  margin: 0;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
  color: #ffffff;
  max-width: 800px;
  margin: 0 auto;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* CTA Button */
.culture-cta-wrapper {
  margin-top: 50px;
  opacity: 0;
  animation: fadeInUp 1s ease 1s forwards;
}

.culture-cta-button {
  display: inline-flex;
  align-items: center;
  gap: 15px;
  padding: 18px 40px;
  background: linear-gradient(135deg, #0071b9 0%, rgba(255, 255, 255, 0.1) 100%);
  border: 2px solid #ffffff;
  border-radius: 50px;
  color: #ffffff;
  text-decoration: none;
  font-weight: 600;
  font-size: 1.1rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  position: relative;
  overflow: hidden;
  transition: all 0.4s ease;
  backdrop-filter: blur(10px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.culture-cta-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.6s ease;
}

.culture-cta-button:hover::before {
  left: 100%;
}

.culture-cta-button:hover {
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
  border-color: #ffffff;
}

.cta-text {
  position: relative;
  z-index: 1;
}

.cta-icon {
  display: flex;
  align-items: center;
  width: 20px;
  height: 20px;
  transition: transform 0.3s ease;
}

.culture-cta-button:hover .cta-icon {
  transform: translateX(5px);
}

/* Decorative Floating Elements */
.culture-decorative-elements {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 2;
}

.floating-element {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(5px);
}

.element-1 {
  width: 120px;
  height: 120px;
  top: 15%;
  right: 10%;
  animation: float1 6s ease-in-out infinite;
}

.element-2 {
  width: 80px;
  height: 80px;
  bottom: 20%;
  left: 8%;
  animation: float2 8s ease-in-out infinite;
}

.element-3 {
  width: 60px;
  height: 60px;
  top: 60%;
  right: 15%;
  animation: float3 7s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-30px) rotate(180deg); }
}

@keyframes float2 {
  0%, 100% { transform: translateX(0px) rotate(0deg); }
  50% { transform: translateX(25px) rotate(-180deg); }
}

@keyframes float3 {
  0%, 100% { transform: translateY(0px) translateX(0px); }
  33% { transform: translateY(-20px) translateX(15px); }
  66% { transform: translateY(10px) translateX(-10px); }
}

/* Responsive Design */
@media (max-width: 1024px) {
  .culture-content-container {
    padding: 0 30px;
  }

  .culture-main-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: 25px;
  }

  .culture-description p {
    font-size: clamp(1rem, 2vw, 1.2rem);
  }

  .culture-cta-button {
    padding: 15px 35px;
    font-size: 1rem;
  }

  .floating-element {
    opacity: 0.6;
  }

  .element-1 {
    width: 80px;
    height: 80px;
  }

  .element-2 {
    width: 60px;
    height: 60px;
  }

  .element-3 {
    width: 40px;
    height: 40px;
  }
}

@media (max-width: 768px) {
  .culture-banner-section {
    min-height: 50vh;
    padding: 60px 0;
  }

  .culture-content-container {
    padding: 0 20px;
  }

  .culture-main-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 20px;
  }

  .culture-description {
    margin: 30px 0 40px 0;
  }

  .culture-cta-wrapper {
    margin-top: 40px;
  }

  .culture-cta-button {
    padding: 12px 30px;
    font-size: 0.95rem;
    gap: 12px;
  }

  .floating-element {
    display: none;
  }
}

@media (max-width: 480px) {
  .culture-banner-section {
    min-height: 45vh;
  }

  .culture-main-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    letter-spacing: 1px;
  }

  .culture-description p {
    font-size: 1rem;
    line-height: 1.6;
  }

  .culture-cta-button {
    padding: 10px 25px;
    font-size: 0.9rem;
  }
}

/* Accessibility & Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .culture-bg-image,
  .culture-overlay,
  .culture-main-title,
  .culture-description,
  .culture-cta-wrapper,
  .floating-element {
    animation: none;
    transition: none;
  }

  .culture-cta-button::before {
    display: none;
  }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
  .culture-overlay {
    opacity: 0.9;
  }

  .culture-main-title,
  .culture-description p {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
  }

  .culture-cta-button {
    border-width: 3px;
  }
}

/* Print Styles */
@media print {
  .culture-banner-section {
    min-height: auto;
    padding: 20px 0;
    background: white !important;
    color: black !important;
    page-break-inside: avoid;
  }

  .culture-overlay,
  .culture-decorative-elements {
    display: none;
  }

  .culture-bg-image {
    opacity: 0.1;
  }
}
</style>

{% schema %}
{
  "name": "Our Culture",
  "class": "our-culture-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "culture_section_title",
      "label": "Section Title",
      "default": "Our Culture"
    },
    {
      "type": "textarea",
      "id": "culture_section_description",
      "label": "Section Description",
      "default": "As one of New Hampshire's fastest growing family-owned business we are known in the industry to put our employees first. Our diverse and global team covers a wide range of backgrounds, languages, and expertise, including engineers, scientists, product managers, and a top notch customer service team."
    },
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "culture_background_image",
      "label": "Background Banner Image"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta_button",
      "label": "Show CTA Button",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "cta_button_url",
      "label": "CTA Button URL"
    }
  ],
  "presets": [
    {
      "name": "Our Culture",
      "category": "About"
    }
  ]
}
{% endschema %}