        },
        {
          "type": "contact_info",
          "settings": {
            "title": "Support",
            "contact_value": "support@foxxlifesciences.com",
            "contact_type": "email"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% if section.settings.show_section %}
<!-- Contact Us Section -->
<section class="cu-modern-contact-us" data-section-id="{{ section.id }}" style="background: linear-gradient(135deg, {{ section.settings.background_color | default: '#f8f9fa' }} 0%, rgba(0, 113, 185, 0.05) 100%); padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px 0; width: 100vw; margin-left: calc(-50vw + 50%);">
  <div class="cu-container">
    <!-- Section Header (Same style as Mission Vision) -->
    {% if section.settings.section_title != blank %}
      <div class="cu-section-header">
        <div class="cu-title-decoration">
          <span class="cu-decoration-line"></span>
          <span class="cu-decoration-diamond"></span>
          <span class="cu-decoration-line"></span>
        </div>
        <h2 class="cu-section-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_description != blank %}
          <p class="cu-section-subtitle">{{ section.settings.section_description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <!-- Contact Information Section - Top -->
    {% assign contact_blocks = section.blocks | where: 'type', 'contact_info' %}
    {% if contact_blocks.size > 0 %}
      <div class="cu-contact-info-top">
        <h3 class="cu-section-heading">
          <span class="cu-heading-icon">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M20,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6A2,2 0 0,0 20,4M20,18H4V8L12,13L20,8V18M20,6L12,11L4,6H20Z"/>
            </svg>
          </span>
          Contact Information
        </h3>
        <div class="cu-contact-methods-top">
          {% for block in contact_blocks %}
            <div class="cu-contact-card-top" {{ block.shopify_attributes }}>
              <div class="cu-contact-card-icon 
                {% if block.settings.contact_type == 'phone' %}phone
                {% elsif block.settings.contact_type == 'email' %}sales
                {% else %}support{% endif %}">
                {% if block.settings.contact_type == 'phone' %}
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4A1,1 0 0,1 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.25 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.59L6.62,10.79Z"/>
                  </svg>
                {% elsif block.settings.contact_type == 'email' %}
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"/>
                  </svg>
                {% elsif block.settings.contact_type == 'custom' and block.settings.svg_icon != blank %}
                  {{ block.settings.svg_icon }}
                {% else %}
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M11,18H13V16H11V18M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,6A4,4 0 0,0 8,10H10A2,2 0 0,1 12,8A2,2 0 0,1 14,10C14,12 11,11.75 11,15H13C13,12.75 16,12.5 16,10A4,4 0 0,0 12,6Z"/>
                  </svg>
                {% endif %}
              </div>
              <div class="cu-contact-card-content">
                <strong>{{ block.settings.title }}</strong>
                {% if block.settings.contact_type == 'phone' %}
                  <a href="tel:{{ block.settings.contact_value | replace: ' ', '' | replace: '(', '' | replace: ')', '' | replace: '-', '' }}">{{ block.settings.contact_value }}</a>
                {% elsif block.settings.contact_type == 'email' %}
                  <a href="mailto:{{ block.settings.contact_value }}">{{ block.settings.contact_value }}</a>
                {% else %}
                  <span>{{ block.settings.contact_value }}</span>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Main Layout Grid -->
    <div class="cu-layout-grid">
      <!-- Left Column - Locations -->
      <div class="cu-left-panel">
        <!-- Locations Section -->
        {% assign location_blocks = section.blocks | where: 'type', 'location' %}
        {% if location_blocks.size > 0 %}
          <div class="cu-locations-wrapper">
            <h3 class="cu-section-heading">
              <span class="cu-heading-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12,2C15.31,2 18,4.66 18,7.95C18,12.41 12,19 12,19S6,12.41 6,7.95C6,4.66 8.69,2 12,2M12,6A2,2 0 0,0 10,8A2,2 0 0,0 12,10A2,2 0 0,0 14,8A2,2 0 0,0 12,6Z"/>
                </svg>
              </span>
              Our Locations
            </h3>
            <div class="cu-locations-container">
              {% for block in location_blocks %}
                <div class="cu-location-item" {{ block.shopify_attributes }}>
                  <div class="cu-location-header">
                    <h4 class="cu-location-name">{{ block.settings.plant_name }}</h4>
                    <div class="cu-location-company">{{ block.settings.company_name }}</div>
                  </div>
                  <div class="cu-location-details">
                    {% if block.settings.maps_url != blank %}
                      <a href="{{ block.settings.maps_url }}" target="_blank" rel="noopener noreferrer" class="cu-location-address">
                        {{ block.settings.address | newline_to_br }}
                      </a>
                    {% else %}
                      <div class="cu-location-address">
                        {{ block.settings.address | newline_to_br }}
                      </div>
                    {% endif %}
                    {% if block.settings.local_phone != blank %}
                      <div class="cu-contact-method">
                        <span class="cu-contact-icon">üìû</span>
                        <a href="tel:{{ block.settings.local_phone | replace: ' ', '' | replace: '(', '' | replace: ')', '' | replace: '-', '' }}">{{ block.settings.local_phone }}</a>
                      </div>
                    {% endif %}
                    {% if block.settings.local_email != blank %}
                      <div class="cu-contact-method">
                        <span class="cu-contact-icon">‚úâÔ∏è</span>
                        <a href="mailto:{{ block.settings.local_email }}">{{ block.settings.local_email }}</a>
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Right Column - Contact Form -->
      <div class="cu-right-panel">
        <!-- Contact Form -->
        <div class="cu-form-wrapper">
          <h3 class="cu-section-heading">
            <span class="cu-heading-icon">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"/>
              </svg>
            </span>
            {{ section.settings.form_title | default: 'Send us a Message' }}
          </h3>
          
          {% if section.settings.form_description != blank %}
            <p class="cu-form-intro">{{ section.settings.form_description }}</p>
          {% endif %}

          <!-- Success Message (Hidden by default) -->
          <div class="cu-success-notification" id="successMessage" style="display: none;">
            <div class="cu-success-content">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M11,16.5L18,9.5L16.59,8.09L11,13.67L7.91,10.59L6.5,12L11,16.5Z"/>
              </svg>
              <span>{{ section.settings.success_message | default: "Thank you for your message! We'll get back to you soon." }}</span>
            </div>
          </div>

          <!-- Contact Form -->
          {% form 'contact', class: 'cu-contact-form', id: 'contactForm' %}
            {% if form.posted_successfully? %}
              <script>
                document.addEventListener('DOMContentLoaded', function() {
                  document.getElementById('successMessage').style.display = 'block';
                  document.getElementById('contactForm').style.display = 'none';
                  setTimeout(function() {
                    document.getElementById('successMessage').style.display = 'none';
                    document.getElementById('contactForm').style.display = 'block';
                    document.getElementById('contactForm').reset();
                  }, 5000);
                });
              </script>
            {% endif %}

            {% if form.errors %}
              <div class="cu-error-notification">
                <div class="cu-error-content">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M13,13H11V7H13M13,17H11V15H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"/>
                  </svg>
                  <div>
                    <strong>Please correct the following errors:</strong>
                    {{ form.errors | default_errors }}
                  </div>
                </div>
              </div>
            {% endif %}

            <div class="cu-form-grid">
              <div class="cu-form-group">
                <label for="ContactFormName" class="cu-form-label">
                  Name <span class="cu-required">*</span>
                </label>
                <input type="text" id="ContactFormName" name="contact[name]" class="cu-form-input" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
              </div>

              <div class="cu-form-group">
                <label for="ContactFormEmail" class="cu-form-label">
                  Email <span class="cu-required">*</span>
                </label>
                <input type="email" id="ContactFormEmail" name="contact[email]" class="cu-form-input" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" required>
              </div>

              <div class="cu-form-group">
                <label for="ContactFormPhone" class="cu-form-label">Phone</label>
                <input type="tel" id="ContactFormPhone" name="contact[phone]" class="cu-form-input" value="{% if form.phone %}{{ form.phone }}{% endif %}">
              </div>

              <div class="cu-form-group">
                <label for="ContactFormCompany" class="cu-form-label">Company</label>
                <input type="text" id="ContactFormCompany" name="contact[company]" class="cu-form-input" value="{% if form.company %}{{ form.company }}{% endif %}">
              </div>

              <div class="cu-form-group cu-full-width">
                <label for="ContactFormService" class="cu-form-label">Service Interested In</label>
                <select id="ContactFormService" name="contact[service]" class="cu-form-select">
                  <option value="">Select a service...</option>
                  <option value="General Inquiry">General Inquiry</option>
                  <option value="Custom Quote">Custom Quote</option>
                  <option value="Technical Support">Technical Support</option>
                </select>
              </div>

              <div class="cu-form-group cu-full-width">
                <label for="ContactFormMessage" class="cu-form-label">
                  Message <span class="cu-required">*</span>
                </label>
                <textarea id="ContactFormMessage" name="contact[body]" class="cu-form-textarea" rows="5" required>{% if form.body %}{{ form.body }}{% endif %}</textarea>
              </div>
            </div>

            <button type="submit" class="cu-submit-button">
              <span class="cu-button-content">
                <span class="cu-button-text">Send Message</span>
                <span class="cu-button-icon">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M2,21L23,12L2,3V10L17,12L2,14V21Z"/>
                  </svg>
                </span>
              </span>
              <div class="cu-button-wave"></div>
            </button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

<style>
/* Modern Contact Us Section Styles */
.cu-modern-contact-us {
  position: relative;
  overflow: hidden;
  width: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.cu-modern-contact-us::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 20%, rgba(0, 113, 185, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(0, 113, 185, 0.05) 0%, transparent 50%),
    linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.5) 50%, transparent 100%);
  pointer-events: none;
}

.cu-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
  z-index: 2;
}

/* Enhanced Section Header (Same as Mission Vision) */
.cu-section-header {
  text-align: center;
  margin-bottom: 80px;
  position: relative;
}

.cu-title-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  gap: 15px;
}

.cu-decoration-line {
  width: 60px;
  height: 2px;
  background: linear-gradient(90deg, transparent, #0071b9, transparent);
}

.cu-decoration-diamond {
  width: 12px;
  height: 12px;
  background: #0071b9;
  transform: rotate(45deg);
  border-radius: 2px;
}

.cu-section-title {
  font-size: 48px;
  font-weight: 800;
  color: #0071b9;
  margin-bottom: 20px;
  text-transform: uppercase;
  letter-spacing: 4px;
  text-shadow: 0 2px 8px rgba(0, 113, 185, 0.3);
  position: relative;
  display: inline-block;
  line-height: 1.2;
}

.cu-section-title::before {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 4px;
  background: linear-gradient(90deg, transparent, #0071b9, transparent);
  border-radius: 2px;
}

.cu-section-title::after {
  content: '';
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
  width: 200px;  
  height: 2px;
  background: linear-gradient(90deg, transparent, rgba(0, 113, 185, 0.5), transparent);
  border-radius: 1px;
}

.cu-section-subtitle {
  font-size: 20px;
  color: rgba(0, 113, 185, 0.8);
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
  font-weight: 300;
  text-shadow: 0 1px 4px rgba(0, 113, 185, 0.2);
  letter-spacing: 1px;
  font-style: italic;
}

/* Contact Information Top Section */
.cu-contact-info-top {
  margin-bottom: 60px;
}

.cu-contact-methods-top {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
  max-width: 100%;
  justify-content: center;
}

.cu-contact-card-top {
  display: flex;
  align-items: flex-start;
  gap: 15px;
  background: white;
  padding: 20px 25px;
  border-radius: 12px;
  box-shadow: 0 2px 10px rgba(0, 113, 185, 0.05);
  border: 1px solid rgba(0, 113, 185, 0.1);
  transition: all 0.3s ease;
  min-width: 0;
  max-width: 400px;
  margin: 0 auto;
}

.cu-contact-card-top:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(0, 113, 185, 0.15);
}

.cu-contact-card-top .cu-contact-card-content {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.cu-contact-card-top .cu-contact-card-content strong {
  display: block;
  font-weight: 600;
  color: #333;
  margin-bottom: 6px;
  font-size: 16px;
  line-height: 1.3;
}

.cu-contact-card-top .cu-contact-card-content a,
.cu-contact-card-top .cu-contact-card-content span {
  color: #0071b9;
  text-decoration: none;
  font-size: 14px;
  transition: color 0.3s ease;
  word-break: break-all;
  overflow-wrap: break-word;
  line-height: 1.4;
  display: block;
  hyphens: auto;
}

.cu-contact-card-top .cu-contact-card-content a:hover {
  color: #005a91;
}

/* Layout Grid */
.cu-layout-grid {
  display: grid;
  grid-template-columns: 1fr 1.2fr;
  gap: 80px;
  align-items: start;
}

/* Section Headings - Increased font size */
.cu-section-heading {
  font-size: 24px; /* Increased from 1.5rem */
  font-weight: 700;
  color: #0071b9;
  margin-bottom: 30px;
  display: flex;
  align-items: center;
  gap: 12px;
  position: relative;
}

.cu-heading-icon {
  width: 32px; /* Increased from 24px */
  height: 32px; /* Increased from 24px */
  background: linear-gradient(135deg, #0071b9, #005a91);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  flex-shrink: 0;
}

