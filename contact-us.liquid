          "default": "Plant 1"
        },
        {
          "type": "text",
          "id": "company_name",
          "label": "Company Name",
          "default": "Foxx Life Sciences"
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Address",
          "default": "12 N. Wentworth Ave.\nLondonderry, NH 03053\nU.S.A."
