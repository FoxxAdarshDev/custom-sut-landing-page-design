
{% schema %}
{
  "name": "Contact Us",
  "class": "contact-us-section",
  "settings": [
    {
      "type": "header",
      "content": "General Settings"
    },
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show Section",
      "default": true
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Contact Us"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Get in touch with our team for all your bioprocess needs"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#0071b9"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "text",
      "id": "main_phone",
      "label": "Main Phone Number",
      "default": "(603) 890-FOXX (3699)"
    },
    {
      "type": "text",
      "id": "main_email",
      "label": "Main Email",
      "default": "sales@foxxlifesciences.com"
    },
    {
      "type": "text",
      "id": "support_email",
      "label": "Support Email",
      "default": "support@foxxlifesciences.com"
    },
    {
      "type": "header",
      "content": "Contact Form Settings"
    },
    {
      "type": "text",
      "id": "form_title",
      "label": "Form Title",
      "default": "Send us a Message"
    },
    {
      "type": "textarea",
      "id": "form_description",
      "label": "Form Description",
      "default": "Fill out the form below and we'll get back to you as soon as possible."
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success Message",
      "default": "Thank you for your message! We'll get back to you soon."
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "Location",
      "settings": [
        {
          "type": "text",
          "id": "plant_name",
          "label": "Plant Name",
          "default": "Plant 1"
        },
        {
          "type": "text",
          "id": "company_name",
          "label": "Company Name",
          "default": "Foxx Life Sciences"
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Address",
          "default": "12 N. Wentworth Ave.\nLondonderry, NH 03053\nU.S.A."
        },
        {
          "type": "url",
          "id": "maps_url",
          "label": "Google Maps URL"
        },
        {
          "type": "text",
          "id": "local_phone",
          "label": "Local Phone (optional)"
        },
        {
          "type": "text",
          "id": "local_email",
          "label": "Local Email (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Us",
      "category": "Contact",
      "blocks": [
        {
          "type": "location",
          "settings": {
            "plant_name": "Plant 1 - Primary Mailing Address",
            "company_name": "Foxx Life Sciences",
            "address": "12 N. Wentworth Ave.\nLondonderry, NH 03053\nU.S.A.",
            "maps_url": "https://maps.google.com/maps?ll=42.910641,-71.425573&z=16&t=m&hl=en&gl=US&mapclient=embed&q=12%20N%20Wentworth%20Ave%20Londonderry%2C%20NH%2003053"
          }
        },
        {
          "type": "location",
          "settings": {
            "plant_name": "Plant 2 - Secondary Mailing Address",
            "company_name": "Foxx Life Sciences",
            "address": "6 Delaware Dr, Salem, NH 03079\nU.S.A.",
            "maps_url": "https://maps.google.com/maps?ll=42.7639,-71.242038&z=16&t=m&hl=en-US&gl=US&mapclient=embed&q=6%20Delaware%20Dr%20Salem%2C%20NH%2003079"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% if section.settings.show_section %}
<!-- Contact Us Section -->
<section class="cu-modern-contact-us" data-section-id="{{ section.id }}" style="background: {{ section.settings.background_color | default: '#f8f9fa' }}; padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px 0; width: 100vw; margin-left: calc(-50vw + 50%);">
  <div class="cu-container">
    <!-- Section Header -->
    {% if section.settings.section_title != blank %}
      <div class="cu-header">
        <div class="cu-header-decoration">
          <div class="cu-decoration-dots">
            <span></span><span></span><span></span>
          </div>
        </div>
        <h2 class="cu-main-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_description != blank %}
          <p class="cu-main-subtitle">{{ section.settings.section_description }}</p>
        {% endif %}
        <div class="cu-header-wave">
          <svg viewBox="0 0 100 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M0,10 Q25,0 50,10 T100,10" stroke="{{ section.settings.accent_color | default: '#0071b9' }}" stroke-width="2" fill="none"/>
          </svg>
        </div>
      </div>
    {% endif %}

    <!-- Main Layout Grid -->
    <div class="cu-layout-grid">
      <!-- Left Column - Locations & Contact Info -->
      <div class="cu-left-panel">
        <!-- Locations Section -->
        <div class="cu-locations-wrapper">
          <h3 class="cu-section-heading">
            <span class="cu-heading-icon">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12,2C15.31,2 18,4.66 18,7.95C18,12.41 12,19 12,19S6,12.41 6,7.95C6,4.66 8.69,2 12,2M12,6A2,2 0 0,0 10,8A2,2 0 0,0 12,10A2,2 0 0,0 14,8A2,2 0 0,0 12,6Z"/>
              </svg>
            </span>
            Our Locations
          </h3>
          <div class="cu-locations-container">
            {% for block in section.blocks %}
              {% if block.type == 'location' %}
                <div class="cu-location-item" {{ block.shopify_attributes }}>
                  <div class="cu-location-header">
                    <h4 class="cu-location-name">{{ block.settings.plant_name }}</h4>
                    <div class="cu-location-company">{{ block.settings.company_name }}</div>
                  </div>
                  <div class="cu-location-details">
                    {% if block.settings.maps_url != blank %}
                      <a href="{{ block.settings.maps_url }}" target="_blank" rel="noopener noreferrer" class="cu-location-address">
                        {{ block.settings.address | newline_to_br }}
                      </a>
                    {% else %}
                      <div class="cu-location-address">
                        {{ block.settings.address | newline_to_br }}
                      </div>
                    {% endif %}
                    {% if block.settings.local_phone != blank %}
                      <div class="cu-contact-method">
                        <span class="cu-contact-icon">üìû</span>
                        <a href="tel:{{ block.settings.local_phone | replace: ' ', '' | replace: '(', '' | replace: ')', '' | replace: '-', '' }}">{{ block.settings.local_phone }}</a>
                      </div>
                    {% endif %}
                    {% if block.settings.local_email != blank %}
                      <div class="cu-contact-method">
                        <span class="cu-contact-icon">‚úâÔ∏è</span>
                        <a href="mailto:{{ block.settings.local_email }}">{{ block.settings.local_email }}</a>
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Contact Information -->
        <div class="cu-contact-info-wrapper">
          <h3 class="cu-section-heading">
            <span class="cu-heading-icon">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M20,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6A2,2 0 0,0 20,4M20,18H4V8L12,13L20,8V18M20,6L12,11L4,6H20Z"/>
              </svg>
            </span>
            Contact Information
          </h3>
          <div class="cu-contact-methods">
            <div class="cu-contact-card">
              <div class="cu-contact-card-icon phone">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M6.62,10.79C1.44,2.83 3.76,5.14 6.59,6.59L2.2,2.2C.27,.27 .67,.36 1.02,.24C1.12,.37 2.33,.57 3.57,.57C.55,0 1,.45 1,1V4C0,.55 .45,1 1,1C9.39,1 17,7.61 17,17C0,.55 .45,1 1,1H16.5C.55,0 1,.45 1,1C0,1.25 .2,2.45 .57,3.57C.11,.35 .03,.74 .25,1.02L2.2,2.2Z"/>
                </svg>
              </div>
              <div class="cu-contact-card-content">
                <strong>Phone</strong>
                <a href="tel:{{ section.settings.main_phone | replace: ' ', '' | replace: '(', '' | replace: ')', '' | replace: '-', '' }}">{{ section.settings.main_phone }}</a>
              </div>
            </div>
            
            <div class="cu-contact-card">
              <div class="cu-contact-card-icon sales">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"/>
                </svg>
              </div>
              <div class="cu-contact-card-content">
                <strong>Sales</strong>
                <a href="mailto:{{ section.settings.main_email }}">{{ section.settings.main_email }}</a>
              </div>
            </div>
            
            <div class="cu-contact-card">
              <div class="cu-contact-card-icon support">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M11,18H13V16H11V18M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,6A4,4 0 0,0 8,10H10A2,2 0 0,1 12,8A2,2 0 0,1 14,10C14,12 11,11.75 11,15H13C13,12.75 16,12.5 16,10A4,4 0 0,0 12,6Z"/>
                </svg>
              </div>
              <div class="cu-contact-card-content">
                <strong>Support</strong>
                <a href="mailto:{{ section.settings.support_email }}">{{ section.settings.support_email }}</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Services & Form -->
      <div class="cu-right-panel">
        

        <!-- Contact Form -->
        <div class="cu-form-wrapper">
          <h3 class="cu-section-heading">
            <span class="cu-heading-icon">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"/>
              </svg>
            </span>
            {{ section.settings.form_title | default: 'Send us a Message' }}
          </h3>
          
          {% if section.settings.form_description != blank %}
            <p class="cu-form-intro">{{ section.settings.form_description }}</p>
          {% endif %}

          <!-- Success Message (Hidden by default) -->
          <div class="cu-success-notification" id="successMessage" style="display: none;">
            <div class="cu-success-content">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M11,16.5L18,9.5L16.59,8.09L11,13.67L7.91,10.59L6.5,12L11,16.5Z"/>
              </svg>
              <span>{{ section.settings.success_message | default: "Thank you for your message! We'll get back to you soon." }}</span>
            </div>
          </div>

          <!-- Contact Form -->
          {% form 'contact', class: 'cu-contact-form', id: 'contactForm' %}
            {% if form.posted_successfully? %}
              <script>
                document.addEventListener('DOMContentLoaded', function() {
                  document.getElementById('successMessage').style.display = 'block';
                  document.getElementById('contactForm').style.display = 'none';
                  setTimeout(function() {
                    document.getElementById('successMessage').style.display = 'none';
                    document.getElementById('contactForm').style.display = 'block';
                    document.getElementById('contactForm').reset();
                  }, 5000);
                });
              </script>
            {% endif %}

            {% if form.errors %}
              <div class="cu-error-notification">
                <div class="cu-error-content">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M13,13H11V7H13M13,17H11V15H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"/>
                  </svg>
                  <div>
                    <strong>Please correct the following errors:</strong>
                    {{ form.errors | default_errors }}
                  </div>
                </div>
              </div>
            {% endif %}

            <div class="cu-form-grid">
              <div class="cu-form-group">
                <label for="ContactFormName" class="cu-form-label">
                  Name <span class="cu-required">*</span>
                </label>
                <input type="text" id="ContactFormName" name="contact[name]" class="cu-form-input" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
              </div>

              <div class="cu-form-group">
                <label for="ContactFormEmail" class="cu-form-label">
                  Email <span class="cu-required">*</span>
                </label>
                <input type="email" id="ContactFormEmail" name="contact[email]" class="cu-form-input" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" required>
              </div>

              <div class="cu-form-group">
                <label for="ContactFormPhone" class="cu-form-label">Phone</label>
                <input type="tel" id="ContactFormPhone" name="contact[phone]" class="cu-form-input" value="{% if form.phone %}{{ form.phone }}{% endif %}">
              </div>

              <div class="cu-form-group">
                <label for="ContactFormCompany" class="cu-form-label">Company</label>
                <input type="text" id="ContactFormCompany" name="contact[company]" class="cu-form-input" value="{% if form.company %}{{ form.company }}{% endif %}">
              </div>

              <div class="cu-form-group cu-full-width">
                <label for="ContactFormService" class="cu-form-label">Service Interested In</label>
                <select id="ContactFormService" name="contact[service]" class="cu-form-select">
                  <option value="">Select a service...</option>
                  <option value="General Inquiry">General Inquiry</option>
                  <option value="Custom Quote">Custom Quote</option>
                  <option value="Technical Support">Technical Support</option>
                </select>
              </div>

              <div class="cu-form-group cu-full-width">
                <label for="ContactFormMessage" class="cu-form-label">
                  Message <span class="cu-required">*</span>
                </label>
                <textarea id="ContactFormMessage" name="contact[body]" class="cu-form-textarea" rows="5" required>{% if form.body %}{{ form.body }}{% endif %}</textarea>
              </div>
            </div>

            <button type="submit" class="cu-submit-button">
              <span class="cu-button-content">
                <span class="cu-button-text">Send Message</span>
                <span class="cu-button-icon">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M2,21L23,12L2,3V10L17,12L2,14V21Z"/>
                  </svg>
                </span>
              </span>
              <div class="cu-button-wave"></div>
            </button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

<style>
/* Modern Contact Us Section Styles */
.cu-modern-contact-us {
  position: relative;
  overflow: hidden;
  width: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.cu-modern-contact-us::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 20%, rgba(0, 113, 185, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(0, 113, 185, 0.05) 0%, transparent 50%),
    linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.5) 50%, transparent 100%);
  pointer-events: none;
}

.cu-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
  z-index: 2;
}

/* Header Styles */
.cu-header {
  text-align: center;
  margin-bottom: 80px;
  position: relative;
}

.cu-header-decoration {
  margin-bottom: 20px;
}

.cu-decoration-dots {
  display: flex;
  justify-content: center;
  gap: 8px;
  margin-bottom: 20px;
}

.cu-decoration-dots span {
  width: 8px;
  height: 8px;
  background: #0071b9;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

.cu-decoration-dots span:nth-child(2) {
  animation-delay: 0.3s;
}

.cu-decoration-dots span:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.7; }
}

.cu-main-title {
  font-size: 3.5rem;
  font-weight: 800;
  background: linear-gradient(135deg, #0071b9, #005a91);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 20px;
  letter-spacing: -0.02em;
  line-height: 1.1;
}

.cu-main-subtitle {
  font-size: 1.25rem;
  color: rgba(0, 113, 185, 0.8);
  max-width: 600px;
  margin: 0 auto 30px;
  line-height: 1.6;
  font-weight: 300;
}

.cu-header-wave {
  width: 200px;
  height: 20px;
  margin: 0 auto;
}

.cu-header-wave svg {
  width: 100%;
  height: 100%;
}

/* Layout Grid */
.cu-layout-grid {
  display: grid;
  grid-template-columns: 1fr 1.2fr;
  gap: 80px;
  align-items: start;
}

/* Section Headings */
.cu-section-heading {
  font-size: 1.5rem;
  font-weight: 700;
  color: #0071b9;
  margin-bottom: 30px;
  display: flex;
  align-items: center;
  gap: 12px;
  position: relative;
}

.cu-heading-icon {
  width: 24px;
  height: 24px;
  background: linear-gradient(135deg, #0071b9, #005a91);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  flex-shrink: 0;
}

.cu-heading-icon svg {
  width: 14px;
  height: 14px;
}

/* Left Panel Styles */
.cu-left-panel {
  display: flex;
  flex-direction: column;
  gap: 50px;
}

/* Locations */
.cu-locations-container {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.cu-location-item {
  background: white;
  border-radius: 16px;
  padding: 25px;
  box-shadow: 0 4px 20px rgba(0, 113, 185, 0.08);
  border: 1px solid rgba(0, 113, 185, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.cu-location-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: linear-gradient(135deg, #0071b9, #005a91);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.cu-location-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 40px rgba(0, 113, 185, 0.15);
}

.cu-location-item:hover::before {
  transform: scaleY(1);
}

.cu-location-header {
  margin-bottom: 15px;
}

.cu-location-name {
  font-size: 1.1rem;
  font-weight: 700;
  color: #0071b9;
  margin-bottom: 5px;
}

.cu-location-company {
  font-size: 0.95rem;
  color: #666;
  font-weight: 500;
}

.cu-location-address {
  color: #555;
  line-height: 1.5;
  margin-bottom: 12px;
  text-decoration: none;
  transition: color 0.3s ease;
}

.cu-location-address:hover {
  color: #0071b9;
}

.cu-contact-method {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 8px;
  font-size: 0.9rem;
}

.cu-contact-method a {
  color: #0071b9;
  text-decoration: none;
  transition: color 0.3s ease;
}

.cu-contact-method a:hover {
  color: #005a91;
}

/* Contact Methods */
.cu-contact-methods {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.cu-contact-card {
  display: flex;
  align-items: center;
  gap: 15px;
  background: white;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 2px 10px rgba(0, 113, 185, 0.05);
  border: 1px solid rgba(0, 113, 185, 0.1);
  transition: all 0.3s ease;
}

.cu-contact-card:hover {
  transform: translateX(5px);
  box-shadow: 0 4px 20px rgba(0, 113, 185, 0.1);
}

.cu-contact-card-icon {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  flex-shrink: 0;
}

.cu-contact-card-icon.phone {
  background: linear-gradient(135deg, #4CAF50, #45a049);
}

.cu-contact-card-icon.sales {
  background: linear-gradient(135deg, #2196F3, #1976D2);
}

.cu-contact-card-icon.support {
  background: linear-gradient(135deg, #FF9800, #F57C00);
}

.cu-contact-card-icon svg {
  width: 20px;
  height: 20px;
}

.cu-contact-card-content strong {
  display: block;
  font-weight: 600;
  color: #333;
  margin-bottom: 2px;
}

.cu-contact-card-content a {
  color: #0071b9;
  text-decoration: none;
  font-size: 0.9rem;
  transition: color 0.3s ease;
}

.cu-contact-card-content a:hover {
  color: #005a91;
}

/* Right Panel Styles */
.cu-right-panel {
  display: flex;
  flex-direction: column;
  gap: 50px;
}

/* Form Styles */
.cu-form-wrapper {
  background: white;
