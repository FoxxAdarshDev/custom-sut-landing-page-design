
{% schema %}
{
  "name": "Contact Us",
  "class": "contact-us-section",
  "settings": [
    {
      "type": "header",
      "content": "General Settings"
    },
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show Section",
      "default": true
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Contact Us"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Get in touch with our team for all your bioprocess needs"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#0071b9"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "header",
      "content": "Contact Form Settings"
    },
    {
      "type": "text",
      "id": "form_title",
      "label": "Form Title",
      "default": "Send us a Message"
    },
    {
      "type": "textarea",
      "id": "form_description",
      "label": "Form Description",
      "default": "Fill out the form below and we'll get back to you as soon as possible."
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success Message",
      "default": "Thank you for your message! We'll get back to you soon."
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "Location",
      "settings": [
        {
          "type": "text",
          "id": "plant_name",
          "label": "Plant Name",
          "default": "Plant 1"
        },
        {
          "type": "text",
          "id": "company_name",
          "label": "Company Name",
          "default": "Foxx Life Sciences"
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Address",
          "default": "12 N. Wentworth Ave.\nLondonderry, NH 03053\nU.S.A."
        },
        {
          "type": "url",
          "id": "maps_url",
          "label": "Google Maps URL"
        },
        {
          "type": "text",
          "id": "local_phone",
          "label": "Local Phone (optional)"
        },
        {
          "type": "text",
          "id": "local_email",
          "label": "Local Email (optional)"
        }
      ]
    },
    {
      "type": "contact_info",
      "name": "Contact Information",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Contact Title",
          "default": "Phone"
        },
        {
          "type": "text",
          "id": "contact_value",
          "label": "Contact Value",
          "default": "(603) 890-FOXX (3699)"
        },
        {
          "type": "select",
          "id": "contact_type",
          "label": "Contact Type",
          "default": "phone",
          "options": [
            {
              "value": "phone",
              "label": "Phone"
            },
            {
              "value": "email",
              "label": "Email"
            },
            {
              "value": "custom",
              "label": "Custom"
            }
          ]
        },
        {
          "type": "textarea",
          "id": "svg_icon",
          "label": "Custom SVG Icon",
          "default": "<svg viewBox='0 0 24 24' fill='currentColor'><path d='M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4A1,1 0 0,1 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.25 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.59L6.62,10.79Z'/></svg>",
          "info": "Only used when Contact Type is set to 'Custom'"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Us",
      "category": "Contact",
      "blocks": [
        {
          "type": "location",
          "settings": {
            "plant_name": "Plant 1 - Primary Mailing Address",
            "company_name": "Foxx Life Sciences",
            "address": "12 N. Wentworth Ave.\nLondonderry, NH 03053\nU.S.A.",
            "maps_url": "https://maps.google.com/maps?ll=42.910641,-71.425573&z=16&t=m&hl=en&gl=US&mapclient=embed&q=12%20N%20Wentworth%20Ave%20Londonderry%2C%20NH%2003053"
          }
        },
        {
          "type": "location",
          "settings": {
            "plant_name": "Plant 2 - Secondary Mailing Address",
            "company_name": "Foxx Life Sciences",  
            "address": "6 Delaware Dr, Salem, NH 03079\nU.S.A.",
            "maps_url": "https://maps.google.com/maps?ll=42.7639,-71.242038&z=16&t=m&hl=en-US&gl=US&mapclient=embed&q=6%20Delaware%20Dr%20Salem%2C%20NH%2003079"
          }
        },
        {
          "type": "contact_info",
          "settings": {
            "title": "Phone",
            "contact_value": "(603) 890-FOXX (3699)",
            "contact_type": "phone"
          }
        },
        {
          "type": "contact_info",
          "settings": {
            "title": "Sales",
            "contact_value": "sales@foxxlifesciences.com",
            "contact_type": "email"
