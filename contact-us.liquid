{% if section.settings.show_section %}
<!-- Contact Us Section -->
<section class="cu-professional-contact-us" data-section-id="{{ section.id }}" style="background: linear-gradient(135deg, {{ section.settings.background_color | default: '#f8f9fa' }} 0%, rgba(0, 113, 185, 0.05) 100%); padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px 0; width: 100vw; margin-left: calc(-50vw + 50%);">
  <div class="cu-contact-us-container">
    <!-- Section Header -->
    {% if section.settings.section_title != blank %}
      <div class="cu-section-header">
        <div class="cu-title-decoration">
          <span class="cu-decoration-line"></span>
          <span class="cu-decoration-diamond"></span>
          <span class="cu-decoration-line"></span>
        </div>
        <h2 class="cu-section-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_description != blank %}
          <p class="cu-section-subtitle">{{ section.settings.section_description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <!-- Main Content Grid -->
    <div class="cu-main-content-grid">
      <!-- Left Column - Plant Locations -->
      <div class="cu-left-column">
        <div class="cu-locations-section">
          <h3 class="cu-subsection-title">Our Locations</h3>
          <div class="cu-locations-grid">
            {% for block in section.blocks %}
              {% if block.type == 'location' %}
                <div class="cu-location-card" {{ block.shopify_attributes }}>
                  <h4 class="cu-location-title">{{ block.settings.plant_name }}</h4>
                  <div class="cu-location-company">{{ block.settings.company_name }}</div>
                  <div class="cu-location-address">
                    {% if block.settings.maps_url != blank %}
                      <a href="{{ block.settings.maps_url }}" target="_blank" rel="noopener noreferrer">
                        {{ block.settings.address | newline_to_br }}
                      </a>
                    {% else %}
                      {{ block.settings.address | newline_to_br }}
                    {% endif %}
                  </div>
                  {% if block.settings.local_phone != blank %}
                    <div class="cu-location-phone">
                      <strong>Phone:</strong> <a href="tel:{{ block.settings.local_phone | replace: ' ', '' | replace: '(', '' | replace: ')', '' | replace: '-', '' }}">{{ block.settings.local_phone }}</a>
                    </div>
                  {% endif %}
                  {% if block.settings.local_email != blank %}
                    <div class="cu-location-email">
                      <strong>Email:</strong> <a href="mailto:{{ block.settings.local_email }}">{{ block.settings.local_email }}</a>
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Contact Information Block -->
        <div class="cu-contact-info-block">
          <h3 class="cu-subsection-title">Contact Information</h3>
          <div class="cu-contact-details">
            <div class="cu-contact-item">
              <div class="cu-contact-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                </svg>
              </div>
              <div class="cu-contact-text">
                <strong>Phone:</strong> <a href="tel:{{ section.settings.main_phone | replace: ' ', '' | replace: '(', '' | replace: ')', '' | replace: '-', '' }}">{{ section.settings.main_phone }}</a>
              </div>
            </div>
            <div class="cu-contact-item">
              <div class="cu-contact-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
              </div>
              <div class="cu-contact-text">
                <strong>Sales:</strong> <a href="mailto:{{ section.settings.main_email }}">{{ section.settings.main_email }}</a>
              </div>
            </div>
            <div class="cu-contact-item">
              <div class="cu-contact-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
              </div>
              <div class="cu-contact-text">
                <strong>Support:</strong> <a href="mailto:{{ section.settings.support_email }}">{{ section.settings.support_email }}</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Contact Form -->
      <div class="cu-right-column">
        <div class="cu-form-section">
          <h3 class="cu-subsection-title">{{ section.settings.form_title | default: 'Send us a Message' }}</h3>
          {% if section.settings.form_description != blank %}
            <p class="cu-form-description">{{ section.settings.form_description }}</p>
          {% endif %}

          <!-- Shopify Contact Form -->
          {% form 'contact', class: 'cu-contact-form' %}
            {% if form.posted_successfully? %}
              <div class="cu-success-message">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                {{ section.settings.success_message | default: 'Thank you for your message! We\'ll get back to you soon.' }}
              </div>
            {% endif %}

            {% if form.errors %}
              <div class="cu-error-message">
                <h4>Please correct the following errors:</h4>
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="cu-form-grid">
              <div class="cu-form-group">
                <label for="ContactFormName" class="cu-form-label">
                  Name <span class="cu-required">*</span>
                </label>
                <input type="text" id="ContactFormName" name="contact[name]" class="cu-form-input" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
              </div>

              <div class="cu-form-group">
                <label for="ContactFormEmail" class="cu-form-label">
                  Email <span class="cu-required">*</span>
                </label>
                <input type="email" id="ContactFormEmail" name="contact[email]" class="cu-form-input" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" required>
              </div>

              <div class="cu-form-group">
                <label for="ContactFormPhone" class="cu-form-label">Phone</label>
                <input type="tel" id="ContactFormPhone" name="contact[phone]" class="cu-form-input" value="{% if form.phone %}{{ form.phone }}{% endif %}">
              </div>

              <div class="cu-form-group">
                <label for="ContactFormCompany" class="cu-form-label">Company</label>
                <input type="text" id="ContactFormCompany" name="contact[company]" class="cu-form-input" value="{% if form.company %}{{ form.company }}{% endif %}">
              </div>

              <div class="cu-form-group cu-full-width">
                <label for="ContactFormService" class="cu-form-label">Service Interested In</label>
                <select id="ContactFormService" name="contact[service]" class="cu-form-select">
                  <option value="">Select a service...</option>
                  {% for block in section.blocks %}
                    {% if block.type == 'service' %}
                      <option value="{{ block.settings.service_name }}">{{ block.settings.service_name }}</option>
                    {% endif %}
                  {% endfor %}
                  <option value="General Inquiry">General Inquiry</option>
                  <option value="Custom Quote">Custom Quote</option>
                  <option value="Technical Support">Technical Support</option>
                </select>
              </div>

              <div class="cu-form-group cu-full-width">
                <label for="ContactFormMessage" class="cu-form-label">
                  Message <span class="cu-required">*</span>
                </label>
                <textarea id="ContactFormMessage" name="contact[body]" class="cu-form-textarea" rows="5" required>{% if form.body %}{{ form.body }}{% endif %}</textarea>
              </div>
            </div>

            <button type="submit" class="cu-submit-button">
              <span>Send Message</span>
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
              </svg>
            </button>
          {% endform %}
        </div>
      </div>
    </div>

    <!-- Services Section -->
    {% assign service_blocks = section.blocks | where: 'type', 'service' %}
    {% if service_blocks.size > 0 %}
      <div class="cu-services-section">
        <h3 class="cu-subsection-title">{{ section.settings.services_title | default: 'Our Services' }}</h3>
        <div class="cu-services-grid">
          {% for block in service_blocks %}
            <div class="cu-service-card" {{ block.shopify_attributes }}>
              <div class="cu-service-icon">
                {% if block.settings.icon_type == 'image' and block.settings.image != blank %}
                  <img src="{{ block.settings.image | img_url: '60x60' }}" alt="{{ block.settings.service_name }}" loading="lazy">
                {% elsif block.settings.svg_code != blank %}
                  {{ block.settings.svg_code }}
                {% else %}
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                  </svg>
                {% endif %}
              </div>
              <h4 class="cu-service-name">{{ block.settings.service_name }}</h4>
              <p class="cu-service-description">{{ block.settings.service_description }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</section>
{% endif %}

<style>
/* Contact Us Section - Professional Styles */
.cu-professional-contact-us {
  position: relative;
  overflow: hidden;
  width: 100%;
}

.cu-professional-contact-us::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%230071b9' fill-opacity='0.03'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  pointer-events: none;
}

.cu-contact-us-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
  z-index: 2;
}

/* Enhanced Section Header */
.cu-section-header {
  text-align: center;
  margin-bottom: 80px;
  position: relative;
}

.cu-title-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  gap: 15px;
}

.cu-decoration-line {
  width: 60px;
  height: 2px;
  background: linear-gradient(90deg, transparent, #0071b9, transparent);
}

.cu-decoration-diamond {
  width: 12px;
  height: 12px;
  background: #0071b9;
  transform: rotate(45deg);
  border-radius: 2px;
}

.cu-section-title {
  font-size: 48px;
  font-weight: 800;
  color: #0071b9;
  margin-bottom: 20px;
  text-transform: uppercase;
  letter-spacing: 4px;
  text-shadow: 0 2px 8px rgba(0, 113, 185, 0.3);
  position: relative;
  display: inline-block;
  line-height: 1.2;
}

.cu-section-title::before {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 4px;
  background: linear-gradient(90deg, transparent, #0071b9, transparent);
  border-radius: 2px;
}

.cu-section-title::after {
  content: '';
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
  width: 200px;
  height: 2px;
  background: linear-gradient(90deg, transparent, rgba(0, 113, 185, 0.5), transparent);
  border-radius: 1px;
}

.cu-section-subtitle {
  font-size: 20px;
  color: rgba(0, 113, 185, 0.8);
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
  font-weight: 300;
  text-shadow: 0 1px 4px rgba(0, 113, 185, 0.2);
  letter-spacing: 1px;
  font-style: italic;
}

/* Main Content Grid */
.cu-main-content-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  margin-bottom: 80px;
}

/* Left Column - Locations */
.cu-left-column {
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.cu-subsection-title {
  font-size: 28px;
  font-weight: 700;
  color: #0071b9;
  margin-bottom: 30px;
  text-transform: uppercase;
  letter-spacing: 2px;
  position: relative;
}

.cu-subsection-title::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 0;
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, #0071b9, #005a91);
  border-radius: 2px;
}

.cu-locations-grid {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.cu-location-card {
  background: white;
  border-radius: 12px;
  padding: 25px;
  box-shadow: 0 10px 30px rgba(0, 113, 185, 0.08);
  border: 1px solid rgba(0, 113, 185, 0.1);
  transition: all 0.3s ease;
}

.cu-location-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(0, 113, 185, 0.15);
}

.cu-location-title {
  font-size: 18px;
  font-weight: 700;
  color: #0071b9;
  margin-bottom: 8px;
}

.cu-location-company {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
}

.cu-location-address {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10px;
}

.cu-location-address a {
  color: #0071b9;
  text-decoration: none;
  transition: color 0.3s ease;
}

.cu-location-address a:hover {
  color: #005a91;
}

.cu-location-phone,
.cu-location-email {
  font-size: 14px;
  color: #666;
  margin-top: 8px;
}

.cu-location-phone a,
.cu-location-email a {
  color: #0071b9;
  text-decoration: none;
}

/* Contact Information Block */
.cu-contact-info-block {
  background: white;
  border-radius: 12px;
  padding: 30px;
  box-shadow: 0 10px 30px rgba(0, 113, 185, 0.08);
  border: 1px solid rgba(0, 113, 185, 0.1);
}

.cu-contact-details {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.cu-contact-item {
  display: flex;
  align-items: center;
  gap: 15px;
}

.cu-contact-icon {
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, rgba(0, 113, 185, 0.1), rgba(0, 113, 185, 0.2));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #0071b9;
  flex-shrink: 0;
}

.cu-contact-icon svg {
  width: 20px;
  height: 20px;
}

.cu-contact-text a {
  color: #0071b9;
  text-decoration: none;
  transition: color 0.3s ease;
}

.cu-contact-text a:hover {
  color: #005a91;
}

/* Right Column - Form */
.cu-right-column {
  background: white;
  border-radius: 12px;
  padding: 40px;
  box-shadow: 0 10px 30px rgba(0, 113, 185, 0.08);
  border: 1px solid rgba(0, 113, 185, 0.1);
  height: fit-content;
}

.cu-form-description {
  font-size: 16px;
  color: #666;
  margin-bottom: 30px;
  line-height: 1.6;
}

/* Form Styles */
.cu-contact-form {
  width: 100%;
}

.cu-form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  margin-bottom: 30px;
}

.cu-form-group {
  display: flex;
  flex-direction: column;
}

.cu-form-group.cu-full-width {
  grid-column: 1 / -1;
}

