{%- comment -%}
    Renders a list of product's price (regular, sale)

    Accepts:
    - product: {Object} Product Liquid object (optional)
    - use_variant: {Boolean} Renders selected or first variant price instead of overall product pricing (optional)
    - show_badges: {Boolean} Renders 'Sale' and 'Sold Out' tags if the product matches the condition (optional)
    - price_class: {String} Adds a price class to the price element (optional)

    Usage:
    {% render 'price', product: product %}
{%- endcomment -%}
{%- liquid
     if use_variant
        assign target = product.selected_or_first_available_variant
    else
        assign target = product
    endif

    assign compare_at_price = target.compare_at_price
    assign price = target.price | default: 1999
    assign available = target.available | default: false

    if settings.currency_format_enable
        assign money_price = price | money_with_currency
    else
        assign money_price = price | money
    endif 

    if target == product and product.price_varies
        assign money_price = 'products.product.price.from_price_html' | t: price: money_price
    endif

    assign percent_tag = ''
    assign has_discount = false
    
    for tag in product.tags
        if tag contains 'percent_'
            assign percent_tag = tag | remove: 'percent_'
            assign has_discount = true
            break
        endif
    endfor
    
    if has_discount == false and target.sku != blank
        if target.sku contains 'percent_'
            assign sku_parts = target.sku | split: 'percent_'
            if sku_parts.size > 1
                assign percent_tag = sku_parts[1] | split: '_' | first
                assign has_discount = true
            endif
        endif
    endif
-%}

{%- if has_discount and percent_tag != '' -%}
    {%- assign discount_percentage = percent_tag | plus: 0 -%}
    {%- assign price_discount = price | times: discount_percentage | divided_by: 100.0 -%}
    {%- assign discounted_price = price | minus: price_discount -%}
    {%- assign original_price = compare_at_price | default: price -%}
    {%- assign total_savings = original_price | minus: discounted_price -%}
    
    {%- if settings.currency_format_enable -%}
        {%- assign discounted_money_price = discounted_price | money_with_currency -%}
        {%- assign original_money_price = original_price | money_with_currency -%}
        {%- assign savings_money = total_savings | money_with_currency -%}
    {%- else -%}
        {%- assign discounted_money_price = discounted_price | money -%}
        {%- assign original_money_price = original_price | money -%}
        {%- assign savings_money = total_savings | money -%}
    {%- endif -%}

    {%- comment -%} Check if we're in recently viewed section - if so, show simple pricing {%- endcomment -%}
    {%- assign is_recently_viewed = false -%}
    {%- assign current_template = template | default: '' -%}
    {%- assign current_section = section.id | default: '' -%}
    {%- assign request_path = request.path | default: '' -%}
    
    {%- comment -%} Check multiple conditions for recently viewed context {%- endcomment -%}
    {%- if price_class contains 'recently-viewed' 
        or price_class contains 'recentlyViewed' 
        or price_class contains 'recentlyViewed-row'
        or current_template contains 'recently' 
        or current_section contains 'recently' 
        or template.suffix contains 'recently'
        or request_path contains 'recently'
        or request.page_type == 'recently_viewed'
        or price_class contains 'carousel'
        or price_class contains 'slider'
        or price_class contains 'swiper'
    -%}
        {%- assign is_recently_viewed = true -%}
    {%- endif -%}

    {%- comment -%} Force simple pricing for grid/carousel contexts or if no specific context detected {%- endcomment -%}
    {%- if is_recently_viewed or price_class == blank or price_class == null or price_class == '' -%}
        {%- comment -%} Simple pricing for recently viewed products or generic contexts {%- endcomment -%}
        <div class="price price--discount-simple {{ price_class }}
            {%- if available == false %} price--sold-out {% endif -%}">
            <dl>
                <div class="price__sale">
                    <dd class="price__compare"><s class="price-item price-item--regular">{{ original_money_price }}</s></dd>
                    <dd class="price__last"><span class="price-item price-item--sale">{{ discounted_money_price }}</span></dd>
                    <dd class="price__savings-simple">
                        <span class="savings-badge-simple">{{ discount_percentage }}% OFF</span>
                    </dd>
                </div>
            </dl>
        </div>
    {%- else -%}
        {%- comment -%} Full discount styling for product pages {%- endcomment -%}
        <div class="price price--discount-active {{ price_class }}
            {%- if available == false %} price--sold-out {% endif -%}">
            
            <div class="price__discount-badge">
                <span class="discount-percentage">{{ discount_percentage }}% OFF</span>
                <span class="discount-label">SPECIAL DISCOUNT</span>
            </div>

            <dl class="price__discount-container">
                <div class="price__original">
                    <dt class="visually-hidden">{{ 'products.product.price.regular_price' | t }}</dt>
                    <dd class="price__original-value">
                        <s class="price-item price-item--original">{{ original_money_price }}</s>
                        <span class="price-label">Original Price</span>
                    </dd>
                </div>

                <div class="price__sale-price">
                    <dt class="visually-hidden">{{ 'products.product.price.sale_price' | t }}</dt>
                    <dd class="price__sale-value">
                        <span class="price-item price-item--sale">{{ discounted_money_price }}</span>
                        <span class="price-label">Sale Price</span>
                    </dd>
                </div>

                <div class="price__savings">
                    <span class="savings-badge">You Save {{ savings_money }}!</span>
                </div>

                
            </dl>
        </div>
    {%- endif -%}

{%- else -%}
    <div class="price
        {%- if price_class %} {{ price_class }}{% endif -%}
        {%- if available == false %} price--sold-out {% endif -%}
        {%- if compare_at_price > price %} price--on-sale {% endif -%}
        {%- if product.price_varies == false and product.compare_at_price_varies %} price--no-compare{% endif -%}">
        <dl>
            <div class="price__regular">
                <dd class="price__last"><span class="price-item price-item--regular">{{ money_price }}</span></dd>
            </div>
            <div class="price__sale">
                <dd class="price__compare"><s class="price-item price-item--regular">{% if settings.currency_format_enable %}{{ compare_at_price | money_with_currency }}{% else %}{{ compare_at_price | money }}{% endif %}</s></dd>
                <dd class="price__last"><span class="price-item price-item--sale">{{ money_price }}</span></dd>
                {%- if settings.show_saved_price and price != nil and price != blank and compare_at_price != nil and compare_at_price != blank -%}
                    {%- assign saved_price = compare_at_price | minus: price | money -%}
                    <div class="price__saved"><span class="price-item price-item--saved">{{'products.product.price.saved_price_html' | t: price: saved_price }}</span></div>
                {%- endif -%}
                {%- if hasCountdown == true or hasCountdown == 'true' -%}
                <dd class="price__label_sale">
                    {%- liquid 
                        assign list_compare = product.variants | where: 'compare_at_price'
                        assign compare = 0
                        for variant in list_compare
                            assign saving = variant.compare_at_price | minus: variant.price | times: 100.0 | divided_by: variant.compare_at_price | round
                            if saving > compare
                                assign compare = saving
                            endif
                        endfor
                        if compare  < 1
                            assign compare = product.compare_at_price_min | minus: product.price_min | times: 100.0 | divided_by: product.compare_at_price_min | round
                        endif
                    -%}<span class="label_sale">-{{ compare | append: '%'}}</span></dd>
                {%- endif -%}
            </div>
            <small class="unit-price caption{% if available == false or product.selected_or_first_available_variant.unit_price_measurement == nil %} hidden{% endif %}">
                <dt class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</dt>
                <dd class="price__last"><span>{{- product.selected_or_first_available_variant.unit_price | money -}}</span><span aria-hidden="true">/</span><span class="visually-hidden">&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span><span>{%- if product.selected_or_first_available_variant.unit_price_measurement.reference_value != 1 -%}
                            {{- product.selected_or_first_available_variant.unit_price_measurement.reference_value -}}{%- endif -%} {{ product.selected_or_first_available_variant.unit_price_measurement.reference_unit }}</span></dd>
            </small>
        </dl>
    </div>
{%- endif -%}



<style>
/* Discount Pricing Styles */
.price--discount-active {
    background: linear-gradient(135deg, #fff9e6 0%, #ffffff 100%);
    border: 2px solid #ffd700;
    border-radius: 15px;
    padding: 15px;
    margin: 10px 0;
    box-shadow: 0 8px 25px rgba(255, 215, 0, 0.3);
    position: relative;
    overflow: hidden;
}

.price--discount-active::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #ff6b6b 0%, #ffd700 50%, #51cf66 100%);
}

.price__discount-badge {
    position: absolute;
    top: -8px;
    right: 15px;
    background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: 700;
    text-align: center;
    box-shadow: 0 4px 12px rgba(255, 107, 107, 0.4);
    transform: rotate(3deg);
}

.discount-percentage {
    display: block;
    font-size: 14px;
    line-height: 1;
}

.discount-label {
    display: block;
    font-size: 10px;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.price__discount-container {
    display: grid;
    gap: 8px;
    margin-top: 10px;
}

.price__original, .price__sale-price {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    background: #f5f5f7;
    border-radius: 12px;
    margin-bottom: 8px;
    border: 1px solid #e1e1e6;
}

.price__original .price-item {
    font-size: 18px;
    color: #86868b;
    text-decoration: line-through;
    font-weight: 400;
}

.price__sale-price .price-item {
    font-size: 24px;
    color: #1d1d1f;
    font-weight: 600;
}

.price-label {
    font-size: 14px;
    color: #86868b;
    font-weight: 400;
}

.price__savings {
    text-align: center;
    margin: 10px 0;
}

.savings-badge {
    background: linear-gradient(45deg, #ff8a80, #ff5722);
    color: white;
    padding: 8px 20px;
    border-radius: 25px;
    font-weight: 700;
    font-size: 16px;
    display: inline-block;
    box-shadow: 0 4px 15px rgba(255, 87, 34, 0.4);
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
}

.savings-badge-simple {
    background: linear-gradient(45deg, #ff8a80, #ff5722);
    color: white;
    padding: 4px 12px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 12px;
    display: inline-block;
    margin-top: 5px;
}

.price__savings-simple {
    text-align: left;
    margin-top: 5px;
}

/* Ensure discount pricing is visible in product cards */
.price--discount-simple {
    position: relative;
}

.price--discount-simple .price__sale {
    display: block !important;
}

.price--discount-simple .price__compare {
    margin-bottom: 4px;
}

.price--discount-simple .price__last {
    margin-bottom: 4px;
}

.price--discount-simple .price__savings-simple {
    display: block !important;
}

/* Specific styling for recently viewed rows */
.recentlyViewed-row .price--discount-simple {
    background: none;
    border: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
    width: 100%;
}

.recentlyViewed-row .savings-badge-simple {
    font-size: 11px;
    padding: 3px 8px;
}

/* Ensure full width layout for recently viewed discount pricing */
.recentlyViewed-row .price--discount-simple .price__sale {
    width: 100%;
}

.recentlyViewed-row .price--discount-simple .price__compare,
.recentlyViewed-row .price--discount-simple .price__last,
.recentlyViewed-row .price--discount-simple .price__savings-simple {
    width: 100%;
    display: block;
}





/* Mobile Responsive */
@media (max-width: 768px) {
    .price--discount-active {
        padding: 15px;
        margin: 10px 0;
    }
    
    .discount-popup-modal {
        width: 95%;
    }
    
    .discount-popup-content {
        padding: 20px;
    }
    
    .discount-circle-large {
        width: 100px;
        height: 100px;
    }
    
    .discount-percent-large {
        font-size: 28px;
    }
    
    .breakdown-item {
        flex-direction: column;
        align-items: flex-start;
        text-align: left;
    }
    
    .breakdown-value {
        margin-top: 5px;
    }
}
</style>


