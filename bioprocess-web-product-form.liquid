<script>
// Discount Popup Functions
function openDiscountPopup(productId, discountPercent, originalPrice, salePrice, finalPrice, savings) {
    // Populate popup with data
    document.getElementById('popup-discount-percent').textContent = discountPercent + '%';
    document.getElementById('popup-original-price').textContent = originalPrice;
    document.getElementById('popup-sale-price').textContent = salePrice;
    document.getElementById('popup-final-price').textContent = finalPrice;
    document.getElementById('popup-total-savings').textContent = savings;
    
    // Calculate discount amount
    const originalAmount = parseFloat(originalPrice.replace(/[^0-9.]/g, ''));
    const finalAmount = parseFloat(finalPrice.replace(/[^0-9.]/g, ''));
    const discountAmount = originalAmount - finalAmount;
    document.getElementById('popup-discount-amount').textContent = '-$' + discountAmount.toFixed(2);
    
    // Show popup
    const overlay = document.getElementById('discount-popup-overlay');
    overlay.style.display = 'flex';
    document.body.style.overflow = 'hidden';
}

function closeDiscountPopup() {
    const overlay = document.getElementById('discount-popup-overlay');
    overlay.style.display = 'none';
    document.body.style.overflow = 'auto';
}

// Close popup when clicking outside
document.addEventListener('DOMContentLoaded', function() {
    const overlay = document.getElementById('discount-popup-overlay');
    if (overlay) {
        overlay.addEventListener('click', function(e) {
            if (e.target === overlay) {
                closeDiscountPopup();
            }
        });
    }
    
    // Close popup with Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeDiscountPopup();
        }
    });
});
</script>
