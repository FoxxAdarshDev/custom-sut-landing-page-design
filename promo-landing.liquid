            .promo-prev-btn {
                left: 5px;
            }

            .promo-next-btn {
                right: 5px;
            }
        }
		.promo-animated-flag {
			animation: promo-flag-wave 2s ease-in-out infinite;
			display: inline-block;
		}
    </style>

    <script>
        // Enhanced countdown timer
        function updateCountdown() {
            const targetDate = new Date('July 4, 2025 23:59:59').getTime();
            const now = new Date().getTime();
            const timeLeft = targetDate - now;

            if (timeLeft > 0) {
                const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                // Update all timers
                ['promo-days', 'promo-finale-days'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = days.toString().padStart(2, '0');
                });

                ['promo-hours', 'promo-finale-hours'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = hours.toString().padStart(2, '0');
                });

                ['promo-minutes', 'promo-finale-minutes'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = minutes.toString().padStart(2, '0');
                });

                ['promo-seconds', 'promo-finale-seconds'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = seconds.toString().padStart(2, '0');
                });
            }
        }

        // World exploration functionality
        function exploreWorld(worldType) {
            const bioprocessSections = document.getElementById('bioprocess-sections');
            const laboratorySections = document.getElementById('laboratory-sections');

            if (worldType === 'bioprocess') {
                bioprocessSections.style.display = 'block';
                laboratorySections.style.display = 'none';
                bioprocessSections.scrollIntoView({ behavior: 'smooth' });
            } else {
                bioprocessSections.style.display = 'none';
                laboratorySections.style.display = 'block';
                laboratorySections.scrollIntoView({ behavior: 'smooth' });
            }
        }

        // Carousel functionality
        const carouselPositions = {};

        function moveCarousel(carouselId, direction) {
            const track = document.getElementById(carouselId);
            if (!track) return;

            const slides = track.querySelectorAll('.promo-carousel-slide');
            const slideWidth = slides[0].offsetWidth + 20; // Include gap

            if (!carouselPositions[carouselId]) {
                carouselPositions[carouselId] = 0;
            }

            const maxPosition = -(slides.length - 1) * slideWidth;
            let newPosition = carouselPositions[carouselId] + (direction * slideWidth);

            // Loop carousel
            if (newPosition > 0) {
                newPosition = maxPosition;
            } else if (newPosition < maxPosition) {
                newPosition = 0;
            }

            carouselPositions[carouselId] = newPosition;
            track.style.transform = `translateX(${newPosition}px)`;
        }

        // Auto-scroll carousels
        function autoScrollCarousels() {
            const carouselTracks = document.querySelectorAll('.promo-carousel-track');
            carouselTracks.forEach(track => {
                const carouselId = track.id;
                if (carouselId) {
                    moveCarousel(carouselId, -1);
                }
            });
        }

        // Initialize the revolutionary experience
        document.addEventListener('DOMContentLoaded', function() {
            updateCountdown();
            setInterval(updateCountdown, 1000);

            // Show bioprocess sections by default
            const bioprocessSections = document.getElementById('bioprocess-sections');
            if (bioprocessSections) {
                bioprocessSections.style.display = 'block';
            }

            // Auto-scroll carousels every 5 seconds
            setInterval(autoScrollCarousels, 5000);
        });
    </script>
</body>
