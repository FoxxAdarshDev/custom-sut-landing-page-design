                const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                // Update all timers
                ['promo-days', 'promo-finale-days'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = days.toString().padStart(2, '0');
                });

                ['promo-hours', 'promo-finale-hours'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = hours.toString().padStart(2, '0');
                });

                ['promo-minutes', 'promo-finale-minutes'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = minutes.toString().padStart(2, '0');
                });

                ['promo-seconds', 'promo-finale-seconds'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = seconds.toString().padStart(2, '0');
                });
            }
        }

        // World exploration functionality
        function exploreWorld(worldType) {
            const galaxies = document.querySelectorAll('.promo-galaxy');
            galaxies.forEach(galaxy => galaxy.classList.remove('active'));

            const targetGalaxy = document.getElementById(worldType + '-galaxy');
            if (targetGalaxy) {
                targetGalaxy.classList.add('active');

                // Smooth scroll to product showcase
                document.getElementById('promo-product-showcase').scrollIntoView({
                    behavior: 'smooth'
                });
            }
        }

        // Initialize the revolutionary experience
        document.addEventListener('DOMContentLoaded', function() {
            updateCountdown();
            setInterval(updateCountdown, 1000);

            // Show bioprocess galaxy by default
            const bioprocessGalaxy = document.getElementById('bioprocess-galaxy');
            if (bioprocessGalaxy) {
                bioprocessGalaxy.classList.add('active');
            }
        });
    </script>
