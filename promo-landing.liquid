    </style>

    <script>
        // Countdown Timer Function
        function updateCountdown() {
            // Set the target date (July 4, 2024 23:59:59)
            const targetDate = new Date('July 4, 2024 23:59:59').getTime();
            const now = new Date().getTime();
            const timeLeft = targetDate - now;

            if (timeLeft > 0) {
                const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                // Update main timer
                document.getElementById('days').textContent = days.toString().padStart(2, '0');
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');

                // Update final timer
                document.getElementById('final-days').textContent = days.toString().padStart(2, '0');
                document.getElementById('final-hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('final-minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('final-seconds').textContent = seconds.toString().padStart(2, '0');

                // Update mini timers
                const timeString = `${days}:${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}`;
                const miniTimers = ['carboy-timer', 'tr-timer', 'ezbio-timer', 'components-timer', 'vent-timer'];
                miniTimers.forEach(timerId => {
                    const element = document.getElementById(timerId);
                    if (element) {
                        element.textContent = timeString;
                    }
                });
            } else {
                // Timer expired
                const expiredElements = ['days', 'hours', 'minutes', 'seconds', 'final-days', 'final-hours', 'final-minutes', 'final-seconds'];
                expiredElements.forEach(id => {
                    const element = document.getElementById(id);
                    if (element) {
                        element.textContent = '00';
                    }
                });
            }
        }

        // Initialize and run countdown
        document.addEventListener('DOMContentLoaded', function() {
            updateCountdown();
            setInterval(updateCountdown, 1000);

            // Add loading animation for product images
            const images = document.querySelectorAll('.product-image img');
            images.forEach(img => {
                img.addEventListener('load', function() {
                    this.style.opacity = '1';
                    this.style.transform = 'scale(1)';
                });
                img.style.opacity = '0';
                img.style.transform = 'scale(0.8)';
                img.style.transition = 'all 0.3s ease';
            });

            // Add click tracking for analytics
            document.querySelectorAll('.product-cta, .cta-button').forEach(button => {
                button.addEventListener('click', function() {
                    console.log('Button clicked:', this.textContent.trim());
                });
            });
        });
    </script>
