            width: 100%;
            height: 100%;
            opacity: 0.15;
        }

        .flag-wave-1 {
            background: linear-gradient(0deg, transparent 0%, #dc2626 33%, #ffffff 33%, #ffffff 66%, #1e3a8a 66%);
            animation: waveFlag 8s ease-in-out infinite;
