            animation: waveFlag 10s ease-in-out infinite;
            animation-delay: -4s;
        }

        @keyframes waveFlag {
            0%, 100% { 
                transform: scale(1) rotate(0deg); 
                opacity: 0.15; 
            }
            50% { 
                transform: scale(1.1) rotate(2deg); 
                opacity: 0.25; 
            }
        }

        .hero-content {
