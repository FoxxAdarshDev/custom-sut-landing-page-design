    {% assign bioprocess_tubing_collection = collections['bioprocess-tubing-sets'] %}
    {% assign custom_sut_collection = collections['custom-sut-tubing'] %}
    {% assign sterile_tubing_collection = collections['sterile-tubing-sets'] %}
    {% assign all_tubing_products = collections['all-tubing-products'] %}

    <!-- Hero Section -->
    <section class="tubing-hero">
        <div class="hero-background">
            <div class="hero-particles"></div>
        </div>

        <div class="hero-content">
            <div class="hero-badge">
