                const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                // Update all timers
                ['promo-days', 'promo-finale-days'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = days.toString().padStart(2, '0');
                });

                ['promo-hours', 'promo-finale-hours'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = hours.toString().padStart(2, '0');
                });

                ['promo-minutes', 'promo-finale-minutes'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = minutes.toString().padStart(2, '0');
                });

                ['promo-seconds', 'promo-finale-seconds'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = seconds.toString().padStart(2, '0');
                });
            }
        }

        // World exploration functionality
        function exploreWorld(worldType) {
            const bioprocessSections = document.getElementById('bioprocess-sections');
            const laboratorySections = document.getElementById('laboratory-sections');

            if (worldType === 'bioprocess') {
                bioprocessSections.style.display = 'block';
                laboratorySections.style.display = 'none';
                bioprocessSections.scrollIntoView({ behavior: 'smooth' });
            } else {
                bioprocessSections.style.display = 'none';
                laboratorySections.style.display = 'block';
                laboratorySections.scrollIntoView({ behavior: 'smooth' });
            }
        }



        // Collection carousel functionality
        function initializeCarousel(carouselId) {
            const carousel = document.getElementById(carouselId);
            if (!carousel) return;

            const container = carousel.querySelector('.promo-carousel-container');
            const circles = carousel.querySelectorAll('.promo-collection-circle');
            const dotsContainer = carousel.querySelector('.promo-carousel-dots');

            if (circles.length === 0) return;

            // Create dots
            circles.forEach((circle, index) => {
                const dot = document.createElement('div');
                dot.className = 'promo-carousel-dot';
                if (index === 0) dot.classList.add('active');
                dot.addEventListener('click', () => scrollToCircle(index));
                dotsContainer.appendChild(dot);
            });

            let currentIndex = 0;
            let autoRotateInterval;

            function scrollToCircle(index) {
                currentIndex = index;
                const circleWidth = circles[0].offsetWidth + 20; // including gap
                container.scrollLeft = index * circleWidth;

                // Update dots
                dotsContainer.querySelectorAll('.promo-carousel-dot').forEach((dot, i) => {
                    dot.classList.toggle('active', i === index);
                });

                // Update mobile active circle
                if (window.innerWidth <= 768) {
                    circles.forEach((circle, i) => {
                        circle.classList.toggle('active-mobile', i === index);
                    });
                }
            }

            function autoRotate() {
                currentIndex = (currentIndex + 1) % circles.length;
                scrollToCircle(currentIndex);
            }

            function startAutoRotate() {
                autoRotateInterval = setInterval(autoRotate, 3000);
            }

            function stopAutoRotate() {
                clearInterval(autoRotateInterval);
            }

            // Initialize first circle as active on mobile
            if (window.innerWidth <= 768) {
                circles[0].classList.add('active-mobile');
            }

            // Start auto-rotation
            startAutoRotate();

            // Pause on hover
            carousel.addEventListener('mouseenter', stopAutoRotate);
            carousel.addEventListener('mouseleave', startAutoRotate);

            // Handle manual scroll
            container.addEventListener('scroll', () => {
                const scrollLeft = container.scrollLeft;
                const circleWidth = circles[0].offsetWidth + 20;
                const newIndex = Math.round(scrollLeft / circleWidth);

                if (newIndex !== currentIndex && newIndex < circles.length) {
                    currentIndex = newIndex;
                    dotsContainer.querySelectorAll('.promo-carousel-dot').forEach((dot, i) => {
                        dot.classList.toggle('active', i === currentIndex);
                    });
                }
            });

            // Handle window resize
            window.addEventListener('resize', () => {
                if (window.innerWidth <= 768) {
                    circles.forEach((circle, i) => {
                        circle.classList.toggle('active-mobile', i === currentIndex);
                    });
                } else {
                    circles.forEach(circle => {
                        circle.classList.remove('active-mobile');
                    });
                }
            });
        }

        // Switch between bioprocess and laboratory sticky carousels
        function switchStickyWorld(worldType) {
            const bioprocessCarousel = document.getElementById('sticky-bioprocess-carousel');
            const laboratoryCarousel = document.getElementById('sticky-laboratory-carousel');
            const toggles = document.querySelectorAll('.promo-sticky-toggle');

            // Update toggle states
            toggles.forEach(toggle => {
                toggle.classList.remove('active');
                if (toggle.dataset.world === worldType) {
                    toggle.classList.add('active');
                }
            });

            // Switch carousels
            if (worldType === 'bioprocess') {
                bioprocessCarousel.style.display = 'flex';
                laboratoryCarousel.style.display = 'none';
            } else {
                bioprocessCarousel.style.display = 'none';
                laboratoryCarousel.style.display = 'flex';
            }

            // Switch the main world view but don't auto-scroll to avoid sticky nav issues
            const bioprocessSections = document.getElementById('bioprocess-sections');
            const laboratorySections = document.getElementById('laboratory-sections');

            if (worldType === 'bioprocess') {
                bioprocessSections.style.display = 'block';
                laboratorySections.style.display = 'none';
            } else {
                bioprocessSections.style.display = 'none';
                laboratorySections.style.display = 'block';
            }
        }

        // Enhanced scroll behavior for sticky navigation
        function scrollToCollectionSection(collectionType) {
            // Update sticky navigation active state
            updateStickyActiveState(collectionType);

            let targetSection = null;

            // Find the target section based on collection type
            if (collectionType === 'laboratory' || collectionType === 'lab-bottles' || collectionType === 'lab-storage' || collectionType === 'lab-instruments') {
                exploreWorld('laboratory');
                setTimeout(() => {
                    targetSection = document.querySelector('.promo-laboratory-sections .promo-collection-section');
                    if (targetSection) {
                        smoothScrollToSection(targetSection);
                    }
                }, 100);
            } else {
                exploreWorld('bioprocess');
                setTimeout(() => {
                    // Find the section by checking for the category badge text
                    const sections = document.querySelectorAll('.promo-bioprocess-sections .promo-collection-section');
                    sections.forEach(section => {
                        const badge = section.querySelector('.promo-category-badge');
                        if (badge) {
                            const badgeText = badge.textContent.toLowerCase();
                            if (
                                (collectionType === 'pc-carboy' && badgeText.includes('pc rectangular')) ||
                                (collectionType === 'pc-tr-carboy' && badgeText.includes('pc tr')) ||
                                (collectionType === 'ezbio-bottles' && badgeText.includes('ezbio bottles pc')) ||
                                (collectionType === 'ezbio-ts-bottles' && badgeText.includes('ezbio ts')) ||
                                (collectionType === 'pfa-bottles' && badgeText.includes('pfa bottles')) ||
                                (collectionType === 'aqg' && badgeText.includes('aqg')) ||
                                (collectionType === 'cpc-connectors' && badgeText.includes('cpc stream')) ||
                                (collectionType === 'ezbio-assembly' && badgeText.includes('ezbio assemblies'))
                            ) {
                                targetSection = section;
                            }
                        }
                    });

                    if (targetSection) {
                        smoothScrollToSection(targetSection);
                    }
                }, 100);
            }
        }

        function smoothScrollToSection(targetSection) {
            const stickyNavHeight = document.querySelector('.promo-sticky-nav').offsetHeight;
            const totalOffset = 40; // Just extra padding, no need to account for bottom nav

            const elementPosition = targetSection.getBoundingClientRect().top;
            const offsetPosition = elementPosition + window.pageYOffset - totalOffset;

            window.scrollTo({
                top: offsetPosition,
                behavior: 'smooth'
            });

            // Add highlight effect
            targetSection.style.boxShadow = '0 0 30px rgba(191, 10, 48, 0.3)';
            setTimeout(() => {
                targetSection.style.boxShadow = '';
            }, 2000);
        }

        function updateStickyActiveState(activeCollection) {
            const cards = document.querySelectorAll('.promo-sticky-card');
            cards.forEach(card => {
                card.classList.remove('active');
                if (card.dataset.collection === activeCollection) {
                    card.classList.add('active');

                    // Auto-switch to appropriate world if needed
                    const isLaboratory = ['laboratory', 'lab-bottles', 'lab-storage', 'lab-instruments'].includes(activeCollection);
                    const currentWorld = document.querySelector('.promo-sticky-toggle.active').dataset.world;

                    if (isLaboratory && currentWorld !== 'laboratory') {
                        switchStickyWorld('laboratory');
                    } else if (!isLaboratory && currentWorld !== 'bioprocess') {
                        switchStickyWorld('bioprocess');
                    }
                }
            });
        }

        // Sticky navigation visibility control
        function handleStickyNavigation() {
            const stickyNav = document.getElementById('sticky-nav');
            const dualWorldsSection = document.querySelector('.promo-dual-worlds');
            const finalSection = document.querySelector('.promo-freedom-finale');

            if (!stickyNav || !dualWorldsSection) return;

            const dualWorldsRect = dualWorldsSection.getBoundingClientRect();
            const finalSectionRect = finalSection ? finalSection.getBoundingClientRect() : null;
            const scrollY = window.scrollY;

            // Check if any collection sections are visible
            const bioprocessSections = document.getElementById('bioprocess-sections');
            const laboratorySections = document.getElementById('laboratory-sections');
            const hasVisibleSections = (bioprocessSections && bioprocessSections.style.display !== 'none') || 
                                     (laboratorySections && laboratorySections.style.display !== 'none');

            // Only show sticky nav when:
            // 1. User has scrolled past the dual worlds section
            // 2. User hasn't reached the final CTA section
            // 3. User has scrolled more than 100px from top
            // 4. There are visible collection sections
            const showSticky = dualWorldsRect.bottom <= 20 && 
                             scrollY > 100 && 
                             hasVisibleSections &&
                             (!finalSectionRect || finalSectionRect.top > 100);

            if (showSticky) {
                stickyNav.classList.add('visible');
                // Update active state based on visible section
                updateActiveBasedOnScroll();
            } else {
                stickyNav.classList.remove('visible');
            }
        }

        function updateActiveBasedOnScroll() {
            const bioprocessSections = document.getElementById('bioprocess-sections');
            const laboratorySections = document.getElementById('laboratory-sections');
            
            // Only check sections from the currently visible world
            let sectionsToCheck = [];
            if (bioprocessSections && bioprocessSections.style.display !== 'none') {
                sectionsToCheck = bioprocessSections.querySelectorAll('.promo-collection-section');
            } else if (laboratorySections && laboratorySections.style.display !== 'none') {
                sectionsToCheck = laboratorySections.querySelectorAll('.promo-collection-section');
            }

            const offset = window.innerHeight / 2; // Use middle of viewport as reference
            let activeSection = null;

            sectionsToCheck.forEach(section => {
                const rect = section.getBoundingClientRect();
                if (rect.top <= offset && rect.bottom >= offset) {
                    activeSection = section;
                }
            });

            if (activeSection) {
                const badge = activeSection.querySelector('.promo-category-badge');
                if (badge) {
                    const badgeText = badge.textContent.toLowerCase();
                    let collectionType = '';

                    if (badgeText.includes('pc rectangular')) collectionType = 'pc-carboy';
                    else if (badgeText.includes('pc tr')) collectionType = 'pc-tr-carboy';
                    else if (badgeText.includes('ezbio bottles pc')) collectionType = 'ezbio-bottles';
                    else if (badgeText.includes('ezbio ts')) collectionType = 'ezbio-ts-bottles';
                    else if (badgeText.includes('pfa bottles')) collectionType = 'pfa-bottles';
                    else if (badgeText.includes('aqg')) collectionType = 'aqg';
                    else if (badgeText.includes('cpc stream')) collectionType = 'cpc-connectors';
                    else if (badgeText.includes('ezbio assemblies')) collectionType = 'ezbio-assembly';
                    else if (badgeText.includes('laboratory')) collectionType = 'laboratory';

                    if (collectionType) {
                        updateStickyActiveState(collectionType);
                    }
                }
            }
        }

        // Initialize the revolutionary experience
        document.addEventListener('DOMContentLoaded', function() {
            updateCountdown();
            setInterval(updateCountdown, 1000);

            // Show bioprocess sections by default
            const bioprocessSections = document.getElementById('bioprocess-sections');
            if (bioprocessSections) {
                bioprocessSections.style.display = 'block';
            }

            // Initialize carousels
            initializeCarousel('bioprocess-carousel');
            initializeCarousel('laboratory-carousel');

            // Initialize sticky navigation
            window.addEventListener('scroll', handleStickyNavigation);
            handleStickyNavigation(); // Initial check
        });
    </script>
