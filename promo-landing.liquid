            font-weight: 600;
            margin-bottom: 20px;
            backdrop-filter: blur(10px);
            animation: patrioticGlow 3s ease-in-out infinite;
        }

        @keyframes patrioticGlow {
            0%, 100% { box-shadow: 0 0 20px rgba(220,38,38,0.3); }
            33% { box-shadow: 0 0 20px rgba(255,255,255,0.3); }
            66% { box-shadow: 0 0 20px rgba(30,58,138,0.3); }
        }

        .hero-title {
            font-size: clamp(2.5rem, 6vw, 4rem);
            font-weight: 800;
            margin-bottom: 20px;
            text-shadow: 3px 3px 6px rgba(0,0,0,0.4);
            animation: titlePulse 4s ease-in-out infinite;
        }

        @keyframes titlePulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.02); }
        }

        .hero-highlight {
            color: #fbbf24;
            text-shadow: 3px 3px 6px rgba(0,0,0,0.6);
            animation: sparkle 2s ease-in-out infinite;
        }

        @keyframes sparkle {
            0%, 100% { text-shadow: 3px 3px 6px rgba(0,0,0,0.6), 0 0 10px rgba(251,191,36,0.8); }
            50% { text-shadow: 3px 3px 6px rgba(0,0,0,0.6), 0 0 20px rgba(251,191,36,1), 0 0 30px rgba(251,191,36,0.5); }
        }

        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 40px;
            opacity: 0.9;
            animation: fadeInUp 1s ease-out;
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 0.9; transform: translateY(0); }
        }

        .hero-timer h3 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #fbbf24;
            animation: timerGlow 2s ease-in-out infinite;
        }

        @keyframes timerGlow {
            0%, 100% { text-shadow: 0 0 10px rgba(251,191,36,0.8); }
            50% { text-shadow: 0 0 20px rgba(251,191,36,1), 0 0 30px rgba(251,191,36,0.5); }
        }

        .timer-display {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .timer-unit {
            background: rgba(255,255,255,0.2);
            padding: 15px 20px;
            border-radius: 15px;
            text-align: center;
            min-width: 80px;
            backdrop-filter: blur(10px);
