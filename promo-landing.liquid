            animation: timerBounce 2s ease-in-out infinite;
        }

        @keyframes timerBounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-5px); }
        }

        .timer-unit span {
            display: block;
            font-size: 2rem;
            font-weight: 800;
            color: #fbbf24;
        }

        .timer-unit label {
            font-size: 0.9rem;
