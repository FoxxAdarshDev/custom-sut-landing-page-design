            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            position: relative;
            z-index: 2;
        }

        .product-card {
            background: white;
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            border: 2px solid transparent;
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
            border-color: #0071ce;
        }

        .product-card.featured {
            background: linear-gradient(135deg, #fff5f5 0%, #ffffff 100%);
            border: 2px solid #dc2626;
        }

        .product-discount {
            position: absolute;
            top: 15px;
            right: 15px;
            background: #28a745;
            color: white;
            padding: 8px 16px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 0.9rem;
            z-index: 10;
        }

        .product-discount.biggest {
            background: #dc2626;
            animation: pulse 2s ease-in-out infinite;
        }

        .product-discount.maximum {
            background: linear-gradient(45deg, #7f1d1d, #dc2626);
            animation: pulse 2s ease-in-out infinite;
            box-shadow: 0 0 15px rgba(220,38,38,0.5);
        }

        .product-image {
            height: 200px;
            margin-bottom: 20px;
            overflow: hidden;
            border-radius: 15px;
            background: #f8f9fa;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image img {
            transform: scale(1.05);
        }

        .product-info h3 {
            font-size: 1.4rem;
            font-weight: 700;
            color: #0071ce;
            margin-bottom: 10px;
        }

        .product-info p {
            color: #6c757d;
            margin-bottom: 15px;
            line-height: 1.5;
        }

        .price-info {
            margin-bottom: 10px;
        }

        .original-price {
            text-decoration: line-through;
            color: #6c757d;
            margin-right: 10px;
            font-size: 1.1rem;
        }

        .sale-price {
            color: #28a745;
            font-weight: 700;
            font-size: 1.3rem;
        }

        .savings {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            padding: 6px 12px;
            border-radius: 15px;
            display: inline-block;
            margin-bottom: 15px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .product-cta {
            display: inline-block;
            background: #0071ce;
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .product-cta:hover {
            background: #005bb5;
            transform: translateX(5px);
        }

        /* Final CTA Section */
        .final-cta-section {
            background: linear-gradient(135deg, #001f3f 0%, #0071ce 100%);
            color: white;
            padding: 80px 0;
            text-align: center;
        }

        .cta-content h2 {
            font-size: clamp(2rem, 4vw, 3rem);
            font-weight: 800;
            margin-bottom: 15px;
        }

        .cta-content p {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 40px;
        }

        .final-timer {
            margin-bottom: 40px;
        }

        .cta-button {
            display: inline-block;
            background: linear-gradient(45deg, #dc2626, #b91c1c);
            color: white;
            padding: 15px 30px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 700;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(220,38,38,0.3);
        }

        .cta-button:hover {
            background: linear-gradient(45deg, #b91c1c, #7f1d1d);
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(220,38,38,0.4);
        }

        /* Animations */
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .timer-display {
                gap: 10px;
            }
            
            .timer-unit {
                padding: 10px 15px;
                min-width: 60px;
            }
            
            .timer-unit span {
                font-size: 1.5rem;
            }
            
            .hero-title {
                font-size: 2.5rem;
            }
            
            .section-header h2 {
                font-size: 2rem;
            }
        }
    </style>

    <script>
        // Countdown Timer
        function updateCountdown() {
            const endDate = new Date('July 31, 2025 23:59:59').getTime();
            const now = new Date().getTime();
            const timeLeft = endDate - now;

            if (timeLeft > 0) {
                const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                // Update all timers
                const timerElements = [
                    ['days', 'hours', 'minutes', 'seconds'],
                    ['final-days', 'final-hours', 'final-minutes', 'final-seconds']
                ];

                timerElements.forEach(timers => {
                    document.getElementById(timers[0]).textContent = days.toString().padStart(2, '0');
                    document.getElementById(timers[1]).textContent = hours.toString().padStart(2, '0');
                    document.getElementById(timers[2]).textContent = minutes.toString().padStart(2, '0');
                    document.getElementById(timers[3]).textContent = seconds.toString().padStart(2, '0');
                });

                // Update mini timers
                const timeString = `${days}:${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}`;
                document.getElementById('carboy-timer').textContent = timeString;
                document.getElementById('tr-timer').textContent = timeString;
                document.getElementById('ezbio-timer').textContent = timeString;
                document.getElementById('components-timer').textContent = timeString;
                document.getElementById('vent-timer').textContent = timeString;
            }
        }

        // Update countdown every second
        updateCountdown();
        setInterval(updateCountdown, 1000);

        // Add loading animation for product images
        document.addEventListener('DOMContentLoaded', function() {
            const images = document.querySelectorAll('.product-image img');
            images.forEach(img => {
                img.addEventListener('load', function() {
                    this.style.opacity = '1';
                    this.style.transform = 'scale(1)';
                });
                img.style.opacity = '0';
                img.style.transform = 'scale(0.8)';
                img.style.transition = 'all 0.3s ease';
            });
        });

        // Add click tracking for analytics
        document.querySelectorAll('.product-cta, .cta-button').forEach(button => {
            button.addEventListener('click', function() {
                console.log('Button clicked:', this.textContent.trim());
            });
        });
    </script>
</body>
</html>
