            const sections = document.querySelectorAll(`${containerSelector} .promo-collection-section`);

            for (let section of sections) {
                const badge = section.querySelector('.promo-category-badge');
                if (badge) {
                    const badgeText = badge.textContent.toLowerCase().trim();
                    const searchTextLower = searchText.toLowerCase().trim();

                    // More precise matching
                    if (badgeText.includes(searchTextLower) || 
                        searchTextLower.includes(badgeText.replace(/[^\w\s]/g, '').trim())) {
                        return section;
                    }
                }
            }
            return null;
        }

        function smoothScrollToSection(targetSection) {
            const stickyNavHeight = document.querySelector('.promo-sticky-nav').offsetHeight;
            const totalOffset = 40; // Just extra padding, no need to account for bottom nav

            const elementPosition = targetSection.getBoundingClientRect().top;
            const offsetPosition = elementPosition + window.pageYOffset - totalOffset;

            window.scrollTo({
                top: offsetPosition,
                behavior: 'smooth'
            });

            // Add highlight effect
            targetSection.style.boxShadow = '0 0 30px rgba(191, 10, 48, 0.3)';
            setTimeout(() => {
                targetSection.style.boxShadow = '';
            }, 2000);
        }

        function updateStickyActiveState(activeCollection) {
            // Clear all active states first
            const allCards = document.querySelectorAll('.promo-sticky-card');
            allCards.forEach(card => card.classList.remove('active'));

            // Auto-switch to appropriate world if needed
            const isLaboratory = ['ezlabpure-carboy', 'ezclear-carboy', 'ezgrip-carboy', 'ezbio-carboy', 'lab-general'].includes(activeCollection);
            const currentToggle = document.querySelector('.promo-sticky-toggle.active');
            const currentWorld = currentToggle ? currentToggle.dataset.world : 'bioprocess';

            if (isLaboratory && currentWorld !== 'laboratory') {
                switchStickyWorld('laboratory');
                // Wait for world switch to complete
                setTimeout(() => {
                    setActiveCard(activeCollection);
                }, 100);
            } else if (!isLaboratory && currentWorld !== 'bioprocess') {
                switchStickyWorld('bioprocess');
                // Wait for world switch to complete
                setTimeout(() => {
                    setActiveCard(activeCollection);
                }, 100);
            } else {
                setActiveCard(activeCollection);
            }
        }

        function setActiveCard(activeCollection) {
            // Only set active on cards in the currently visible carousel
            const currentToggle = document.querySelector('.promo-sticky-toggle.active');
            const currentWorld = currentToggle ? currentToggle.dataset.world : 'bioprocess';
            const carouselSelector = currentWorld === 'laboratory' ? '#sticky-laboratory-carousel' : '#sticky-bioprocess-carousel';

            const visibleCards = document.querySelectorAll(`${carouselSelector} .promo-sticky-card`);
            visibleCards.forEach(card => {
                if (card.dataset.collection === activeCollection) {
                    card.classList.add('active');

                    // Scroll the card into view within the carousel
                    const carousel = card.closest('.promo-sticky-carousel');
                    if (carousel) {
                        const cardRect = card.getBoundingClientRect();
                        const carouselRect = carousel.getBoundingClientRect();

                        if (cardRect.left < carouselRect.left || cardRect.right > carouselRect.right) {
                            card.scrollIntoView({ behavior: 'smooth', inline: 'nearest' });
                        }
                    }
                }
            });
        }

        // Sticky navigation visibility control
        function handleStickyNavigation() {
            const stickyNav = document.getElementById('sticky-nav');
            const dualWorldsSection = document.querySelector('.promo-dual-worlds');
            const finalSection = document.querySelector('.promo-freedom-finale');

            if (!stickyNav || !dualWorldsSection) return;

            const dualWorldsRect = dualWorldsSection.getBoundingClientRect();
            const finalSectionRect = finalSection ? finalSection.getBoundingClientRect() : null;
            const scrollY = window.scrollY;

            // Check if any collection sections are visible
            const bioprocessSections = document.getElementById('bioprocess-sections');
            const laboratorySections = document.getElementById('laboratory-sections');
            const hasVisibleSections = (bioprocessSections && bioprocessSections.style.display !== 'none') || 
                                     (laboratorySections && laboratorySections.style.display !== 'none');

            // Only show sticky nav when:
            // 1. User has scrolled past the dual worlds section
            // 2. User hasn't reached the final CTA section
            // 3. User has scrolled more than 100px from top
            // 4. There are visible collection sections
            const showSticky = dualWorldsRect.bottom <= 20 && 
                             scrollY > 100 && 
                             hasVisibleSections &&
                             (!finalSectionRect || finalSectionRect.top > 100);

            if (showSticky) {
                stickyNav.classList.add('visible');
                // Update active state based on visible section
                updateActiveBasedOnScroll();
            } else {
                stickyNav.classList.remove('visible');
            }
        }

        function updateActiveBasedOnScroll() {
            const bioprocessSections = document.getElementById('bioprocess-sections');
            const laboratorySections = document.getElementById('laboratory-sections');

            // Only check sections from the currently visible world
            let sectionsToCheck = [];
            if (bioprocessSections && bioprocessSections.style.display !== 'none') {
                sectionsToCheck = bioprocessSections.querySelectorAll('.promo-collection-section');
            } else if (laboratorySections && laboratorySections.style.display !== 'none') {
                sectionsToCheck = laboratorySections.querySelectorAll('.promo-collection-section');
            }

            const offset = window.innerHeight / 3; // Use top third of viewport as reference
            let activeSection = null;
            let closestDistance = Infinity;

            sectionsToCheck.forEach(section => {
                const rect = section.getBoundingClientRect();
                const distance = Math.abs(rect.top - offset);

                // Find the section closest to our reference point
                if (rect.top <= offset + 100 && rect.bottom >= offset - 100 && distance < closestDistance) {
                    activeSection = section;
                    closestDistance = distance;
                }
            });

            if (activeSection) {
                const badge = activeSection.querySelector('.promo-category-badge');
                if (badge) {
                    const badgeText = badge.textContent.toLowerCase().trim();
                    let collectionType = '';

                    // More precise matching with exact text patterns
                    if (badgeText.includes('💎 ezbio ts bottles')) collectionType = 'ezbio-ts-bottles';
                    else if (badgeText.includes('🧪 ezbio bottles pc')) collectionType = 'ezbio-bottles';
                    else if (badgeText.includes('⚗️ pc rectangular carboy')) collectionType = 'pc-carboy';
                    else if (badgeText.includes('🔄 pc tr carboy')) collectionType = 'pc-tr-carboy';
                    else if (badgeText.includes('🏛️ pfa bottles')) collectionType = 'pfa-bottles';
                    else if (badgeText.includes('💧 aqg connectors')) collectionType = 'aqg';
                    else if (badgeText.includes('🔗 cpc stream thru')) collectionType = 'cpc-connectors';
                    else if (badgeText.includes('🔧 ezbio assemblies')) collectionType = 'ezbio-assembly';
                    else if (badgeText.includes('🧪 ezlabpure carboy')) collectionType = 'ezlabpure-carboy';
                    else if (badgeText.includes('🧪 ezclear carboy')) collectionType = 'ezclear-carboy';
                    else if (badgeText.includes('🫗 ezgrip carboy')) collectionType = 'ezgrip-carboy';
                    else if (badgeText.includes('⚗️ ezbio carboy')) collectionType = 'ezbio-carboy';
                    else if (badgeText.includes('🔬 lab essentials')) collectionType = 'lab-general';

                    if (collectionType) {
                        updateStickyActiveState(collectionType);
                    }
                }
            }
        }

        // Initialize the revolutionary experience
        document.addEventListener('DOMContentLoaded', function() {
            updateCountdown();
            setInterval(updateCountdown, 1000);

            // Show bioprocess sections by default
            const bioprocessSections = document.getElementById('bioprocess-sections');
            if (bioprocessSections) {
                bioprocessSections.style.display = 'block';
            }

            // Initialize carousels
            initializeCarousel('bioprocess-carousel');
            initializeCarousel('laboratory-carousel');

            // Initialize sticky navigation
            window.addEventListener('scroll', handleStickyNavigation);
            handleStickyNavigation(); // Initial check
        });
    </script>
