                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                // Update all timers
                ['promo-days', 'promo-finale-days'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = days.toString().padStart(2, '0');
                });

                ['promo-hours', 'promo-finale-hours'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = hours.toString().padStart(2, '0');
                });

                ['promo-minutes', 'promo-finale-minutes'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = minutes.toString().padStart(2, '0');
                });

                ['promo-seconds', 'promo-finale-seconds'].forEach(id => {
                    const element = document.getElementById(id);
                    if (element) element.textContent = seconds.toString().padStart(2, '0');
                });
            }
        }

        // World exploration functionality
        function exploreWorld(worldType) {
            const galaxies = document.querySelectorAll('.promo-galaxy');
            galaxies.forEach(galaxy => galaxy.classList.remove('active'));
            
            const targetGalaxy = document.getElementById(worldType + '-galaxy');
            if (targetGalaxy) {
                targetGalaxy.classList.add('active');
                
                // Smooth scroll to product showcase
                document.getElementById('promo-product-showcase').scrollIntoView({
                    behavior: 'smooth'
                });
            }
        }

        // Enhanced planet click functionality
        function selectCategory(categoryName) {
            // Add visual feedback for planet selection
            document.querySelectorAll('.promo-category-planet').forEach(planet => {
                planet.classList.remove('selected');
            });
            
            event.currentTarget.classList.add('selected');
            
            // Load featured products for this category
            loadFeaturedProducts(categoryName);
        }

        // Load featured products
        function loadFeaturedProducts(categoryName) {
            const showcase = document.getElementById('promo-featured-products');
            // This would typically load products via AJAX
            // For now, we'll show a placeholder
            showcase.innerHTML = `
                <div class="promo-featured-header">
                    <h3>Featured Products from ${categoryName}</h3>
                    <p>Discover revolutionary equipment with unprecedented savings</p>
                </div>
                <div class="promo-featured-grid">
                    <!-- Products will be loaded here -->
                </div>
            `;
            
            showcase.scrollIntoView({ behavior: 'smooth' });
        }

        // Initialize the revolutionary experience
        document.addEventListener('DOMContentLoaded', function() {
            updateCountdown();
            setInterval(updateCountdown, 1000);

            // Add planet click events
            document.querySelectorAll('.promo-category-planet').forEach(planet => {
                planet.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    selectCategory(category);
                });
            });

            // Show bioprocess galaxy by default
            document.getElementById('bioprocess-galaxy').classList.add('active');

            // Add stellar parallax effect
            document.addEventListener('mousemove', function(e) {
                const stars = document.querySelectorAll('.promo-star');
                const x = e.clientX / window.innerWidth;
                const y = e.clientY / window.innerHeight;
                
                stars.forEach((star, index) => {
                    const speed = (index + 1) * 0.5;
                    star.style.transform = `translate(${x * speed}px, ${y * speed}px)`;
                });
            });

            // Add enhanced scroll animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -100px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('promo-animate-in');
                    }
                });
            }, observerOptions);

            // Observe all major sections
            document.querySelectorAll('.promo-world, .promo-galaxy, .promo-finale-content').forEach(el => {
                observer.observe(el);
            });
        });
    </script>
