        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .timer-display {
                gap: 10px;
            }
            
            .timer-unit {
                padding: 10px 15px;
                min-width: 60px;
            }
            
            .timer-unit span {
                font-size: 1.5rem;
            }
            
            .hero-title {
                font-size: 2.5rem;
            }
            
            .section-header h2 {
                font-size: 2rem;
            }

            .flag-icon {
                font-size: 2rem;
            }
