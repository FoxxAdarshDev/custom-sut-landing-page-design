    <style>
        .promo-independence-body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background: #000011;
            color: white;
            overflow-x: hidden;
        }

        /* Revolutionary Hero Section */
        .promo-hero-revolution {
            position: relative;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(ellipse at center, #001122 0%, #000011 50%, #000000 100%);
            overflow: hidden;
        }

        .promo-patriotic-canvas {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 1;
        }

        .promo-star-field {
            position: absolute;
            width: 100%;
            height: 100%;
        }

        .promo-star {
            position: absolute;
            width: 2px;
            height: 2px;
            background: white;
            border-radius: 50%;
            animation: promo-twinkle 3s ease-in-out infinite;
        }

        .promo-star:nth-child(1) { top: 20%; left: 10%; animation-delay: 0s; }
        .promo-star:nth-child(2) { top: 30%; left: 80%; animation-delay: 0.5s; }
        .promo-star:nth-child(3) { top: 60%; left: 15%; animation-delay: 1s; }
        .promo-star:nth-child(4) { top: 70%; left: 70%; animation-delay: 1.5s; }
        .promo-star:nth-child(5) { top: 40%; left: 90%; animation-delay: 2s; }
        .promo-star:nth-child(6) { top: 80%; left: 20%; animation-delay: 2.5s; }
        .promo-star:nth-child(7) { top: 15%; left: 60%; animation-delay: 3s; }
        .promo-star:nth-child(8) { top: 85%; left: 50%; animation-delay: 3.5s; }
        .promo-star:nth-child(9) { top: 25%; left: 40%; animation-delay: 4s; }
        .promo-star:nth-child(10) { top: 55%; left: 85%; animation-delay: 4.5s; }

        @keyframes promo-twinkle {
            0%, 100% { opacity: 0.3; transform: scale(1); }
            50% { opacity: 1; transform: scale(1.5); }
        }

        .promo-flag-waves {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0.1;
        }

        .promo-wave {
            position: absolute;
            width: 100%;
            height: 33.33%;
            animation: promo-wave-motion 8s ease-in-out infinite;
        }

        .promo-wave-red {
            top: 0;
            background: linear-gradient(45deg, #dc2626, transparent);
            animation-delay: 0s;
        }

        .promo-wave-white {
            top: 33.33%;
            background: linear-gradient(45deg, #ffffff, transparent);
            animation-delay: 2s;
        }

        .promo-wave-blue {
            top: 66.66%;
            background: linear-gradient(45deg, #1e40af, transparent);
            animation-delay: 4s;
        }

        @keyframes promo-wave-motion {
            0%, 100% { transform: translateX(-10px) skewX(0deg); }
            50% { transform: translateX(10px) skewX(2deg); }
        }

        .promo-fireworks {
            position: absolute;
            width: 100%;
            height: 100%;
        }

        .promo-firework {
            position: absolute;
            width: 4px;
            height: 4px;
            background: radial-gradient(circle, #ffd700, #ff6b6b, #4ecdc4);
            border-radius: 50%;
            animation: promo-firework-burst 4s ease-out infinite;
        }

        .promo-firework-1 { top: 25%; left: 20%; animation-delay: 0s; }
        .promo-firework-2 { top: 35%; right: 25%; animation-delay: 2s; }
        .promo-firework-3 { bottom: 30%; left: 60%; animation-delay: 4s; }

        @keyframes promo-firework-burst {
            0% { 
                opacity: 0; 
                transform: scale(0); 
                box-shadow: 0 0 0 0 currentColor;
            }
            20% { 
                opacity: 1; 
                transform: scale(1); 
                box-shadow: 0 0 20px 10px rgba(255, 215, 0, 0.8);
            }
            100% { 
                opacity: 0; 
                transform: scale(2); 
                box-shadow: 0 0 50px 25px rgba(255, 215, 0, 0);
            }
        }

        .promo-hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
            max-width: 1200px;
            padding: 40px 20px;
        }

        .promo-liberty-badge {
            display: inline-block;
            background: linear-gradient(45deg, #dc2626, #1e40af);
            padding: 12px 30px;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 40px;
            animation: promo-liberty-glow 3s ease-in-out infinite;
            box-shadow: 0 0 30px rgba(220, 38, 38, 0.5);
        }

        @keyframes promo-liberty-glow {
            0%, 100% { box-shadow: 0 0 30px rgba(220, 38, 38, 0.5); }
            50% { box-shadow: 0 0 50px rgba(30, 64, 175, 0.8), 0 0 70px rgba(220, 38, 38, 0.3); }
        }

        .promo-revolutionary-title {
            font-family: 'Orbitron', sans-serif;
            font-size: clamp(2.5rem, 8vw, 6rem);
            font-weight: 900;
            line-height: 1.1;
            margin-bottom: 20px;
            perspective: 1000px;
        }

        .promo-word {
            display: inline-block;
            margin: 0 10px;
            animation: promo-word-revolution 6s ease-in-out infinite;
            text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
        }

        .promo-word-1 {
            background: linear-gradient(45deg, #dc2626, #fbbf24);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation-delay: 0s;
        }

        .promo-word-2 {
            color: #ffffff;
            animation-delay: 0.5s;
        }

        .promo-word-3 {
            background: linear-gradient(45deg, #1e40af, #06b6d4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation-delay: 1s;
        }

        .promo-hero-subtitle-text {
            display: block;
            font-size: clamp(1.5rem, 4vw, 2.5rem);
            color: #fbbf24;
            margin-top: 20px;
            text-shadow: 0 0 15px rgba(251, 191, 36, 0.8);
        }

        @keyframes promo-word-revolution {
            0%, 100% { transform: rotateY(0deg) scale(1); }
            25% { transform: rotateY(10deg) scale(1.05); }
            50% { transform: rotateY(-5deg) scale(1.1); }
            75% { transform: rotateY(5deg) scale(1.05); }
        }

        .promo-savings-explosion {
            margin: 40px 0;
            position: relative;
        }

        .promo-explosion-text {
            font-size: 1.5rem;
            font-weight: 600;
            color: #fbbf24;
            margin-bottom: 10px;
        }

        .promo-mega-discount {
            font-family: 'Orbitron', sans-serif;
            font-size: clamp(3rem, 10vw, 8rem);
            font-weight: 900;
            background: linear-gradient(45deg, #dc2626, #fbbf24, #dc2626);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 30px rgba(220, 38, 38, 0.8);
            animation: promo-mega-pulse 2s ease-in-out infinite;
            position: relative;
        }

        .promo-mega-discount::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 120%;
            height: 120%;
            background: radial-gradient(circle, rgba(220, 38, 38, 0.3), transparent);
            animation: promo-explosion-ring 3s ease-out infinite;
            z-index: -1;
        }

        @keyframes promo-mega-pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        @keyframes promo-explosion-ring {
            0% { transform: translate(-50%, -50%) scale(0.8); opacity: 0.8; }
            100% { transform: translate(-50%, -50%) scale(2); opacity: 0; }
        }

        .promo-explosion-subtext {
            font-size: 1.2rem;
            color: #94a3b8;
            margin-top: 10px;
        }

        .promo-countdown-revolution {
            margin-top: 60px;
        }

        .promo-countdown-label {
            font-size: 1.3rem;
            font-weight: 700;
            color: #fbbf24;
            margin-bottom: 30px;
            animation: promo-lightning 2s ease-in-out infinite;
        }

        @keyframes promo-lightning {
            0%, 100% { text-shadow: 0 0 10px rgba(251, 191, 36, 0.8); }
            50% { text-shadow: 0 0 20px rgba(251, 191, 36, 1), 0 0 30px rgba(255, 255, 255, 0.5); }
        }

        .promo-timer-grid {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .promo-timer-cube {
            position: relative;
            width: 100px;
            height: 100px;
            perspective: 1000px;
            animation: promo-cube-float 4s ease-in-out infinite;
        }

        .promo-timer-cube:nth-child(1) { animation-delay: 0s; }
        .promo-timer-cube:nth-child(2) { animation-delay: 0.5s; }
        .promo-timer-cube:nth-child(3) { animation-delay: 1s; }
        .promo-timer-cube:nth-child(4) { animation-delay: 1.5s; }

        @keyframes promo-cube-float {
            0%, 100% { transform: translateY(0) rotateX(0deg); }
            50% { transform: translateY(-10px) rotateX(10deg); }
        }

        .promo-timer-face {
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #1e40af, #06b6d4);
            border: 2px solid #fbbf24;
            border-radius: 15px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 30px rgba(30, 64, 175, 0.3);
            animation: promo-timer-glow 2s ease-in-out infinite;
        }

        @keyframes promo-timer-glow {
            0%, 100% { box-shadow: 0 10px 30px rgba(30, 64, 175, 0.3); }
            50% { box-shadow: 0 10px 40px rgba(30, 64, 175, 0.6), 0 0 20px rgba(251, 191, 36, 0.5); }
        }

        .promo-timer-face span {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.8rem;
            font-weight: 900;
            color: #ffffff;
