<div class="sut-main-container">
  <!-- Dynamic Blocks Content -->
  {% for block in section.blocks %}
    {% case block.type %}

      {% when 'hero_section' %}
        {% if block.settings.enable_hero_section %}
        <section class="sut-hero-section" {{ block.shopify_attributes }} style="padding-top: {{ block.settings.hero_padding_top | default: 80 }}px; padding-bottom: {{ block.settings.hero_padding_bottom | default: 80 }}px;">
          {% if block.settings.hero_image %}
            <div class="sut-hero-background" style="background-image: url('{{ block.settings.hero_image | img_url: '1920x' }}');">
          {% else %}
            <div class="sut-hero-background" style="background: linear-gradient(135deg, #003366 0%, #0071b9 50%, #00a86b 100%);">
          {% endif %}
              <div class="sut-hero-overlay" style="background-color: {{ block.settings.hero_overlay_color | default: '#003366' }}{{ block.settings.hero_overlay_opacity | default: 80 | divided_by: 100.0 | prepend: '; opacity: ' }};">
                <div class="sut-container">
                  <div class="sut-hero-content">
                    <h1 class="sut-hero-title">{{ block.settings.hero_title }}</h1>
                    <div class="sut-hero-description">{{ block.settings.hero_description }}</div>
                    {% if block.settings.hero_button_text and block.settings.hero_button_url %}
                      <a href="{{ block.settings.hero_button_url }}" class="sut-btn sut-btn-primary">
                        {{ block.settings.hero_button_text }}
                      </a>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
        </section>
        {% endif %}

      {% when 'strategy_section' %}
        <section class="sut-strategy-section" {{ block.shopify_attributes }} style="padding-top: {{ block.settings.strategy_padding_top | default: 100 }}px; padding-bottom: {{ block.settings.strategy_padding_bottom | default: 100 }}px;">
          <div class="sut-container">
            <div class="sut-strategy-container{% if block.settings.strategy_layout == 'image_left' %} sut-reverse-layout{% endif %}">
              {% if block.settings.strategy_layout == 'image_right' %}
                <!-- Content First -->
                <div class="sut-strategy-text">
                  <h2 class="sut-strategy-title">{{ block.settings.strategy_title }}</h2>
                  <div class="sut-strategy-description">{{ block.settings.strategy_description }}</div>
                  {% if block.settings.strategy_button_text and block.settings.strategy_button_url %}
                    <a href="{{ block.settings.strategy_button_url }}" class="sut-btn sut-btn-secondary">
                      {{ block.settings.strategy_button_text }}
                    </a>
                  {% endif %}
                </div>
                <!-- Image Second -->
                {% if block.settings.strategy_image %}
                  <div class="sut-strategy-image-wrapper">
                    <img src="{{ block.settings.strategy_image | img_url: '800x' }}" alt="{{ block.settings.strategy_title }}" class="sut-strategy-image">
                  </div>
                {% endif %}
              {% else %}
                <!-- Image First -->
                {% if block.settings.strategy_image %}
                  <div class="sut-strategy-image-wrapper">
                    <img src="{{ block.settings.strategy_image | img_url: '800x' }}" alt="{{ block.settings.strategy_title }}" class="sut-strategy-image">
                  </div>
                {% endif %}
                <!-- Content Second -->
                <div class="sut-strategy-text">
                  <h2 class="sut-strategy-title">{{ block.settings.strategy_title }}</h2>
                  <div class="sut-strategy-description">{{ block.settings.strategy_description }}</div>
                  {% if block.settings.strategy_button_text and block.settings.strategy_button_url %}
                    <a href="{{ block.settings.strategy_button_url }}" class="sut-btn sut-btn-secondary">
