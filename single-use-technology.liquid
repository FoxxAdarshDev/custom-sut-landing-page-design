  .sut-main-container {
    max-width: 100%;
    width: 100%;
    margin: 0 auto;
    overflow-x: hidden;
    box-sizing: border-box;
  }

  /* Global Styles */
  .sut-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .sut-btn {
    display: inline-block;
    padding: 12px 30px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 1px;
    text-transform: uppercase;
    border-radius: 5px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    text-align: center;
  }

  .sut-btn-primary {
    background: #0071b9;
    color: white;
    border: 2px solid #0071b9;
  }

  .sut-btn-primary:hover {
    background: rgba(0, 113, 185, 0.8);
    transform: translateY(-2px);
  }

  .sut-btn-secondary {
    background: transparent;
    color: #0071b9;
    border: 2px solid #0071b9;
  }

  .sut-btn-secondary:hover {
    background: #0071b9;
    color: white;
  }

  /* Hero Section */
  .sut-hero-section {
    position: relative;
    min-height: 60vh;
    background: linear-gradient(135deg, #003366 0%, #0071b9 50%, #00a86b 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .sut-hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 1;
  }

  .sut-hero-overlay {
    position: relative;
    z-index: 3;
    width: 100%;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sut-hero-content {
    text-align: center;
    color: white;
    max-width: 900px;
    width: 100%;
    padding: 0 20px;
  }

  .sut-hero-title {
    font-size: 56px;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .sut-hero-description {
    font-size: 20px;
    line-height: 1.6;
    margin-bottom: 30px;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  /* Strategy Section */
  .sut-strategy-section {
    background: #f8f9fa;
  }

  .sut-strategy-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .sut-strategy-text {
    padding: 20px 0;
  }

  .sut-strategy-title {
    font-size: 42px;
    color: #333;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 25px;
  }

  .sut-strategy-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  .sut-strategy-image {
    width: 100%;
    height: auto;
    border-radius: 15px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  }

  /* Video Content Section */
  .sut-video-content-section {
    background: white;
  }

  .sut-video-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .sut-video-wrapper {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  }

  .sut-video-embed {
    width: 100%;
    min-height: 300px;
    border: none;
    border-radius: 15px;
  }

  .sut-video-text {
    padding: 20px 0;
  }

  .sut-video-title {
    font-size: 42px;
    color: #333;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 25px;
  }

  .sut-video-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  /* Stats Section */
  .sut-stats-section {
    background: linear-gradient(135deg, #0071b9 0%, #003366 100%);
    color: white;
  }

  .sut-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    text-align: center;
  }

  .sut-stat-item {
    padding: 20px;
  }

  .sut-stat-icon {
    font-size: 48px;
    margin-bottom: 15px;
    opacity: 0.9;
  }

  .sut-stat-number {
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 10px;
    color: #00a86b;
  }

  .sut-stat-label {
    font-size: 16px;
    font-weight: 500;
    opacity: 0.9;
  }

  /* Product Categories Section */
  .sut-categories-section {
    background: #f8f9fa;
  }

  .sut-categories-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .sut-categories-title {
    font-size: 48px;
    color: #333;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .sut-categories-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
  }

  .sut-category-tabs {
    display: flex;
    justify-content: center;
    margin-bottom: 40px;
    gap: 10px;
  }

  .sut-tab-button {
    padding: 15px 30px;
    background: #e9ecef;
    color: #333;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .sut-tab-button.active {
    background: #0071b9;
    color: white;
  }

  .sut-categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .sut-category-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    cursor: pointer;
  }

  .sut-category-card:hover {
    transform: translateY(-10px);
  }

  .sut-category-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .sut-category-content {
    padding: 25px;
  }

  .sut-category-name {
    font-size: 24px;
    font-weight: 700;
    color: #333;
    margin-bottom: 15px;
  }

  .sut-category-desc {
    font-size: 16px;
    color: #666;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  /* Sustainability Section */
