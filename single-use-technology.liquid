            </div>

            <!-- Category Content -->
            {% for tab_block in section.blocks %}
              {% if tab_block.type == 'category_tab' %}
                <div id="sut-tab-{{ tab_block.settings.tab_name | handleize }}" 
                     class="sut-tab-content{% if tab_block.settings.tab_active %} active{% endif %}" 
                     style="display: {% if tab_block.settings.tab_active %}block{% else %}none{% endif %};">
                  <div class="sut-categories-grid">
                    {% for category_block in section.blocks %}
                      {% if category_block.type == 'product_category' and category_block.settings.category_tab == tab_block.settings.tab_name %}
                        <div class="sut-category-card" {{ category_block.shopify_attributes }}>
                          {% if category_block.settings.category_image %}
                            <img src="{{ category_block.settings.category_image | img_url: '400x' }}" 
                                 alt="{{ category_block.settings.category_name }}" 
                                 class="sut-category-image">
                          {% endif %}
                          <div class="sut-category-content">
                            <h3 class="sut-category-name">{{ category_block.settings.category_name }}</h3>
                            <p class="sut-category-desc">{{ category_block.settings.category_description }}</p>
                            {% if category_block.settings.category_url %}
                              <a href="{{ category_block.settings.category_url }}" class="sut-btn sut-btn-secondary">
                                Know More
                              </a>
                            {% endif %}
                          </div>
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </section>

      {% when 'sustainability_section' %}
        <section class="sut-sustainability-section" {{ block.shopify_attributes }} style="padding-top: {{ block.settings.sustainability_padding_top | default: 100 }}px; padding-bottom: {{ block.settings.sustainability_padding_bottom | default: 100 }}px;">
          <div class="sut-container">
            <div class="sut-sustainability-container">
              <div class="sut-sustainability-text">
                <h2 class="sut-sustainability-title">{{ block.settings.sustainability_title }}</h2>
                <div class="sut-sustainability-description">{{ block.settings.sustainability_description }}</div>
                {% if block.settings.sustainability_button_text and block.settings.sustainability_button_url %}
                  <a href="{{ block.settings.sustainability_button_url }}" class="sut-btn sut-btn-primary">
                    {{ block.settings.sustainability_button_text }}
                  </a>
                {% endif %}
              </div>
              <div class="sut-sustainability-logos">
                {% for logo_block in section.blocks %}
                  {% if logo_block.type == 'sustainability_logo' and logo_block.settings.logo_image %}
                    <img src="{{ logo_block.settings.logo_image | img_url: '200x' }}" 
                         alt="{{ logo_block.settings.logo_alt }}" 
                         class="sut-sustainability-logo" 
                         {{ logo_block.shopify_attributes }}>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          </div>
        </section>

      {% when 'features_section' %}
        <section class="sut-features-section" {{ block.shopify_attributes }} style="padding-top: {{ block.settings.features_padding_top | default: 100 }}px; padding-bottom: {{ block.settings.features_padding_bottom | default: 100 }}px;">
          <div class="sut-container">
            <div class="sut-features-header">
              <h2 class="sut-features-title">{{ block.settings.features_title }}</h2>
              <div class="sut-features-description">{{ block.settings.features_description }}</div>
            </div>
            <div class="sut-features-grid">
              {% for feature_block in section.blocks %}
                {% if feature_block.type == 'feature_item' %}
                  <div class="sut-feature-card" {{ feature_block.shopify_attributes }}>
                    <div class="sut-feature-icon">{{ feature_block.settings.feature_icon }}</div>
                    <h3 class="sut-feature-name">{{ feature_block.settings.feature_name }}</h3>
                    <p class="sut-feature-desc">{{ feature_block.settings.feature_description }}</p>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </section>

      {% when 'cta_section' %}
        <section class="sut-cta-section" {{ block.shopify_attributes }} style="padding-top: {{ block.settings.cta_padding_top | default: 80 }}px; padding-bottom: {{ block.settings.cta_padding_bottom | default: 80 }}px;">
          <div class="sut-container">
            <h2 class="sut-cta-title">{{ block.settings.cta_title }}</h2>
            <p class="sut-cta-description">{{ block.settings.cta_description }}</p>
            {% if block.settings.cta_button_text and block.settings.cta_button_url %}
              <a href="{{ block.settings.cta_button_url }}" class="sut-cta-button">
                {{ block.settings.cta_button_text }}
              </a>
            {% endif %}
          </div>
        </section>

    {% endcase %}
  {% endfor %}
</div>

<script>
function switchSUTTab(tabName) {
  // Hide all tab contents
  var tabContents = document.querySelectorAll('.sut-tab-content');
  tabContents.forEach(function(content) {
    content.style.display = 'none';
  });

  // Remove active class from all buttons
  var tabButtons = document.querySelectorAll('.sut-tab-button');
  tabButtons.forEach(function(button) {
    button.classList.remove('active');
  });

  // Show selected tab content
  var selectedTab = document.getElementById('sut-tab-' + tabName);
  if (selectedTab) {
    selectedTab.style.display = 'block';
  }

  // Add active class to clicked button
  event.target.classList.add('active');
}

// Initialize tabs on page load
document.addEventListener('DOMContentLoaded', function() {
  // Find the first active tab or default to first tab
  var activeTab = document.querySelector('.sut-tab-button.active');
  if (!activeTab) {
    var firstTab = document.querySelector('.sut-tab-button');
    if (firstTab) {
      firstTab.classList.add('active');
      var firstTabContent = document.querySelector('.sut-tab-content');
      if (firstTabContent) {
        firstTabContent.style.display = 'block';
      }
    }
  }
});
</script>
