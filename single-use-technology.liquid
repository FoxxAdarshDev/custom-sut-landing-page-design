<script>
function switchSUTTab(tabName) {
  // Hide all tab contents
  var tabContents = document.querySelectorAll('.sut-tab-content');
  tabContents.forEach(function(content) {
    content.style.display = 'none';
  });

  // Remove active class from all buttons
  var tabButtons = document.querySelectorAll('.sut-tab-button');
  tabButtons.forEach(function(button) {
    button.classList.remove('active');
  });

  // Show selected tab content
  var selectedTab = document.getElementById('sut-tab-' + tabName);
  if (selectedTab) {
    selectedTab.style.display = 'block';
  }

  // Add active class to clicked button
  event.target.classList.add('active');
}

// Initialize tabs on page load
document.addEventListener('DOMContentLoaded', function() {
  // Find the first active tab or default to first tab
  var activeTab = document.querySelector('.sut-tab-button.active');
  if (!activeTab) {
    var firstTab = document.querySelector('.sut-tab-button');
    if (firstTab) {
      firstTab.classList.add('active');
