<style>
  .sut-main-container {
    max-width: 100%;
    width: 100%;
    margin: 0 auto;
    overflow-x: hidden;
    box-sizing: border-box;
  }

  /* Global Styles */
  .sut-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .sut-btn {
    display: inline-block;
    padding: 12px 30px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 1px;
    text-transform: uppercase;
    border-radius: 5px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    text-align: center;
  }

  .sut-btn-primary {
    background: #0071b9;
    color: white;
    border: 2px solid #0071b9;
  }

  .sut-btn-primary:hover {
    background: rgba(0, 113, 185, 0.8);
    transform: translateY(-2px);
  }

  .sut-btn-secondary {
    background: transparent;
    color: #0071b9;
    border: 2px solid #0071b9;
  }

  .sut-btn-secondary:hover {
    background: #0071b9;
    color: white;
  }

  /* Hero Section */
  .sut-hero-section {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .sut-hero-image-container {
    text-align: center;
    width: 100%;
  }

  .sut-hero-image {
    max-width: 100%;
    height: auto;
    display: block;
    width: 100%;
  }

  .sut-hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 1;
  }

  .sut-hero-overlay {
    position: relative;
    z-index: 3;
    width: 100%;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sut-hero-content {
    text-align: center;
    color: white;
    max-width: 900px;
    width: 100%;
    padding: 0 20px;
  }

  .sut-hero-title {
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .sut-hero-description {
    line-height: 1.6;
    margin-bottom: 30px;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .sut-hero-button {
    display: inline-block;
    padding: 18px 40px;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  /* Strategy Section */
  .sut-strategy-section {
    background: #f8f9fa;
  }

  .sut-strategy-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .sut-strategy-text {
    padding: 20px 0;
  }

  .sut-strategy-title {
    font-size: 42px;
    color: #0071b9;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 25px;
  }

  .sut-strategy-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  .sut-strategy-image {
    width: 100%;
    height: auto;
    border-radius: 15px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  }

  /* Video Content Section */
  .sut-video-content-section {
    background: white;
  }

  .sut-video-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .sut-video-wrapper {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    background: #000;
  }

  .sut-video-embed {
    width: 100%;
    min-height: 300px;
    border: none;
    border-radius: 15px;
  }

  .sut-video-player {
    width: 100%;
    height: 300px;
    border-radius: 15px;
  }

  .sut-video-text {
    padding: 20px 0;
  }

  .sut-video-title {
    font-size: 42px;
    color: #0071b9;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 25px;
  }

  .sut-video-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  /* Stats Section */
  .sut-stats-section {
    position: relative;
    overflow: hidden;
  }

  .sut-stats-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 1;
  }

  .sut-stats-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .sut-stats-content {
    position: relative;
    z-index: 3;
  }

  .sut-stats-content-wrapper {
    position: relative;
    z-index: 3;
  }

  .sut-stats-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .sut-stats-title {
    font-weight: 700;
    font-size:42px;
    margin-bottom: 20px;
    color: #0071b9;
  }

  .sut-stats-description {
    line-height: 1.6;
    opacity: 0.9;
    max-width: 800px;
    font-size:18px;
    margin: 0 auto;
  }

  .sut-stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    align-items: center;
  }

  .sut-stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    flex: 1;
    min-width: 150px;
  }

  .sut-stat-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .sut-stat-icon svg {
    width: 32px;
    height: 32px;
    fill: currentColor;
  }

  .sut-stat-number {
    font-weight: 700;
    margin-bottom: 10px;
    color:#ffffff!important;
    font-size:28px!important;
    line-height: 1.2;
  }

  .sut-stat-label {
    font-weight: 600;
    margin-bottom: 10px;
  }

  .sut-stat-description {
    font-size: 14px;
    opacity: 0.8;
    line-height: 1.4;
  }

  /* Product Categories Section */
  .sut-categories-section {
    background: #f8f9fa;
  }

  .sut-categories-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .sut-categories-title {
    font-size: 48px;
    color: #0071b9;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .sut-categories-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto 40px;
  }

  .sut-category-tabs {
    display: flex;
    justify-content: center;
    margin-bottom: 50px;
    gap: 0;
    border-radius: 50px;
    background: #e9ecef;
    padding: 5px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 50px;
  }

  .sut-tab-button {
    padding: 15px 40px;
    background: transparent;
    color: #666;
    border: none;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    flex: 1;
    text-align: center;
    font-size: 16px;
  }

  .sut-tab-button.active {
    background: #0071b9;
    color: white;
    box-shadow: 0 4px 15px rgba(0, 113, 185, 0.3);
  }

  .sut-tab-button:hover:not(.active) {
    background: rgba(0, 113, 185, 0.1);
    color: #0071b9;
  }

  .sut-categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .sut-category-card {
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    min-height: 380px;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr;
    background: white;
    text-decoration: none;
    color: inherit;
  }

  .sut-category-card:nth-child(odd) {
    background: #ffffff;
  }

  .sut-category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }

  .sut-category-content {
    padding: 30px 30px 0 30px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    width: 100%;
    box-sizing: border-box;
  }

  .sut-category-bottom-section {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: flex-start;
    gap: 20px;
    padding: 0 30px 30px 30px;
    min-height: 120px;
  }

  .sut-category-cta-wrapper {
    display: flex;
    align-items: flex-start;
    padding-top: 10px;
  }

  .sut-category-image-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: transparent;
    min-height: 180px;
    width: 100%;
  }

  .sut-category-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .sut-category-card:hover .sut-category-image {
    transform: scale(1.05);
  }

  .sut-category-name {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.3;
    color: #0071b9;
    width: 100%;
  }

  .sut-category-desc {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 25px;
    color: #666;
    width: 100%;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    max-height: 4.8em; /* 3 lines * 1.6 line-height */
  }

  .sut-category-button {
    padding: 15px 30px;
    border: 2px solid #0071b9;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    font-size: 14px;
    text-align: center;
    align-self: flex-start;
    background: transparent;
    color: #0071b9;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .sut-category-button:hover {
    background: #0071b9;
    color: white;
    transform: translateY(-2px);
    border-color: #005a94;
  }

  /* Component Logos Section */
  .sut-component-logos-section {
    background: white;
    text-align: center;
  }

  .sut-component-logos-header {
    margin-bottom: 60px;
  }

  .sut-component-logos-title {
    font-size: 42px;
    color: #0071b9;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .sut-component-logos-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
  }

  .sut-component-logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: 40px;
    align-items: center;
    justify-items: center;
    max-width: 100%;
    overflow-x:scroll;
    margin: 0 auto;
  }

  .sut-component-logo-item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    transition: transform 0.3s ease;
  }

  .sut-component-logo-item:hover {
    transform: scale(1.1);
  }

  .sut-component-logo-image {
    max-width: 100px;
    max-height: 80px;
    width: auto;
    height: auto;
    filter: grayscale(50%);
    transition: filter 0.3s ease;
  }

  .sut-component-logo-item:hover .sut-component-logo-image {
    filter: grayscale(0%);
  }

  /* Sustainability Section */
  .sut-sustainability-section {
    background: #f8f9fa;
  }

  .sut-sustainability-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .sut-sustainability-text {
    padding: 20px 0;
  }

  .sut-sustainability-title {
    font-size: 42px;
    color: #0071b9;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 25px;
  }

  .sut-sustainability-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  .sut-sustainability-logos {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    align-items: center;
  }

  .sut-sustainability-logo {
    height: 80px;
    width: auto;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
  }

  .sut-sustainability-logo:hover {
    filter: grayscale(0%);
  }

  /* Features Section */
  .sut-features-section {
    background: white;
  }

  .sut-features-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .sut-features-title {
    font-size: 48px;
    color: #0071b9;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .sut-features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
  }

  .sut-feature-card {
    background: white;
    padding: 40px 30px;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .sut-feature-card:hover {
    transform: translateY(-5px);
  }

  .sut-feature-icon {
    font-size: 48px;
    color: #0071b9;
    margin-bottom: 20px;
  }

  .sut-feature-name {
    font-size: 24px;
    font-weight: 700;
    color: #0071b9;
    margin-bottom: 15px;
  }

  .sut-feature-desc {
    font-size: 16px;
    color: #666;
    line-height: 1.5;
  }

  /* CTA Section */
  .sut-cta-section {
    background: linear-gradient(135deg, #003366 0%, #0071b9 100%);
    color: white;
    text-align: center;
  }

  .sut-cta-title {
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .sut-cta-description {
    font-size: 20px;
    margin-bottom: 40px;
    opacity: 0.9;
  }

  .sut-cta-button {
    background: #00a86b;
    color: white;
    padding: 18px 40px;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .sut-cta-button:hover {
    background: #009d63;
    transform: translateY(-2px);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .sut-strategy-container,
    .sut-video-container,
    .sut-sustainability-container {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .sut-strategy-title,
    .sut-video-title,
    .sut-sustainability-title,
    .sut-categories-title,
    .sut-features-title,
    .sut-cta-title,
    .sut-component-logos-title {
      font-size: 28px;
    }

    .sut-categories-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .sut-category-card {
      min-height: 320px;
      grid-template-rows: auto auto;
    }

    .sut-category-content {
      padding: 25px 20px 0 20px;
      text-align: center;
      align-items: center;
    }

    .sut-category-bottom-section {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto;
      padding: 20px;
      text-align: center;
      gap: 15px;
      min-height: auto;
    }

    .sut-category-cta-wrapper {
      justify-content: center;
      padding-top: 0;
    }

    .sut-category-image-wrapper {
      min-height: 140px;
      align-items: center;
    }

    .sut-category-image {
      width: 100%;
      height: 140px;
      object-fit: cover;
      object-position: center;
    }

    .sut-category-name {
      font-size: 22px;
      text-align: center;
    }

    .sut-category-desc {
      text-align: center;
    }

    .sut-stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }

    .sut-category-tabs {
      flex-direction: column;
      background: transparent;
      padding: 0;
      gap: 10px;
    }

    .sut-tab-button {
      border-radius: 8px;
      background: #e9ecef;
    }

    .sut-tab-button.active {
      border-radius: 8px;
    }

    .sut-features-grid {
      grid-template-columns: 1fr;
    }

    .sut-component-logos-grid {
      grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
      gap: 20px;
    }

    .sut-component-logo-image {
      max-width: 80px;
      max-height: 60px;
    }
  }

  @media (max-width: 1024px) and (min-width: 769px) {
    .sut-stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .sut-categories-title,
    .sut-features-title,
    .sut-cta-title,
    .sut-component-logos-title {
      font-size: 24px;
    }

    .sut-stats-grid {
      grid-template-columns: 1fr;
    }

    .sut-stat-item {
      margin-bottom: 30px;
    }
  }
</style>

