    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .sut-hero-image-container {
    text-align: center;
    background: #f8f9fa;
  }

  .sut-hero-image {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .sut-hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 1;
  }

  .sut-hero-overlay {
    position: relative;
    z-index: 3;
    width: 100%;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sut-hero-content {
    text-align: center;
    color: white;
    max-width: 900px;
    width: 100%;
    padding: 0 20px;
  }

  .sut-hero-title {
    font-size: 56px;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .sut-hero-description {
    font-size: 20px;
    line-height: 1.6;
    margin-bottom: 30px;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  /* Strategy Section */
  .sut-strategy-section {
    background: #f8f9fa;
  }

  .sut-strategy-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .sut-strategy-text {
    padding: 20px 0;
  }

  .sut-strategy-title {
    font-size: 42px;
    color: #333;
    font-weight: 700;
    line-height: 1.2;
