<div class="sut-main-container">
  <!-- Dynamic Blocks Content -->
  {% for block in section.blocks %}
    {% case block.type %}

      {% when 'hero_section' %}
        {% if block.settings.enable_hero_section %}
        <section class="sut-hero-section" {{ block.shopify_attributes }}>
          {% if block.settings.hero_content_display == 'image_only' %}
            {% if block.settings.hero_image %}
              <div class="sut-hero-image-container" style="padding-top: {{ block.settings.hero_padding_top | default: 0 }}px; padding-bottom: {{ block.settings.hero_padding_bottom | default: 0 }}px;">
                <img src="{{ block.settings.hero_image | img_url: '1920x' }}" alt="{{ block.settings.hero_title }}" class="sut-hero-image">
              </div>
            {% endif %}
          {% else %}
            {% if block.settings.hero_image %}
              <div class="sut-hero-background" style="background-image: url('{{ block.settings.hero_image | img_url: '1920x' }}');"></div>
              <div class="sut-hero-overlay" style="background-color: {{ block.settings.hero_overlay_color | default: '#003366' }}; opacity: {{ block.settings.hero_overlay_opacity | default: 80 | divided_by: 100.0 }}; padding-top: {{ block.settings.hero_padding_top | default: 80 }}px; padding-bottom: {{ block.settings.hero_padding_bottom | default: 80 }}px;">
                <div class="sut-container">
                  <div class="sut-hero-content">
                    <h1 class="sut-hero-title" style="font-size: {{ block.settings.hero_title_size_desktop | default: 56 }}px; color: {{ block.settings.hero_title_color | default: '#ffffff' }};">
                      {{ block.settings.hero_title }}
                    </h1>
                    <div class="sut-hero-description" style="font-size: {{ block.settings.hero_description_size_desktop | default: 20 }}px; color: {{ block.settings.hero_description_color | default: '#ffffff' }};">
