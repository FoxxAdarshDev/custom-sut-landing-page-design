                  <button class="sut-tab-button{% if tab_block.settings.tab_active %} active{% endif %}" 
                          onclick="switchSUTTab('{{ tab_block.settings.tab_name | handleize }}')" 
                          {{ tab_block.shopify_attributes }}>
                    {{ tab_block.settings.tab_name }}
                  </button>
                {% endif %}
