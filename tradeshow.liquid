
{% comment %}
  Trade Show Section - Enhanced Version
  Displays upcoming and past trade shows with interactive features
{% endcomment %}

<section class="tradeshow-section" data-section-id="{{ section.id }}">
  <!-- Background decorative elements -->
  <div class="tradeshow-bg-decoration"></div>

  <div class="tradeshow-container">
    {% if section.settings.section_title != blank %}
      <div class="tradeshow-header">
        <h2 class="tradeshow-title">
          {{ section.settings.section_title }}
        </h2>
        {% if section.settings.section_subtitle != blank %}
          <p class="tradeshow-subtitle">
            {{ section.settings.section_subtitle }}
          </p>
        {% endif %}
        <div class="title-underline"></div>
      </div>
    {% endif %}

    <!-- Filter Tabs -->
    {% if section.settings.show_filter_tabs %}
      <div class="tradeshow-filter-tabs">
        <button class="tradeshow-filter-tab active" data-filter="all">
          <span class="tab-icon">üåê</span>
          All Events
        </button>
        <button class="tradeshow-filter-tab" data-filter="upcoming">
          <span class="tab-icon">üìÖ</span>
          Upcoming
        </button>
        <button class="tradeshow-filter-tab" data-filter="past">
          <span class="tab-icon">üìã</span>
          Past Events
        </button>
      </div>
    {% endif %}

    <!-- Trade Show Grid -->
    <div class="tradeshow-grid" id="tradeshowGrid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'tradeshow_event' %}
            <div class="trade-show-event-card {{ block.settings.event_status }}" 
                 data-event-status="{{ block.settings.event_status }}"
                 data-event-id="{{ block.id }}">

              <!-- Status Badge -->
              {% if block.settings.event_status == 'upcoming' %}
                <div class="event-status-badge upcoming">
                  <span class="badge-icon">üöÄ</span>
                  Upcoming
                </div>
              {% elsif block.settings.event_status == 'live' %}
                <div class="event-status-badge live">
                  <span class="badge-icon">üî¥</span>
                  Live Now
                </div>
              {% elsif block.settings.event_status == 'past' %}
                <div class="event-status-badge past">
                  <span class="badge-icon">‚úÖ</span>
                  Completed
                </div>
              {% endif %}

              <div class="trade-show-card-header">
                <div class="trade-show-card-left">
                  {% if block.settings.event_dates != blank %}
                    <div class="trade-show-event-dates">
                      <span class="date-icon">üìÖ</span>
                      {{ block.settings.event_dates }}
                    </div>
                  {% endif %}

                  {% if block.settings.booth_number != blank %}
                    <div class="trade-show-booth-info">
                      <span class="booth-icon">üè¢</span>
                      Booth: {{ block.settings.booth_number }}
                    </div>
                  {% endif %}

                  {% if block.settings.event_title != blank %}
                    <h3 class="trade-show-event-title">{{ block.settings.event_title }}</h3>
                  {% endif %}

                  {% if block.settings.event_description != blank %}
                    <div class="trade-show-event-description">
                      {{ block.settings.event_description | truncate: 150 }}
                      {% if block.settings.show_read_more %}
                        <button class="trade-show-read-more-link" onclick="openModal('{{ block.id }}-modal')">
                          Read More
                        </button>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>

                <div class="trade-show-card-right">
                  {% if block.settings.event_logo != blank %}
                    <div class="trade-show-logo-container">
                      <img src="{{ block.settings.event_logo | img_url: '200x200' }}" 
                           alt="{{ block.settings.event_title | escape }} Logo" 
                           class="trade-show-event-logo">
                    </div>
                  {% endif %}
                </div>
              </div>

              <div class="trade-show-event-details">
                {% if block.settings.event_time != blank %}
                  <div class="trade-show-detail-row">
                    <span class="trade-show-detail-icon">‚è∞</span>
                    <span class="trade-show-detail-label">Time:</span>
                    <span class="trade-show-detail-value">{{ block.settings.event_time }}</span>
                  </div>
                {% endif %}

                {% if block.settings.event_location != blank %}
                  <div class="trade-show-detail-row">
                    <span class="trade-show-detail-icon">üåç</span>
                    <span class="trade-show-detail-label">Location:</span>
                    <span class="trade-show-detail-value">{{ block.settings.event_location }}</span>
                  </div>
                {% endif %}

                {% if block.settings.venue_name != blank %}
                  <div class="trade-show-detail-row">
                    <span class="trade-show-detail-icon">üìç</span>
                    <span class="trade-show-detail-label">Venue:</span>
                    <span class="trade-show-detail-value">
                      {% if block.settings.venue_map_url != blank %}
                        <a href="{{ block.settings.venue_map_url }}" target="_blank" class="trade-show-location-link">
                          {{ block.settings.venue_name }}
                        </a>
                      {% else %}
                        {{ block.settings.venue_name }}
                      {% endif %}
                    </span>
                  </div>
                {% endif %}
              </div>

              <div class="trade-show-event-actions">
                {% if block.settings.locator_url != blank %}
                  <a href="{{ block.settings.locator_url }}" target="_blank" class="trade-show-btn trade-show-primary-btn">
                    <span class="btn-icon">üìç</span>
                    Find Us
                  </a>
                {% endif %}

                {% if block.settings.show_calendar_buttons and block.settings.event_status == 'upcoming' %}
                  <div class="trade-show-calendar-container">
                    <button class="trade-show-btn trade-show-calendar-btn" onclick="toggleCalendarDropdown(this, '{{ block.id }}')">
                      <span class="btn-icon">üìÖ</span>
                      Add to Calendar
                    </button>
                    <div class="trade-show-calendar-dropdown" id="calendar-{{ block.id }}">
                      <div class="dropdown-header">Choose Calendar</div>
                      <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('google','{{ block.id }}')">
                        <span class="calendar-icon">üìÖ</span>
                        Google Calendar
                      </a>
                      <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('outlook','{{ block.id }}')">
                        <span class="calendar-icon">üìß</span>
                        Outlook
                      </a>
                      <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('yahoo','{{ block.id }}')">
                        <span class="calendar-icon">üåê</span>
                        Yahoo Calendar
                      </a>
                      <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('apple','{{ block.id }}')">
                        <span class="calendar-icon">üçé</span>
                        Apple Calendar
                      </a>
                      <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('ics','{{ block.id }}')">
                        <span class="calendar-icon">üíæ</span>
                        Download ICS
                      </a>
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>

            <!-- Modal for detailed information -->
            {% if block.settings.show_read_more and block.settings.detailed_description != blank %}
              <div id="{{ block.id }}-modal" class="tradeshow-modal">
                <div class="tradeshow-modal-overlay" onclick="closeModal('{{ block.id }}-modal')"></div>
                <div class="tradeshow-modal-content">
                  <div class="tradeshow-modal-header">
                    <h3>{{ block.settings.event_title }}</h3>
                    <button class="tradeshow-modal-close" onclick="closeModal('{{ block.id }}-modal')">&times;</button>
                  </div>
                  <div class="tradeshow-modal-body">
                    {{ block.settings.detailed_description }}
                  </div>
                </div>
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Pagination Controls -->
    <div class="tradeshow-pagination" id="tradeshowPagination" style="display: none;">
      <button class="pagination-btn" id="prevBtn" onclick="changePage(-1)">
        <span class="btn-icon">‚Üê</span>
        Previous
      </button>
      <div class="pagination-info">
        <span id="currentPage">1</span> of <span id="totalPages">1</span>
      </div>
      <button class="pagination-btn" id="nextBtn" onclick="changePage(1)">
        Next
        <span class="btn-icon">‚Üí</span>
      </button>
    </div>

    <!-- View All Button -->
    {% if section.settings.show_view_all_button and section.settings.view_all_url != blank %}
      <div class="tradeshow-view-all-container">
        <a href="{{ section.settings.view_all_url }}" class="tradeshow-view-all-btn">
          <span class="btn-icon">üîç</span>
          {{ section.settings.view_all_text | default: "View All Trade Shows" }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  /* Reset and Base Styles */
  .tradeshow-section * {
    box-sizing: border-box;
  }

  /* Main Section Styles */
  .tradeshow-section {
    background: {{ settings.tradeshow_background_color | default: '#f8f9fa' }};
    {% if settings.tradeshow_background_gradient != blank %}
      background: {{ settings.tradeshow_background_gradient }};
    {% endif %}
    padding: {{ settings.tradeshow_padding_top | default: 80 }}px 0 {{ settings.tradeshow_padding_bottom | default: 80 }}px 0;
    position: relative;
    overflow: hidden;
    min-height: 60vh;
  }

  .tradeshow-bg-decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(0, 113, 185, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(0, 168, 230, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 40% 80%, rgba(0, 113, 185, 0.02) 0%, transparent 50%);
    pointer-events: none;
  }

  .tradeshow-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  /* Header Styles */
  .tradeshow-header {
    text-align: center;
    margin-bottom: 60px;
    animation: fadeInUp 0.8s ease forwards;
  }

  .tradeshow-title {
    color: {{ settings.tradeshow_title_color | default: '#0071b9' }};
    font-size: {{ settings.tradeshow_title_size | default: 42 }}px;
    line-height: {{ settings.tradeshow_title_line_height | default: 1.2 }};
    font-weight: {{ settings.tradeshow_title_font_weight | default: 700 }};
    margin-bottom: 20px;
    letter-spacing: -0.5px;
    background: linear-gradient(135deg, {{ settings.tradeshow_title_color | default: '#0071b9' }}, #00a8e6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tradeshow-subtitle {
    color: #666;
    font-size: 18px;
    margin-bottom: 30px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .title-underline {
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, {{ settings.tradeshow_title_color | default: '#0071b9' }}, #00a8e6);
    margin: 0 auto;
    border-radius: 2px;
  }

  /* Filter Tabs */
  .tradeshow-filter-tabs {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 50px;
    flex-wrap: wrap;
  }

  .tradeshow-filter-tab {
    background: transparent;
    border: 2px solid {{ settings.tradeshow_card_border_color | default: '#e6e6e6' }};
    color: {{ settings.tradeshow_button_secondary_text | default: '#0071b9' }};
    padding: 12px 24px;
    border-radius: {{ settings.tradeshow_button_border_radius | default: 8 }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 300ms ease;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
  }

  .tab-icon {
    font-size: 16px;
  }

  .tradeshow-filter-tab.active,
  .tradeshow-filter-tab:hover {
    background: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    color: {{ settings.tradeshow_button_primary_text | default: '#ffffff' }};
    border-color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 113, 185, 0.3);
  }

  /* Trade Show Grid */
  .tradeshow-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    gap: {{ settings.tradeshow_card_gap | default: 30 }}px;
    margin-bottom: 60px;
  }

  /* Event Card Styles */
  .trade-show-event-card {
    background: {{ settings.tradeshow_card_background | default: '#ffffff' }};
    border-radius: {{ settings.tradeshow_card_border_radius | default: 16 }}px;
    padding: 32px;
    border: 1px solid {{ settings.tradeshow_card_border_color | default: '#e6e6e6' }};
    position: relative;
    transition: all 300ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
    overflow: hidden;
    box-shadow: 0 12px 40px rgba(0, 113, 185, 0.1);
    animation: fadeInUp 0.6s ease forwards;
    display: flex;
    flex-direction: column;
    min-height: 400px;
  }

  .trade-show-event-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 113, 185, 0.02) 0%, rgba(0, 168, 230, 0.05) 100%);
    opacity: 0;
    transition: opacity 300ms ease;
  }

  .trade-show-event-card:hover {
    transform: translateY(-8px) scale(1.01);
    box-shadow: 0 25px 80px rgba(0, 113, 185, 0.2);
    border-color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
  }

  .trade-show-event-card:hover::before {
    opacity: 1;
  }

  /* Status Badge */
  .event-status-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    padding: 8px 16px;
    border-radius: 25px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 10;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .badge-icon {
    font-size: 14px;
  }

  .event-status-badge.upcoming {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
  }

  .event-status-badge.live {
    background: linear-gradient(135deg, #dc3545, #e74c3c);
    color: white;
    animation: pulse 2s infinite;
    box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
  }

  .event-status-badge.past {
    background: linear-gradient(135deg, #6c757d, #8d959a);
    color: white;
    box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
  }

  /* Card Header */
  .trade-show-card-header {
    display: flex;
    gap: 24px;
    margin-bottom: 24px;
    position: relative;
    z-index: 5;
    flex: 1;
  }

  .trade-show-card-left {
    flex: 1;
  }

  .trade-show-card-right {
    flex-shrink: 0;
    width: 120px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Event Information */
  .trade-show-event-dates {
    color: {{ settings.tradeshow_event_date_color | default: '#0071b9' }};
    font-size: {{ settings.tradeshow_event_date_size | default: 14 }}px;
    font-weight: 600;
    margin-bottom: 8px;
    background: rgba(0, 113, 185, 0.1);
    padding: 8px 12px;
    border-radius: 20px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .date-icon {
    font-size: 16px;
  }

  .trade-show-booth-info {
    color: #28a745;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 12px;
    background: rgba(40, 167, 69, 0.1);
    padding: 6px 12px;
    border-radius: 15px;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .booth-icon {
    font-size: 14px;
  }

  .trade-show-event-title {
    color: {{ settings.tradeshow_event_title_color | default: '#2c3e50' }};
    font-size: {{ settings.tradeshow_event_title_size | default: 24 }}px;
    font-weight: 700;
    margin-bottom: 16px;
    line-height: 1.3;
  }

  .trade-show-event-description {
    color: {{ settings.tradeshow_event_description_color | default: '#666666' }};
    font-size: {{ settings.tradeshow_event_description_size | default: 14 }}px;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .trade-show-read-more-link {
    color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    background: none;
    border: none;
    cursor: pointer;
    font-weight: 600;
    text-decoration: underline;
    margin-left: 8px;
    transition: color 300ms ease;
    font-size: 14px;
  }

  .trade-show-read-more-link:hover {
    color: {{ settings.tradeshow_button_primary_hover_bg | default: '#005a94' }};
  }

  /* Logo Container */
  .trade-show-logo-container {
    width: 100%;
    height: 100%;
    background: #f8f9fa;
    border-radius: 12px;
    padding: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #e9ecef;
    transition: all 300ms ease;
  }

  .trade-show-event-logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 300ms ease;
  }

  .trade-show-event-card:hover .trade-show-logo-container {
    border-color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
  }

  .trade-show-event-card:hover .trade-show-event-logo {
    transform: scale(1.1);
  }

  /* Event Details */
  .trade-show-event-details {
    margin-bottom: 24px;
    position: relative;
    z-index: 5;
    background: #f8f9fa;
    padding: 20px;
    border-radius: 12px;
    border-left: 4px solid {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
  }

  .trade-show-detail-row {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 10px;
  }

  .trade-show-detail-row:last-child {
    margin-bottom: 0;
  }

  .trade-show-detail-icon {
    font-size: 16px;
    width: 20px;
    text-align: center;
  }

  .trade-show-detail-label {
    font-weight: 600;
    color: #2c3e50;
    min-width: 80px;
    font-size: 13px;
  }

  .trade-show-detail-value {
    color: #666;
    font-size: 13px;
    flex: 1;
  }

  .trade-show-location-link {
    color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    text-decoration: none;
    transition: color 300ms ease;
  }

  .trade-show-location-link:hover {
    color: {{ settings.tradeshow_button_primary_hover_bg | default: '#005a94' }};
    text-decoration: underline;
  }

  /* Event Actions */
  .trade-show-event-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    position: relative;
    z-index: 5;
    margin-top: auto;
  }

  .trade-show-btn {
    padding: 12px 20px;
    border-radius: {{ settings.tradeshow_button_border_radius | default: 8 }}px;
    font-weight: 600;
    text-decoration: none;
    font-size: 14px;
    transition: all 300ms ease;
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-align: center;
    justify-content: center;
  }

  .btn-icon {
    font-size: 16px;
  }

  .trade-show-primary-btn {
    background: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    color: {{ settings.tradeshow_button_primary_text | default: '#ffffff' }};
    flex: 1;
  }

  .trade-show-primary-btn:hover {
    background: {{ settings.tradeshow_button_primary_hover_bg | default: '#005a94' }} !important;
    color: {{ settings.tradeshow_button_primary_text | default: '#ffffff' }} !important;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 113, 185, 0.3);
  }

  .trade-show-calendar-btn {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
    flex: 1;
  }

  .trade-show-calendar-btn:hover {
    background: linear-gradient(135deg, #20c997, #17a2b8) !important;
    color: white !important;
    transform: translateY(-2px);
  }

  /* Calendar Dropdown */
  .trade-show-calendar-container {
    position: relative;
    flex: 1;
  }

  .trade-show-calendar-dropdown {
    position: absolute;
    top: calc(100% + 8px);
    left: 0;
    right: 0;
    background: white;
    border: 1px solid {{ settings.tradeshow_card_border_color | default: '#e6e6e6' }};
    border-radius: 12px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    z-index: 1000;
    min-width: 220px;
    display: none;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
  }

  .trade-show-calendar-dropdown.show {
    display: block;
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-header {
    background: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    color: white;
    padding: 12px 16px;
    font-weight: 600;
    font-size: 13px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .trade-show-calendar-option {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    color: #2c3e50;
    text-decoration: none;
    font-size: 14px;
    transition: all 300ms ease;
    border-bottom: 1px solid #f0f0f0;
  }

  .trade-show-calendar-option:last-child {
    border-bottom: none;
  }

  .trade-show-calendar-option:hover {
    background: #f8f9fa;
    color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    transform: translateX(4px);
  }

  .calendar-icon {
    font-size: 16px;
    width: 20px;
    text-align: center;
  }

  /* Pagination */
  .tradeshow-pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 40px;
  }

  .pagination-btn {
    background: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 300ms ease;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .pagination-btn:hover:not(:disabled) {
    background: {{ settings.tradeshow_button_primary_hover_bg | default: '#005a94' }};
    transform: translateY(-2px);
  }

  .pagination-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
    transform: none;
  }

  .pagination-info {
    background: white;
    padding: 12px 20px;
