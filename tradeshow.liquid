<script>
document.addEventListener('DOMContentLoaded', function() {
  console.log('Tradeshow script loaded');

  // Configuration
  const CARDS_PER_PAGE = {{ section.settings.cards_per_page | default: 6 }};
  let currentPage = 1;
  let currentFilter = 'all';
  let filteredCards = [];

  // Get elements
  const grid = document.getElementById('tradeshowGrid');
  const pagination = document.getElementById('tradeshowPagination');
  const currentPageSpan = document.getElementById('currentPage');
  const totalPagesSpan = document.getElementById('totalPages');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  const filterTabs = document.querySelectorAll('.tradeshow-filter-tab');
  const eventCards = document.querySelectorAll('.trade-show-event-card');

  console.log('Found', eventCards.length, 'event cards');

  // Event data for calendar integration
  const eventData = {
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'tradeshow_event' %}
          '{{ block.id }}': {
            title: '{{ block.settings.event_title | escape }}',
            start: '{{ block.settings.event_start_datetime | default: "20250101T090000" }}',
            end: '{{ block.settings.event_end_datetime | default: "20250101T170000" }}',
            description: `{{ block.settings.event_title | escape }} - {{ block.settings.event_description | escape }}

Event Details:
üìÖ Date: {{ block.settings.event_dates | escape }}
‚è∞ Time: {{ block.settings.event_time | escape }}
üè¢ Booth: {{ block.settings.booth_number | escape }}
üìç Location: {{ block.settings.event_location | escape }}
üèõÔ∏è Venue: {{ block.settings.venue_name | escape }}

{% if block.settings.detailed_description != blank %}{{ block.settings.detailed_description | strip_html | escape }}{% endif %}

---
Foxx Life Sciences - Your trusted partner in laboratory solutions
Website: https://www.foxxlifesciences.com/
Contact: sales@foxxlifesciences.com`,
            location: '{{ block.settings.venue_name | escape }}{% if block.settings.event_location != blank %}, {{ block.settings.event_location | escape }}{% endif %}',
            url: '{{ block.settings.locator_url | escape }}',
            mapLocation: '{{ block.settings.venue_map_url | escape }}'
          }{% unless forloop.last %},{% endunless %}
        {% endcase %}
    {% endfor %}
  };

  // Initialize display
  function initializeDisplay() {
    updateFilteredCards();
    updatePagination();
    showCurrentPage();
    
    // Add staggered animation
    const visibleCards = document.querySelectorAll('.trade-show-event-card:not([style*="display: none"])');
    visibleCards.forEach((card, index) => {
      card.style.animationDelay = `${index * 0.1}s`;
    });
  }

  // Filter functionality
  filterTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      const filter = this.getAttribute('data-filter');
      
      // Update active tab
      filterTabs.forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      
      currentFilter = filter;
      currentPage = 1;
      updateFilteredCards();
      updatePagination();
      showCurrentPage();
    });
  });

  function updateFilteredCards() {
    filteredCards = Array.from(eventCards).filter(card => {
      if (currentFilter === 'all') return true;
      return card.getAttribute('data-event-status') === currentFilter;
    });
    console.log('Filtered cards:', filteredCards.length);
  }

  function updatePagination() {
    const totalPages = Math.ceil(filteredCards.length / CARDS_PER_PAGE);
    
    if (totalPages <= 1) {
      pagination.style.display = 'none';
    } else {
      pagination.style.display = 'flex';
      totalPagesSpan.textContent = totalPages;
    }
    
    updatePaginationButtons();
  }

  function updatePaginationButtons() {
    const totalPages = Math.ceil(filteredCards.length / CARDS_PER_PAGE);
    
    prevBtn.disabled = currentPage === 1;
    nextBtn.disabled = currentPage === totalPages;
    currentPageSpan.textContent = currentPage;
  }

  function showCurrentPage() {
    // Hide all cards
    eventCards.forEach(card => {
      card.style.display = 'none';
    });
    
    // Calculate range
    const startIndex = (currentPage - 1) * CARDS_PER_PAGE;
    const endIndex = startIndex + CARDS_PER_PAGE;
    
    // Show filtered cards for current page
    filteredCards.slice(startIndex, endIndex).forEach((card, index) => {
      card.style.display = 'block';
      card.style.animationDelay = `${index * 0.1}s`;
      // Reset animation
      card.style.animation = 'none';
      void card.offsetHeight; // Trigger reflow
      card.style.animation = 'fadeInUp 0.6s ease forwards';
    });
    
    // Smooth scroll to grid
    grid.scrollIntoView({ behavior: 'smooth', block: 'start' });
  }

  // Pagination navigation
  window.changePage = function(direction) {
    const totalPages = Math.ceil(filteredCards.length / CARDS_PER_PAGE);
    const newPage = currentPage + direction;
    
    if (newPage >= 1 && newPage <= totalPages) {
      currentPage = newPage;
      updatePaginationButtons();
      showCurrentPage();
    }
  };

  // Initialize everything
  initializeDisplay();
});

// Calendar dropdown functionality
function toggleCalendarDropdown(button, eventId) {
  const dropdown = document.getElementById(`calendar-${eventId}`);
  const isVisible = dropdown.classList.contains('show');
  
  // Close all dropdowns
  document.querySelectorAll('.trade-show-calendar-dropdown').forEach(d => {
    d.classList.remove('show');
  });
  
  // Toggle current dropdown
  if (!isVisible) {
    dropdown.classList.add('show');
  }
