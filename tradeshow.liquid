
{% comment %}
  Trade Show Section - Clean Professional Version
  Displays upcoming and past trade shows with clean design
{% endcomment %}

<section class="tradeshow-section" data-section-id="{{ section.id }}">
  <div class="tradeshow-container">
    {% if section.settings.section_title != blank %}
      <div class="tradeshow-header">
        <h2 class="tradeshow-title">
          {{ section.settings.section_title }}
        </h2>
        {% if section.settings.section_subtitle != blank %}
          <p class="tradeshow-subtitle">
            {{ section.settings.section_subtitle }}
          </p>
        {% endif %}
        <div class="title-underline"></div>
      </div>
    {% endif %}

    <!-- Filter Tabs (Hidden by default) -->
    {% if section.settings.show_filter_tabs %}
      <div class="tradeshow-filter-tabs" style="display: none;">
        <button class="tradeshow-filter-tab active" data-filter="all">
          All Events
        </button>
        <button class="tradeshow-filter-tab" data-filter="upcoming">
          Upcoming
        </button>
        <button class="tradeshow-filter-tab" data-filter="past">
          Past Events
        </button>
      </div>
    {% endif %}

    <!-- Trade Show Grid -->
    <div class="tradeshow-grid" id="tradeshowGrid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'tradeshow_event' %}
            <div class="trade-show-event-card {{ block.settings.event_status }}" 
                 data-event-status="{{ block.settings.event_status }}"
                 data-event-id="{{ block.id }}">

              <!-- Status Badge (No Emoji) -->
              {% if block.settings.event_status == 'upcoming' %}
                <div class="event-status-badge upcoming">
                  UPCOMING
                </div>
              {% elsif block.settings.event_status == 'live' %}
                <div class="event-status-badge live">
                  LIVE NOW
                </div>
              {% elsif block.settings.event_status == 'past' %}
                <div class="event-status-badge past">
                  COMPLETED
                </div>
              {% endif %}

              <div class="trade-show-card-content">
                <div class="trade-show-card-header">
                  <div class="trade-show-card-left">
                    {% if block.settings.event_dates != blank %}
                      <div class="trade-show-event-dates">
                        {{ block.settings.event_dates }}
                      </div>
                    {% endif %}

                    {% if block.settings.booth_number != blank %}
                      <div class="trade-show-booth-info">
                        Booth: {{ block.settings.booth_number }}
                      </div>
                    {% endif %}

                    {% if block.settings.event_title != blank %}
                      <h3 class="trade-show-event-title">{{ block.settings.event_title }}</h3>
                    {% endif %}

                    {% if block.settings.event_description != blank %}
                      <div class="trade-show-event-description">
                        {{ block.settings.event_description | truncate: 150 }}
                        {% if block.settings.show_read_more %}
                          <button class="trade-show-read-more-link" onclick="openModal('{{ block.id }}-modal')">
                            Read More
                          </button>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>

                  <div class="trade-show-card-right">
                    {% if block.settings.event_logo != blank %}
                      <div class="trade-show-logo-container">
                        <img src="{{ block.settings.event_logo | img_url: '200x200' }}" 
                             alt="{{ block.settings.event_title | escape }} Logo" 
                             class="trade-show-event-logo">
                      </div>
                    {% endif %}
                  </div>
                </div>

                <div class="trade-show-event-details">
                  {% if block.settings.event_time != blank %}
                    <div class="trade-show-detail-row">
                      <span class="trade-show-detail-label">Time:</span>
                      <span class="trade-show-detail-value">{{ block.settings.event_time }}</span>
                    </div>
                  {% endif %}

                  {% if block.settings.event_location != blank %}
                    <div class="trade-show-detail-row">
                      <span class="trade-show-detail-label">Location:</span>
                      <span class="trade-show-detail-value">{{ block.settings.event_location }}</span>
                    </div>
                  {% endif %}

                  {% if block.settings.venue_name != blank %}
                    <div class="trade-show-detail-row">
                      <span class="trade-show-detail-label">Venue:</span>
                      <span class="trade-show-detail-value">
                        {% if block.settings.venue_map_url != blank %}
                          <a href="{{ block.settings.venue_map_url }}" target="_blank" class="trade-show-location-link">
                            {{ block.settings.venue_name }}
                          </a>
                        {% else %}
                          {{ block.settings.venue_name }}
                        {% endif %}
                      </span>
                    </div>
                  {% endif %}
                </div>

                <div class="trade-show-event-actions">
                  {% if block.settings.locator_url != blank %}
                    <a href="{{ block.settings.locator_url }}" target="_blank" class="trade-show-btn trade-show-primary-btn">
                      Find Us
                    </a>
                  {% endif %}

                  {% if block.settings.show_calendar_buttons and block.settings.event_status == 'upcoming' %}
                    <div class="trade-show-calendar-container">
                      <button class="trade-show-btn trade-show-calendar-btn" onclick="toggleCalendarDropdown(this, '{{ block.id }}')">
                        Add to Calendar
                      </button>
                      <div class="trade-show-calendar-dropdown" id="calendar-{{ block.id }}">
                        <div class="dropdown-header">Choose Calendar</div>
                        <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('google','{{ block.id }}')">
                          Google Calendar
                        </a>
                        <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('outlook','{{ block.id }}')">
                          Outlook
                        </a>
                        <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('yahoo','{{ block.id }}')">
                          Yahoo Calendar
                        </a>
                        <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('apple','{{ block.id }}')">
                          Apple Calendar
                        </a>
                        <a href="#" class="trade-show-calendar-option" onclick="addToCalendar('ics','{{ block.id }}')">
                          Download ICS
                        </a>
                      </div>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>

            <!-- Modal for detailed information -->
            {% if block.settings.show_read_more and block.settings.detailed_description != blank %}
              <div id="{{ block.id }}-modal" class="tradeshow-modal">
                <div class="tradeshow-modal-overlay" onclick="closeModal('{{ block.id }}-modal')"></div>
                <div class="tradeshow-modal-content">
                  <div class="tradeshow-modal-header">
                    <h3>{{ block.settings.event_title }}</h3>
                    <button class="tradeshow-modal-close" onclick="closeModal('{{ block.id }}-modal')">&times;</button>
                  </div>
                  <div class="tradeshow-modal-body">
                    {{ block.settings.detailed_description }}
                  </div>
                </div>
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>

    <!-- View All Button -->
    {% if section.settings.show_view_all_button and section.settings.view_all_url != blank %}
      <div class="tradeshow-view-all-container">
        <a href="{{ section.settings.view_all_url }}" class="tradeshow-view-all-btn">
          {{ section.settings.view_all_text | default: "View All Trade Shows" }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  /* Reset and Base Styles */
  .tradeshow-section * {
    box-sizing: border-box;
  }

  /* Main Section Styles */
  .tradeshow-section {
    background: {{ settings.tradeshow_background_color | default: '#f8f9fa' }};
    {% if settings.tradeshow_background_gradient != blank %}
      background: {{ settings.tradeshow_background_gradient }};
    {% endif %}
    padding: {{ settings.tradeshow_padding_top | default: 80 }}px 0 {{ settings.tradeshow_padding_bottom | default: 80 }}px 0;
    position: relative;
  }

  .tradeshow-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Header Styles */
  .tradeshow-header {
    text-align: center;
    margin-bottom: 60px;
    animation: fadeInUp 0.8s ease forwards;
  }

  .tradeshow-title {
    color: {{ settings.tradeshow_title_color | default: '#0071b9' }};
    font-size: {{ settings.tradeshow_title_size | default: 42 }}px;
    line-height: {{ settings.tradeshow_title_line_height | default: 1.2 }};
    font-weight: {{ settings.tradeshow_title_font_weight | default: 700 }};
    margin-bottom: 20px;
    letter-spacing: -0.5px;
  }

  .tradeshow-subtitle {
    color: #666;
    font-size: 18px;
    margin-bottom: 30px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .title-underline {
    width: 80px;
    height: 4px;
    background: {{ settings.tradeshow_title_color | default: '#0071b9' }};
    margin: 0 auto;
    border-radius: 2px;
  }

  /* Trade Show Grid */
  .tradeshow-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    gap: {{ settings.tradeshow_card_gap | default: 30 }}px;
    margin-bottom: 60px;
  }

  /* Event Card Styles - New Clean Design */
  .trade-show-event-card {
    background: {{ settings.tradeshow_card_background | default: '#ffffff' }};
    border-radius: {{ settings.tradeshow_card_border_radius | default: 20 }}px;
    position: relative;
    transition: all 300ms ease;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 113, 185, 0.08);
    animation: fadeInUp 0.6s ease forwards;
    border: 2px solid transparent;
    min-height: 420px;
  }

  .trade-show-event-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 113, 185, 0.15);
    border-color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
  }

  /* Card Content Wrapper */
  .trade-show-card-content {
    padding: 32px;
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
  }

  /* Status Badge - Clean Design */
  .event-status-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    padding: 8px 16px;
    border-radius: 25px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    z-index: 10;
  }

  .event-status-badge.upcoming {
    background: #28a745;
    color: white;
  }

  .event-status-badge.live {
    background: #dc3545;
    color: white;
    animation: pulse 2s infinite;
  }

  .event-status-badge.past {
    background: #6c757d;
    color: white;
  }

  /* Card Header */
  .trade-show-card-header {
    display: flex;
    gap: 24px;
    margin-bottom: 24px;
    flex: 1;
  }

  .trade-show-card-left {
    flex: 1;
  }

  .trade-show-card-right {
    flex-shrink: 0;
    width: 120px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Event Information - Clean Typography */
  .trade-show-event-dates {
    color: {{ settings.tradeshow_event_date_color | default: '#0071b9' }};
    font-size: {{ settings.tradeshow_event_date_size | default: 14 }}px;
    font-weight: 600;
    margin-bottom: 8px;
    background: rgba(0, 113, 185, 0.1);
    padding: 8px 16px;
    border-radius: 20px;
    display: inline-block;
  }

  .trade-show-booth-info {
    color: #28a745;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 12px;
    background: rgba(40, 167, 69, 0.1);
    padding: 6px 16px;
    border-radius: 15px;
    display: inline-block;
  }

  .trade-show-event-title {
    color: {{ settings.tradeshow_event_title_color | default: '#2c3e50' }};
    font-size: {{ settings.tradeshow_event_title_size | default: 24 }}px;
    font-weight: 700;
    margin-bottom: 16px;
    line-height: 1.3;
  }

  .trade-show-event-description {
    color: {{ settings.tradeshow_event_description_color | default: '#666666' }};
    font-size: {{ settings.tradeshow_event_description_size | default: 14 }}px;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .trade-show-read-more-link {
    color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    background: none;
    border: none;
    cursor: pointer;
    font-weight: 600;
    text-decoration: underline;
    margin-left: 8px;
    transition: color 300ms ease;
    font-size: 14px;
  }

  .trade-show-read-more-link:hover {
    color: {{ settings.tradeshow_button_primary_hover_bg | default: '#005a94' }};
  }

  /* Logo Container */
  .trade-show-logo-container {
    width: 100%;
    height: 100%;
    background: #f8f9fa;
    border-radius: 12px;
    padding: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #e9ecef;
    transition: all 300ms ease;
  }

  .trade-show-event-logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 300ms ease;
  }

  .trade-show-event-card:hover .trade-show-logo-container {
    border-color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
  }

  .trade-show-event-card:hover .trade-show-event-logo {
    transform: scale(1.05);
  }

  /* Event Details */
  .trade-show-event-details {
    margin-bottom: 24px;
    background: #f8f9fa;
    padding: 20px;
    border-radius: 12px;
    border-left: 4px solid {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
  }

  .trade-show-detail-row {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 10px;
  }

  .trade-show-detail-row:last-child {
    margin-bottom: 0;
  }

  .trade-show-detail-label {
    font-weight: 600;
    color: #2c3e50;
    min-width: 80px;
    font-size: 13px;
  }

  .trade-show-detail-value {
    color: #666;
    font-size: 13px;
    flex: 1;
  }

  .trade-show-location-link {
    color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    text-decoration: none;
    transition: color 300ms ease;
  }

  .trade-show-location-link:hover {
    color: {{ settings.tradeshow_button_primary_hover_bg | default: '#005a94' }};
    text-decoration: underline;
  }

  /* Event Actions */
  .trade-show-event-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    margin-top: auto;
  }

  .trade-show-btn {
    padding: 12px 20px;
    border-radius: {{ settings.tradeshow_button_border_radius | default: 8 }}px;
    font-weight: 600;
    text-decoration: none;
    font-size: 14px;
    transition: all 300ms ease;
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .trade-show-primary-btn {
    background: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    color: {{ settings.tradeshow_button_primary_text | default: '#ffffff' }};
    flex: 1;
  }

  .trade-show-primary-btn:hover {
    background: {{ settings.tradeshow_button_primary_hover_bg | default: '#005a94' }} !important;
    color: {{ settings.tradeshow_button_primary_text | default: '#ffffff' }} !important;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 113, 185, 0.3);
  }

  .trade-show-calendar-btn {
    background: #28a745;
    color: white;
    flex: 1;
  }

  .trade-show-calendar-btn:hover {
    background: #20c997 !important;
    color: white !important;
    transform: translateY(-2px);
  }

  /* Calendar Dropdown - Fixed z-index */
  .trade-show-calendar-container {
    position: relative;
    flex: 1;
  }

  .trade-show-calendar-dropdown {
    position: absolute;
    top: calc(100% + 8px);
    left: 0;
    right: 0;
    background: white;
    border: 1px solid #e6e6e6;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);
    z-index: 9999; /* Very high z-index */
    min-width: 220px;
    display: none;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
  }

  .trade-show-calendar-dropdown.show {
    display: block;
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-header {
    background: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    color: white;
    padding: 12px 16px;
    font-weight: 600;
    font-size: 13px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .trade-show-calendar-option {
    display: block;
    padding: 14px 16px;
    color: #2c3e50;
    text-decoration: none;
    font-size: 14px;
    transition: all 300ms ease;
    border-bottom: 1px solid #f0f0f0;
  }

  .trade-show-calendar-option:last-child {
    border-bottom: none;
  }

  .trade-show-calendar-option:hover {
    background: #f8f9fa;
    color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    transform: translateX(4px);
  }

  /* View All Button */
  .tradeshow-view-all-container {
    text-align: center;
    margin-top: 40px;
  }

  .tradeshow-view-all-btn {
    background: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    color: {{ settings.tradeshow_button_primary_text | default: '#ffffff' }};
    padding: 16px 32px;
    border-radius: 8px;
    font-weight: 700;
    text-decoration: none;
    font-size: 16px;
    transition: all 300ms ease;
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .tradeshow-view-all-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(0, 113, 185, 0.4);
  }

  /* Modal Styles */
  .tradeshow-modal {
    display: none;
    position: fixed;
    z-index: 99999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
  }

  .tradeshow-modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
  }

  .tradeshow-modal-content {
    background-color: white;
    margin: 5% auto;
    padding: 0;
    border-radius: 20px;
    width: 90%;
    max-width: 600px;
    position: relative;
    animation: modalSlideIn 0.3s ease;
    overflow: hidden;
    max-height: 80vh;
    display: flex;
    flex-direction: column;
  }

  .tradeshow-modal-header {
    background: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    color: white;
    padding: 20px 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .tradeshow-modal-header h3 {
    margin: 0;
    font-size: 20px;
    font-weight: 700;
  }

  .tradeshow-modal-close {
    color: white;
    background: none;
    border: none;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    transition: color 0.3s ease;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tradeshow-modal-close:hover {
    color: #ffcc00;
  }

  .tradeshow-modal-body {
    padding: 30px;
    line-height: 1.6;
    color: #666;
    overflow-y: auto;
    flex: 1;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(220, 53, 69, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(220, 53, 69, 0);
    }
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(-50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .tradeshow-section {
      padding: 40px 0;
    }

    .tradeshow-title {
      font-size: 28px;
    }

    .tradeshow-container {
      padding: 0 16px;
    }

    .tradeshow-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .trade-show-card-header {
      flex-direction: column;
      gap: 16px;
    }

    .trade-show-card-right {
      width: 100px;
      height: 60px;
      align-self: center;
    }

    .trade-show-event-actions {
      flex-direction: column;
    }

    .trade-show-btn {
      width: 100%;
      justify-content: center;
    }

    .trade-show-calendar-dropdown {
      left: 0;
      right: 0;
      width: 100%;
      min-width: auto;
      max-width: 100%;
    }

    .trade-show-event-card {
      padding: 20px;
      min-height: 350px;
    }

    .trade-show-card-content {
      padding: 20px;
    }

    .trade-show-event-title {
      font-size: 20px;
    }

    .tradeshow-modal-content {
      margin: 10px;
      width: calc(100% - 20px);
    }
  }
</style>

<script>
// Calendar dropdown functionality
function toggleCalendarDropdown(button, eventId) {
  const dropdown = document.getElementById(`calendar-${eventId}`);
  const isVisible = dropdown.classList.contains('show');
  
  // Close all dropdowns
  document.querySelectorAll('.trade-show-calendar-dropdown').forEach(d => {
    d.classList.remove('show');
  });
  
  // Toggle current dropdown
  if (!isVisible) {
    dropdown.classList.add('show');
  }
}

// Close dropdowns when clicking outside
document.addEventListener('click', function(event) {
  if (!event.target.closest('.trade-show-calendar-container')) {
    document.querySelectorAll('.trade-show-calendar-dropdown').forEach(dropdown => {
      dropdown.classList.remove('show');
    });
  }
});

// Calendar integration
function addToCalendar(platform, eventId) {
  console.log('Adding to calendar:', platform, eventId);
  
  const card = document.querySelector(`[data-event-id="${eventId}"]`);
  if (!card) return;
  
  const title = card.querySelector('.trade-show-event-title')?.textContent || 'Trade Show Event';
  const dates = card.querySelector('.trade-show-event-dates')?.textContent || '';
  const location = card.querySelector('.trade-show-detail-value')?.textContent || '';
  const description = card.querySelector('.trade-show-event-description')?.textContent || '';
  
  const event = {
    title: title,
    start: '20250101T090000Z',
    end: '20250101T170000Z',
    description: `${title}\n\n${description}\n\nDates: ${dates}\nLocation: ${location}`,
    location: location
  };
  
  let url = '';
  
  switch(platform) {
    case 'google':
      url = `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(event.title)}&dates=${event.start}/${event.end}&details=${encodeURIComponent(event.description)}&location=${encodeURIComponent(event.location)}`;
      window.open(url, '_blank');
      break;
      
    case 'outlook':
    case 'apple':
    case 'ics':
      downloadICS(event);
      break;
      
    case 'yahoo':
      const startDate = event.start.substring(0, 8);
      const endDate = event.end.substring(0, 8);
      url = `https://calendar.yahoo.com/?v=60&view=d&type=20&title=${encodeURIComponent(event.title)}&st=${startDate}&et=${endDate}&desc=${encodeURIComponent(event.description)}&in_loc=${encodeURIComponent(event.location)}`;
      window.open(url, '_blank');
      break;
  }
  
  // Close dropdown
  document.querySelectorAll('.trade-show-calendar-dropdown').forEach(d => d.classList.remove('show'));
}

function downloadICS(event) {
  const now = new Date();
  const timestamp = now.toISOString().replace(/[-:]/g, '').split('.')[0] + 'Z';
  const uid = `${Date.now()}@foxxlifesciences.com`;
  
  const icsContent = `BEGIN:VCALENDAR
VERSION:2.0
PRODID:-//Foxx Life Sciences//Trade Shows//EN
METHOD:PUBLISH
BEGIN:VEVENT
UID:${uid}
DTSTAMP:${timestamp}
DTSTART:${event.start}
DTEND:${event.end}
SUMMARY:${event.title}
DESCRIPTION:${event.description.replace(/\n/g, '\\n')}
LOCATION:${event.location}
ORGANIZER;CN=Foxx Life Sciences:mailto:sales@foxxlifesciences.com
STATUS:CONFIRMED
TRANSP:OPAQUE
BEGIN:VALARM
ACTION:DISPLAY
DESCRIPTION:Reminder: ${event.title}
TRIGGER:-P1D
END:VALARM
END:VEVENT
END:VCALENDAR`;
  
  const blob = new Blob([icsContent], { type: 'text/calendar;charset=utf-8' });
  const url = window.URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url;
  a.download = `${event.title.replace(/[^a-zA-Z0-9]/g, '_')}.ics`;
  document.body.appendChild(a);
  a.click();
  document.body.removeChild(a);
  window.URL.revokeObjectURL(url);
}

// Modal functionality
function openModal(modalId) {
  console.log('Opening modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.style.display = 'block';
    document.body.style.overflow = 'hidden';
  }
}

function closeModal(modalId) {
  console.log('Closing modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.style.display = 'none';
    document.body.style.overflow = 'auto';
  }
}

// Close modal when clicking outside
window.addEventListener('click', function(event) {
  if (event.target.classList.contains('tradeshow-modal-overlay')) {
    const modal = event.target.closest('.tradeshow-modal');
    if (modal) {
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  }
});
