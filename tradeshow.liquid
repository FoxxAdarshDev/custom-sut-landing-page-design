
{% comment %}
  Trade Show Section - Modern Clean Design
  Displays upcoming and past trade shows with improved UI/UX
{% endcomment %}

<section class="tradeshow-section-unique" data-section-id="{{ section.id }}">
  <div class="tradeshow-container-unique">
    {% if section.settings.section_title != blank %}
      <div class="tradeshow-header-unique">
        <h2 class="tradeshow-title-unique">
          {{ section.settings.section_title }}
        </h2>
        {% if section.settings.section_subtitle != blank %}
          <p class="tradeshow-subtitle-unique">
            {{ section.settings.section_subtitle }}
          </p>
        {% endif %}
        <div class="title-underline-unique"></div>
      </div>
    {% endif %}

    <!-- Filter Tabs (Hidden by default) -->
    {% if section.settings.show_filter_tabs %}
      <div class="tradeshow-filter-tabs-unique" style="display: none;">
        <button class="tradeshow-filter-tab-unique active" data-filter="all">
          All Events
        </button>
        <button class="tradeshow-filter-tab-unique" data-filter="upcoming">
          Upcoming
        </button>
        <button class="tradeshow-filter-tab-unique" data-filter="past">
          Past Events
        </button>
      </div>
    {% endif %}

    <!-- Trade Show Grid -->
    <div class="tradeshow-grid-unique" id="tradeshowGrid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'tradeshow_event' %}
            <div class="trade-show-event-card-unique {{ block.settings.event_status }}" 
                 data-event-status="{{ block.settings.event_status }}"
                 data-event-id="{{ block.id }}">

              <!-- Card Header with Status and Logo -->
              <div class="card-header-unique">
                <div class="header-left-unique">
                  {% if block.settings.event_dates != blank %}
                    <div class="event-date-badge-unique">
                      {{ block.settings.event_dates }}
                    </div>
                  {% endif %}

                  {% if block.settings.booth_number != blank %}
                    <div class="booth-badge-unique">
                      Booth: {{ block.settings.booth_number }}
                    </div>
                  {% endif %}
                </div>

                <div class="header-right-unique">
                  <!-- Status Badge -->
                  {% if block.settings.event_status == 'upcoming' %}
                    <div class="status-badge-unique upcoming">UPCOMING</div>
                  {% elsif block.settings.event_status == 'live' %}
                    <div class="status-badge-unique live">LIVE NOW</div>
                  {% elsif block.settings.event_status == 'past' %}
                    <div class="status-badge-unique past">COMPLETED</div>
                  {% endif %}

                  <!-- Event Logo -->
                  {% if block.settings.event_logo != blank %}
                    <div class="event-logo-unique">
                      <img src="{{ block.settings.event_logo | img_url: '120x80' }}" 
                           alt="{{ block.settings.event_title | escape }} Logo" 
                           class="logo-img-unique">
                    </div>
                  {% endif %}
                </div>
              </div>

              <!-- Card Body -->
              <div class="card-body-unique">
                {% if block.settings.event_title != blank %}
                  <h3 class="event-title-unique">{{ block.settings.event_title }}</h3>
                {% endif %}

                {% if block.settings.event_description != blank %}
                  <p class="event-description-unique">
                    {{ block.settings.event_description | truncate: 120 }}
                    {% if block.settings.show_read_more %}
                      <button class="read-more-btn-unique" onclick="openModalUnique('{{ block.id }}-modal')">
                        Read More
                      </button>
                    {% endif %}
                  </p>
                {% endif %}

                <!-- Event Details Grid -->
                <div class="event-details-unique">
                  {% if block.settings.event_time != blank %}
                    <div class="detail-item-unique">
                      <span class="detail-icon-unique">‚è∞</span>
                      <span class="detail-text-unique">{{ block.settings.event_time }}</span>
                    </div>
                  {% endif %}

                  {% if block.settings.event_location != blank %}
                    <div class="detail-item-unique">
                      <span class="detail-icon-unique">üìç</span>
                      <span class="detail-text-unique">{{ block.settings.event_location }}</span>
                    </div>
                  {% endif %}

                  {% if block.settings.venue_name != blank %}
                    <div class="detail-item-unique">
                      <span class="detail-icon-unique">üè¢</span>
                      <span class="detail-text-unique">
                        {% if block.settings.venue_map_url != blank %}
                          <a href="{{ block.settings.venue_map_url }}" target="_blank" class="venue-link-unique">
                            {{ block.settings.venue_name }}
                          </a>
                        {% else %}
                          {{ block.settings.venue_name }}
                        {% endif %}
                      </span>
                    </div>
                  {% endif %}
                </div>
              </div>

              <!-- Card Footer with Actions -->
              <div class="card-footer-unique">
                {% if block.settings.locator_url != blank %}
                  <a href="{{ block.settings.locator_url }}" target="_blank" class="btn-unique btn-primary-unique">
                    <span class="btn-icon-unique">üîç</span>
                    Find Us
                  </a>
                {% endif %}

                {% if block.settings.show_calendar_buttons and block.settings.event_status == 'upcoming' %}
                  <div class="calendar-dropdown-wrapper-unique">
                    <button class="btn-unique btn-secondary-unique calendar-btn-unique" onclick="toggleCalendarDropdownUnique(this, '{{ block.id }}')">
                      <span class="btn-icon-unique">üìÖ</span>
                      Add to Calendar
                      <span class="dropdown-arrow-unique">‚ñº</span>
                    </button>
                    <div class="calendar-dropdown-unique" id="calendar-{{ block.id }}">
                      <div class="dropdown-content-unique">
                        <div class="dropdown-header-unique">Choose Calendar</div>
                        <a href="javascript:void(0)" class="calendar-option-unique" onclick="addToCalendarUnique('google','{{ block.id }}')">
                          <span class="option-icon-unique">üì±</span>
                          Google Calendar
                        </a>
                        <a href="javascript:void(0)" class="calendar-option-unique" onclick="addToCalendarUnique('outlook','{{ block.id }}')">
                          <span class="option-icon-unique">üíº</span>
                          Outlook
                        </a>
                        <a href="javascript:void(0)" class="calendar-option-unique" onclick="addToCalendarUnique('yahoo','{{ block.id }}')">
                          <span class="option-icon-unique">üåê</span>
                          Yahoo Calendar
                        </a>
                        <a href="javascript:void(0)" class="calendar-option-unique" onclick="addToCalendarUnique('apple','{{ block.id }}')">
                          <span class="option-icon-unique">üçé</span>
                          Apple Calendar
                        </a>
                        <a href="javascript:void(0)" class="calendar-option-unique" onclick="addToCalendarUnique('ics','{{ block.id }}')">
                          <span class="option-icon-unique">üíæ</span>
                          Download ICS
                        </a>
                      </div>
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>

            <!-- Modal for detailed information -->
            {% if block.settings.show_read_more %}
              <div id="{{ block.id }}-modal" class="event-modal-unique">
                <div class="modal-overlay-unique"></div>
                <div class="modal-content-unique">
                  <div class="modal-header-unique">
                    <h3>{{ block.settings.event_title | default: 'Event Details' }}</h3>
                    <button class="modal-close-unique" onclick="closeModalUnique('{{ block.id }}-modal')">&times;</button>
                  </div>
                  <div class="modal-body-unique">
                    {% if block.settings.detailed_description != blank %}
                      {{ block.settings.detailed_description }}
                    {% else %}
                      <p>{{ block.settings.event_description | default: 'More details about this event will be available soon.' }}</p>
                      
                      {% if block.settings.event_dates != blank %}
                        <p><strong>Event Dates:</strong> {{ block.settings.event_dates }}</p>
                      {% endif %}
                      
                      {% if block.settings.event_time != blank %}
                        <p><strong>Event Time:</strong> {{ block.settings.event_time }}</p>
                      {% endif %}
                      
                      {% if block.settings.event_location != blank %}
                        <p><strong>Location:</strong> {{ block.settings.event_location }}</p>
                      {% endif %}
                      
                      {% if block.settings.venue_name != blank %}
                        <p><strong>Venue:</strong> {{ block.settings.venue_name }}</p>
                      {% endif %}
                      
                      {% if block.settings.booth_number != blank %}
                        <p><strong>Booth Number:</strong> {{ block.settings.booth_number }}</p>
                      {% endif %}
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>

    <!-- View All Button -->
    {% if section.settings.show_view_all_button and section.settings.view_all_url != blank %}
      <div class="tradeshow-view-all-container-unique">
        <a href="{{ section.settings.view_all_url }}" class="view-all-btn-unique">
          {{ section.settings.view_all_text | default: "View All Trade Shows" }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  /* Reset and Base Styles */
  .tradeshow-section-unique * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  /* Main Section */
  .tradeshow-section-unique {
    background: {{ settings.tradeshow_background_color | default: '#f8f9fa' }};
    {% if settings.tradeshow_background_gradient != blank %}
      background: {{ settings.tradeshow_background_gradient }};
    {% endif %}
    padding: {{ settings.tradeshow_padding_top | default: 80 }}px 0 {{ settings.tradeshow_padding_bottom | default: 80 }}px 0;
    position: relative;
  }

  .tradeshow-container-unique {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  /* Scroll hint gradient */
  .tradeshow-container-unique::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 60px;
    height: 100%;
    background: linear-gradient(to left, rgba(248, 249, 250, 0.8), transparent);
    pointer-events: none;
    z-index: 1;
  }

  /* Header Styles */
  .tradeshow-header-unique {
    text-align: center;
    margin-bottom: 60px;
    animation: fadeInUpUnique 0.8s ease forwards;
  }

  .tradeshow-title-unique {
    color: {{ settings.tradeshow_title_color | default: '#0071b9' }};
    font-size: {{ settings.tradeshow_title_size | default: 42 }}px;
    line-height: {{ settings.tradeshow_title_line_height | default: 1.2 }};
    font-weight: {{ settings.tradeshow_title_font_weight | default: 700 }};
    margin-bottom: 20px;
    letter-spacing: -0.5px;
  }

  .tradeshow-subtitle-unique {
    color: #666;
    font-size: 18px;
    margin-bottom: 30px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .title-underline-unique {
    width: 80px;
    height: 4px;
    background: {{ settings.tradeshow_title_color | default: '#0071b9' }};
    margin: 0 auto;
    border-radius: 2px;
  }

  /* Trade Show Grid - Horizontal Scroll */
  .tradeshow-grid-unique {
    display: flex;
    gap: 20px;
    margin-bottom: 60px;
    padding: 0 20px;
    width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  /* Custom scrollbar styling */
  .tradeshow-grid-unique::-webkit-scrollbar {
    height: 8px;
  }

  .tradeshow-grid-unique::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
  }

  .tradeshow-grid-unique::-webkit-scrollbar-thumb {
    background: rgba(0, 113, 185, 0.3);
    border-radius: 10px;
    transition: background 0.3s ease;
  }

  .tradeshow-grid-unique::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 113, 185, 0.6);
  }

  /* Modern Card Design */
  .trade-show-event-card-unique {
    background: #ffffff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 113, 185, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    border: 1px solid #f0f0f0;
    display: flex;
    flex-direction: column;
    min-height: 320px;
    width: 380px;
    flex-shrink: 0;
    max-width: 380px;
  }

  .trade-show-event-card-unique:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px rgba(0, 113, 185, 0.15);
    border-color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
  }

  /* Card Header */
  .card-header-unique {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 18px 20px 0 20px;
    gap: 12px;
  }

  .header-left-unique {
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
  }

  .header-right-unique {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 12px;
    flex-shrink: 0;
  }

  /* Date and Booth Badges */
  .event-date-badge-unique {
    background: linear-gradient(135deg, {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }}, #0056b3);
    color: white;
    padding: 8px 16px;
    border-radius: 25px;
    font-size: 13px;
    font-weight: 600;
    display: inline-block;
    width: fit-content;
  }

  .booth-badge-unique {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    display: inline-block;
    width: fit-content;
  }

  /* Status Badge */
  .status-badge-unique {
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .status-badge-unique.upcoming {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
  }

  .status-badge-unique.live {
    background: linear-gradient(135deg, #dc3545, #c82333);
    color: white;
    animation: pulseUnique 2s infinite;
  }

  .status-badge-unique.past {
    background: linear-gradient(135deg, #6c757d, #5a6268);
    color: white;
  }

  /* Event Logo */
  .event-logo-unique {
    width: 100px;
    height: 60px;
    background: #f8f9fa;
    border-radius: 12px;
    padding: 8px;
    border: 2px solid #e9ecef;
    transition: all 0.3s ease;
  }

  .logo-img-unique {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .trade-show-event-card-unique:hover .event-logo-unique {
    border-color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    transform: scale(1.05);
  }

  /* Card Body */
  .card-body-unique {
    padding: 16px 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .event-title-unique {
    color: #2c3e50;
    font-size: 20px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0;
  }

  .event-description-unique {
    color: #666;
    font-size: 15px;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .read-more-btn-unique {
    color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    background: none;
    border: none;
    cursor: pointer;
    font-weight: 600;
    text-decoration: underline;
    margin-left: 6px;
    transition: color 0.3s ease;
    font-size: 14px;
  }

  .read-more-btn-unique:hover {
    color: #005a94;
  }

  /* Event Details */
  .event-details-unique {
    display: flex;
    flex-direction: column;
    gap: 10px;
    background: #f8f9fa;
    padding: 16px;
    border-radius: 10px;
    border-left: 4px solid {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
  }

  .detail-item-unique {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
  }

  .detail-icon-unique {
    font-size: 16px;
    width: 20px;
    flex-shrink: 0;
  }

  .detail-text-unique {
    color: #555;
    flex: 1;
  }

  .venue-link-unique {
    color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .venue-link-unique:hover {
    color: #005a94;
    text-decoration: underline;
  }

  /* Card Footer */
  .card-footer-unique {
    padding: 0 20px 18px 20px;
    display: flex;
    gap: 10px;
    margin-top: auto;
  }

  /* Buttons */
  .btn-unique {
    padding: 10px 16px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    font-size: 13px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    flex: 1;
    position: relative;
  }

  .btn-primary-unique {
    background: linear-gradient(135deg, {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }}, #005a94);
    color: white;
  }

  .btn-primary-unique:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 113, 185, 0.3);
    color: white;
  }

  .btn-secondary-unique {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
  }

  .btn-secondary-unique:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
    color: white;
  }

  .btn-icon-unique {
    font-size: 16px;
  }

  /* Calendar Dropdown - Fixed Positioning */
  .calendar-dropdown-wrapper-unique {
    position: relative;
    flex: 1;
  }

  .dropdown-arrow-unique {
    font-size: 12px;
    transition: transform 0.3s ease;
  }

  .calendar-btn-unique.active .dropdown-arrow-unique {
    transform: rotate(180deg);
  }

  .calendar-dropdown-unique {
    position: absolute;
    bottom: 100%;
    left: 0;
    right: 0;
    margin-bottom: 8px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    border: 1px solid #e6e6e6;
  }

  .calendar-dropdown-unique.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-content-unique {
    padding: 0;
  }

  .dropdown-header-unique {
    background: linear-gradient(135deg, {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }}, #005a94);
    color: white;
    padding: 12px 16px;
    font-weight: 600;
    font-size: 13px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .calendar-option-unique {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    color: #2c3e50;
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
    border-bottom: 1px solid #f0f0f0;
  }

  .calendar-option-unique:last-child {
    border-bottom: none;
  }

  .calendar-option-unique:hover {
    background: #f8f9fa;
    color: {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }};
    transform: translateX(4px);
  }

  .option-icon-unique {
    font-size: 16px;
    width: 20px;
  }

  /* Modal Styles - Enhanced without Blur */
  .event-modal-unique {
    display: none;
    position: fixed;
    z-index: 999999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    align-items: center;
    justify-content: center;
  }

  .event-modal-unique.show {
    opacity: 1;
    visibility: visible;
  }

  .modal-overlay-unique {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 999998;
  }

  .modal-content-unique {
    background: white;
    margin: 0;
    padding: 0;
    border-radius: 20px;
    width: 95%;
    max-width: 700px;
    position: relative;
    overflow: hidden;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.4);
    z-index: 1000000;
    transform: translateY(50px) scale(0.95);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .event-modal-unique.show .modal-content-unique {
    transform: translateY(0) scale(1);
  }

  .modal-header-unique {
    background: linear-gradient(135deg, {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }}, #005a94);
    color: white;
    padding: 24px 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .modal-header-unique h3 {
    margin: 0;
    font-size: 22px;
    font-weight: 700;
  }

  .modal-close-unique {
    color: white;
    background: none;
    border: none;
    font-size: 32px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .modal-close-unique:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(90deg);
  }

  .modal-body-unique {
    padding: 30px 40px;
    line-height: 1.8;
    color: #555;
    overflow-y: auto;
    flex: 1;
    font-size: 16px;
  }

  .modal-body-unique p {
    margin-bottom: 20px;
  }

  .modal-body-unique p:last-child {
    margin-bottom: 0;
  }

  .modal-body-unique ul, .modal-body-unique ol {
    margin: 15px 0;
    padding-left: 25px;
  }

  .modal-body-unique li {
    margin-bottom: 8px;
  }

  .modal-body-unique h4, .modal-body-unique h5, .modal-body-unique h6 {
    margin: 25px 0 15px 0;
    color: #2c3e50;
  }

  /* View All Button */
  .tradeshow-view-all-container-unique {
    text-align: center;
    margin-top: 40px;
  }

  .view-all-btn-unique {
    background: linear-gradient(135deg, {{ settings.tradeshow_button_primary_bg | default: '#0071b9' }}, #005a94);
    color: white;
    padding: 18px 36px;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    font-size: 16px;
    transition: all 0.3s ease;
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .view-all-btn-unique:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(0, 113, 185, 0.4);
    color: white;
  }

  /* Animations */
  @keyframes fadeInUpUnique {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulseUnique {
    0% {
      box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7);
