{% schema %}
{
  "name": "Four Pillars",
  "class": "four-pillars-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Four Pillars"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "The foundational principles that guide our organization"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 95
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#0071b9"
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "pillars_padding_top",
        "label": "Top Padding",
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px",
        "default": 100
      },
      {
        "type": "range",
        "id": "pillars_padding_bottom",
        "label": "Bottom Padding",
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px",
        "default": 100
      }
  ],
  "blocks": [
    {
      "type": "pillar",
      "name": "Pillar",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Pillar Title",
          "default": "Innovation"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Pillar Description",
          "default": "We constantly push the boundaries of what's possible in bioprocessing technology."
        },
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon Type",
          "default": "svg",
          "options": [
            {
              "value": "svg",
              "label": "SVG Icon"
            },
            {
              "value": "image",
              "label": "Custom Image"
            }
          ]
        },
        {
          "type": "textarea",
          "id": "svg_code",
          "label": "SVG Code",
          "default": "<svg viewBox='0 0 24 24' fill='currentColor'><path d='M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2zm0 4.15L10.65 8.5l-2.47.36 1.79 1.74-.42 2.46L12 11.85l2.45 1.21-.42-2.46 1.79-1.74-2.47-.36L12 6.15z'/></svg>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Image"
        },
        {
          "type": "color",
          "id": "custom_color",
          "label": "Custom Pillar Color (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Four Pillars",
      "category": "About",
      "blocks": [
        {
          "type": "pillar",
          "settings": {
            "title": "Engineering",
            "description": "At Foxx Bioprocessing, engineering is the starting point of every solution. Our team works closely with customer requirements to ensure technical accuracy, fit, and compliance.",
            "svg_code": "<svg viewBox='0 0 24 24' fill='currentColor'><path d='M9 21c0 .5.4 1 1 1h4c.6 0 1-.5 1-1v-1H9v1zm3-19C8.1 2 5 5.1 5 9c0 2.4 1.2 4.5 3 5.7V17c0 .5.4 1 1 1h6c.6 0 1-.5 1-1v-2.3c1.8-1.3 3-3.4 3-5.7 0-3.9-3.1-7-7-7z'/></svg>"
          }
        },
        {
          "type": "pillar",
          "settings": {
            "title": "Quality",
            "description": "Quality is our operating principle. Every product is built under certified cleanroom conditions with full traceability and validation.",
            "svg_code": "<svg viewBox='0 0 24 24' fill='currentColor'><path d='M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z'/></svg>"
          }
        },
        {
          "type": "pillar",
          "settings": {
            "title": "Customer Service",
            "description": "From first upload to final shipment, our team is available to review your designs, troubleshoot challenges, and support documentation needs.",
            "svg_code": "<svg viewBox='0 0 24 24' fill='currentColor'><path d='M17.71 9.33c.15-.15.15-.39 0-.54l-.7-.7c-.15-.15-.39-.15-.54 0L12 12.56 7.54 8.09c-.15-.15-.39-.15-.54 0l-.7.7c-.15.15-.15.39 0 .54L10.78 14c.39.39 1.02.39 1.41 0l5.52-5.67zm-5.71 1.96c2.48 0 4.5-2.02 4.5-4.5S14.48 2.29 12 2.29 7.5 4.31 7.5 6.79 9.52 11.29 12 11.29zm0-7c1.38 0 2.5 1.12 2.5 2.5S13.38 9.29 12 9.29 9.5 8.17 9.5 6.79 10.62 4.29 12 4.29z'/></svg>"
          }
        },
        {
          "type": "pillar",
          "settings": {
            "title": "Family-owned Company",
            "description": "We are a family-owned company. All resources stay within the business and are reinvested into capability, systems, and teams.",
            "svg_code": "<svg viewBox='0 0 24 24' fill='currentColor'><path d='M16 4c2.21 0 4 1.79 4 4 0 .89-.29 1.71-.78 2.38C17.92 10.83 16.97 11 16 11s-1.92-.17-3.22-.62C12.29 9.71 12 8.89 12 8c0-2.21 1.79-4 4-4zm-4 7c2.21 0 4 1.79 4 4 0 .43-.09.84-.24 1.21L12 19.5 8.24 16.21c-.15-.37-.24-.78-.24-1.21 0-2.21 1.79-4 4-4zm-8 1c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 6c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm16-6c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 6c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z'/></svg>"
          }
        },
        {
          "type": "pillar",
          "settings": {
            "title": "Growth",
            "description": "We expand with purpose by building new capabilities, improving processes, and upgrading infrastructure based on business need and customer demand.",
            "svg_code": "<svg viewBox='0 0 24 24' fill='currentColor'><path d='M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z'/></svg>"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<!-- Four Pillars Section -->
<section class="foxx-four-pillars-section" data-section-id="{{ section.id }}" 
  style="--accent-color: {{ section.settings.accent_color | default: '#0071b9' }}; padding-top: {{ section.settings.pillars_padding_top | default: 100 }}px; padding-bottom: {{ section.settings.pillars_padding_bottom | default: 100 }}px;{% if section.settings.background_image %} background-image: url('{{ section.settings.background_image | img_url: '1920x' }}');{% endif %}">

  {% assign overlay_opacity_decimal = section.settings.overlay_opacity | default: 95 | divided_by: 100.0 %}
  <div class="foxx-pillars-overlay" 
    style="background-color: {{ section.settings.overlay_color | default: '#ffffff' }}; opacity: {{ overlay_opacity_decimal }};"></div>

  <div class="foxx-pillars-container">
    <div class="foxx-section-header">
      {% assign overlay_color = section.settings.overlay_color | default: '#ffffff' %}
      {% assign title_color = '#0071b9' %}
      {% if overlay_color contains '#ffffff' or overlay_color contains '#fff' or overlay_color contains 'white' %}
        {% if overlay_opacity_decimal > 0.7 %}
          {% assign title_color = '#0071b9' %}
        {% else %}
          {% assign title_color = '#ffffff' %}
        {% endif %}
      {% else %}
        {% assign title_color = '#ffffff' %}
      {% endif %}

      <div class="foxx-title-decoration">
        <span class="foxx-decoration-line"></span>
        <span class="foxx-decoration-diamond"></span>
        <span class="foxx-decoration-line"></span>
      </div>
      <h2 class="foxx-section-title" style="color: {{ title_color }};">{{ section.settings.section_title | default: 'Our Four Pillars' }}</h2>
      {% if section.settings.section_description != blank %}
        <p class="foxx-section-subtitle" style="color: {{ title_color | color_lighten: 20 }};">{{ section.settings.section_description }}</p>
      {% endif %}
    </div>

    <div class="foxx-pillars-grid">
      {% for block in section.blocks %}
        {% if block.type == 'pillar' %}
          <div class="foxx-pillar-card" data-aos="fade-up" data-aos-delay="{{ forloop.index0 | times: 200 }}" {{ block.shopify_attributes }}>
            <div class="foxx-pillar-number">{{ forloop.index }}</div>

            <div class="foxx-pillar-icon-wrapper">
              {% if block.settings.icon_type == 'image' and block.settings.image != blank %}
                <div class="foxx-pillar-icon foxx-image-icon">
                  <img src="{{ block.settings.image | img_url: '80x80' }}" alt="{{ block.settings.title }}" loading="lazy">
                </div>
              {% elsif block.settings.svg_code != blank %}
                <div class="foxx-pillar-icon foxx-svg-icon">
                  {{ block.settings.svg_code }}
                </div>
              {% endif %}
            </div>

            <div class="foxx-pillar-content">
              <h3 class="foxx-pillar-title">
                {{ block.settings.title }}
              </h3>
              <div class="foxx-pillar-divider"></div>
              <p class="foxx-pillar-description">{{ block.settings.description }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
/* Foxx Four Pillars Section */
.foxx-four-pillars-section {
  position: relative;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  min-height: 80vh;
  display: flex;
  align-items: center;
}

.foxx-pillars-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  pointer-events: none;
}

.foxx-pillars-container {
  max-width: 100%;
  margin: 0 auto;
  padding: 0 40px;
  position: relative;
  z-index: 2;
}

/* Section Header */
.foxx-section-header {
  text-align: center;
  margin-bottom: 80px;
  position: relative;
}

.foxx-title-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  gap: 15px;
}

.foxx-decoration-line {
  width: 60px;
  height: 2px;
  background: linear-gradient(90deg, transparent, #0071b9, transparent);
}

.foxx-decoration-diamond {
  width: 12px;
  height: 12px;
  background: #0071b9;
  transform: rotate(45deg);
  border-radius: 2px;
}

.foxx-section-title {
  font-size: 38px;
  font-weight: 800;
  color: #0071b9;
  margin-bottom: 20px;
  text-transform: uppercase;
  letter-spacing: 4px;
  text-shadow: 0 2px 8px rgba(0, 113, 185, 0.3);
  position: relative;
  display: inline-block;
  line-height: 1.2;
}

.foxx-section-title::before {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 4px;
  background: linear-gradient(90deg, transparent, #0071b9, transparent);
  border-radius: 2px;
}

.foxx-section-title::after {
  content: '';
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
  width: 200px;
  height: 2px;
  background: linear-gradient(90deg, transparent, rgba(0, 113, 185, 0.5), transparent);
  border-radius: 1px;
}

.foxx-section-subtitle {
  font-size: 20px;
  color: rgba(0, 113, 185, 0.8);
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
  font-weight: 300;
  text-shadow: 0 1px 4px rgba(0, 113, 185, 0.2);
  letter-spacing: 1px;
  font-style: italic;
}

/* Pillars Grid */
.foxx-pillars-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 30px;
  align-items: stretch;
}

/* Pillar Cards */
.foxx-pillar-card {
  background: #ffffff;
  border-radius: 20px;
  padding: 20px;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 1px solid #f0f0f0;
  min-height: 420px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* Odd cards (1st, 3rd) - Filled with primary color */
.foxx-pillar-card:nth-child(odd) {
  background: var(--accent-color, #0071b9);
  color: #ffffff;
  border: 1px solid var(--accent-color, #0071b9);
  border-radius: 20px;
}

/* Even cards (2nd, 4th) - White background */
.foxx-pillar-card:nth-child(even) {
  background: #ffffff;
  color: #333;
  border: 1px solid #f0f0f0;
  position: relative;
}

.foxx-pillar-card:nth-child(even)::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #0071b9, #005a91, #0071b9);
  background-size: 200% 100%;
  animation: foxxShimmer 3s ease-in-out infinite;
}

.foxx-pillar-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 50px rgba(0, 113, 185, 0.15);
}

/* Pillar Number */
.foxx-pillar-number {
  position: absolute;
  display:none!important;
  top: -15px;
  right: 20px;
  width: 40px;
  height: 40px;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: 700;
  z-index: 10;
}

/* Number styling for odd cards */
.foxx-pillar-card:nth-child(odd) .foxx-pillar-number {
  background-color: #ffffff;
  color: var(--accent-color, #0071b9);
  box-shadow: 0 5px 15px rgba(255, 255, 255, 0.3);
}

/* Number styling for even cards */
.foxx-pillar-card:nth-child(even) .foxx-pillar-number {
  background-color: var(--accent-color, #0071b9);
  color: #ffffff;
  box-shadow: 0 5px 15px rgba(0, 113, 185, 0.3);
}

/* Pillar Icon */
.foxx-pillar-icon-wrapper {
  margin-bottom: 30px;
  display: flex;
  justify-content: center;
}

.foxx-pillar-icon {
  width: 80px;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

/* Icon styling for odd cards */
.foxx-pillar-card:nth-child(odd) .foxx-pillar-icon {
  background: rgba(255, 255, 255, 0.2);
  border: 2px solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
}

/* Icon styling for even cards */
.foxx-pillar-card:nth-child(even) .foxx-pillar-icon {
  background: rgba(0, 113, 185, 0.1);
  border: 2px solid rgba(0, 113, 185, 0.2);
  color: var(--accent-color, #0071b9);
}

.foxx-pillar-icon.foxx-svg-icon svg {
  width: 40px;
  height: 40px;
}

.foxx-pillar-icon.foxx-image-icon img {
  width: 40px;
  height: 40px;
  object-fit: contain;
}

.foxx-pillar-card:hover .foxx-pillar-icon {
  transform: scale(1.1);
}

.foxx-pillar-card:nth-child(odd):hover .foxx-pillar-icon {
  background: rgba(255, 255, 255, 0.3);
}

.foxx-pillar-card:nth-child(even):hover .foxx-pillar-icon {
  background: rgba(0, 113, 185, 0.2);
}

/* Pillar Content */
.foxx-pillar-content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  text-align: center;
}

.foxx-pillar-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 15px;
  text-transform: capitalize;
  letter-spacing: 1px;
  line-height: 1.3;
  text-align: center;
  min-height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10px;
}

/* Title color based on card type */
.foxx-pillar-card:nth-child(odd) .foxx-pillar-title {
  color: #ffffff;
}

.foxx-pillar-card:nth-child(even) .foxx-pillar-title {
  color: var(--accent-color, #0071b9);
}

.foxx-pillar-divider {
  width: 50px;
  height: 3px;
  margin: 0 auto 20px;
  border-radius: 2px;
}

/* Divider color based on card type */
.foxx-pillar-card:nth-child(odd) .foxx-pillar-divider {
  background-color: #ffffff;
}

.foxx-pillar-card:nth-child(even) .foxx-pillar-divider {
  background-color: var(--accent-color, #0071b9);
}

.foxx-pillar-description {
  font-size: 15px;
  line-height: 1.7;
  margin: 0;
  text-align: center;
}

/* Description color based on card type */
.foxx-pillar-card:nth-child(odd) .foxx-pillar-description {
  color: rgba(255, 255, 255, 0.9);
}

.foxx-pillar-card:nth-child(even) .foxx-pillar-description {
  color: #666;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .foxx-pillars-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 25px;
  }

  .foxx-section-title {
    font-size: 40px;
  }
}

@media (max-width: 768px) {
  .foxx-four-pillars-section {
    /* Padding controlled by section settings */
  }

  .foxx-pillars-container {
    padding: 0 15px;
  }

  .foxx-section-title {
    font-size: 36px;
    letter-spacing: 2px;
    line-height: 1.2;
  }

  .foxx-section-title::before {
    width: 80px;
    height: 3px;
  }

  .foxx-section-title::after {
    width: 150px;
  }

  .foxx-section-subtitle {
    font-size: 18px;
  }

  .foxx-decoration-line {
    width: 40px;
  }

  .foxx-title-decoration {
    gap: 10px;
  }

  .foxx-pillars-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .foxx-pillar-card {
    padding: 35px 20px;
    min-height: 300px;
  }

  .foxx-pillar-icon {
    width: 60px;
    height: 60px;
  }

  .foxx-pillar-icon.foxx-svg-icon svg,
  .foxx-pillar-icon.foxx-image-icon img {
    width: 30px;
    height: 30px;
  }

  .foxx-pillar-title {
    font-size: 20px;
  }

  .foxx-pillar-description {
    font-size: 14px;
  }

  .foxx-pillar-number {
    width: 35px;
    height: 35px;
    font-size: 16px;
    top: -12px;
    right: 15px;
  }
}

/* Animation */
@media (prefers-reduced-motion: no-preference) {
  .foxx-pillar-card {
    opacity: 0;
    transform: translateY(40px);
    animation: foxxFadeInUp 1s ease forwards;
  }

  .foxx-pillar-card:nth-child(1) { animation-delay: 0.2s; }
  .foxx-pillar-card:nth-child(2) { animation-delay: 0.4s; }
  .foxx-pillar-card:nth-child(3) { animation-delay: 0.6s; }
  .foxx-pillar-card:nth-child(4) { animation-delay: 0.8s; }

  @keyframes foxxFadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes foxxShimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }
}
</style>