        {% if settings.pillar1_image != blank %}
          <div class="fp-unique-card-background" style="background-image: url('{{ settings.pillar1_image | img_url: '600x400' }}');"></div>
        {% endif %}

        <!-- Overlay -->
        <div class="fp-unique-card-overlay" style="background-color: {{ settings.pillars_accent_color | default: '#0071b9' }};"></div>

        <!-- Card Content -->
        <div class="fp-unique-card-content">
          <!-- Icon -->
          {% if settings.pillar1_icon_type == 'image' and settings.pillar1_image != blank %}
            <div class="fp-unique-pillar-icon">
              <img src="{{ settings.pillar1_image | img_url: '80x80' }}" alt="{{ settings.pillar1_title }}" loading="lazy">
            </div>
          {% elsif settings.pillar1_svg_code != blank %}
            <div class="fp-unique-pillar-icon fp-unique-svg-icon">
              {{ settings.pillar1_svg_code }}
            </div>
          {% endif %}

          <!-- Title -->
