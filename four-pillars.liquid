         data-section-id="{{ section.id }}" 
         style="background-color: {{ settings.pillars_background_color | default: '#f8f9fa' }}; 
                padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px 0;">
  <div class="fp-unique-container">
    {% if settings.pillars_section_title != blank or settings.pillars_section_description != blank %}
      <div class="fp-unique-section-header">
        {% if settings.pillars_section_title != blank %}
