{% endschema %}

<!-- Four Pillars Section -->
<section class="foxx-four-pillars-section" data-section-id="{{ section.id }}" 
  {% if section.settings.background_image %}
    style="background-image: url('{{ section.settings.background_image | img_url: '1920x' }}');"
  {% endif %}>

  <div class="foxx-pillars-overlay" 
    style="background-color: {{ section.settings.overlay_color | default: '#ffffff' }}; opacity: {{ section.settings.overlay_opacity | default: 95 | divided_by: 100.0 }};"></div>

  <div class="foxx-pillars-container">
    <div class="foxx-section-header">
      <h2 class="foxx-section-title">{{ section.settings.section_title | default: 'Our Four Pillars' }}</h2>
      {% if section.settings.section_description != blank %}
        <p class="foxx-section-description">{{ section.settings.section_description }}</p>
      {% endif %}
      <div class="foxx-title-underline" style="background-color: {{ section.settings.accent_color | default: '#0071b9' }};"></div>
    </div>

    <div class="foxx-pillars-grid">
      {% for block in section.blocks %}
        {% if block.type == 'pillar' %}
          <div class="foxx-pillar-card" data-aos="fade-up" data-aos-delay="{{ forloop.index0 | times: 200 }}" {{ block.shopify_attributes }}>
            <div class="foxx-pillar-number" style="background-color: {{ section.settings.accent_color | default: '#0071b9' }};">{{ forloop.index }}</div>

            <div class="foxx-pillar-icon-wrapper">
              {% if block.settings.icon_type == 'image' and block.settings.image != blank %}
                <div class="foxx-pillar-icon foxx-image-icon">
                  <img src="{{ block.settings.image | img_url: '80x80' }}" alt="{{ block.settings.title }}" loading="lazy">
                </div>
              {% elsif block.settings.svg_code != blank %}
                <div class="foxx-pillar-icon foxx-svg-icon" style="color: {% if block.settings.custom_color != blank %}{{ block.settings.custom_color }}{% else %}{{ section.settings.accent_color | default: '#0071b9' }}{% endif %};">
                  {{ block.settings.svg_code }}
                </div>
              {% endif %}
            </div>

            <div class="foxx-pillar-content">
              <h3 class="foxx-pillar-title" style="color: {% if block.settings.custom_color != blank %}{{ block.settings.custom_color }}{% else %}{{ section.settings.accent_color | default: '#0071b9' }}{% endif %};">
                {{ block.settings.title }}
              </h3>
              <div class="foxx-pillar-divider" style="background-color: {% if block.settings.custom_color != blank %}{{ block.settings.custom_color }}{% else %}{{ section.settings.accent_color | default: '#0071b9' }}{% endif %};"></div>
              <p class="foxx-pillar-description">{{ block.settings.description }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
/* Foxx Four Pillars Section */
.foxx-four-pillars-section {
  padding: 100px 0;
  position: relative;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  min-height: 80vh;
  display: flex;
  align-items: center;
}

.foxx-pillars-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.foxx-pillars-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
  z-index: 2;
}

/* Section Header */
.foxx-section-header {
  text-align: center;
  margin-bottom: 80px;
}

.foxx-section-title {
  font-size: 48px;
  font-weight: 700;
  color: #333;
  margin-bottom: 25px;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.foxx-section-description {
  font-size: 20px;
  color: #666;
  margin-bottom: 35px;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.6;
}

.foxx-title-underline {
  width: 80px;
  height: 4px;
  margin: 0 auto;
  border-radius: 2px;
}

/* Pillars Grid */
.foxx-pillars-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
  align-items: stretch;
}

/* Pillar Cards */
.foxx-pillar-card {
  background: #ffffff;
  border-radius: 20px;
  padding: 40px 25px;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 1px solid #f0f0f0;
  min-height: 350px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.foxx-pillar-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 50px rgba(0, 113, 185, 0.15);
}

/* Pillar Number */
.foxx-pillar-number {
  position: absolute;
  top: -15px;
  right: 20px;
  width: 40px;
  height: 40px;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: 700;
  box-shadow: 0 5px 15px rgba(0, 113, 185, 0.3);
  z-index: 10;
}

/* Pillar Icon */
.foxx-pillar-icon-wrapper {
  margin-bottom: 30px;
  display: flex;
  justify-content: center;
}

.foxx-pillar-icon {
  width: 80px;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 113, 185, 0.1);
  border-radius: 50%;
  transition: all 0.3s ease;
  border: 2px solid rgba(0, 113, 185, 0.2);
}

.foxx-pillar-icon.foxx-svg-icon svg {
  width: 40px;
  height: 40px;
}

.foxx-pillar-icon.foxx-image-icon img {
  width: 40px;
  height: 40px;
  object-fit: contain;
}

.foxx-pillar-card:hover .foxx-pillar-icon {
  transform: scale(1.1);
  background: rgba(0, 113, 185, 0.2);
}

/* Pillar Content */
.foxx-pillar-content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.foxx-pillar-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 15px;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #333;
}

.foxx-pillar-divider {
  width: 50px;
  height: 3px;
  margin: 0 auto 20px;
  border-radius: 2px;
}

.foxx-pillar-description {
  font-size: 15px;
  line-height: 1.6;
  color: #666;
  margin: 0;
  text-align: left;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .foxx-pillars-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 25px;
  }

  .foxx-section-title {
    font-size: 40px;
  }
}

@media (max-width: 768px) {
  .foxx-four-pillars-section {
    padding: 80px 0;
  }

  .foxx-pillars-container {
    padding: 0 15px;
  }

  .foxx-section-title {
    font-size: 32px;
    letter-spacing: 1px;
  }

  .foxx-section-description {
    font-size: 18px;
  }

  .foxx-pillars-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .foxx-pillar-card {
    padding: 35px 20px;
    min-height: 300px;
  }

  .foxx-pillar-icon {
    width: 60px;
    height: 60px;
  }

  .foxx-pillar-icon.foxx-svg-icon svg,
  .foxx-pillar-icon.foxx-image-icon img {
    width: 30px;
    height: 30px;
  }

  .foxx-pillar-title {
    font-size: 20px;
  }

  .foxx-pillar-description {
    font-size: 14px;
  }

  .foxx-pillar-number {
    width: 35px;
    height: 35px;
    font-size: 16px;
    top: -12px;
    right: 15px;
  }
}

/* Animation */
@media (prefers-reduced-motion: no-preference) {
  .foxx-pillar-card {
    opacity: 0;
    transform: translateY(40px);
    animation: foxxFadeInUp 1s ease forwards;
  }

  .foxx-pillar-card:nth-child(1) { animation-delay: 0.2s; }
  .foxx-pillar-card:nth-child(2) { animation-delay: 0.4s; }
  .foxx-pillar-card:nth-child(3) { animation-delay: 0.6s; }
  .foxx-pillar-card:nth-child(4) { animation-delay: 0.8s; }

  @keyframes foxxFadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
}
</style>