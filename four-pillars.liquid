<!-- Four Pillars Section -->
<section class="four-pillars-section" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.pillars_background_color | default: '#f8f9fa' }};">
  <div class="pillars-container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.pillars_section_title | default: 'Our Four Pillars' }}</h2>
      {% if section.settings.pillars_section_description != blank %}
        <p class="section-description">{{ section.settings.pillars_section_description }}</p>
      {% endif %}
      <div class="title-underline" style="background-color: {{ section.settings.pillars_accent_color | default: '#0071b9' }};"></div>
    </div>

    <div class="pillars-grid">
      {% for block in section.blocks %}
        {% if block.type == 'pillar' %}
          <div class="pillar-card" data-aos="fade-up" data-aos-delay="{{ forloop.index0 | times: 200 }}" {{ block.shopify_attributes }}>
            <div class="pillar-icon-wrapper">
              {% if block.settings.icon_type == 'image' and block.settings.image != blank %}
                <div class="pillar-icon image-icon">
                  <img src="{{ block.settings.image | img_url: '80x80' }}" alt="{{ block.settings.title }}" loading="lazy">
                </div>
              {% elsif block.settings.svg_code != blank %}
                <div class="pillar-icon svg-icon" style="color: {% if block.settings.custom_color != blank %}{{ block.settings.custom_color }}{% else %}{{ section.settings.pillars_accent_color | default: '#0071b9' }}{% endif %};">
                  {{ block.settings.svg_code }}
                </div>
              {% endif %}
            </div>

            <div class="pillar-content">
              <h3 class="pillar-title" style="color: {% if block.settings.custom_color != blank %}{{ block.settings.custom_color }}{% else %}{{ section.settings.pillars_accent_color | default: '#0071b9' }}{% endif %};">
                {{ block.settings.title }}
              </h3>
              <div class="pillar-divider" style="background-color: {% if block.settings.custom_color != blank %}{{ block.settings.custom_color }}{% else %}{{ section.settings.pillars_accent_color | default: '#0071b9' }}{% endif %};"></div>
              <p class="pillar-description">{{ block.settings.description }}</p>
            </div>

            <div class="pillar-glow" style="background: radial-gradient(circle, {% if block.settings.custom_color != blank %}{{ block.settings.custom_color | color_modify: 'alpha', 0.1 }}{% else %}{{ section.settings.pillars_accent_color | default: '#0071b9' | color_modify: 'alpha', 0.1 }}{% endif %} 0%, transparent 70%);"></div>
            
            <div class="pillar-number">{{ forloop.index }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
/* Four Pillars Section */
.four-pillars-section {
  padding: 80px 0;
  position: relative;
  overflow: hidden;
}

.pillars-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Section Header */
.section-header {
  text-align: center;
  margin-bottom: 60px;
}

.section-title {
  font-size: 48px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20px;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.section-description {
  font-size: 20px;
  color: #666;
  margin-bottom: 30px;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.6;
}

.title-underline {
  width: 80px;
  height: 4px;
  margin: 0 auto;
  border-radius: 2px;
}

/* Pillars Grid */
.pillars-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  align-items: stretch;
}

/* Pillar Cards */
.pillar-card {
  background: white;
  border-radius: 20px;
  padding: 40px 30px;
  text-align: center;
  position: relative;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 2px solid transparent;
}

.pillar-card::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, transparent 30%, var(--accent-color, #0071b9) 50%, transparent 70%);
  background-size: 200% 200%;
  border-radius: 22px;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.4s ease;
  animation: borderFlow 3s linear infinite;
}

@keyframes borderFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.pillar-card:hover::before {
  opacity: 1;
}

.pillar-card:hover {
  transform: translateY(-15px) scale(1.02);
  box-shadow: 0 25px 60px rgba(0, 113, 185, 0.2);
}

/* Pillar Icon */
.pillar-icon-wrapper {
  margin-bottom: 30px;
  display: flex;
  justify-content: center;
  position: relative;
}

.pillar-icon {
  width: 80px;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(0, 113, 185, 0.1), rgba(0, 113, 185, 0.2));
  border-radius: 50%;
  transition: all 0.4s ease;
  position: relative;
}

.pillar-icon::before {
  content: '';
  position: absolute;
  top: -3px;
  left: -3px;
  right: -3px;
  bottom: -3px;
  background: linear-gradient(45deg, var(--accent-color, #0071b9), transparent, var(--accent-color, #0071b9));
  border-radius: 50%;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
  animation: iconGlow 2s ease-in-out infinite alternate;
}

@keyframes iconGlow {
  0% { transform: scale(1); }
  100% { transform: scale(1.05); }
}

.pillar-card:hover .pillar-icon::before {
  opacity: 1;
}

.pillar-icon.svg-icon svg {
  width: 40px;
  height: 40px;
  transition: transform 0.3s ease;
}

.pillar-icon.image-icon img {
  width: 40px;
  height: 40px;
  object-fit: contain;
  transition: transform 0.3s ease;
}

.pillar-card:hover .pillar-icon {
  transform: scale(1.1) rotate(5deg);
}

.pillar-card:hover .pillar-icon svg,
.pillar-card:hover .pillar-icon img {
  transform: scale(1.1);
}

/* Pillar Content */
.pillar-content {
  position: relative;
  z-index: 2;
}

.pillar-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 15px;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: all 0.3s ease;
}

.pillar-divider {
  width: 50px;
  height: 3px;
  margin: 0 auto 20px;
  border-radius: 2px;
  transition: width 0.3s ease;
}

.pillar-card:hover .pillar-divider {
  width: 70px;
}

.pillar-description {
  font-size: 16px;
  color: #666;
  line-height: 1.8;
  margin: 0;
  transition: color 0.3s ease;
}

.pillar-card:hover .pillar-description {
  color: #444;
}

/* Pillar Number */
.pillar-number {
  position: absolute;
  top: 20px;
  right: 20px;
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, var(--accent-color, #0071b9), var(--accent-color, #005a91));
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: 700;
  opacity: 0.8;
  transition: all 0.3s ease;
}

.pillar-card:hover .pillar-number {
  opacity: 1;
  transform: scale(1.1);
}

/* Pillar Glow Effect */
.pillar-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  transform: translate(-50%, -50%) scale(0);
  transition: transform 0.4s ease;
  border-radius: 20px;
  pointer-events: none;
  z-index: 1;
}

.pillar-card:hover .pillar-glow {
  transform: translate(-50%, -50%) scale(1.2);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .pillars-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 25px;
  }

  .pillar-card {
    padding: 35px 25px;
  }
}

@media (max-width: 768px) {
  .four-pillars-section {
    padding: 60px 0;
  }

  .pillars-container {
    padding: 0 15px;
  }

  .section-title {
    font-size: 32px;
    letter-spacing: 1px;
  }

  .section-description {
    font-size: 18px;
  }

  .pillars-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .pillar-card {
    padding: 30px 20px;
  }

  .pillar-icon {
    width: 60px;
    height: 60px;
  }

  .pillar-icon.svg-icon svg,
  .pillar-icon.image-icon img {
    width: 30px;
    height: 30px;
  }

  .pillar-title {
    font-size: 20px;
  }

  .pillar-description {
    font-size: 14px;
  }

  .pillar-number {
    width: 35px;
    height: 35px;
    font-size: 16px;
  }
}

@media (max-width: 480px) {
  .section-title {
    font-size: 24px;
  }

  .section-description {
    font-size: 16px;
  }

  .pillars-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .pillar-card {
    padding: 25px 15px;
  }

  .pillar-title {
    font-size: 18px;
  }
}

/* Animation on Scroll */
@media (prefers-reduced-motion: no-preference) {
  .pillar-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease forwards;
  }

  .pillar-card:nth-child(1) { animation-delay: 0.2s; }
  .pillar-card:nth-child(2) { animation-delay: 0.4s; }
  .pillar-card:nth-child(3) { animation-delay: 0.6s; }
  .pillar-card:nth-child(4) { animation-delay: 0.8s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  .pillar-card,
  .pillar-icon {
    animation: none;
    transition: none;
  }
}

.pillar-card:focus {
  outline: 3px solid #0071b9;
  outline-offset: 4px;
}

/* Print Styles */
@media print {
  .four-pillars-section {
    background: white !important;
    color: black !important;
  }
  
  .pillar-glow,
  .pillar-number {
    display: none;
  }
}
</style>
