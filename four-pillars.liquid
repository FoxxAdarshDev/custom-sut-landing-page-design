<style>
/* Four Pillars Section - Clean Design */
.fp-unique-four-pillars-section {
  position: relative;
  overflow: hidden;
  width: 100%;
}

.fp-unique-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Section Header */
.fp-unique-section-header {
  text-align: center;
  margin-bottom: 60px;
}

.fp-unique-section-title {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 20px;
  line-height: 1.2;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.fp-unique-section-description {
  font-size: 16px;
  line-height: 1.6;
  color: #666;
  max-width: 700px;
  margin: 0 auto;
}

/* Pillars Grid */
.fp-unique-pillars-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  align-items: stretch;
}

/* Pillar Cards - Clean Design Like Reference */
.fp-unique-pillar-card {
  position: relative;
  height: 300px;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
  cursor: pointer;
  background: #ffffff;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  border: 1px solid #e0e0e0;
}

.fp-unique-pillar-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 113, 185, 0.15);
}

/* Background Image */
.fp-unique-card-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  transition: transform 0.3s ease;
}

.fp-unique-pillar-card:hover .fp-unique-card-background {
  transform: scale(1.05);
}

/* Overlay - Single Color */
.fp-unique-card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  opacity: 0.85;
  transition: opacity 0.3s ease;
}

.fp-unique-pillar-card:hover .fp-unique-card-overlay {
  opacity: 0.9;
}

/* Card Content */
.fp-unique-card-content {
  position: relative;
  z-index: 3;
  height: 100%;
  padding: 30px 25px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  color: white;
}

/* Pillar Icon - Clean Circle Design */
.fp-unique-pillar-icon {
  width: 60px;
  height: 60px;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  border: 2px solid rgba(255, 255, 255, 0.4);
}

.fp-unique-pillar-card:hover .fp-unique-pillar-icon {
  transform: scale(1.1);
  background: rgba(255, 255, 255, 0.35);
}

.fp-unique-pillar-icon img {
  width: 30px;
  height: 30px;
  object-fit: contain;
  filter: brightness(0) invert(1);
}

.fp-unique-svg-icon svg {
  width: 30px;
  height: 30px;
  fill: currentColor;
}

/* Pillar Title */
.fp-unique-pillar-title {
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 15px;
  text-transform: uppercase;
  letter-spacing: 1px;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

/* Pillar Description */
.fp-unique-pillar-description {
  font-size: 13px;
  line-height: 1.5;
  margin: 0 0 20px 0;
  flex-grow: 1;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  opacity: 0.95;
}

/* Learn More CTA */
.fp-unique-pillar-cta {
  margin-top: auto;
}

.fp-unique-learn-more {
  display: inline-block;
  padding: 8px 16px;
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.4);
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.fp-unique-pillar-card:hover .fp-unique-learn-more {
  background: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.6);
  transform: translateY(-2px);
}

/* Default Background for Cards without Images - Single Color */
.fp-unique-pillar-card:not(:has(.fp-unique-card-background)) .fp-unique-card-overlay {
  background: #0071b9;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .fp-unique-pillars-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 25px;
  }

  .fp-unique-pillar-card {
    height: 280px;
  }
}

@media (max-width: 768px) {
  .fp-unique-four-pillars-section {
    padding: 60px 0;
  }

  .fp-unique-section-title {
    font-size: 24px;
  }

  .fp-unique-section-description {
    font-size: 14px;
  }

  .fp-unique-pillars-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .fp-unique-pillar-card {
    height: 250px;
  }

  .fp-unique-card-content {
    padding: 25px 20px;
  }

  .fp-unique-pillar-icon {
    width: 50px;
    height: 50px;
    margin-bottom: 15px;
  }

  .fp-unique-pillar-icon img,
  .fp-unique-svg-icon svg {
    width: 25px;
    height: 25px;
  }

  .fp-unique-pillar-title {
    font-size: 16px;
    margin-bottom: 12px;
  }

  .fp-unique-pillar-description {
    font-size: 12px;
  }
}

@media (max-width: 480px) {
  .fp-unique-pillars-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .fp-unique-pillar-card {
    height: 220px;
  }

  .fp-unique-pillar-title {
    font-size: 14px;
  }

  .fp-unique-pillar-description {
    font-size: 11px;
  }
}

/* Focus states for accessibility */
.fp-unique-pillar-card:focus {
  outline: 3px solid #0071b9;
  outline-offset: 4px;
}
</style>