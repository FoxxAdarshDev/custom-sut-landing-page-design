    text-align: center;
    border-bottom: 3px solid #dee2e6;
  }

  .collection-header img {
    max-width: 300px;
    max-height: 200px;
    width: auto;
    height: auto;
    object-fit: contain;
    margin-bottom: 20px;
    border-radius: 10px;
  }

  .collection-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1E3A8A;
    margin-bottom: 10px;
  }

  .collection-description {
    font-size: 1.1rem;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
  }

  .products-grid {
