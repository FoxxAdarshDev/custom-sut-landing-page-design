<script>
(function() {
  function updatePatrioticCountdown() {
    const targetDate = new Date('2024-07-31T23:59:59').getTime();
    const now = new Date().getTime();
    const timeLeft = targetDate - now;

    if (timeLeft > 0) {
      const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
      const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

      // Update main countdown
      document.getElementById('days-mini').textContent = days.toString().padStart(2, '0');
      document.getElementById('hours-mini').textContent = hours.toString().padStart(2, '0');
      document.getElementById('minutes-mini').textContent = minutes.toString().padStart(2, '0');
      document.getElementById('seconds-mini').textContent = seconds.toString().padStart(2, '0');

      // Update small timer
      document.getElementById('small-days').textContent = days.toString().padStart(2, '0');
      document.getElementById('small-hours').textContent = hours.toString().padStart(2, '0');
      document.getElementById('small-minutes').textContent = minutes.toString().padStart(2, '0');
      document.getElementById('small-seconds').textContent = seconds.toString().padStart(2, '0');

      // Add urgency pulse when less than 24 hours left
      const badge = document.getElementById('patriotic-sale-badge');
      if (timeLeft < 24 * 60 * 60 * 1000) {
        badge.classList.add('urgency-pulse');
      }
    } else {
      // Sale ended
      const badge = document.getElementById('patriotic-sale-badge');
      const smallTimer = document.getElementById('small-timer-badge');
      const saleTitle = document.getElementById('sale-title-text');
      const countdownContainer = document.getElementById('countdown-timer-container');
      
      // Add sale ended classes
      badge.classList.add('sale-ended');
      smallTimer.classList.add('sale-ended');
      
      // Hide countdown timer and show "SALE ENDED!" message
      countdownContainer.style.display = 'none';
      saleTitle.textContent = 'SALE ENDED!';
      saleTitle.style.fontSize = '14px';
      saleTitle.style.fontWeight = '700';
      
      // Update small timer to show sale ended
      document.querySelector('.small-timer-content').innerHTML = '<span style="font-size: 12px; font-weight: 700;">SALE ENDED!</span>';
    }
  }

  // Update countdown immediately and then every second
  updatePatrioticCountdown();
  setInterval(updatePatrioticCountdown, 1000);
})();
