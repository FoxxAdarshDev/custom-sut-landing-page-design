</li>

<script>
// Labour Day Sale Countdown Timer (Boston Time)
function updateLabourDayCountdown() {
    try {
        // Set target date to September 30th, 2025 11:59 PM Boston Time
        const targetDate = new Date('2025-09-30T23:59:59-04:00'); // EDT timezone
        
        // Get current time in Boston timezone
        const now = new Date();
        const bostonTime = new Date(now.toLocaleString("en-US", {timeZone: "America/New_York"}));
        
        const timeDifference = targetDate.getTime() - bostonTime.getTime();
        
        const countdownElement = document.getElementById('countdown-text');
        
        if (!countdownElement) return;
        
        if (timeDifference > 0) {
            const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
            const hours = Math.floor((timeDifference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
            
            let countdownText = '';
            if (days > 0) {
                countdownText = `${days}d ${hours}h ${minutes}m`;
            } else if (hours > 0) {
                countdownText = `${hours}h ${minutes}m`;
            } else if (minutes > 0) {
                countdownText = `${minutes}m left`;
            } else {
                countdownText = 'Ending soon!';
            }
            
            countdownElement.textContent = `Sale ends: ${countdownText}`;
        } else {
            // Sale has ended - hide the entire countdown and potentially the menu highlight
            const countdownContainer = document.getElementById('labour-day-countdown');
            const labourDayMenu = document.querySelector('.labour-day-sale-menu');
            
            if (countdownContainer) {
                countdownContainer.classList.add('expired');
            }
            
            // Optionally remove the special styling when sale ends
            if (labourDayMenu) {
                labourDayMenu.classList.remove('labour-day-sale-menu');
            }
        }
    } catch (error) {
        console.error('Labour Day countdown error:', error);
    }
}

// Initialize countdown when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
    updateLabourDayCountdown();
    
    // Update countdown every minute
    setInterval(updateLabourDayCountdown, 60000);
});
</script>