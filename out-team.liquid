
{% schema %}
{
  "name": "Meet Our Leaders",
  "class": "team-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "MEET OUR LEADERS"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Our leadership team brings decades of experience and innovative thinking to drive our mission forward."
    },
    {
      "type": "checkbox",
      "id": "enable_filters",
      "label": "Enable Filter Tabs",
      "default": true
    },
    {
      "type": "text",
      "id": "filter_all_text",
      "label": "All Filter Text",
      "default": "All"
    },
    {
      "type": "text",
      "id": "filter_executive_text",
      "label": "Executive Filter Text",
      "default": "Executive Leadership"
    },
    {
      "type": "text",
      "id": "filter_management_text",
      "label": "Management Filter Text",
      "default": "Management Team"
    },
    {
      "type": "text",
      "id": "filter_advisory_text",
      "label": "Advisory Filter Text",
      "default": "Advisory Board"
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "member_image",
          "label": "Member Photo"
        },
        {
          "type": "text",
          "id": "member_name",
          "label": "Full Name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "member_position",
          "label": "Position/Title",
          "default": "Chief Executive Officer"
        },
        {
          "type": "textarea",
          "id": "member_bio",
          "label": "Bio/Description"
        },
        {
          "type": "select",
          "id": "member_category",
          "label": "Team Category",
          "default": "executive",
          "options": [
            {
              "value": "executive",
              "label": "Executive Leadership"
            },
            {
              "value": "management",
              "label": "Management Team"
            },
            {
              "value": "advisory",
              "label": "Advisory Board"
            }
          ]
        },
        {
          "type": "select",
          "id": "card_theme",
          "label": "Card Theme Color",
          "default": "pink",
          "options": [
            {
              "value": "pink",
              "label": "Pink"
            },
            {
              "value": "blue",
              "label": "Blue"
            },
            {
              "value": "purple",
              "label": "Purple"
            },
            {
              "value": "green",
              "label": "Green"
            },
            {
              "value": "orange",
              "label": "Orange"
            }
          ]
        },
        {
          "type": "header",
          "content": "Social Media Links"
        },
        {
          "type": "url",
          "id": "linkedin_url",
          "label": "LinkedIn URL"
        },
        {
          "type": "url",
          "id": "twitter_url",
          "label": "Twitter URL"
        },
        {
          "type": "url",
          "id": "email",
          "label": "Email Address"
        },
        {
          "type": "url",
          "id": "website_url",
          "label": "Personal Website"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Meet Our Leaders",
      "category": "Team",
      "blocks": [
        {
          "type": "team_member",
          "settings": {
            "member_name": "John Cooling",
            "member_position": "President & CEO",
            "member_category": "executive",
            "card_theme": "pink"
          }
        },
        {
          "type": "team_member",
          "settings": {
            "member_name": "Kevin Cooling",
            "member_position": "VP of Manufacturing",
            "member_category": "executive",
            "card_theme": "blue"
          }
        },
        {
          "type": "team_member",
          "settings": {
            "member_name": "Jeff Meade",
            "member_position": "Senior VP of Sales",
            "member_category": "executive",
            "card_theme": "purple"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<!-- Meet Our Leaders Section -->
<section class="leaders-section" data-section-id="{{ section.id }}">
  <div class="leaders-container">
    <!-- Section Header -->
    <div class="leaders-header">
      <h2 class="leaders-title">{{ section.settings.section_title | default: 'MEET OUR LEADERS' }}</h2>
      {% if section.settings.section_description != blank %}
        <p class="leaders-description">{{ section.settings.section_description }}</p>
      {% endif %}
    </div>

    <!-- Filter Tabs -->
    {% if section.settings.enable_filters %}
      <div class="leaders-filters">
        <button class="filter-btn active" data-filter="all">
          {{ section.settings.filter_all_text | default: 'All' }}
        </button>
        <button class="filter-btn" data-filter="executive">
          {{ section.settings.filter_executive_text | default: 'Executive Leadership' }}
        </button>
        <button class="filter-btn" data-filter="management">
          {{ section.settings.filter_management_text | default: 'Management Team' }}
        </button>
        <button class="filter-btn" data-filter="advisory">
          {{ section.settings.filter_advisory_text | default: 'Advisory Board' }}
        </button>
      </div>
    {% endif %}

    <!-- Team Grid -->
    <div class="leaders-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'team_member' %}
            <div class="leader-card" data-category="{{ block.settings.member_category | default: 'executive' }}" data-theme="{{ block.settings.card_theme | default: 'pink' }}">
              <div class="card-background">
                <div class="geometric-shape"></div>
                <div class="geometric-accent"></div>
              </div>

              <div class="member-image-container">
                {% if block.settings.member_image != blank %}
                  <img src="{{ block.settings.member_image | img_url: '400x400' }}" 
                       alt="{{ block.settings.member_name }}" 
                       class="member-image"
                       loading="lazy">
                {% else %}
                  <div class="member-image-placeholder">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                  </div>
                {% endif %}
              </div>

              <!-- Social Media Links -->
              <div class="social-links">
                {% if block.settings.linkedin_url != blank %}
                  <a href="{{ block.settings.linkedin_url }}" target="_blank" rel="noopener" class="social-link linkedin">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </a>
                {% endif %}

                {% if block.settings.twitter_url != blank %}
                  <a href="{{ block.settings.twitter_url }}" target="_blank" rel="noopener" class="social-link twitter">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                  </a>
                {% endif %}

                {% if block.settings.email != blank %}
                  <a href="mailto:{{ block.settings.email }}" class="social-link email">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                    </svg>
                  </a>
                {% endif %}

                {% if block.settings.website_url != blank %}
                  <a href="{{ block.settings.website_url }}" target="_blank" rel="noopener" class="social-link website">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                    </svg>
                  </a>
                {% endif %}
              </div>

              <!-- Info Badge -->
              <div class="info-badge">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
                </svg>
              </div>

              <div class="member-content">
                <h3 class="member-name">{{ block.settings.member_name | default: 'Team Member' }}</h3>
                <p class="member-position">{{ block.settings.member_position | default: 'Position' }}</p>

                {% if block.settings.member_bio != blank %}
                  <div class="member-bio">
                    <p>{{ block.settings.member_bio }}</p>
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Empty State -->
    <div class="empty-state" style="display: none;">
      <p>No team members found for the selected category.</p>
    </div>
  </div>
</section>

<style>
/* Leaders Section */
.leaders-section {
  position: relative;
  padding: 100px 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  overflow: hidden;
}

.leaders-container {
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
  z-index: 2;
}

/* Header */
.leaders-header {
  text-align: center;
  margin-bottom: 60px;
}

.leaders-title {
  font-size: 48px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20px;
  text-transform: uppercase;
  letter-spacing: 2px;
  position: relative;
  display: inline-block;
}

.leaders-title::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 3px;
  background: linear-gradient(90deg, #e91e63, #9c27b0);
  border-radius: 2px;
}

.leaders-description {
  font-size: 18px;
  color: #666;
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
}

/* Filter Tabs */
.leaders-filters {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-bottom: 50px;
  flex-wrap: wrap;
}

.filter-btn {
  padding: 12px 24px;
  border: 2px solid #e9ecef;
  background: white;
  color: #666;
  border-radius: 30px;
  font-weight: 600;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.filter-btn:hover,
.filter-btn.active {
  background: #e91e63;
  color: white;
  border-color: #e91e63;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(233, 30, 99, 0.3);
}

/* Team Grid */
.leaders-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 40px;
  max-width: 1000px;
  margin: 0 auto;
}

/* Leader Card */
.leader-card {
  position: relative;
  border-radius: 30px;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  background: white;
  box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
  height: 450px;
  transform-style: preserve-3d;
}

.leader-card:hover {
  transform: translateY(-15px) rotateX(5deg);
  box-shadow: 0 30px 80px rgba(0, 0, 0, 0.15);
}

/* Card Background with Geometric Shapes */
.card-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 65%;
  overflow: hidden;
  border-radius: 30px 30px 0 0;
}

.geometric-shape {
  position: absolute;
  top: -20%;
  right: -20%;
  width: 140%;
  height: 140%;
  border-radius: 50% 30% 70% 40%;
  transition: all 0.4s ease;
}

.geometric-accent {
  position: absolute;
  bottom: -10%;
  left: -10%;
  width: 60%;
  height: 60%;
  border-radius: 40% 60% 30% 70%;
  opacity: 0.3;
  transition: all 0.4s ease;
}

/* Theme Colors */
.leader-card[data-theme="pink"] .geometric-shape {
  background: linear-gradient(135deg, #f8bbd9, #e91e63);
}

.leader-card[data-theme="pink"] .geometric-accent {
  background: linear-gradient(135deg, #fce4ec, #f48fb1);
}

.leader-card[data-theme="blue"] .geometric-shape {
  background: linear-gradient(135deg, #bbdefb, #2196f3);
}

.leader-card[data-theme="blue"] .geometric-accent {
  background: linear-gradient(135deg, #e3f2fd, #90caf9);
}

.leader-card[data-theme="purple"] .geometric-shape {
  background: linear-gradient(135deg, #d1c4e9, #9c27b0);
}

.leader-card[data-theme="purple"] .geometric-accent {
  background: linear-gradient(135deg, #f3e5f5, #ce93d8);
}

.leader-card[data-theme="green"] .geometric-shape {
  background: linear-gradient(135deg, #c8e6c9, #4caf50);
}

.leader-card[data-theme="green"] .geometric-accent {
  background: linear-gradient(135deg, #e8f5e8, #a5d6a7);
}

.leader-card[data-theme="orange"] .geometric-shape {
  background: linear-gradient(135deg, #ffe0b2, #ff9800);
}

.leader-card[data-theme="orange"] .geometric-accent {
  background: linear-gradient(135deg, #fff3e0, #ffcc02);
}

.leader-card:hover .geometric-shape {
  transform: rotate(10deg) scale(1.1);
}

.leader-card:hover .geometric-accent {
  transform: rotate(-15deg) scale(1.2);
}

/* Member Image Container */
.member-image-container {
  position: relative;
  width: 140px;
  height: 140px;
  margin: 50px auto 20px;
  border-radius: 50%;
  overflow: hidden;
  border: 5px solid white;
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  z-index: 3;
}

.leader-card:hover .member-image-container {
  transform: scale(1.05);
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.25);
}

.member-image,
.member-image-placeholder {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  color: #ccc;
}

.member-image-placeholder svg {
  width: 60px;
  height: 60px;
}

/* Social Links */
.social-links {
  position: absolute;
  top: 25px;
  left: 25px;
  display: flex;
  gap: 12px;
  opacity: 0;
  transform: translateY(-20px);
  transition: all 0.3s ease;
  z-index: 4;
}

.leader-card:hover .social-links {
  opacity: 1;
  transform: translateY(0);
}

.social-link {
  width: 45px;
  height: 45px;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.social-link:hover {
  background: white;
  transform: scale(1.1) translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.social-link.linkedin:hover { color: #0077b5; }
.social-link.twitter:hover { color: #1da1f2; }
.social-link.email:hover { color: #ea4335; }
.social-link.website:hover { color: #0071b9; }

.social-link svg {
  width: 20px;
  height: 20px;
}

/* Info Badge */
.info-badge {
  position: absolute;
  top: 25px;
  right: 25px;
  width: 45px;
  height: 45px;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  z-index: 4;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.info-badge:hover {
  background: white;
  transform: scale(1.1) translateY(-2px);
  color: #e91e63;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.info-badge svg {
  width: 22px;
  height: 22px;
}

/* Member Content */
.member-content {
  padding: 0 35px 35px;
  text-align: center;
  position: relative;
  z-index: 2;
  background: white;
  border-radius: 0 0 30px 30px;
}

.member-name {
  font-size: 28px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8px;
  transition: color 0.3s ease;
}

.member-position {
  font-size: 16px;
  color: #7f8c8d;
  margin-bottom: 15px;
  font-weight: 500;
}

.member-bio {
  opacity: 0;
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
}

.leader-card:hover .member-bio {
  opacity: 1;
  max-height: 100px;
}

.member-bio p {
  font-size: 14px;
  color: #777;
  line-height: 1.5;
  margin: 0;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: #666;
  font-size: 18px;
}

/* Filter Animation */
.leader-card.filtering {
  opacity: 0;
  transform: scale(0.8);
  pointer-events: none;
}

.leader-card.visible {
  opacity: 1;
  transform: scale(1);
  pointer-events: auto;
}

/* Mobile Responsive */
@media (max-width: 1024px) {
  .leaders-section {
    padding: 80px 0;
  }

  .leaders-title {
    font-size: 40px;
    letter-spacing: 1px;
  }

  .leaders-grid {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }

  .leader-card {
    height: 420px;
  }
}

@media (max-width: 768px) {
  .leaders-section {
    padding: 60px 0;
  }

  .leaders-container {
    padding: 0 15px;
  }

  .leaders-title {
    font-size: 32px;
  }

  .leaders-description {
    font-size: 16px;
  }

  .leaders-header {
    margin-bottom: 40px;
  }

  .leaders-filters {
    margin-bottom: 35px;
  }

  .filter-btn {
    padding: 10px 20px;
    font-size: 12px;
  }

  .leaders-grid {
    grid-template-columns: 1fr;
    gap: 25px;
  }

  .leader-card {
    height: 400px;
    margin: 0 auto;
    max-width: 350px;
  }

  .member-content {
    padding: 0 25px 25px;
  }

  .member-image-container {
    width: 120px;
    height: 120px;
    margin: 40px auto 15px;
  }

  .social-links {
    top: 20px;
    left: 20px;
    gap: 8px;
  }

  .social-link,
  .info-badge {
    width: 40px;
    height: 40px;
  }

  .social-link svg,
  .info-badge svg {
    width: 18px;
    height: 18px;
  }
}

@media (max-width: 480px) {
  .leaders-title {
    font-size: 28px;
  }

  .leaders-description {
    font-size: 14px;
  }

  .filter-btn {
    padding: 8px 16px;
    font-size: 11px;
  }

  .leader-card {
    height: 380px;
  }

  .member-image-container {
    width: 100px;
    height: 100px;
    margin: 35px auto 15px;
  }

  .member-name {
    font-size: 24px;
  }

  .member-position {
    font-size: 14px;
  }
}

/* Animation on Scroll */
@media (prefers-reduced-motion: no-preference) {
  .leader-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease forwards;
  }

  .leader-card:nth-child(1) { animation-delay: 0.1s; }
  .leader-card:nth-child(2) { animation-delay: 0.2s; }
  .leader-card:nth-child(3) { animation-delay: 0.3s; }
  .leader-card:nth-child(4) { animation-delay: 0.4s; }
  .leader-card:nth-child(5) { animation-delay: 0.5s; }
  .leader-card:nth-child(6) { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
}

/* Print Styles */
@media print {
  .leaders-section {
    background: white !important;
    color: black !important;
  }

  .social-links,
  .info-badge {
    display: none !important;
  }
}
</style>

<script>
// Leaders Section Functionality
document.addEventListener('DOMContentLoaded', function() {
  const filterBtns = document.querySelectorAll('.filter-btn');
  const leaderCards = document.querySelectorAll('.leader-card');
  const emptyState = document.querySelector('.empty-state');

  // Filter functionality
  filterBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      const filter = this.getAttribute('data-filter');

      // Update active button
      filterBtns.forEach(b => b.classList.remove('active'));
      this.classList.add('active');

      // Filter cards
      let visibleCount = 0;
      leaderCards.forEach(card => {
        const category = card.getAttribute('data-category');

        if (filter === 'all' || category === filter) {
          card.classList.remove('filtering');
          card.classList.add('visible');
          visibleCount++;
        } else {
          card.classList.add('filtering');
          card.classList.remove('visible');
        }
      });

      // Show/hide empty state
      if (emptyState) {
        emptyState.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    });
  });

  // Initialize - show all cards
  leaderCards.forEach(card => {
    card.classList.add('visible');
  });

  // Enhanced hover effects with 3D transforms
  leaderCards.forEach(card => {
    card.addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-15px) rotateX(5deg) rotateY(2deg)';
    });

    card.addEventListener('mouseleave', function() {
      this.style.transform = 'translateY(0) rotateX(0) rotateY(0)';
    });

    // Mouse move 3D effect
    card.addEventListener('mousemove', function(e) {
      const rect = this.getBoundingClientRect();
      const centerX = rect.left + rect.width / 2;
      const centerY = rect.top + rect.height / 2;
      const mouseX = e.clientX - centerX;
      const mouseY = e.clientY - centerY;
      
      const rotateX = (mouseY / rect.height) * -10;
      const rotateY = (mouseX / rect.width) * 10;
      
      this.style.transform = `translateY(-15px) rotateX(${5 + rotateX}deg) rotateY(${2 + rotateY}deg)`;
    });

    // Info badge click handler
    const infoBadge = card.querySelector('.info-badge');
    if (infoBadge) {
      infoBadge.addEventListener('click', function(e) {
        e.stopPropagation();

        // Toggle bio visibility
        const bio = card.querySelector('.member-bio');
        if (bio) {
          const isVisible = bio.style.opacity === '1';
          bio.style.opacity = isVisible ? '0' : '1';
          bio.style.maxHeight = isVisible ? '0' : '100px';
        }
      });
    }
  });

  // Intersection Observer for animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver(function(entries) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
      }
    });
  }, observerOptions);

  leaderCards.forEach(card => {
    observer.observe(card);
  });

  // Keyboard navigation
  leaderCards.forEach(card => {
    card.setAttribute('tabindex', '0');

    card.addEventListener('keydown', function(e) {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        this.click();
      }
    });
  });

  // Touch/mobile enhancements
  leaderCards.forEach(card => {
    let touchStartTime = 0;

    card.addEventListener('touchstart', function() {
      touchStartTime = Date.now();
    });

    card.addEventListener('touchend', function() {
      const touchDuration = Date.now() - touchStartTime;

      // Long press to show bio on mobile
      if (touchDuration > 500) {
        const bio = this.querySelector('.member-bio');
        if (bio) {
          bio.style.opacity = bio.style.opacity === '1' ? '0' : '1';
          bio.style.maxHeight = bio.style.opacity === '1' ? '100px' : '0';
        }
      }
    });
  });
});

// Performance optimization: throttle scroll events
function throttle(func, limit) {
  let inThrottle;
  return function() {
    const args = arguments;
    const context = this;
    if (!inThrottle) {
      func.apply(context, args);
      inThrottle = true;
      setTimeout(() => inThrottle = false, limit);
    }
  }
}

// Parallax effect for geometric shapes
window.addEventListener('scroll', throttle(function() {
  const scrolled = window.pageYOffset;
  const geometricShapes = document.querySelectorAll('.geometric-shape, .geometric-accent');

  geometricShapes.forEach((shape, index) => {
    const rate = scrolled * (0.2 + index * 0.05);
    shape.style.transform += ` translateY(${rate}px)`;
  });
}, 16));
</script>
