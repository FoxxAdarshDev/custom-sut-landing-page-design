{% schema %}
{
  "name": "Meet Our Leaders",
  "class": "team-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "MEET OUR LEADERS"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Our leadership team brings decades of experience and innovative thinking to drive our mission forward."
    },
    {
      "type": "checkbox",
      "id": "enable_filters",
      "label": "Enable Filter Tabs",
      "default": true
    },
    {
      "type": "text",
      "id": "filter_all_text",
      "label": "All Filter Text",
      "default": "All"
    },
    {
      "type": "text",
      "id": "filter_executive_text",
      "label": "Executive Filter Text",
      "default": "Executive Leadership"
    },
    {
      "type": "text",
      "id": "filter_management_text",
      "label": "Management Filter Text",
      "default": "Management Team"
    },
    {
      "type": "text",
      "id": "filter_advisory_text",
      "label": "Advisory Filter Text",
      "default": "Advisory Board"
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "member_image",
          "label": "Member Photo"
        },
        {
          "type": "text",
          "id": "member_name",
          "label": "Full Name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "member_position",
          "label": "Position/Title",
          "default": "Chief Executive Officer"
        },
        {
          "type": "textarea",
          "id": "member_bio",
          "label": "Bio/Description"
        },
        {
          "type": "select",
          "id": "member_category",
          "label": "Team Category",
          "default": "executive",
          "options": [
            {
              "value": "executive",
              "label": "Executive Leadership"
            },
            {
              "value": "management",
              "label": "Management Team"
            },
            {
              "value": "advisory",
              "label": "Advisory Board"
            }
          ]
        },
        {
          "type": "header",
          "content": "Social Media Links"
        },
        {
          "type": "url",
          "id": "linkedin_url",
          "label": "LinkedIn URL"
        },
        {
          "type": "url",
          "id": "twitter_url",
          "label": "Twitter URL"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email Address"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone Number"
        },
        {
          "type": "url",
          "id": "website_url",
          "label": "Personal Website"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Meet Our Leaders",
      "category": "Team",
      "blocks": [
        {
          "type": "team_member",
          "settings": {
            "member_name": "John Cooling",
            "member_position": "President & CEO",
            "member_category": "executive"
          }
        },
        {
          "type": "team_member",
          "settings": {
            "member_name": "Kevin Cooling",
            "member_position": "VP of Manufacturing",
            "member_category": "executive"
          }
        },
        {
          "type": "team_member",
          "settings": {
            "member_name": "Jeff Meade",
            "member_position": "Senior VP of Sales",
            "member_category": "executive"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<!-- Meet Our Leaders Section -->
<section class="leaders-section" data-section-id="{{ section.id }}">
  <div class="leaders-container">
    <!-- Section Header -->
    <div class="leaders-header">
      <h2 class="leaders-title">{{ section.settings.section_title | default: 'MEET OUR LEADERS' }}</h2>
      {% if section.settings.section_description != blank %}
        <p class="leaders-description">{{ section.settings.section_description }}</p>
      {% endif %}
    </div>

    <!-- Filter Tabs -->
    {% if section.settings.enable_filters %}
      <div class="leaders-filters">
        <button class="filter-btn active" data-filter="all">
          {{ section.settings.filter_all_text | default: 'All' }}
        </button>
        <button class="filter-btn" data-filter="executive">
          {{ section.settings.filter_executive_text | default: 'Executive Leadership' }}
        </button>
        <button class="filter-btn" data-filter="management">
          {{ section.settings.filter_management_text | default: 'Management Team' }}
        </button>
        <button class="filter-btn" data-filter="advisory">
          {{ section.settings.filter_advisory_text | default: 'Advisory Board' }}
        </button>
      </div>
    {% endif %}

    <!-- Team Grid -->
    <div class="leaders-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'team_member' %}
            <div class="leader-card" data-category="{{ block.settings.member_category | default: 'executive' }}">
              <!-- Background Shape -->
              <div class="card-shape">
                <svg viewBox="0 0 200 200" class="shape-svg">
                  <path d="M50,20 Q180,20 180,50 Q180,180 150,180 Q20,180 20,150 Q20,20 50,20 Z" fill="currentColor"/>
                </svg>
              </div>

              <!-- Member Image -->
              <div class="member-image-container">
                {% if block.settings.member_image != blank %}
                  <img src="{{ block.settings.member_image | img_url: '300x300' }}" 
                       alt="{{ block.settings.member_name }}" 
                       class="member-image"
                       loading="lazy">
                {% else %}
                  <div class="member-image-placeholder">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                  </div>
                {% endif %}
              </div>

              <!-- Social Links -->
              <div class="social-links">
                {% if block.settings.linkedin_url != blank %}
                  <a href="{{ block.settings.linkedin_url }}" target="_blank" rel="noopener" class="social-link">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </a>
                {% endif %}

                {% if block.settings.twitter_url != blank %}
                  <a href="{{ block.settings.twitter_url }}" target="_blank" rel="noopener" class="social-link">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                  </a>
                {% endif %}

                {% if block.settings.email != blank %}
                  <a href="mailto:{{ block.settings.email }}" class="social-link">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                    </svg>
                  </a>
                {% endif %}

                {% if block.settings.phone != blank %}
                  <a href="tel:{{ block.settings.phone }}" class="social-link">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                    </svg>
                  </a>
                {% endif %}

                {% if block.settings.website_url != blank %}
                  <a href="{{ block.settings.website_url }}" target="_blank" rel="noopener" class="social-link">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                    </svg>
                  </a>
                {% endif %}
              </div>

              <!-- Info Icon -->
              <div class="info-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
                </svg>
              </div>

              <!-- Member Content -->
              <div class="member-content">
                <h3 class="member-name">{{ block.settings.member_name | default: 'Team Member' }}</h3>
                <p class="member-position">{{ block.settings.member_position | default: 'Position' }}</p>

                <!-- Contact Info -->
                <div class="contact-info">
                  {% if block.settings.email != blank %}
                    <div class="contact-item">
                      <svg viewBox="0 0 24 24" fill="currentColor" class="contact-icon">
                        <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                      </svg>
                      <span>{{ block.settings.email }}</span>
                    </div>
                  {% endif %}

                  {% if block.settings.phone != blank %}
                    <div class="contact-item">
                      <svg viewBox="0 0 24 24" fill="currentColor" class="contact-icon">
                        <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                      </svg>
                      <span>{{ block.settings.phone }}</span>
                    </div>
                  {% endif %}
                </div>

                {% if block.settings.member_bio != blank %}
                  <div class="member-bio">
                    <p>{{ block.settings.member_bio }}</p>
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Empty State -->
    <div class="empty-state" style="display: none;">
      <p>No team members found for the selected category.</p>
    </div>
  </div>
</section>

<style>
/* Leaders Section */
.leaders-section {
  position: relative;
  padding: 60px 0;
  background: #ffffff;
  overflow: hidden;
}

.leaders-container {
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
}

/* Header */
.leaders-header {
  text-align: center;
  margin-bottom: 50px;
}

.leaders-title {
  font-size: 36px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 15px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.leaders-description {
  font-size: 16px;
  color: #666;
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
}

/* Filter Tabs */
.leaders-filters {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-bottom: 40px;
  flex-wrap: wrap;
}

.filter-btn {
  padding: 10px 20px;
  border: 2px solid #e9ecef;
  background: white;
  color: #666;
  border-radius: 25px;
  font-weight: 600;
  font-size: 13px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.filter-btn:hover,
.filter-btn.active {
  background: #0071b9;
  color: white;
  border-color: #0071b9;
}

/* Team Grid */
.leaders-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  max-width: 900px;
  margin: 0 auto;
}

/* Leader Card */
.leader-card {
  position: relative;
  background: white;
  border-radius: 20px;
  padding: 20px;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  overflow: hidden;
  min-height: 300px;
}

.leader-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

/* Card Shape Background */
.card-shape {
  position: absolute;
  top: -40px;
  right: -40px;
  width: 180px;
  height: 180px;
  opacity: 0.3;
  color: #0071b9;
  pointer-events: none;
  z-index: 1;
}

.shape-svg {
  width: 100%;
  height: 100%;
}

/* Member Image Container */
.member-image-container {
  position: relative;
  width: 140px;
  height: 140px;
  margin: 0 auto 20px;
  border-radius: 50%;
  overflow: hidden;
  border: 4px solid #f8f9fa;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  z-index: 2;
}

.member-image,
.member-image-placeholder {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  color: #ccc;
}

.member-image-placeholder svg {
  width: 40px;
  height: 40px;
}

/* Social Links */
.social-links {
  position: absolute;
  top: 15px;
  left: 15px;
  display: flex;
  gap: 8px;
  opacity: 0;
  transform: translateY(-10px);
  transition: all 0.3s ease;
  z-index: 3;
}

.leader-card:hover .social-links {
  opacity: 1;
  transform: translateY(0);
}

.social-link {
  width: 32px;
  height: 32px;
  background: #0071b9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  transition: all 0.3s ease;
  text-decoration: none;
}

.social-link:hover {
  background: #005a94;
  transform: scale(1.1);
}

.social-link svg {
  width: 16px;
  height: 16px;
}

/* Info Icon */
.info-icon {
  position: absolute;
  top: 15px;
  right: 15px;
  width: 32px;
  height: 32px;
  background: rgba(0, 113, 185, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #0071b9;
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 3;
}

.info-icon:hover {
  background: #0071b9;
  color: white;
}

.info-icon svg {
  width: 18px;
  height: 18px;
}

/* Member Content */
.member-content {
  position: relative;
  z-index: 2;
}

/* Contact Info */
.contact-info {
  margin: 15px 0;
  opacity: 0;
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
}

.leader-card:hover .contact-info {
  opacity: 1;
  max-height: 60px;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 5px;
  font-size: 12px;
  color: #666;
}

.contact-icon {
  width: 14px;
  height: 14px;
  color: #0071b9;
  flex-shrink: 0;
}

.member-name {
  font-size: 22px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 5px;
}

.member-position {
  font-size: 14px;
  color: #666;
  margin-bottom: 15px;
  font-weight: 500;
}

.member-bio {
  opacity: 0;
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
  margin-top: 10px;
}

.leader-card:hover .member-bio {
  opacity: 1;
  max-height: 100px;
}

.member-bio p {
  font-size: 13px;
  color: #777;
  line-height: 1.4;
  margin: 0;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 40px 20px;
  color: #666;
  font-size: 16px;
}

/* Filter Animation */
.leader-card.filtering {
  opacity: 0;
  transform: scale(0.9);
  pointer-events: none;
}

.leader-card.visible {
  opacity: 1;
  transform: scale(1);
  pointer-events: auto;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .leaders-section {
    padding: 40px 0;
  }

  .leaders-title {
    font-size: 28px;
  }

  .leaders-description {
    font-size: 14px;
  }

  .leaders-grid {
    grid-template-columns: 1fr;
    gap: 20px;
    max-width: 350px;
  }

  .leader-card {
    min-height: 280px;
    padding: 15px;
  }

  .member-image-container {
    width: 110px;
    height: 110px;
    margin-bottom: 15px;
  }

  .member-name {
    font-size: 20px;
  }

  .member-position {
    font-size: 13px;
  }

  .filter-btn {
    padding: 8px 16px;
    font-size: 12px;
  }
}

@media (max-width: 480px) {
  .leaders-container {
    padding: 0 15px;
  }

  .leaders-title {
    font-size: 24px;
  }

  .leader-card {
    min-height: 260px;
  }

  .member-image-container {
    width: 90px;
    height: 90px;
  }

  .member-name {
    font-size: 18px;
  }
}

/* Animation on load */
.leader-card {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease forwards;
}

.leader-card:nth-child(1) { animation-delay: 0.1s; }
.leader-card:nth-child(2) { animation-delay: 0.2s; }
.leader-card:nth-child(3) { animation-delay: 0.3s; }
.leader-card:nth-child(4) { animation-delay: 0.4s; }

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const filterBtns = document.querySelectorAll('.filter-btn');
  const leaderCards = document.querySelectorAll('.leader-card');
  const emptyState = document.querySelector('.empty-state');

  // Filter functionality
  filterBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      const filter = this.getAttribute('data-filter');

      // Update active button
      filterBtns.forEach(b => b.classList.remove('active'));
      this.classList.add('active');

      // Filter cards
      let visibleCount = 0;
      leaderCards.forEach(card => {
        const category = card.getAttribute('data-category');

        if (filter === 'all' || category === filter) {
          card.classList.remove('filtering');
          card.classList.add('visible');
          visibleCount++;
        } else {
          card.classList.add('filtering');
          card.classList.remove('visible');
        }
      });

      // Show/hide empty state
      if (emptyState) {
        emptyState.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    });
  });

  // Initialize - show all cards
  leaderCards.forEach(card => {
    card.classList.add('visible');
  });

  // Info icon click handler for bio toggle
  leaderCards.forEach(card => {
    const infoIcon = card.querySelector('.info-icon');
    if (infoIcon) {
      infoIcon.addEventListener('click', function(e) {
        e.stopPropagation();
        const bio = card.querySelector('.member-bio');
        if (bio) {
          const isVisible = bio.style.opacity === '1';
          bio.style.opacity = isVisible ? '0' : '1';
          bio.style.maxHeight = isVisible ? '0' : '100px';
        }
      });
    }
  });
});
</script>