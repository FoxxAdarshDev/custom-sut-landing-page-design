
{% schema %}
{
  "name": "Sustainability Section",
  "class": "sustainability-section",
  "settings": [
    {
      "type": "header",
      "content": "Section 1 - Our Approach"
    },
    {
      "type": "image_picker",
      "id": "approach_bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "approach_heading",
      "label": "Heading",
      "default": "OUR APPROACH"
    },
    {
      "type": "header",
      "content": "Section 2 - Main Content"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Ensuring you can process life-saving drugs without sacrificing your sustainability goals."
    },
    {
      "type": "text",
      "id": "contact_button_text",
      "label": "Contact Button Text",
      "default": "CONTACT US"
    },
    {
      "type": "url",
      "id": "contact_button_url",
      "label": "Contact Button URL"
    },
    {
      "type": "image_picker",
      "id": "certification_image",
      "label": "Certification Badge Image"
    },
    {
      "type": "text",
      "id": "certification_validity",
      "label": "Certification Validity Text",
      "default": "valid through December 2025"
    },
    {
      "type": "header",
      "content": "Section 3 - The Change Starts Now"
    },
    {
      "type": "image_picker",
      "id": "change_bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "change_heading_line1",
      "label": "Heading Line 1",
      "default": "THE CHANGE STARTS NOW"
    },
    {
      "type": "text",
      "id": "change_heading_line2",
      "label": "Heading Line 2",
      "default": "WITH US"
    },
    {
      "type": "textarea",
      "id": "change_description",
      "label": "Description",
      "default": "Carolina Components Group is here to support your sustainability goals without sacrificing product quality, lead times, or customer service. Explore our components in sustainable alternative materials today."
    },
    {
      "type": "text",
      "id": "change_button_text",
      "label": "Button Text",
      "default": "SUSTAINABLE ALTERNATIVES"
    },
    {
      "type": "url",
      "id": "change_button_url",
      "label": "Button URL"
    },
    {
      "type": "header",
      "content": "Section 4 - Statistics"
    },
    {
      "type": "text",
      "id": "stats_heading",
      "label": "Statistics Heading",
      "default": "Always Moving Forward"
    },
    {
      "type": "text",
      "id": "stat1_percentage",
      "label": "Statistic 1 Percentage",
      "default": "10%"
    },
    {
      "type": "text",
      "id": "stat1_title",
      "label": "Statistic 1 Title",
      "default": "of our components"
    },
    {
      "type": "text",
      "id": "stat1_description",
      "label": "Statistic 1 Description",
      "default": "are sourced from sustainable alternatives."
    },
    {
      "type": "text",
      "id": "stat2_percentage",
      "label": "Statistic 2 Percentage",
      "default": "38%"
    },
    {
      "type": "text",
      "id": "stat2_title",
      "label": "Statistic 2 Title",
      "default": "of our key suppliers"
    },
    {
      "type": "text",
      "id": "stat2_description",
      "label": "Statistic 2 Description",
      "default": "have completed a sustainability self-assessment to ensure we partner with the highest quality businesses, driven by sustainability initiatives."
    },
    {
      "type": "header",
      "content": "Section 5 - Commitment to Quality"
    },
    {
      "type": "image_picker",
      "id": "commitment_bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "commitment_heading",
      "label": "Heading",
      "default": "OUR COMMITMENT TO QUALITY"
    },
    {
      "type": "textarea",
      "id": "commitment_description",
      "label": "Description",
      "default": "Our customers can be assured that the products that they receive meet their stringent quality standards."
    },
    {
      "type": "text",
      "id": "commitment_button_text",
      "label": "Button Text",
      "default": "LEARN MORE"
    },
    {
      "type": "url",
      "id": "commitment_button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Sustainability Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<!-- Section 1: Our Approach Banner -->
<section class="sustainability-approach-banner">
  {% if section.settings.approach_bg_image != blank %}
    <div class="approach-bg-image" style="background-image: url('{{ section.settings.approach_bg_image | img_url: '1920x' }}');">
  {% endif %}
      <div class="approach-overlay">
        <div class="approach-content">
          <h1 class="approach-heading">{{ section.settings.approach_heading }}</h1>
        </div>
      </div>
  {% if section.settings.approach_bg_image != blank %}
    </div>
  {% endif %}
</section>

<!-- Section 2: Main Content with Certification -->
<section class="sustainability-main-content">
  <div class="main-content-wrapper">
    <div class="main-content-inner">
      <h2 class="main-heading">{{ section.settings.main_heading }}</h2>

      {% if section.settings.contact_button_text != blank %}
        <div class="contact-button-wrapper">
          <a href="{{ section.settings.contact_button_url }}" class="contact-button">
            {{ section.settings.contact_button_text }}
          </a>
        </div>
      {% endif %}

      <div class="certifications-grid">
        {% for i in (1..5) %}
          {% assign cert_image = 'certification_image_' | append: i %}
          {% assign cert_validity = 'certification_validity_' | append: i %}
          {% assign cert_title = 'certification_title_' | append: i %}
          {% assign cert_description = 'certification_description_' | append: i %}
          
          {% if section.settings[cert_image] != blank %}
            <div class="certification-wrapper">
              <div class="certification-logo-container">
                <img src="{{ section.settings[cert_image] | img_url: '300x' }}" 
                     alt="{{ section.settings[cert_title] | default: 'Sustainability Certification' }}" 
                     class="certification-badge">
              </div>
              {% if section.settings[cert_validity] != blank %}
                <p class="certification-validity">{{ section.settings[cert_validity] }}</p>
              {% endif %}
              {% if section.settings[cert_description] != blank %}
                <button class="learn-more-btn" data-cert-id="{{ i }}">Learn More</button>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Certification Popups -->
      {% for i in (1..5) %}
        {% assign cert_image = 'certification_image_' | append: i %}
        {% assign cert_title = 'certification_title_' | append: i %}
        {% assign cert_description = 'certification_description_' | append: i %}
        
        {% if section.settings[cert_image] != blank and section.settings[cert_description] != blank %}
          <div class="certification-popup" id="cert-popup-{{ i }}">
            <div class="popup-overlay"></div>
            <div class="popup-content">
              <button class="popup-close">&times;</button>
              <div class="popup-logo">
                <img src="{{ section.settings[cert_image] | img_url: '200x' }}" 
                     alt="{{ section.settings[cert_title] | default: 'Certification' }}" 
                     class="popup-certification-badge">
              </div>
              <h3 class="popup-title">{{ section.settings[cert_title] | default: 'Certification Details' }}</h3>
              <div class="popup-description">
                {{ section.settings[cert_description] }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<!-- Section 3: The Change Starts Now -->
<section class="sustainability-change-section" data-animate="true">
  {% if section.settings.change_bg_image != blank %}
    <div class="change-bg-image" style="background-image: url('{{ section.settings.change_bg_image | img_url: '1920x' }}');">
  {% endif %}
      <div class="change-overlay">
        <div class="change-content">
          <div class="change-icon-wrapper">
            <div class="change-icon-border">
              <div class="change-icon">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L12 22M12 2C8 2 5 5 5 9C5 13 8 16 12 16M12 2C16 2 19 5 19 9C19 13 16 16 12 16" stroke="white" stroke-width="2"/>
                  <circle cx="12" cy="9" r="2" fill="white"/>
                  <path d="M8 16C8 18 10 20 12 20C14 20 16 18 16 16" stroke="white" stroke-width="1.5" fill="none"/>
                </svg>
              </div>
            </div>
          </div>

          <div class="change-heading-wrapper">
            <h2 class="change-heading">
              <span class="change-line1">{{ section.settings.change_heading_line1 }}</span>
              <span class="change-line2">{{ section.settings.change_heading_line2 }}</span>
            </h2>
          </div>

          <div class="change-divider"></div>

          <p class="change-description">{{ section.settings.change_description }}</p>

          {% if section.settings.change_button_text != blank %}
            <a href="{{ section.settings.change_button_url }}" class="change-button animated-button">
              {{ section.settings.change_button_text }}
            </a>
          {% endif %}
        </div>
      </div>
  {% if section.settings.change_bg_image != blank %}
    </div>
  {% endif %}
</section>

<!-- Section 4: Statistics -->
<section class="sustainability-stats-section">
  <div class="stats-wrapper">
    <h2 class="stats-heading">{{ section.settings.stats_heading }}</h2>

    <div class="stats-grid">
      <div class="stat-item">
        <div class="stat-percentage">{{ section.settings.stat1_percentage }}</div>
        <div class="stat-content">
          <h3 class="stat-title">{{ section.settings.stat1_title }}</h3>
          <p class="stat-description">{{ section.settings.stat1_description }}</p>
        </div>
      </div>

      <div class="stat-item">
        <div class="stat-percentage">{{ section.settings.stat2_percentage }}</div>
        <div class="stat-content">
          <h3 class="stat-title">{{ section.settings.stat2_title }}</h3>
          <p class="stat-description">{{ section.settings.stat2_description }}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Section 5: Commitment to Quality -->
<section class="sustainability-commitment-section">
  {% if section.settings.commitment_bg_image != blank %}
    <div class="commitment-bg-image" style="background-image: url('{{ section.settings.commitment_bg_image | img_url: '1920x' }}');">
  {% endif %}
      <div class="commitment-overlay">
        <div class="commitment-content">
          <h2 class="commitment-heading">{{ section.settings.commitment_heading }}</h2>
          <p class="commitment-description">{{ section.settings.commitment_description }}</p>

          {% if section.settings.commitment_button_text != blank %}
            <a href="{{ section.settings.commitment_button_url }}" class="commitment-button">
              {{ section.settings.commitment_button_text }}
            </a>
          {% endif %}
        </div>
      </div>
  {% if section.settings.commitment_bg_image != blank %}
    </div>
  {% endif %}
</section>

<style>
/* Section 1: Our Approach Banner */
.sustainability-approach-banner {
  position: relative;
  height: 450px;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  overflow: hidden;
}

.approach-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.approach-overlay {
  position: relative;
  z-index: 2;
  background: rgba(0, 113, 185, 0.8);
  width: 100%;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 60px;
}

.approach-content {
  text-align: left;
}

.approach-heading {
  color: white;
  font-size: 2rem;
  font-weight: 700;
  margin: 0;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.4);
  line-height: 1.2;
}

/* Section 2: Main Content */
.sustainability-main-content {
  background: #f8f9fa;
  padding: 80px 20px;
}

.main-content-wrapper {
  max-width: 1200px;
  margin: 0 auto;
}

.main-content-inner {
  text-align: center;
}

.main-heading {
  font-size: 47px;
  color: #0071b9;
  font-weight: 300;
  line-height: 1.4;
  margin-bottom: 40px;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.contact-button-wrapper {
  margin-bottom: 60px;
}

.contact-button {
  background: transparent;
  border: 2px solid #0071b9;
  color: #0071b9;
  padding: 12px 30px;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.9rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  text-transform: uppercase;
}

.contact-button:hover {
  background: #0071b9;
  color: white;
}

.certifications-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 30px;
  max-width: 1200px;
  margin: 0 auto;
  justify-items: center;
}

.certification-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.certification-logo-container {
  background: white;
  padding: 20px;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 113, 185, 0.1);
  margin-bottom: 15px;
  transition: transform 0.3s ease;
}

.certification-logo-container:hover {
  transform: translateY(-5px);
}

.certification-badge {
  max-width: 150px;
  height: auto;
  display: block;
}

.certification-validity {
  font-size: 0.9rem;
  color: #0071b9;
  margin: 0 0 10px 0;
  font-weight: 600;
}

.learn-more-btn {
  background: transparent;
  border: 2px solid #0071b9;
  color: #0071b9;
  padding: 8px 16px;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.8rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  text-transform: uppercase;
  cursor: pointer;
  border-radius: 5px;
}

.learn-more-btn:hover {
  background: #0071b9;
  color: white;
}

/* Popup Styles */
.certification-popup {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.certification-popup.active {
  display: block;
}

.popup-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  cursor: pointer;
}

.popup-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  padding: 40px;
  border-radius: 20px;
  max-width: 500px;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  text-align: center;
}

.popup-close {
  position: absolute;
  top: 15px;
  right: 20px;
  background: none;
  border: none;
  font-size: 30px;
  color: #999;
  cursor: pointer;
  line-height: 1;
  padding: 0;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-close:hover {
  color: #333;
}

.popup-logo {
  margin-bottom: 20px;
}

.popup-certification-badge {
  max-width: 120px;
  height: auto;
}

.popup-title {
  font-size: 1.5rem;
  color: #0071b9;
  margin-bottom: 20px;
  font-weight: 600;
}

.popup-description {
  font-size: 1rem;
  line-height: 1.6;
  color: #333;
  text-align: left;
}

.popup-description p {
  margin-bottom: 15px;
}

.popup-description p:last-child {
  margin-bottom: 0;
}

/* Section 3: The Change Starts Now */
.sustainability-change-section {
  position: relative;
  min-height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.change-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.change-overlay {
  position: relative;
  z-index: 2;
  background: rgba(0, 0, 0, 0.6);
  width: 100%;
  min-height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
}

.change-content {
  text-align: center;
  max-width: 800px;
}

.change-icon-wrapper {
  margin-bottom: 40px;
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s ease forwards;
  animation-delay: 0.2s;
}

.change-icon-border {
  display: inline-block;
  padding: 25px;
  border: 3px solid white;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  animation: pulse 2s infinite;
}

.change-icon-border:hover {
  transform: scale(1.1) rotate(10deg);
  box-shadow: 0 0 30px rgba(255, 255, 255, 0.3);
}

.change-icon svg {
  width: 80px !important;
  height: 80px !important;
  filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));
}

.change-heading-wrapper {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s ease forwards;
  animation-delay: 0.4s;
}

.change-heading {
  color: white;
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 30px;
  text-transform: uppercase;
  letter-spacing: 2px;
  border: 2px solid white;
  padding: 20px 30px;
  display: inline-block;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 10px;
}

.change-line1, .change-line2 {
  display: block;
}

.change-divider {
  width: 120px;
  height: 4px;
  background: linear-gradient(90deg, transparent, white, transparent);
  margin: 40px auto;
  opacity: 0;
  animation: fadeIn 1s ease forwards;
  animation-delay: 0.6s;
}

.change-description {
  color: white;
  font-size: 18px;
  line-height: 1.6;
  margin-bottom: 50px;
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s ease forwards;
  animation-delay: 0.8s;
}

.change-button {
  background: #5bc0de;
  color: white;
  padding: 18px 40px;
  text-decoration: none;
  font-weight: 600;
  font-size: 1rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  text-transform: uppercase;
  border-radius: 30px;
  display: inline-block;
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s ease forwards;
  animation-delay: 1s;
}

.animated-button {
  position: relative;
  overflow: hidden;
}

.animated-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s;
}

.animated-button:hover::before {
  left: 100%;
}

.change-button:hover {
  background: #4a9bc1;
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(91, 192, 222, 0.3);
}

/* Keyframe Animations */
@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  to {
    opacity: 1;
  }
}

@keyframes pulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.4);
  }
  50% {
    box-shadow: 0 0 0 20px rgba(255, 255, 255, 0);
  }
}

/* Section 4: Statistics */
.sustainability-stats-section {
  background: white;
  padding: 80px 20px;
}

.stats-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
}

.stats-heading {
  font-size: 2.2rem;
  color: #0071b9;
  font-weight: 300;
  margin-bottom: 60px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 80px;
  max-width: 1000px;
  margin: 0 auto;
}

.stat-item {
  text-align: center;
}

.stat-percentage {
  font-size: 4rem;
  font-weight: 700;
  color: #0071b9;
  margin-bottom: 20px;
}

.stat-title {
  font-size: 20px;
  color: #666;
  font-weight: 600;
  margin-bottom: 10px;
}

.stat-description {
  font-size: 16px;
  color: #666;
  line-height: 1.5;
  margin: 0;
}

