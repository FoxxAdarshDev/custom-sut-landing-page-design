<script>
// Intersection Observer for animations
document.addEventListener('DOMContentLoaded', function() {
  const observerOptions = {
    threshold: 0.3,
    rootMargin: '0px 0px -100px 0px'
  };

  const observer = new IntersectionObserver(function(entries) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-in');

        // Reset animations for change section
        if (entry.target.classList.contains('sustainability-change-section')) {
          const elements = entry.target.querySelectorAll('.change-icon-wrapper, .change-heading-wrapper, .change-divider, .change-description, .change-button');
          elements.forEach((el, index) => {
            el.style.animationDelay = `${0.2 + (index * 0.2)}s`;
            el.style.animation = 'none';
            setTimeout(() => {
              el.style.animation = '';
            }, 10);
          });
        }
      }
    });
  }, observerOptions);

  // Observe sections with animations
  const animatedSections = document.querySelectorAll('[data-animate="true"]');
  animatedSections.forEach(section => {
    observer.observe(section);
  });

  // Add hover effects to certification logos
  const certLogos = document.querySelectorAll('.certification-logo-container');
  certLogos.forEach(logo => {
    logo.addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-8px) scale(1.05)';
    });

    logo.addEventListener('mouseleave', function() {
      this.style.transform = 'translateY(0) scale(1)';
    });
  });

  // Popup functionality
  const learnMoreBtns = document.querySelectorAll('.learn-more-btn');
  const popups = document.querySelectorAll('.certification-popup');
  const popupOverlays = document.querySelectorAll('.popup-overlay');
  const closeBtns = document.querySelectorAll('.popup-close');

  // Open popup
  learnMoreBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      const certId = this.getAttribute('data-cert-id');
      const popup = document.getElementById(`cert-popup-${certId}`);
      if (popup) {
        popup.classList.add('active');
        document.body.style.overflow = 'hidden';
      }
    });
  });

  // Close popup when clicking overlay
  popupOverlays.forEach(overlay => {
    overlay.addEventListener('click', function() {
      const popup = this.closest('.certification-popup');
      popup.classList.remove('active');
      document.body.style.overflow = 'auto';
    });
  });

  // Close popup when clicking close button
  closeBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      const popup = this.closest('.certification-popup');
      popup.classList.remove('active');
      document.body.style.overflow = 'auto';
    });
  });

  // Close popup on ESC key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      const activePopup = document.querySelector('.certification-popup.active');
      if (activePopup) {
        activePopup.classList.remove('active');
        document.body.style.overflow = 'auto';
      }
    }
  });
});
</script>
