
{% schema %}
{
  "name": "Sustainability Section",
  "class": "sustainability-section",
  "settings": [
    {
      "type": "header",
      "content": "Section 1 - Our Approach"
    },
    {
      "type": "image_picker",
      "id": "approach_bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "approach_heading",
      "label": "Heading",
      "default": "OUR APPROACH"
    },
    {
      "type": "header",
      "content": "Section 2 - Main Content"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Ensuring you can process life-saving drugs without sacrificing your sustainability goals."
    },
    {
      "type": "text",
      "id": "contact_button_text",
      "label": "Contact Button Text",
      "default": "CONTACT US"
    },
    {
      "type": "url",
      "id": "contact_button_url",
      "label": "Contact Button URL"
    },
    {
      "type": "image_picker",
      "id": "certification_image",
      "label": "Certification Badge Image"
    },
    {
      "type": "text",
      "id": "certification_validity",
      "label": "Certification Validity Text",
      "default": "valid through December 2025"
    },
    {
      "type": "header",
      "content": "Section 3 - The Change Starts Now"
    },
    {
      "type": "image_picker",
      "id": "change_bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "change_heading_line1",
      "label": "Heading Line 1",
      "default": "THE CHANGE STARTS NOW"
    },
    {
      "type": "text",
      "id": "change_heading_line2",
      "label": "Heading Line 2",
      "default": "WITH US"
    },
    {
      "type": "textarea",
      "id": "change_description",
      "label": "Description",
      "default": "Carolina Components Group is here to support your sustainability goals without sacrificing product quality, lead times, or customer service. Explore our components in sustainable alternative materials today."
    },
    {
      "type": "text",
      "id": "change_button_text",
      "label": "Button Text",
      "default": "SUSTAINABLE ALTERNATIVES"
    },
    {
      "type": "url",
      "id": "change_button_url",
      "label": "Button URL"
    },
    {
      "type": "header",
      "content": "Section 4 - Statistics"
    },
    {
      "type": "text",
      "id": "stats_heading",
      "label": "Statistics Heading",
      "default": "Always Moving Forward"
    },
    {
      "type": "text",
      "id": "stat1_percentage",
      "label": "Statistic 1 Percentage",
      "default": "10%"
    },
    {
      "type": "text",
      "id": "stat1_title",
      "label": "Statistic 1 Title",
      "default": "of our components"
    },
    {
      "type": "text",
      "id": "stat1_description",
      "label": "Statistic 1 Description",
      "default": "are sourced from sustainable alternatives."
    },
    {
      "type": "text",
      "id": "stat2_percentage",
      "label": "Statistic 2 Percentage",
      "default": "38%"
    },
    {
      "type": "text",
      "id": "stat2_title",
      "label": "Statistic 2 Title",
      "default": "of our key suppliers"
    },
    {
      "type": "text",
      "id": "stat2_description",
      "label": "Statistic 2 Description",
      "default": "have completed a sustainability self-assessment to ensure we partner with the highest quality businesses, driven by sustainability initiatives."
    },
    {
      "type": "header",
      "content": "Section 5 - Commitment to Quality"
    },
    {
      "type": "image_picker",
      "id": "commitment_bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "commitment_heading",
      "label": "Heading",
      "default": "OUR COMMITMENT TO QUALITY"
    },
    {
      "type": "textarea",
      "id": "commitment_description",
      "label": "Description",
      "default": "Our customers can be assured that the products that they receive meet their stringent quality standards."
    },
    {
      "type": "text",
      "id": "commitment_button_text",
      "label": "Button Text",
      "default": "LEARN MORE"
    },
    {
      "type": "url",
      "id": "commitment_button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Sustainability Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<!-- Section 1: Our Approach Banner -->
<section class="sustainability-approach-banner">
  {% if section.settings.approach_bg_image != blank %}
    <div class="approach-bg-image" style="background-image: url('{{ section.settings.approach_bg_image | img_url: '1920x' }}');">
  {% endif %}
      <div class="approach-overlay">
        <div class="approach-content">
          <h1 class="approach-heading">{{ section.settings.approach_heading }}</h1>
        </div>
      </div>
  {% if section.settings.approach_bg_image != blank %}
    </div>
  {% endif %}
</section>

<!-- Section 2: Main Content with Certification -->
<section class="sustainability-main-content">
  <div class="main-content-wrapper">
    <div class="main-content-inner">
      <h2 class="main-heading">{{ section.settings.main_heading }}</h2>
      
      {% if section.settings.contact_button_text != blank %}
        <div class="contact-button-wrapper">
          <a href="{{ section.settings.contact_button_url }}" class="contact-button">
            {{ section.settings.contact_button_text }}
          </a>
        </div>
      {% endif %}
      
      {% if section.settings.certification_image != blank %}
        <div class="certification-wrapper">
          <img src="{{ section.settings.certification_image | img_url: '200x' }}" 
               alt="Sustainability Certification" 
               class="certification-badge">
          {% if section.settings.certification_validity != blank %}
            <p class="certification-validity">{{ section.settings.certification_validity }}</p>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<!-- Section 3: The Change Starts Now -->
<section class="sustainability-change-section">
  {% if section.settings.change_bg_image != blank %}
    <div class="change-bg-image" style="background-image: url('{{ section.settings.change_bg_image | img_url: '1920x' }}');">
  {% endif %}
      <div class="change-overlay">
        <div class="change-content">
          <div class="change-icon">
            <svg width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L12 22M12 2C8 2 5 5 5 9C5 13 8 16 12 16M12 2C16 2 19 5 19 9C19 13 16 16 12 16" stroke="white" stroke-width="2"/>
            </svg>
          </div>
          
          <h2 class="change-heading">
            <span class="change-line1">{{ section.settings.change_heading_line1 }}</span>
            <span class="change-line2">{{ section.settings.change_heading_line2 }}</span>
          </h2>
          
          <div class="change-divider"></div>
          
          <p class="change-description">{{ section.settings.change_description }}</p>
          
          {% if section.settings.change_button_text != blank %}
            <a href="{{ section.settings.change_button_url }}" class="change-button">
              {{ section.settings.change_button_text }}
            </a>
          {% endif %}
        </div>
      </div>
  {% if section.settings.change_bg_image != blank %}
    </div>
  {% endif %}
</section>

<!-- Section 4: Statistics -->
<section class="sustainability-stats-section">
  <div class="stats-wrapper">
    <h2 class="stats-heading">{{ section.settings.stats_heading }}</h2>
    
    <div class="stats-grid">
      <div class="stat-item">
        <div class="stat-percentage">{{ section.settings.stat1_percentage }}</div>
        <div class="stat-content">
          <h3 class="stat-title">{{ section.settings.stat1_title }}</h3>
          <p class="stat-description">{{ section.settings.stat1_description }}</p>
        </div>
      </div>
      
      <div class="stat-item">
        <div class="stat-percentage">{{ section.settings.stat2_percentage }}</div>
        <div class="stat-content">
          <h3 class="stat-title">{{ section.settings.stat2_title }}</h3>
          <p class="stat-description">{{ section.settings.stat2_description }}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Section 5: Commitment to Quality -->
<section class="sustainability-commitment-section">
  {% if section.settings.commitment_bg_image != blank %}
    <div class="commitment-bg-image" style="background-image: url('{{ section.settings.commitment_bg_image | img_url: '1920x' }}');">
  {% endif %}
      <div class="commitment-overlay">
        <div class="commitment-content">
          <h2 class="commitment-heading">{{ section.settings.commitment_heading }}</h2>
          <p class="commitment-description">{{ section.settings.commitment_description }}</p>
          
          {% if section.settings.commitment_button_text != blank %}
            <a href="{{ section.settings.commitment_button_url }}" class="commitment-button">
              {{ section.settings.commitment_button_text }}
            </a>
          {% endif %}
        </div>
      </div>
  {% if section.settings.commitment_bg_image != blank %}
    </div>
  {% endif %}
</section>

<style>
/* Section 1: Our Approach Banner */
.sustainability-approach-banner {
  position: relative;
  height: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.approach-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.approach-overlay {
  position: relative;
  z-index: 2;
  background: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.approach-content {
  text-align: center;
}

.approach-heading {
  color: white;
  font-size: 2.5rem;
  font-weight: 700;
  margin: 0;
  letter-spacing: 2px;
  text-transform: uppercase;
}

/* Section 2: Main Content */
.sustainability-main-content {
  background: #f8f9fa;
  padding: 80px 20px;
}

.main-content-wrapper {
  max-width: 1200px;
  margin: 0 auto;
}

.main-content-inner {
  text-align: center;
}

.main-heading {
  font-size: 2.2rem;
  color: #7bb3d9;
  font-weight: 300;
  line-height: 1.4;
  margin-bottom: 40px;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.contact-button-wrapper {
  margin-bottom: 60px;
}

.contact-button {
  background: transparent;
  border: 2px solid #7bb3d9;
  color: #7bb3d9;
  padding: 12px 30px;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.9rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  text-transform: uppercase;
}

.contact-button:hover {
  background: #7bb3d9;
  color: white;
}

.certification-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.certification-badge {
  max-width: 150px;
  height: auto;
  margin-bottom: 10px;
}

.certification-validity {
  font-size: 0.85rem;
  color: #666;
  margin: 0;
}

/* Section 3: The Change Starts Now */
.sustainability-change-section {
  position: relative;
  min-height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.change-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.change-overlay {
  position: relative;
  z-index: 2;
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  min-height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
}

.change-content {
  text-align: center;
  max-width: 800px;
}

.change-icon {
  margin-bottom: 30px;
}

.change-heading {
  color: white;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 30px;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.change-line1, .change-line2 {
  display: block;
}

.change-divider {
  width: 80px;
  height: 3px;
  background: white;
  margin: 30px auto;
}

.change-description {
  color: white;
  font-size: 1.1rem;
  line-height: 1.6;
  margin-bottom: 40px;
}

.change-button {
  background: #5bc0de;
  color: white;
  padding: 15px 35px;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.9rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  text-transform: uppercase;
}

.change-button:hover {
  background: #4a9bc1;
  transform: translateY(-2px);
}

/* Section 4: Statistics */
.sustainability-stats-section {
  background: white;
  padding: 80px 20px;
}

.stats-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
}

.stats-heading {
  font-size: 2.2rem;
  color: #7bb3d9;
  font-weight: 300;
  margin-bottom: 60px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 80px;
  max-width: 1000px;
  margin: 0 auto;
}

.stat-item {
  text-align: center;
}

.stat-percentage {
  font-size: 4rem;
  font-weight: 700;
  color: #1e4a66;
  margin-bottom: 20px;
}

.stat-title {
  font-size: 1.1rem;
  color: #666;
  font-weight: 600;
  margin-bottom: 10px;
}

.stat-description {
  font-size: 0.95rem;
  color: #666;
  line-height: 1.5;
  margin: 0;
}

/* Section 5: Commitment to Quality */
.sustainability-commitment-section {
  position: relative;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.commitment-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.commitment-overlay {
  position: relative;
  z-index: 2;
  background: rgba(30, 74, 102, 0.9);
  width: 100%;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
}

.commitment-content {
  text-align: center;
  max-width: 800px;
}

.commitment-heading {
  color: white;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 30px;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.commitment-description {
  color: white;
  font-size: 1.2rem;
  line-height: 1.6;
  margin-bottom: 40px;
}

.commitment-button {
  background: transparent;
  border: 2px solid white;
  color: white;
  padding: 12px 30px;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.9rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  text-transform: uppercase;
}

.commitment-button:hover {
  background: white;
  color: #1e4a66;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .approach-heading {
    font-size: 1.8rem;
  }
  
  .main-heading {
    font-size: 1.6rem;
  }
  
  .change-heading {
    font-size: 1.8rem;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .stat-percentage {
    font-size: 3rem;
  }
  
  .commitment-heading {
    font-size: 1.8rem;
  }
  
  .commitment-description {
    font-size: 1rem;
  }
  
  .stats-heading {
    font-size: 1.8rem;
  }
}

@media (max-width: 480px) {
  .sustainability-approach-banner,
  .sustainability-change-section,
  .sustainability-commitment-section {
    min-height: 300px;
  }
  
  .approach-heading,
  .change-heading,
  .commitment-heading {
    font-size: 1.5rem;
  }
  
  .main-heading,
  .stats-heading {
    font-size: 1.4rem;
  }
}
</style>
