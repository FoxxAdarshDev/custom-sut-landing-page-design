.sustainability-commitment-section {
  position: relative;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.commitment-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.commitment-overlay {
  position: relative;
  z-index: 2;
  background: rgba(0, 113, 185, 0.9);
  width: 100%;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
}

.commitment-content {
  text-align: center;
  max-width: 800px;
}

.commitment-heading {
  color: white;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 30px;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.commitment-description {
  color: white;
  font-size: 1.2rem;
  line-height: 1.6;
  margin-bottom: 40px;
}

.commitment-button {
  background: transparent;
  border: 2px solid white;
  color: white;
  padding: 12px 30px;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.9rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
  text-transform: uppercase;
}

.commitment-button:hover {
  background: white;
  color: #0071b9;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .sustainability-approach-banner {
    height: 350px;
  }

  .approach-heading {
    font-size: 1.6rem;
    letter-spacing: 1px;
  }

  .approach-overlay {
    padding: 0 30px;
    height: 70px;
  }

  .main-heading {
    font-size: 1.6rem;
  }

  .certifications-grid {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
