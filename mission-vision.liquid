{% schema %}
{
  "name": "Mission & Vision",
  "class": "mission-vision-section",
  "settings": [
    {
      "type": "header",
      "content": "General Settings"
    },
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show Section",
      "default": true
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Mission & Vision"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#0071b9"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px", 
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "mission_vision_card",
      "name": "Mission/Vision Card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Card Title",
          "default": "Mission"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Card Content",
          "default": "To enable researchers, biotech labs, and bioprocess professionals to receive custom components that meet global quality standards."
        },
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon Type",
          "default": "svg",
          "options": [
            {
              "value": "svg",
              "label": "SVG Icon"
            },
            {
              "value": "image",
              "label": "Custom Image"
            }
          ]
        },
        {
          "type": "textarea",
          "id": "svg_code",
          "label": "SVG Code",
          "default": "<svg viewBox='0 0 24 24' fill='currentColor'><path d='M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z'/></svg>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mission & Vision",
      "category": "About",
      "blocks": [
        {
          "type": "mission_vision_card",
          "settings": {
            "title": "Mission",
            "content": "To enable researchers, biotech labs, and bioprocess professionals to receive custom components that meet global quality standards. We focus on sustainable, sterile, and scalable manufacturing that adapts to user-defined designs across SUT, filtration, fluid transfer, and storage systems.",
            "icon_type": "svg",
            "svg_code": "<svg viewBox='0 0 24 24' fill='currentColor'><circle cx='12' cy='12' r='10' fill='none' stroke='currentColor' stroke-width='2'/><circle cx='12' cy='12' r='6' fill='none' stroke='currentColor' stroke-width='2'/><circle cx='12' cy='12' r='2'/></svg>"
          }
        },
        {
          "type": "mission_vision_card",
          "settings": {
            "title": "Vision",
            "content": "To become the global benchmark for custom & made-to-order bioprocessing solutions by combining technical design, cleanroom assembly, and regulatory assurance into one seamless digital-to-physical workflow.",
            "icon_type": "svg",
            "svg_code": "<svg viewBox='0 0 24 24' fill='currentColor'><path d='M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z'/></svg>"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% if section.settings.show_section %}
<!-- Mission & Vision Section -->
<section class="professional-mission-vision" data-section-id="{{ section.id }}" style="background: linear-gradient(135deg, {{ section.settings.background_color | default: '#f8f9fa' }} 0%, rgba(0, 113, 185, 0.05) 100%); padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px 0; width: 100vw; margin-left: calc(-50vw + 50%);">
  <div class="mission-vision-container">
    {% if section.settings.section_title != blank %}
      <div class="section-header">
        <div class="title-decoration">
          <span class="decoration-line"></span>
          <span class="decoration-diamond"></span>
          <span class="decoration-line"></span>
        </div>
        <h2 class="section-title">{{ section.settings.section_title }}</h2>
        <p class="section-subtitle">Driving Innovation in Bioprocess Solutions</p>
      </div>
    {% endif %}

    <div class="mission-vision-grid">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="professional-card" data-aos="fade-up" data-aos-delay="{{ forloop.index0 | times: 200 }}" {{ block.shopify_attributes }}>
            <div class="card-background-effect"></div>

            <div class="card-header">
              <div class="icon-container">
                {% if block.settings.icon_type == 'image' and block.settings.image != blank %}
                  <div class="card-icon">
                    <img src="{{ block.settings.image | img_url: '60x60' }}" alt="{{ block.settings.title }}" loading="lazy">
                  </div>
                {% elsif block.settings.svg_code != blank %}
                  <div class="card-icon svg-icon" style="color: {{ section.settings.accent_color | default: '#0071b9' }};">
                    {{ block.settings.svg_code }}
                  </div>
                {% endif %}
                <div class="icon-glow"></div>
              </div>

              <h3 class="card-title" style="color: {{ section.settings.accent_color | default: '#0071b9' }};">
                {{ block.settings.title | default: 'Title' }}
              </h3>
            </div>

            <div class="card-content">
              <p class="card-description">{{ block.settings.content }}</p>
            </div>

            <div class="card-footer">
              <div class="progress-indicator">
                <div class="progress-bar" style="background: linear-gradient(90deg, {{ section.settings.accent_color | default: '#0071b9' }}, {{ section.settings.accent_color | default: '#0071b9' | color_lighten: 20 }});"></div>
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <!-- Default Mission Card -->
        <div class="professional-card" data-aos="fade-up" data-aos-delay="0">
          <div class="card-background-effect"></div>

          <div class="card-header">
            <div class="icon-container">
              <div class="card-icon svg-icon" style="color: {{ section.settings.accent_color | default: '#0071b9' }};">
                <svg viewBox='0 0 24 24' fill='currentColor'><circle cx='12' cy='12' r='10' fill='none' stroke='currentColor' stroke-width='2'/><circle cx='12' cy='12' r='6' fill='none' stroke='currentColor' stroke-width='2'/><circle cx='12' cy='12' r='2'/></svg>
              </div>
              <div class="icon-glow"></div>
            </div>

            <h3 class="card-title" style="color: {{ section.settings.accent_color | default: '#0071b9' }};">
              Mission
            </h3>
          </div>

          <div class="card-content">
            <p class="card-description">To enable researchers, biotech labs, and bioprocess professionals to receive custom components that meet global quality standards. We focus on sustainable, sterile, and scalable manufacturing that adapts to user-defined designs across SUT, filtration, fluid transfer, and storage systems.</p>
          </div>

          <div class="card-footer">
            <div class="progress-indicator">
              <div class="progress-bar" style="background: linear-gradient(90deg, {{ section.settings.accent_color | default: '#0071b9' }}, {{ section.settings.accent_color | default: '#0071b9' | color_lighten: 20 }});"></div>
            </div>
          </div>
        </div>

        <!-- Default Vision Card -->
        <div class="professional-card" data-aos="fade-up" data-aos-delay="200">
          <div class="card-background-effect"></div>

          <div class="card-header">
            <div class="icon-container">
              <div class="card-icon svg-icon" style="color: {{ section.settings.accent_color | default: '#0071b9' }};">
                <svg viewBox='0 0 24 24' fill='currentColor'><path d='M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z'/></svg>
              </div>
              <div class="icon-glow"></div>
            </div>

            <h3 class="card-title" style="color: {{ section.settings.accent_color | default: '#0071b9' }};">
              Vision
            </h3>
          </div>

          <div class="card-content">
            <p class="card-description">To become the global benchmark for custom & made-to-order bioprocessing solutions by combining technical design, cleanroom assembly, and regulatory assurance into one seamless digital-to-physical workflow.</p>
          </div>

          <div class="card-footer">
            <div class="progress-indicator">
              <div class="progress-bar" style="background: linear-gradient(90deg, {{ section.settings.accent_color | default: '#0071b9' }}, {{ section.settings.accent_color | default: '#0071b9' | color_lighten: 20 }});"></div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

<style>
/* Professional Mission & Vision Section */
.professional-mission-vision {
  position: relative;
  overflow: hidden;
  width: 100%;
}

.professional-mission-vision::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%230071b9' fill-opacity='0.03'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  pointer-events: none;
}

.mission-vision-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
  z-index: 2;
}

.professional-mission-vision {
  margin: 0 !important;
}

/* Enhanced Section Header */
.section-header {
  text-align: center;
  margin-bottom: 80px;
  position: relative;
}

.title-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  gap: 15px;
}

.decoration-line {
  width: 60px;
  height: 2px;
  background: linear-gradient(90deg, transparent, #0071b9, transparent);
}

.decoration-diamond {
  width: 12px;
  height: 12px;
  background: #0071b9;
  transform: rotate(45deg);
  border-radius: 2px;
}

.section-title {
  font-size: 64px;
  font-weight: 800;
  color: #1a1a1a;
  margin-bottom: 15px;
  text-transform: uppercase;
  letter-spacing: 4px;
  position: relative;
  line-height: 70px;
}

.section-subtitle {
  font-size: 18px;
  color: #666;
  font-weight: 300;
  letter-spacing: 1px;
  margin: 0;
  font-style: italic;
}

/* Professional Grid */
.mission-vision-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 40px;
  align-items: stretch;
}

/* Professional Cards */
.professional-card {
  background: white;
  border-radius: 24px;
  padding: 45px 35px;
  position: relative;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 113, 185, 0.08);
  border: 1px solid rgba(0, 113, 185, 0.1);
  min-height: 380px;
  display: flex;
  flex-direction: column;
}

.card-background-effect {
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(0, 113, 185, 0.02) 0%, transparent 70%);
  transform: scale(0);
  transition: transform 0.6s ease;
  pointer-events: none;
}

.professional-card:hover .card-background-effect {
  transform: scale(1);
}

.professional-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 30px 80px rgba(0, 113, 185, 0.15);
  border-color: rgba(0, 113, 185, 0.2);
}

/* Card Header */
.card-header {
  text-align: center;
  margin-bottom: 30px;
  position: relative;
}

.icon-container {
  position: relative;
  display: inline-block;
  margin-bottom: 25px;
}

.card-icon {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, rgba(0, 113, 185, 0.1), rgba(0, 113, 185, 0.2));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
  transition: all 0.4s ease;
  border: 3px solid rgba(0, 113, 185, 0.1);
}

.card-icon svg {
  width: 40px;
  height: 40px;
  transition: transform 0.3s ease;
}

.card-icon img {
  width: 40px;
  height: 40px;
  object-fit: contain;
  transition: transform 0.3s ease;
}

.icon-glow {
  position: absolute;
  top: -10px;
  left: -10px;
  right: -10px;
  bottom: -10px;
  background: linear-gradient(45deg, #0071b9, #005a91);
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 1;
  filter: blur(15px);
}

.professional-card:hover .icon-glow {
  opacity: 0.3;
}

.professional-card:hover .card-icon {
  transform: scale(1.1);
  background: linear-gradient(135deg, rgba(0, 113, 185, 0.2), rgba(0, 113, 185, 0.3));
  border-color: rgba(0, 113, 185, 0.3);
}

.professional-card:hover .card-icon svg,
.professional-card:hover .card-icon img {
  transform: scale(1.1);
}

.card-title {
  font-size: 28px;
  font-weight: 700;
  margin: 0;
  text-transform: uppercase;
  letter-spacing: 2px;
  position: relative;
}

.card-title::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  height: 3px;
  background: linear-gradient(90deg, #0071b9, #005a91);
  border-radius: 2px;
  transition: width 0.3s ease;
}

.professional-card:hover .card-title::after {
  width: 60px;
}

/* Card Content */
.card-content {
  flex: 1;
  display: flex;
  align-items: center;
}

.card-description {
  font-size: 16px;
  color: #555;
  line-height: 28px;
  margin: 0;
  text-align: center;
  font-weight: 400;
  transition: color 0.3s ease;
}

.professional-card:hover .card-description {
  color: #333;
}

/* Card Footer */
.card-footer {
  margin-top: 30px;
}

.progress-indicator {
  width: 100%;
  height: 4px;
  background: rgba(0, 113, 185, 0.1);
  border-radius: 2px;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  width: 0%;
  border-radius: 2px;
  transition: width 2s ease;
}

.professional-card:hover .progress-bar {
  width: 100%;
}

/* Responsive Design */
@media (max-width: 768px) {
  .mission-vision-container {
    padding: 0 15px;
  }

  .section-title {
    font-size: 48px;
    letter-spacing: 2px;
    line-height: 54px;
  }

  .section-subtitle {
    font-size: 16px;
  }

  .mission-vision-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }

  .professional-card {
    padding: 35px 25px;
    min-height: 320px;
  }

  .card-icon {
    width: 70px;
    height: 70px;
  }

  .card-icon svg,
  .card-icon img {
    width: 35px;
    height: 35px;
  }

  .card-title {
    font-size: 24px;
    letter-spacing: 1px;
  }

  .card-description {
    font-size: 15px;
    line-height: 24px;
  }

  .decoration-line {
    width: 40px;
  }

  .title-decoration {
    gap: 10px;
  }
}

@media (max-width: 480px) {
  .section-title {
    font-size: 36px;
    line-height: 42px;
  }

  .professional-card {
    padding: 30px 20px;
  }

  .card-title {
    font-size: 22px;
  }

  .card-description {
    font-size: 14px;
    line-height: 22px;
  }
}

/* Animation on Scroll */
@media (prefers-reduced-motion: no-preference) {
  .professional-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease forwards;
  }

  .professional-card:nth-child(2) {
    animation-delay: 0.2s;
  }

  .professional-card:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  .professional-card,
  .card-icon,
  .progress-bar {
    animation: none;
    transition: none;
  }
}

.professional-card:focus-within {
  outline: 3px solid #0071b9;
  outline-offset: 4px;
}

/* Enhanced Professional Touch */
.professional-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #0071b9, #005a91, #0071b9);
  background-size: 200% 100%;
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}
</style>