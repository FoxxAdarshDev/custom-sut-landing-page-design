<script>
document.addEventListener("DOMContentLoaded",()=>{function e(){const e=document.getElementById("ProductPrice1"),t=document.getElementById("ComparePrice1");
    
    // Use the same final discounted price calculation logic as simple-minimilistic.liquid
    let basePrice;
    
    // Get the product's sale price (same as simple-minimilistic.liquid)
    const salePriceElement = document.querySelector('.sale-price');
    if (salePriceElement) {
        // Extract price from sale price element (e.g., from "$300.08" get 300.08)
        const salePriceText = salePriceElement.textContent || salePriceElement.innerText;
        basePrice = parseFloat(salePriceText.replace("$","").replace(",",""));
    } else {
        // Fallback to ProductPrice1 if sale-price element not found
        basePrice = parseFloat(e.innerText.replace("$","").replace(",",""));
    }
    
    var a=e=>e.toString().replace(/\B(?=(\d{3})+(?!\d))/g,",");
    
    if(isNaN(basePrice))console.error("Error: Unable to parse product price.");else{
        // Use EXACT same logic as simple-minimilistic.liquid
        // Get the actual discount percentage from discount badge
        const discountLabel = document.querySelector('.discount-label');
        let discountPercentage = 0;
        if (discountLabel) {
            const discountText = discountLabel.textContent;
            discountPercentage = parseInt(discountText.replace(/[^\d]/g, '')) || 0;
        }
        
        // Calculate final discounted price (same as simple-minimilistic)
        const finalPrice = basePrice * (1 - discountPercentage / 100);
        
        // Calculate savings as difference between sale price and final discounted price
        const baseSavingsPerItem = basePrice - finalPrice;
        
        // For 2+ items: show the base savings (sale price - final price difference)
        const perItemSavings2 = baseSavingsPerItem;
        
        // For 3+ items: add additional 5% bulk discount savings
        const additionalDiscount3 = basePrice * 0.05; // Additional 5% of sale price
        const perItemSavings3 = baseSavingsPerItem + additionalDiscount3;
        
        // For 5+ items: add additional 10% bulk discount savings  
        const additionalDiscount5 = basePrice * 0.10; // Additional 10% of sale price
        const perItemSavings5 = baseSavingsPerItem + additionalDiscount5;
        
        document.getElementById("savingsValue2").innerText="$"+a(perItemSavings2.toFixed(2)),
        document.getElementById("savingsValue3").innerText="$"+a(perItemSavings3.toFixed(2)),
        document.getElementById("savingsValue5").innerText="$"+a(perItemSavings5.toFixed(2))
    }
}e();var t={childList:!0,subtree:!0,characterData:!0};const r=new MutationObserver(e),n=new MutationObserver(e);var o=document.getElementById("ProductPrice1"),a=document.getElementById("ComparePrice1");r.observe(o,t),n.observe(a,t);const c=document.querySelectorAll(".pdp-custom-payment-button");c.forEach(n=>{n.addEventListener("click",e=>{e.preventDefault();const t=document.getElementById("AddToCartForm");var r=t.querySelector("#productSelect").value,e=parseInt(n.getAttribute("data-qty"))||1;r=r,e=e,fetch("/cart/add.js",{method:"POST",headers:{"Content-Type":"application/json","X-Requested-With":"XMLHttpRequest"},body:JSON.stringify({id:r,quantity:e})}).then(e=>e.json()).then(e=>{console.log("Item added to cart:",e)}).catch(e=>{console.error("Error:",e)})})})});

</script>