
{% comment %}
Smart Savings Scale Bundle Offer Component
This component calculates bulk purchase savings based on product pricing
{% endcomment %}

<style>
.smart-savings-container {
  background: #f8f9fa;
  border-radius: 12px;
  padding: 20px;
  margin: 20px 0;
  border: 2px solid #e9ecef;
}

.smart-savings-header {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.smart-savings-icon {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}

.smart-savings-title {
  font-size: 1.1rem;
  font-weight: 700;
  color: #333;
  margin: 0;
}

.smart-savings-preview {
  font-size: 0.9rem;
  color: #666;
  margin-bottom: 15px;
}

.smart-savings-options {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 12px;
}

.smart-savings-option {
  background: #d1ecf1;
  border: 2px solid #bee5eb;
  border-radius: 8px;
  padding: 15px;
  text-align: center;
  position: relative;
  cursor: pointer;
  transition: all 0.3s ease;
}

.smart-savings-option:hover {
  border-color: #0071ce;
  background: #e3f2fd;
}

.savings-badge {
  position: absolute;
  top: -8px;
  left: 50%;
  transform: translateX(-50%);
  color: white;
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 0.7rem;
  font-weight: 700;
  text-transform: uppercase;
}

.savings-badge.most-popular {
  background: #28a745;
}

.savings-badge.best-value {
  background: #1976d2;
}

.savings-badge.most-savings {
  background: #ff5722;
}

.savings-text {
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
}

.savings-amount {
  font-size: 1.1rem;
  font-weight: 700;
  color: #0071ce;
}

@media (max-width: 768px) {
  .smart-savings-options {
    grid-template-columns: 1fr;
  }
}
</style>

<div class="smart-savings-container" id="smartSavingsContainer">
  <div class="smart-savings-header">
    <img src="https://cdn.shopify.com/s/files/1/1064/0118/files/New_Icon.f3cc687da18d1b9a7778597a17d03fcc.gif?v=1712245731" 
         alt="Smart Savings" 
         class="smart-savings-icon">
    <h3 class="smart-savings-title">Smart Savings</h3>
  </div>
  
  <div class="smart-savings-preview" id="smartSavingsPreview">
    Buy 2 items and save $<span id="previewSavingsAmount">0.00</span>/item
  </div>
  
  <div class="smart-savings-options">
    <div class="smart-savings-option" data-quantity="2">
      <div class="savings-badge most-popular">MOST POPULAR</div>
      <div class="savings-text">More than 2 Items</div>
      <div class="savings-amount">and save $<span id="savings2">0.00</span>/item</div>
    </div>
    
    <div class="smart-savings-option" data-quantity="3">
      <div class="savings-badge best-value">BEST VALUE</div>
      <div class="savings-text">More than 3 Items</div>
      <div class="savings-amount">and save $<span id="savings3">0.00</span>/item</div>
    </div>
    
    <div class="smart-savings-option" data-quantity="5">
      <div class="savings-badge most-savings">MOST SAVINGS</div>
      <div class="savings-text">More than 5 Items</div>
      <div class="savings-amount">and save $<span id="savings5">0.00</span>/item</div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  calculateSmartSavings();
  
  // Recalculate when product variant changes
  if (typeof Shopify !== 'undefined' && Shopify.OptionSelectors) {
    const originalCallback = window.selectCallback;
    window.selectCallback = function(variant, selector) {
      if (originalCallback) {
        originalCallback(variant, selector);
      }
      setTimeout(calculateSmartSavings, 100);
    };
  }
});

function calculateSmartSavings() {
  // Get the current product price from the page
  const productPriceEl = document.getElementById('ProductPrice');
  const compareAtPriceEl = document.getElementById('ComparePrice');
  
  if (!productPriceEl) return;
  
  // Extract price from the displayed product price
  let currentPrice = 0;
  const priceText = productPriceEl.textContent || productPriceEl.innerText || '';
  const priceMatch = priceText.match(/[\d,]+\.?\d*/);
  
  if (priceMatch) {
    currentPrice = parseFloat(priceMatch[0].replace(/,/g, ''));
  }
  
  // If we can't get the price, try alternative methods
  if (!currentPrice) {
    // Try to get from selected variant
    const selectElement = document.getElementById('productSelect');
    if (selectElement && selectElement.selectedOptions.length > 0) {
      const selectedOption = selectElement.selectedOptions[0];
      const optionText = selectedOption.textContent;
      const optionPriceMatch = optionText.match(/\$?([\d,]+\.?\d*)/);
      if (optionPriceMatch) {
        currentPrice = parseFloat(optionPriceMatch[1].replace(/,/g, ''));
      }
    }
  }
  
  // If still no price, hide the component
  if (!currentPrice || currentPrice <= 0) {
    const container = document.getElementById('smartSavingsContainer');
    if (container) {
      container.style.display = 'none';
    }
    return;
  }
  
  // Show the component
  const container = document.getElementById('smartSavingsContainer');
  if (container) {
    container.style.display = 'block';
  }
  
  // Calculate savings for different quantities
  // Base discount rates for bulk purchases
  const bulkDiscounts = {
    2: 0.05,  // 5% additional discount for 2+ items
    3: 0.10,  // 10% additional discount for 3+ items  
    5: 0.15   // 15% additional discount for 5+ items
  };
  
  // Calculate savings amounts
  const savings2 = currentPrice * bulkDiscounts[2];
  const savings3 = currentPrice * bulkDiscounts[3];
  const savings5 = currentPrice * bulkDiscounts[5];
  
  // Update the display
  const previewEl = document.getElementById('previewSavingsAmount');
  const savings2El = document.getElementById('savings2');
  const savings3El = document.getElementById('savings3');
  const savings5El = document.getElementById('savings5');
  
  if (previewEl) previewEl.textContent = savings2.toFixed(2);
  if (savings2El) savings2El.textContent = savings2.toFixed(2);
  if (savings3El) savings3El.textContent = savings3.toFixed(2);
  if (savings5El) savings5El.textContent = savings5.toFixed(2);
}

// Handle option selection
document.addEventListener('click', function(e) {
  const option = e.target.closest('.smart-savings-option');
  if (option) {
    const quantity = parseInt(option.dataset.quantity);
    const quantityInput = document.getElementById('Quantity');
    
    if (quantityInput) {
      quantityInput.value = quantity;
      
      // Trigger change event for any listeners
      const event = new Event('change', { bubbles: true });
      quantityInput.dispatchEvent(event);
    }
    
    // Visual feedback
    document.querySelectorAll('.smart-savings-option').forEach(opt => {
      opt.style.borderColor = '#bee5eb';
      opt.style.background = '#d1ecf1';
    });
    
    option.style.borderColor = '#0071ce';
    option.style.background = '#e3f2fd';
  }
});
</script>
