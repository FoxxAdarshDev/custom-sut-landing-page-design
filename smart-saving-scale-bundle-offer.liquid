        const qty2 = 2;
        const bulkDiscount2Percent = 5; // 5% bulk discount on original price
        const regularTotal2 = basePrice * qty2;
        const discountedTotal2 = regularTotal2 * (1 - bulkDiscount2Percent / 100);
        const totalSavings2 = regularTotal2 - discountedTotal2;
        const perItemSavings2 = totalSavings2 / qty2;

