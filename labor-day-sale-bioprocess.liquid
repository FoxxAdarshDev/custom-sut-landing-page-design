function getRelatedProducts(count = null) {
    const allProductCards = document.querySelectorAll('.product-card-bioprocess');
    const relatedProducts = [];

    // Get all available products that are not the current one
    const availableProducts = Array.from(allProductCards).filter(card => {
        const cardSku = card.querySelector('.product-sku-bioprocess')?.textContent.trim();
        return cardSku && cardSku !== selectedProductSKU;
    });

    // Shuffle and take specified count (or all if count is null)
    const shuffled = availableProducts.sort(() => 0.5 - Math.random());
    const selectedCards = count ? shuffled.slice(0, count) : shuffled;

    selectedCards.forEach(card => {
        const title = card.querySelector('.product-title-bioprocess')?.textContent.trim();
        const sku = card.querySelector('.product-sku-bioprocess')?.textContent.trim();
        const image = card.querySelector('.product-image-bioprocess img')?.src;
