    const qty2 = 2;
    const regularTotal2 = priceInDollars * qty2;
    const discountedTotal2 = regularTotal2 * (1 - discountPercentage / 100);
    const totalSavings2 = regularTotal2 - discountedTotal2;
    const perItemSavings2 = totalSavings2 / qty2;

