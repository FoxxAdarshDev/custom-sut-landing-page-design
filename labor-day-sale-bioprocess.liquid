function calculatePricesAndSavingsBioprocess() {
  const finalPrices = document.querySelectorAll('.final-price-bioprocess');
  finalPrices.forEach(finalPrice => {
    const salePrice = parseFloat(finalPrice.dataset.salePrice.replace(/,/g, ''));
    const productCard = finalPrice.closest('.product-card-bioprocess');
    const discountLabel = productCard.querySelector('.discount-label-bioprocess');
    const discountText = discountLabel.textContent;
    const actualDiscountPercentage = parseInt(discountText.replace(/[^\d]/g, ''));
    const finalPriceAmount = salePrice - (salePrice * actualDiscountPercentage / 100);
    finalPrice.textContent = '$' + finalPriceAmount.toFixed(2);
  });
}

function copyToClipboardBioprocess(text, event) {
    event.stopPropagation();
    navigator.clipboard.writeText(text)
        .then(() => {
            const toast = document.createElement('div');
            toast.classList.add('toast-bioprocess');
            toast.textContent = text + ' SKU copied!';
            document.body.appendChild(toast);
            setTimeout(() => {
                toast.classList.add('show');
                setTimeout(() => {
                    toast.classList.remove('show');
                    setTimeout(() => {
                        if (document.body.contains(toast)) {
                            document.body.removeChild(toast);
                        }
                    }, 300);
                }, 2000);
            }, 100);
        })
        .catch(err => {
            console.error('Could not copy text: ', err);
        });
}

