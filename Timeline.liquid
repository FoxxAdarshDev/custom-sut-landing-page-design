    }

    .timeline-header {
        background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
        color: white;
        padding: 40px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .timeline-header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: rotate 20s linear infinite;
    }

    @keyframes rotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .main-title {
        font-size: clamp(2rem, 5vw, 4rem);
        font-weight: 900;
        letter-spacing: 2px;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        animation: slideInDown 1s ease-out;
    }

    .company-logo {
        position: absolute;
        top: 20px;
        right: 40px;
        background: white;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        animation: fadeInRight 1.5s ease-out;
    }

    .logo-text {
        color: #2196F3;
        font-size: 1.2rem;
        font-weight: bold;
        margin: 0;
    }

    .logo-tagline {
        color: #666;
        font-size: 0.8rem;
        margin: 0;
    }

    .timeline-content {
        padding: 80px 20px;
        position: relative;
        max-width: 100%;
        margin: 0 auto;
        overflow-x: auto;
    }

    /* Horizontal Timeline Layout */
    .timeline-track {
        position: relative;
        width: 100%;
        min-width: 3000px;
        height: 450px;
        margin: 0 auto;
    }

    /* Main horizontal line in center */
    .timeline-line {
        position: absolute;
        top: 50%;
        left: 2%;
        width: 96%;
        height: 4px;
        background: #2196F3;
        border-radius: 2px;
        transform: translateY(-50%);
        animation: drawLine 3s ease-out;
        z-index: 1;
    }

    @keyframes drawLine {
        0% { width: 0; }
        100% { width: 96%; }
    }

    .timeline-items {
        position: relative;
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 2%;
        z-index: 10;
    }

    .timeline-item {
        position: relative;
        width: calc(100% / 18);
        max-width: 160px;
        min-width: 120px;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;
        transform: translateY(30px);
    }

    /* Alternating positions */
    .timeline-item:nth-child(odd) {
        justify-content: flex-start;
        padding-top: 40px;
    }

    .timeline-item:nth-child(even) {
        justify-content: flex-end;
        padding-bottom: 40px;
        flex-direction: column-reverse;
    }

    /* Animation delays */
    .timeline-item:nth-child(1) { animation-delay: 0.2s; }
    .timeline-item:nth-child(2) { animation-delay: 0.4s; }
    .timeline-item:nth-child(3) { animation-delay: 0.6s; }
    .timeline-item:nth-child(4) { animation-delay: 0.8s; }
    .timeline-item:nth-child(5) { animation-delay: 1.0s; }
    .timeline-item:nth-child(6) { animation-delay: 1.2s; }
    .timeline-item:nth-child(7) { animation-delay: 1.4s; }
    .timeline-item:nth-child(8) { animation-delay: 1.6s; }
    .timeline-item:nth-child(9) { animation-delay: 1.8s; }
    .timeline-item:nth-child(10) { animation-delay: 2.0s; }
    .timeline-item:nth-child(11) { animation-delay: 2.2s; }
    .timeline-item:nth-child(12) { animation-delay: 2.4s; }
    .timeline-item:nth-child(13) { animation-delay: 2.6s; }
    .timeline-item:nth-child(14) { animation-delay: 2.8s; }
    .timeline-item:nth-child(15) { animation-delay: 3.0s; }
    .timeline-item:nth-child(16) { animation-delay: 3.2s; }
    .timeline-item:nth-child(17) { animation-delay: 3.4s; }
    .timeline-item:nth-child(18) { animation-delay: 3.6s; }

    .timeline-dot {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 16px;
        height: 16px;
        background: #2196F3;
        border: 3px solid white;
        border-radius: 50%;
        box-shadow: 0 0 0 3px #2196F3, 0 4px 15px rgba(33, 150, 243, 0.4);
        animation: pulse 2s infinite;
        z-index: 20;
    }

    /* Connecting lines from center line to cards */
    .timeline-dot::after {
        content: '';
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 2px;
        background: #2196F3;
        z-index: 15;
    }

    /* Lines for odd items (above the center line) */
    .timeline-item:nth-child(odd) .timeline-dot::after {
        top: 100%;
        height: 70px;
    }

    /* Lines for even items (below the center line) */
    .timeline-item:nth-child(even) .timeline-dot::after {
        bottom: 100%;
        height: 70px;
    }

    @keyframes pulse {
        0%, 100% { 
            transform: translate(-50%, -50%) scale(1);
            box-shadow: 0 0 0 2px #2196F3, 0 3px 10px rgba(33, 150, 243, 0.3);
        }
