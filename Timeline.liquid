        border-radius: 6px;
        margin-bottom: 8px;
        transition: transform 0.3s ease;
    }

    .timeline-card:hover .timeline-image {
        transform: scale(1.05);
    }

    .timeline-title {
        font-size: 0.7rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 4px;
        line-height: 1.2;
        flex-grow: 1;
    }

    .timeline-description {
